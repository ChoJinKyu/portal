<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin">
    <form:SimpleForm 
        editable="false"
        layout="ResponsiveGridLayout"
         >
        <form:content>
            <VBox height="3.5rem">
                <Label text="Inspection"/>
                <Switch state="{spec>/inspection_flag}" customTextOn="Yes" customTextOff="No" enabled="false" />
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Assembly Approval"/> 
                <Switch state="{spec>/assembly_approval_flag}" customTextOn="Yes" customTextOff="No" enabled="false" />
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Use Material"/> 
                <Input value="{spec>/use_material_value}" editable="false" class="readonlyField"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Cavity Qty"/>
                <Input value="{spec>/cavity_process_qty}" editable="false" class="readonlyField"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Order Qty"/>
                <Input value="{spec>/order_qty}" editable="false" class="readonlyField"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Sample Qty"/>
                <Input value="{spec>/mold_sample_qty}" editable="false" class="readonlyField"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

        </form:content>
    </form:SimpleForm>
	</VBox>
</core:FragmentDefinition>