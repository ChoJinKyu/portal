<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:uxap="sap.uxap" >
	<VBox>
		<Table id="mainTable" 
			sticky="HeaderToolbar,ColumnHeaders" 
			inset="false" 
			growing="true"
			mode="SingleSelectMaster"
			growingThreshold="10"
			class="sapFDynamicPageAlignContent" 
			updateFinished=".onMainTableUpdateFinished"
			itemPress="onItemPress"
			items="{dpMdMstSpecViewG>/MoldMasterSpec}"
            width="auto" 
            visibleRowCountMode="Auto"
			fixedColumnCount="3">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="{I18N>/LIST} ({= ${dpMdMstSpecView>/MoldMasterSpec}.length || 0})" level="H2"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
				</OverflowToolbar>
			</headerToolbar>
		<columns>
			<Column>
				<Text text="{path:'I18N>/LG_COMPANY', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/LG_ORG', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{I18N>/MODEL}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/MOLD_SEQ', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{I18N>/DESCRIPTION}" />
			</Column>
			<Column>
				<Text text="{I18N>/STATUS}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/MOLD_ITEM_TYPE', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/MOLD_SPEC_CREATE_USER', formatter:'I18NFormatter'}" />
			</Column>
			<Column>
				<Text text="{I18N>/DATE}" />
			</Column>
			<Column>
				<Text text="{path:'I18N>/FAMILY_PART_NUMBER', formatter:'I18NFormatter'}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation">
				<cells>
					<ObjectIdentifier text="{dpMdMstSpecViewG>company_name}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>org_name}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>model}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>mold_number}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>mold_sequence}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>spec_name}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>mold_spec_status_name}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>mold_item_type_name}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>create_user}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>mold_spec_register_date}" />
					<ObjectIdentifier text="{dpMdMstSpecViewG>family_part_numbers}" />
				</cells>
			</ColumnListItem>
		</items>
		</Table>
	</VBox>
</core:FragmentDefinition>