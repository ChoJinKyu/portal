<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap" >
	<VBox class="sapUiSmallMargin">
	    <form:SimpleForm editable="false" layout="ResponsiveGridLayout">
	        <form:content items="{listT>/Message}">
	        	<items>
	        		<VBox height="3.5rem">
	        			<Label text="{listT>message_code}" />
	        			<Input value="{listT>message_contents}" />
	        			<layoutData>
		                    <l:GridData
		                        span="XL4 L4 M4 S6" />
		                </layoutData>
	        		</VBox>
	        	</items>
	        </form:content>
	    </form:SimpleForm>
	</VBox>
</core:FragmentDefinition>