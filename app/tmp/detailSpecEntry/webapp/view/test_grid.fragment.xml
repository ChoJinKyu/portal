<core:FragmentDefinition 
    xmlns="sap.m"  
    xmlns:l="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:uxap="sap.uxap" >
    <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        mode="SingleSelectMaster"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        itemPress="onItemPress"
                        items="{list>/MoldMasterSpec}"
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{I18N>/LIST} ({= ${list>/MoldMasterSpec}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <!-- <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/> -->
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="LG Company Sample" />
                        </Column>
                        <Column>
                            <Text text="LG Division"/>
                        </Column>
                        <Column>
                            <Text text="{I18N>/MODEL}" />
                        </Column>
                        <Column>
                            <Text text="{path:'I18N>/MOLD_PART_NUMBER', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column>
                            <Text text="Mold Seq" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{I18N>/DESCRIPTION}" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="true">
                            <Text text="{I18N>/STATUS}" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="true">
                            <Text text="Item Type" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="false">
                            <Text text="[USER]" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{I18N>/DATE}" />
                        </Column>
                        <Column minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{path:'I18N>/FAMILY_PART_NUMBER', formatter:'I18NFormatter'}" />
                        </Column>
                    </columns>
                    <items>
                        <!-- <ColumnListItem type="Navigation" press=".onMainTableItemPress"> -->
                        <ColumnListItem type="Navigation" >
                            <cells>
                                <ObjectIdentifier text="{list>company_name}" />
                                <ObjectIdentifier text="{list>org_name}" />
                                <ObjectIdentifier text="{list>model}" />
                                <ObjectIdentifier text="{list>mold_number}" />
                                <ObjectIdentifier text="{list>mold_sequence}" />
                                <ObjectIdentifier text="{list>spec_name}" />
                                <ObjectIdentifier text="{list>mold_spec_status_name}" />
                                <ObjectIdentifier text="{list>mold_item_type_name}" />
                                <ObjectIdentifier text="{list>create_user}" />
                                <!-- <ObjectIdentifier text="{list>mold_spec_register_date}"/> -->
                                <DatePicker value="{list>mold_spec_register_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                                <ObjectIdentifier text="{list>family_part_numbers}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
</core:FragmentDefinition>