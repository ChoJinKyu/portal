<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Edit" editable="false" >
		
		<core:Title text="Keys" />
		<Label text="Country"/>
		<Input id="midObjectCountry_code" value="{master>/country_code}"/>
        <Label text="language_code"/>
		 <ComboBox id="searchLanguageE" 
            editable="false"
            width="100%" 
            selectedKey="{master>/language_code}"           
            items="{
                path: 'util>/Code',
                filters: [
                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},                   
                    {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                ]
            }">
            <items>
                <core:Item key="" text="Choose a Language" />
                <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
            </items>
        </ComboBox>

		<core:Title text="Others" />
		<Label text="iso_code"/>
		<Input value="{master>/iso_code}"/>
		<Label text="eu_code"/>
		<Input value="{master>/eu_code}"/>
        <Label text="date_format_code"/>
		<Input value="{master>/date_format_code}"/>
        <Label text="number_format_code"/>
		<Input value="{master>/number_format_code}"/>
        <Label text="currency_code"/>
		<Input value="{master>/currency_code}"/>

	</form:SimpleForm>
</core:FragmentDefinition>