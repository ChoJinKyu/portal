<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false">

		<core:Title text="기본정보" />

        <Label text="역할코드" required="true"/>
            <Input 
                value="{
                    path: 'master>/role_code',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true"
                editable="false" />

        <Label text="Chain" labelFor="searchChainCombo" required="true"></Label>
        <ComboBox
            editable="false"
            id="searchChainCombo"
            width="100%"
            selectedKey="{master>/chain_code}"
            items="{
                path: 'util>/CodeDetails',
                filters: [
                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                    {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                ]
            }">
        <items>
            <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
        </items>
        </ComboBox>

        <Label text="사용여부" labelFor="searchUseFlag" required="true"/>
        <SegmentedButton id="searchUseFlag" selectedKey="{master>/use_flag}" class="sapUiSmallMarginBottom" width="100%" >
            <items>
                <SegmentedButtonItem text="Yes" key="true" width="4.1rem" />
                <SegmentedButtonItem text="No" key="false" width="4.1rem"/>
            </items>
        </SegmentedButton>
        
	<core:Title text="" />

        <Label text="역할명" required="true"/>
        <Input 
            value="{
                path: 'master>/role_name',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>
        
        <Label text="설명"/>
        <Input 
            value="{
                path: 'master>/role_desc',
                type: 'sap.ui.model.type.String'
            }" 
            required="false" 
            editable="false"/>

	</form:SimpleForm>
</core:FragmentDefinition>