<mvc:View controllerName="cm.userMgr.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <!-- <Title text="{I18N>/USER_MANAGEMENT}" /> -->
                    <Title text="사용자 관리" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <!-- 테넌트 -->
                            <Label text="{I18N>/TENANT}:" labelFor="searchTenantCombo" required="true"></Label>
                            <ComboBox
                              id="searchTenantCombo"
                              width="100%"
                              selectedKey="L2100"
                              items="{
                                path: 'org>/Org_Tenant',
                                filters: [
                                ]
                              }"
                              change="handleChange">
                              <items>
                                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
                              </items>
                            </ComboBox>
                            <!-- 회사 -->
                            <Label text="{I18N>/COMPANY}:" labelFor="searchOrgCombo" required="false"></Label>
                            <ComboBox id="searchOrgCombo" width="100%" >
                              <!-- {path: 'tenant_id', operator: 'EQ', value1: 'L2100'} -->
                              <items>
                              <!--   <core:Item key="{org>company_code}" text="{org>company_code}: {org>company_name}" />-->
                              </items> 
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <!-- 사용자 ID -->
                            <!-- <Label text="{I18N>/USER_ID}:" labelFor="searchUserId"></Label> -->
                            <Label text="사용자ID:" labelFor="searchUserId"></Label>
                            <Input id="searchUserId" placeholder="User ID"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>

                            <!-- 사용자 Name -->
                            <Label text="{I18N>/NAME}:" labelFor="searchUserName"></Label>
                            <Input id="searchUserName" placeholder="User Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <!-- 성명(영문) -->
                            <Label text="{I18N>/ENG_NAME}:" labelFor="searchEngName"></Label>
                            <Input id="searchEngName" placeholder="User Eng Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>

                            <!-- 이메일 -->
                            <Label text="{I18N>/EMAIL}:" labelFor="searchEmail"></Label>
                            <Input id="searchEmail" placeholder="Email Address"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <!-- 유효여부 -->
                            <!-- <Label text="{I18N>/USE_FLAG}:" labelFor="searchUseflag"></Label> -->
                            <Label text="사용여부:" labelFor="searchUseflag"></Label>
                            <SegmentedButton 
                                id="searchUseflag"
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="Yes" width="3em" key="true"/>
                                    <SegmentedButtonItem text="No" width="3em" key="false"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/UserMgr}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <!-- <Title text="{I18N>/USER_MANAGEMENT} ({=${list>/UserMgr}.length || 0})" level="H2"/> -->
                            <Title text="사용자 관리 ({=(${list>/UserMgr})?${list>/UserMgr}.length:0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainUserIdColumn" minScreenWidth="Tablet" hAlign="Center">
                            <!-- 사용자ID-->
                            <!-- <Text text="{I18N>/USER_ID}" />  -->
                            <Text text="사용자ID" />
                        </Column>
                        <Column id="mainEmpNoColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 사번 -->
                            <Text text="{I18N>/EMPNO}" />
                        </Column>
                        <Column id="mainNameColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 성명 -->
                            <Text text="{I18N>/NAME}" />
                        </Column>
                        <Column id="mainEngNameColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 성명(영문) -->
                            <Text text="{I18N>/ENG_NAME}" />
                        </Column>
                        <Column id="mainEmailColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 이메일 -->
                            <Text text="{I18N>/EMAIL}" />
                        </Column>
                        <Column id="mainSystemStartDtmColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 시작일 -->
                            <Text text="{I18N>/START_DATE}" />
                        </Column>
                        <Column id="mainSystemEndDtmColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 종료일 -->
                            <Text text="{I18N>/END_DATE}" />
                        </Column>
                        <Column id="mainOrgColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 회사 -->
                            <Text text="{I18N>/COMPANY}" />
                        </Column>
                        <Column id="mainLanguageColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 언어 -->
                            <Text text="{I18N>/LANGUAGE}" />
                        </Column>
                        <Column id="mainTimeZoneColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 타임존 -->
                            <!-- <Text text="{I18N>/TIMEZONE}" /> -->
                            <Text text="타임존" />
                        </Column>
                        <Column id="mainDateFormatColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 날짜형식 -->
                            <Text text="{I18N>/DATE_FORMAT}" />
                        </Column>
                        <Column id="mainNumberFormatColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 숫자형식 -->
                            <Text text="{I18N>/NUMBER_FORMAT}" />
                        </Column>
                        <Column id="mainCurrencyColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- 기본통화 -->
                            <Text text="{I18N>/CURRENCY}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>user_id}"/>
                                <ObjectIdentifier text="{list>employee_number}"/>
                                <ObjectIdentifier text="{list>employee_name}"/>
                                <ObjectIdentifier text="{list>english_employee_name}"/>
                                <ObjectIdentifier text="{list>email}"/>
                                <ObjectIdentifier text="{
                                  path: 'list>start_date',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }"/>
                                <ObjectIdentifier text="{
                                  path: 'list>end_date',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }"/>
                                <ObjectIdentifier text="{list>company_code}"/>
                                <ObjectIdentifier text="{list>language_code}"/>
                                <ObjectIdentifier text="{list>timezone_code}"/>
                                <ObjectIdentifier text="{list>date_format_type_code}"/>
                                <ObjectIdentifier text="{list>digits_format_type_code}"/>
                                <ObjectIdentifier text="{list>currency_code}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="{I18N>/SAVE}" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="{I18N>/CANCEL}" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>