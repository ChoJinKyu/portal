<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Edit" editable="false">
		
		<core:Title text="기본정보" />

            <Label text="사용자ID"/>
            <Input 
                value="{
                    path: 'master>/user_id',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true" 
                editable="{midObjectView>/isAddedMode}"/>
            
            <Label text="성명"/>
            <Input
                id="searchEUserName"
                value="{
                    path: 'master>/employee_name',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true" 
                editable="{midObjectView>/isAddedMode}"/>

            <Label text="이메일"/>
            <Input 
                value="{
                    path: 'master>/email',
                    type: 'sap.ui.model.type.String'
                }" />

            <Label text="테넌트" labelFor="searchETenantCombo" required="true"></Label>
            <ComboBox
                id="searchETenantCombo"
                width="100%"
                selectedKey="{master>/tenant_id}"
                items="{
                    path: 'org>/Org_Tenant',
                    filters: [
                    ]
                }"
                change="searchETenantComboChange">
            <items>
                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
            </items>
            </ComboBox>

            <Label text="언어" labelFor="searchELanguageCombo" required="true"></Label>
                <ComboBox
                    id="searchELanguageCombo"
                    width="100%"
                    selectedKey="{master>/language_code}"
                    items="{
                        path: 'util>/CodeDetails',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                        ]
                    }">
                <items>
                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                </items>
            </ComboBox>

            <Label text="날짜형식" labelFor="searchEDateFormatCombo" required="false"></Label>
                <ComboBox
                    id="searchEDateFormatCombo"
                    width="100%"
                    selectedKey="{master>/date_format_type_code}"
                    items="{
                        path: 'util>/CodeDetails',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                            {path: 'group_code', operator: 'EQ', value1: 'CM_DATE_FORMAT'}
                        ]
                    }">
                <items>
                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                </items>
                </ComboBox>

            <Label text="기본통화" labelFor="searchECurrencyCombo" required="true"></Label>
            <ComboBox
                id="searchECurrencyCombo"
                width="100%"
                selectedKey="{master>/currency_code}"
                items="{
                    path: 'currency>/CurrencyLng',
                    filters: [
                    ]
                }">
            <items>
                <core:Item key="{currency>currency_code}" text="{currency>currency_code}: {currency>currency_code_name}" />
            </items>
            </ComboBox>

    <core:Title text="" />

            <Label text="사번"/>
            <Input 
                value="{
                    path: 'master>/employee_number',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true" 
                editable="{midObjectView>/isAddedMode}"/>
            
            <Label text="성명(영문)"/>
            <Input 
                value="{
                    path: 'master>/english_employee_name',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true" />

            <Label text="사용기간" required="true"/>
            <DateRangeSelection
                dateValue="{path:'master>/start_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' } }"
                secondDateValue="{path:'master>/end_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' }}"
            />

            <Label text="회사" labelFor="searchEOrgCombo" required="true"></Label>
            <ComboBox id="searchEOrgCombo" width="100%" selectedKey="{master>/company_code}"
            items="{
                path: 'org>/Org_Company',
                filters: [
                ]
            }">
            <items>
                <core:Item key="{org>company_code}" text="{org>company_code}: {org>company_name}" />
            </items>
            </ComboBox>

            <Label text="타임존" labelFor="searchETimeZoneCombo" required="true"></Label>
                <ComboBox
                    id="searchETimeZoneCombo"
                    width="100%"
                    selectedKey="{master>/timezone_code}"
                    items="{
                        path: 'timeZoneMgr>/TimeZone',
                        filters: [
                        ],
                        templateShareable: false
                    }">
                <items>
                    <core:Item key="{timeZoneMgr>timezone_code}" text="{timeZoneMgr>timezone_code}: {timeZoneMgr>timezone_name}" />
                </items>
                </ComboBox>
       
            <Label text="숫자형식" labelFor="searchEDigitsFormatCombo" required="true"></Label>
            <ComboBox
                    id="searchEDigitsFormatCombo"
                    width="100%"
                    selectedKey="{master>/digits_format_type_code}"
                    items="{
                        path: 'util>/CodeDetails',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                            {path: 'group_code', operator: 'EQ', value1: 'CM_NUMBER_FORMAT'}
                        ]
                    }">
                <items>
                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                </items>
            </ComboBox>
            
            <Label text="비밀번호"/>
            <Input 
                value="{
                    path: 'master>/password',
                    type: 'sap.ui.model.type.String'
                }"
                required="true"/>
		
	</form:SimpleForm>
</core:FragmentDefinition>