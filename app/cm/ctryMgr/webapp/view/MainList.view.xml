<mvc:View controllerName="cm.ctryMgr.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">

                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Chain:" labelFor="searchChain" required="true"></Label>
                            <ComboBox id="searchChain" width="100%" selectedKey="CM" items="{
                                    path: 'util>/CodeDetails',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'company_code', operator: 'EQ', value1: '*'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Keyword:" labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="Keywords of the Code or Content"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Usage:" labelFor="searchUsageSegmentButton"></Label>
                            <SegmentedButton id="searchUsageSegmentButton" selectedKey="all" class="sapUiSmallMarginBottom" width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="all" width="4.1rem" />
                                    <SegmentedButtonItem text="Site" key="site" width="4.1rem" />
                                    <SegmentedButtonItem text="Company" key="company" width="5rem" />
                                    <SegmentedButtonItem text="Org." key="org" width="4.1rem" />
                                    <SegmentedButtonItem text="User" key="user" width="4.1rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Control Options ({= ${list>/}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="listMainColumnTenant_id" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdTenant_id}" />
                        </Column>
                        <Column id="listMainColumnCountry_code" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdCountry_code}" />
                        </Column>
                        <Column id="listMainColumnIso_name" minScreenWidth="Tablet" hAlign="Center"   >
                            <Text text="{i18n>TblHdCountry_name}" />
                        </Column>
                        <Column id="listMainColumnIso_code" minScreenWidth="Tablet" hAlign="Center"   >
                            <Text text="{i18n>TblHdIso_code}" />
                        </Column>
                        <Column id="listMainColumnEu_code" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdEu_code}" />
                        </Column>
                        <Column id="listMainColumnLanguage_code" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{i18n>TblHdLanguage_code}" />
                        </Column>
                        <Column id="listMainColumnnNumber_format_code" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdNnmber_format_code}" />
                        </Column>
                        <Column id="listMainColumnnCurrency_code" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdCurrency_code}" />
                        </Column>
                        <Column id="listMainColumnnLocal_create_dtm" minScreenWidth="Tablet" hAlign="Center"  width="20em">
                            <Text text="{i18n>TblHdLocal_create_dtm}" />
                        </Column>
                        <Column id="listMainColumnnCreate_user_id" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="{i18n>TblHdCreate_user_id}" />
                        </Column>
                        <Column id="listMainColumnnLocal_update_dtm" minScreenWidth="Tablet" hAlign="Center" width="20em" >
                            <Text text="{i18n>TblHdLocal_update_dtm}" />
                        </Column>
                        <Column id="listMainColumnnUpdate_user_id" minScreenWidth="Tablet" hAlign="Center"  >
                            <Text text="{i18n>TblHdUpdate_user_id}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>tenant_id}"/>
                                <ObjectIdentifier text="{list>country_code}"/>
                                <ObjectIdentifier text="{list>country_name}"/>
                                <ObjectIdentifier text="{list>iso_code}"/>
                                <ObjectIdentifier text="{list>eu_code}"/>
                                <ObjectIdentifier text="{list>language_code}"/>
                                <ObjectIdentifier text="{list>number_format_code}"/>
                                <ObjectIdentifier text="{list>currency_code}"/>
                                <ObjectIdentifier text="{list>system_create_dtm}"/>
                                <ObjectIdentifier text="{list>create_user_id}"/>
                                <ObjectIdentifier text="{list>local_update_dtm}"/>
                                <ObjectIdentifier text="{list>update_user_id}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>