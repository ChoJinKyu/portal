  <mvc:View
	class="sapUiSizeCompact"
	controllerName="cm.timeZoneMgr.controller.timeZoneMgr"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:demo="sap.ui.core.sample.common"
	xmlns:form="sap.ui.layout.form"
    xmlns:t="sap.ui.table"    
    xmlns:layout="sap.ui.layout" displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc">
	<App>
    
        <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="true" headerExpanded="true">
					<!--DynamicPage Title -->
					<f:title>
						<f:DynamicPageTitle>
							<f:heading>
								<Title text="타임존관리"/>
							</f:heading>
						</f:DynamicPageTitle>
					</f:title>
					<!--DynamicPage Header -->
					<f:header>
						<f:DynamicPageHeader pinnable="true">
                            <layout:VerticalLayout
                                    id="oVerticalContent"
                                    width="100%">
                                    <layout:content>                     
                                    </layout:content>
                            </layout:VerticalLayout>                           
							<layout:HorizontalLayout>                          
								<form:Form editable="true" width="auto">
									<form:formContainers>
										<form:FormContainer>
											<form:formElements>
												<form:FormElement label="코드">
													<form:fields>
                                                         <Input
                                                            id="time_zone_code"
                                                        />					
													</form:fields>
												</form:FormElement>
											</form:formElements>
										</form:FormContainer>
										<form:FormContainer>
											<form:formElements >
												<form:FormElement label="타임존" >
													<form:fields>	
                                                        <Input
                                                            id="time_zone"
                                                        />
													</form:fields>
												</form:FormElement>
											</form:formElements>
										</form:FormContainer>
										<form:FormContainer>
											<form:formElements>
												<form:FormElement label="국가">
													<form:fields>	     													
														<Input
                                                            id="productInput"
                                                            type="Text"
                                                            value=""
                                                            placeholder=""
                                                            showValueHelp="true"
                                                            valueHelpOnly="true"
                                                            valueHelpRequest="handleValueHelp"
                                                            width=""
                                                            class="sapUiSmallMarginBottom"/>
													</form:fields>
												</form:FormElement>
											</form:formElements>
										</form:FormContainer>
									</form:formContainers>
									<form:layout>
									<form:ResponsiveGridLayout columnsM="3" columnsL="3" columnsXL="3"/>
									</form:layout>
								</form:Form>
							</layout:HorizontalLayout>
							<!-- <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
								<items>
									<Button text="Search" press=".onSearch" icon="sap-icon://search"  type="Transparent"/>
								</items>
							</HBox> -->
						</f:DynamicPageHeader>
					</f:header>
					<!-- DynamicPage Content -->
					<f:content>
	                 
						<VBox fitContainer="true">
                            <!--filters 값이 나오지 않아야 하기에 강제 적용-->

							<t:Table id="table"
                            selectionMode="MultiToggle" 
                            rows="{ path : '/ControlOptionMasters',
                            		parameters : {
                                        $count : true,
						                $$updateGroupId : 'MainUpdateGroup'
					              }
                            }"
                            cellClick=".onCellClick"                   
                            visibleRowCount="7"  
                            rowSelectionChange = ".onCheck('mainList')"                 
                            ariaLabelledBy="title">
								<t:extension>
									<OverflowToolbar class="sapFDynamicPageAlignContent"> 									
                                    <ToolbarSpacer/>
									<Button text="Create" id="buttonMainCreateRow" press=".onCreate"  type="Transparent"/>
									<Button text="Copy" id="buttonMainCopyRow" press=".onCopyRow"   type="Transparent"/>									
									<Button text="Delete" id="buttonMainDeleteRow" press=".onDelete('mainList')"   type="Transparent"/>
                                    <Button text="Save"   id="buttonMainSaveRow" press=".onSave('mainList')"   type="Transparent"/>									
                                    <Button text="Cancel" id="buttonMainCancel" press=".onCancelChanges('mainList')"  type="Transparent"/>                                    
                                    <!-- enabled="{ui>/bMainSelected}" -->
								</OverflowToolbar>
								</t:extension>
                                <t:rowSettingsTemplate>
                                    <t:RowSettings highlight="{}"/>
                                </t:rowSettingsTemplate>                                
								<t:columns>
                                    <t:Column
                                        >
                                        <Label text="No." textAlign="Center" width="100%"/>
                                        <t:template>
                                            <!-- <Text text=""/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <Label text="코드" textAlign="Center" width="100%"/>
                                        <t:template>
                                            <!-- <Text text="{timezone_code}"/> -->
                                                <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <Label text="타임존" textAlign="Center" width="100%"/>
                                        <t:template>
                                            <!-- <Text text="{timezone_name}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <Label text="국가" textAlign="Center" width="100%"/>
                                        <t:template>
                                            <!-- <Text text="{country_code}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <Label text="GMT" textAlign="Center" width="100%"/>
                                        <t:template>
                                            <!-- <Text text="{gmt_offset}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        headerSpan="1">
                                        <t:multiLabels>
                                            <Label text="서머타임" textAlign="Center" width="100%"/>
                                            <Label text="적용여부" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{dst_flag}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        
                                        headerSpan="5">
                                        <t:multiLabels>
                                            <Label text="서머타임시작" textAlign="Center" width="100%"/>
                                            <Label text="월" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{dst_start_month}" wrapping="false"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임시작"/>
                                            <Label text="일" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_start_day}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임시작"/>
                                            <Label text="주" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_start_week}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임시작"/>
                                            <Label text="요일" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_start_day_of_week}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임시작"/>
                                            <Label text="시간" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_start_time_rate}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        
                                        headerSpan="5">
                                        <t:multiLabels>
                                            <Label text="서머타임종료" textAlign="Center" width="100%"/>
                                            <Label text="월" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{dst_end_month}" wrapping="false"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임종료"/>
                                            <Label text="일" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_end_day}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임종료"/>
                                            <Label text="주" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_end_week}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임종료"/>
                                            <Label text="요일" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_end_day_of_week}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        >
                                        <t:multiLabels>
                                            <Label text="서머타임종료"/>
                                            <Label text="시간" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Input value="{dst_end_time_rate}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        headerSpan="1">
                                        <t:multiLabels>
                                            <Label text="표준시" textAlign="Center" width="100%"/>
                                            <Label text="코드" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        headerSpan="1">
                                        <t:multiLabels>
                                            <Label text="서머타임" textAlign="Center" width="100%"/>
                                            <Label text="표준코드" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column
                                        headerSpan="1">
                                        <t:multiLabels>
                                            <Label text="주타임존" textAlign="Center" width="100%"/>
                                            <Label text="여부" textAlign="Center" width="100%"/>
                                        </t:multiLabels>
                                        <t:template>
                                            <!-- <Text text="{}"/> -->
                                            <Input
                                                            value=""
                                                            valueLiveUpdate="true"/>
                                        </t:template>
                                    </t:Column>
                                </t:columns>
							</t:Table>
						</VBox>
   
                    </f:content>
					<!-- DynamicPage Footer -->
				<f:footer>
					<OverflowToolbar>
						<ToolbarSpacer/>								
					</OverflowToolbar>
				</f:footer>                    
			</f:DynamicPage>	
        </App>
</mvc:View>
