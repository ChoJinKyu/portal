<mvc:View 
    controllerName="cm.timeZoneMgr.controller.timeZoneMgr" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                <!-- <headerContent>
                                    <Button icon="sap-icon://action" />
                                </headerContent> 
                                <subHeader> -->
			<!-- <Toolbar>
				<Button type="Back" />
				<ToolbarSpacer/>
				<Title text="Toolbar center" level="H3"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader> -->
					<content>
                    
                    <Toolbar>
                        <Label text="코드">
                        </Label>
                        <Input width="auto">
                        </Input>
    
                        <Label text="타임존">
                        </Label>
                        <Input width="auto">
                        </Input>

                        <Label width="auto" text="국가">
                        </Label>
                        
                        <Input
                            id="productInput"
                            type="Text"
                            value="Astro Phone 6"
                            placeholder="Enter Product ..."
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="handleValueHelp"
                            width="15rem"
                            class="sapUiSmallMarginBottom"/>
                        <Button text="검색" press="onDefaultDialogPress">
                        </Button>
                        
                    </Toolbar>
                <t:Table
				id="table"
				ariaLabelledBy="title"
				selectionMode="MultiToggle"
				rows="{ path : '/TimeZone',
                    parameters : {
                                        $count : true,
						                $$updateGroupId : 'tableUpdateGroup'
					              }
                }"
				visibleRowCount="5">
				<t:extension>
					<OverflowToolbar>
						<Title id="title" text="Contacts"/>
                        <ToolbarSpacer/>
                        <Button text="행추가" press="onCreate">
                        </Button>
                        <Button text="행복사">
                        </Button>
                        <Button text="행삭제">
                        </Button>
                        <Button text="저장">
                        </Button>

					</OverflowToolbar>
				</t:extension>
				<t:columns>
					<t:Column
						>
						<Label text="No." textAlign="Center" width="100%"/>
						<t:template>
							<Text text=""/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<Label text="코드" textAlign="Center" width="100%"/>
						<t:template>
							<Text text="{timezone_code}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<Label text="타임존" textAlign="Center" width="100%"/>
						<t:template>
							<Text text="{timezone_name}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<Label text="국가" textAlign="Center" width="100%"/>
						<t:template>
							<Text text="{country_code}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<Label text="GMT" textAlign="Center" width="100%"/>
						<t:template>
							<Text text="{gmt_offset}"/>
						</t:template>
					</t:Column>
                    <t:Column
						headerSpan="1">
						<t:multiLabels>
							<Label text="서머타임" textAlign="Center" width="100%"/>
							<Label text="적용여부" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{dst_flag}"/>
						</t:template>
					</t:Column>
					<t:Column
						
						headerSpan="5">
						<t:multiLabels>
							<Label text="서머타임시작" textAlign="Center" width="100%"/>
							<Label text="월" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{dst_start_month}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column
						>
						<t:multiLabels>
							<Label text="서머타임시작"/>
							<Label text="일" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_start_day}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임시작"/>
							<Label text="주" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_start_week}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임시작"/>
							<Label text="요일" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_start_day_of_week}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임시작"/>
							<Label text="시간" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_start_time_rate}"/>
						</t:template>
					</t:Column>
					<t:Column
						
						headerSpan="5">
						<t:multiLabels>
							<Label text="서머타임종료" textAlign="Center" width="100%"/>
							<Label text="월" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{dst_end_month}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column
						>
						<t:multiLabels>
							<Label text="서머타임종료"/>
							<Label text="일" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_end_day}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임종료"/>
							<Label text="주" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_end_week}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임종료"/>
							<Label text="요일" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_end_day_of_week}"/>
						</t:template>
					</t:Column>
                    <t:Column
						>
						<t:multiLabels>
							<Label text="서머타임종료"/>
							<Label text="시간" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{dst_end_time_rate}"/>
						</t:template>
					</t:Column>
                    <t:Column
						headerSpan="1">
						<t:multiLabels>
							<Label text="표준시" textAlign="Center" width="100%"/>
							<Label text="코드" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{}"/>
						</t:template>
					</t:Column>
                    <t:Column
						headerSpan="1">
						<t:multiLabels>
							<Label text="서머타임" textAlign="Center" width="100%"/>
							<Label text="표준코드" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{}"/>
						</t:template>
					</t:Column>
                    <t:Column
						headerSpan="1">
						<t:multiLabels>
							<Label text="주타임존" textAlign="Center" width="100%"/>
							<Label text="여부" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{}"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
                    </content>
				</Page>
			</pages>
		</App>
</mvc:View>
