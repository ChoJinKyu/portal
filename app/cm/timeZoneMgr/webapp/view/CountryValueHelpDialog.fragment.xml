<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Products Found"
		title="Select Product"
		search=".handleSearch"
		confirm=".handleValueHelpClose"
		cancel=".handleValueHelpClose"
		showClearButton="true">
		<ColumnListItem selected="{selected}">
			<cells>
				<ObjectIdentifier title="1" text="1" />
				<Text text="1" />
				<Text text="1" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Product" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Supplier" />
				</header>
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<header>
					<Text text="Dimensions" />
				</header>
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Weight" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="Product" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>