<mvc:View controllerName="cm.menuMgt.controller.menuMgt"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:table="sap.ui.table"
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <!-- <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onSearch" /> -->
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>

                        <VBox>
                            <Label text="{I18N>/CHAIN}: " labelFor="searchChainCombo" required="true"/>
                            <ComboBox id="searchChainCombo" width="100%" 
                                selectedKey=""
                                selectionChange=".onSelectionChange"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="{I18N>/KEYWORD}: " labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="{I18N>/NCM02002}"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>

                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <table:TreeTable
                    id="menuTreeTable"
                    rowSelectionChange=".onRowSelectionChange"
                    visibleRowCountMode="Interactive"
                    selectionMode="Single"
                    selectionBehavior="Row"
                    enableColumnReordering="false"
                    expandFirstLevel="true"
                    rows="{
                        path : 'tree>/Menu_haa',
                        parameters : {
                            arrayNames: ['nodes'],
                            numberOfExpandedLevels: 4
                        }
                    }"
                >
                  <table:extension>
                    <OverflowToolbar>
                      <ToolbarSpacer/>
                      <!-- <Button id="mainTableCreateSameLevelButton" text="{I18N>/CREATE_SAME_LEVEL}" type="Transparent" press=".onAdd('S')"> -->
                      <Button id="mainTableCreateSameLevelButton" text="Create Same Level" type="Transparent" press=".onAdd('S')">
                        <layoutData>
                          <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                      </Button>
                      <!-- <Button id="mainTableCreateLowerLevelButton" text="{I18N>/CREATE_LOWER_LEVEL}" type="Transparent" press=".onAdd('L')"> -->
                      <Button id="mainTableCreateLowerLevelButton" text="Create Lower Level" type="Transparent" press=".onAdd('L')">
                        <layoutData>
                          <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                      </Button>
                      <ToolbarSeparator/>
                      <Button icon="sap-icon://action-settings" type="Transparent" press=".onMainTablePersoButtonPressed" />
                    </OverflowToolbar>
                  </table:extension>
                  <table:columns>
                    <table:Column label="{I18N>/MENU_NAME}">
                        <table:template>
                            <Text text="{tree>menu_name}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/MENU_CODE}">
                        <table:template>
                            <Text text="{tree>menu_code}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/MENU_LEVEL}">
                        <table:template>
                            <Text text="{tree>menu_level_number}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/SCREEN_MARK_FLAG}">
                        <table:template>
                            <Text text="{= !!${tree>menu_display_flag} ? 'Yes' : 'No'}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/USE_FLAG}">
                        <table:template>
                            <Text text="{= !!${tree>use_flag} ? 'Yes' : 'No'}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/SORT_NUMBER}">
                        <table:template>
                            <Text text="{tree>sort_number}" wrapping="false" />
                        </table:template>
                    </table:Column>
                    <table:Column label="{I18N>/MENU_PATH}">
                        <table:template>
                            <Text text="{tree>menu_path_info}" wrapping="false" />
                        </table:template>
                    </table:Column>
                  </table:columns>
                </table:TreeTable>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
              <ToolbarSpacer />
              <Button text="{I18N>/SAVE}" type="Emphasized" press=".onPageSaveButtonPress" />
              <Button text="{I18N>/CANCEL}" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>