<mvc:View
    class="sapUiSizeCompact"
    controllerName="cm.codeMgr.controller.CodeMgr"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">

    <App id="app">
        <f:DynamicPage id="codeMgrPage" toggleHeaderOnTitleClick="true" headerExpanded="true">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="코드 관리"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <layout:HorizontalLayout>
                        <form:Form editable="true" width="100%">
                            <form:formContainers>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="Tenant">
                                            <form:fields>
                                                <ComboBox   id="search_tenant_id"
                                                            items="{
                                                                        path : 'util>/CodeDetails',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L2100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_TENANT_CD'}                                                               
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹코드">
                                            <form:fields>
                                                <Input id="search_group_code" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="Chain">
                                            <form:fields>
                                                <ComboBox   id="search_chain_code"
                                                            items="{
                                                                        path : 'util>/CodeDetails',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L2100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_CHAIN_CD'}                                                               
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹 명">
                                            <form:fields>
                                                <Input id="search_group_name" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="사용여부">
                                            <form:fields>
                                                <ComboBox   id="search_use_yn"    
                                                            items="{
                                                                        path : 'util>/CodeDetails',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L2100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_TF_FLAG'}                                                                     
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹 설명">
                                            <form:fields>
                                                <Input id="search_group_description" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                            </form:formContainers>
                            <form:layout>
                            <form:ResponsiveGridLayout columnsM="3" columnsL="3" columnsXL="3"/>
                            </form:layout>
                        </form:Form>
                    </layout:HorizontalLayout>
                    <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                        <items>
                            <Button text="검색" press="onSearch"/>
                        </items>
                    </HBox>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <layout:Splitter orientation="Vertical">
                        <Table  id="codeMstTable"
                                items="{
                                            path : 'CodeMasters>/',
                                            parameters: {
                                                $$updateGroupId : 'codeMstUpdateGroup'
                                            }
                                        }"
                                mode="MultiSelect"
                                updateFinished="onMstUpdateFinished"
                                
                        >
                        <layoutData>
                            <layout:SplitterLayoutData size="55%" />
                        </layoutData>
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="코드 마스터" level="H2"/>
                                        <ToolbarSpacer/>
                                        <Button text="행추가" icon="sap-icon://add"  type="Accept" press="onMstAddRow"/>
                                        <Button text="행삭제" icon="sap-icon://delete" type="Reject" press="onMstDeleteRow"/>
                                        <Button text="저장"   icon="sap-icon://save" type="Attention" press="onMstSave"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column hAlign="Center" width="50px">
                                    <header>
                                        <Label text=""/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Tenant"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Chanin"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="300px">
                                    <header>
                                        <Label text="그룹 코드"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="200px">
                                    <header>
                                        <Label text="그룹 명"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="200px">
                                    <header>
                                        <Label text="그룹 설명"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="사용 여부"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="생성자"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="수정자"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="450px">
                                    <header>
                                        <Label text="생성 시간"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="450px">
                                    <header>
                                        <Label text="수정 시간"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="450px">
                                    <header>
                                        <Label text="시스템 생성 시간"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="450px">
                                    <header>
                                        <Label text="시스템 수정 시간"/>
                                    </header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" id="codeMstColumnListItem" press="onMstTableItemPress">
                                    <cells>
                                        <Text id="mst_row_state_" text="{CodeMasters>_row_state_}"/>
                                        <Input id="mst_tenant_id" value="{CodeMasters>tenant_id}"/>
                                        <Input id="mst_chain_code" value="{CodeMasters>chain_code}"/>
                                        <Input id="mst_group_code" value="{CodeMasters>group_code}"/>
                                        <Input id="mst_group_name" value="{CodeMasters>group_name}"/>
                                        <Input id="mst_group_description" value="{CodeMasters>group_description}"/>
                                        <Input id="mst_use_yn" value="{CodeMasters>use_yn}"/>
                                        <Text id="mst_create_user_id" text="{CodeMasters>create_user_id}"/>
                                        <Text id="mst_update_user_id" text="{CodeMasters>update_user_id}"/>
                                        <Text id="mst_local_create_dtm" text="{CodeMasters>local_create_dtm}"/>
                                        <Text id="mst_local_update_dtm" text="{CodeMasters>local_update_dtm}"/>
                                        <Text id="mst_system_create_dtm" text="{CodeMasters>system_create_dtm}"/>
                                        <Text id="mst_system_update_dtm" text="{CodeMasters>system_update_dtm}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>

                        <layout:Splitter>
                            <Table  id="codeDtlTable"
                                    items= "{   
                                                path : 'CodeDetails>/',
                                                parameters: {
                                                    $$updateGroupId : 'codeDtlUpdateGroup'
                                                }
                                            }"
                                    mode="MultiSelect"
                                    updateFinished="onDtlUpdateFinished"
                            >
                            <layoutData>
                                <layout:SplitterLayoutData size="50%" />
                            </layoutData>
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="코드" level="H2"/>
                                            <ToolbarSpacer/>
                                            <Button text="행추가" icon="sap-icon://add"  type="Accept" press="onDtlAddRow"/>
                                            <Button text="행삭제" icon="sap-icon://delete" type="Reject" press="onDtlDeleteRow"/>
                                            <Button text="저장"   icon="sap-icon://save" type="Attention" press="onDtlSave"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column hAlign="Center" width="50px">
                                        <header>
                                            <Label text=""/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="80px">
                                        <header>
                                            <Label text="Tenant"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="300px">
                                        <header>
                                            <Label text="그룹 코드"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="150px">
                                        <header>
                                            <Label text="코드"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="200px">
                                        <header>
                                            <Label text="코드 설명"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="순서"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="150px">
                                        <header>
                                            <Label text="시작일"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="150px">
                                        <header>
                                            <Label text="종료일"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="생성자"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="수정자"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="생성 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="수정 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="시스템 생성 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="시스템 수정 시간"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" id="codeDtlColumnListItem" press="onDtlTableItemPress">
                                        <cells>
                                            <Text id="dtl_row_state_" text="{CodeDetails>_row_state_}"/>
                                            <Text id="dtl_tenant_id" text="{CodeDetails>tenant_id}"/>
                                            <Text id="dtl_group_code" text="{CodeDetails>group_code}"/>
                                            <Input id="dtl_code" value="{CodeDetails>code}"/>
                                            <Input id="dtl_code_description" value="{CodeDetails>code_description}"/>
                                            <Input id="dtl_sort_no" value="{CodeDetails>sort_no}"/>
                                            <DatePicker dateValue="{path : 'CodeDetails>start_date'}"  valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd"/>
                                            <DatePicker dateValue="{path : 'CodeDetails>end_date'}"  valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd"/>
                                            <Text id="dtl_create_user_id" text="{CodeDetails>create_user_id}"/>
                                            <Text id="dtl_update_user_id" text="{CodeDetails>update_user_id}"/>
                                            <Text id="dtl_local_create_dtm" text="{CodeDetails>local_create_dtm}"/>
                                            <Text id="dtl_local_update_dtm" text="{CodeDetails>local_update_dtm}"/>
                                            <Text id="dtl_system_create_dtm" text="{CodeDetails>system_create_dtm}"/>
                                            <Text id="dtl_system_update_dtm" text="{CodeDetails>system_update_dtm}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>

                            <Table  id="codeLngTable"
                                    items= "{   
                                                path : 'CodeLanguages>/',
                                                parameters: {
                                                    $$updateGroupId : 'codeLngUpdateGroup'
                                                }
                                            }"
                                    mode="MultiSelect"
                            >
                            <layoutData>
                                <layout:SplitterLayoutData size="50%" />
                            </layoutData>
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="코드 명" level="H2"/>
                                            <ToolbarSpacer/>
                                            <Button text="행추가" icon="sap-icon://add"  type="Accept" press="onLngAddRow"/>
                                            <Button text="행삭제" icon="sap-icon://delete" type="Reject" press="onLngDeleteRow"/>
                                            <Button text="저장"   icon="sap-icon://save" type="Attention" press="onLngSave"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column hAlign="Center" width="50px">
                                        <header>
                                            <Label text=""/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="80px">
                                        <header>
                                            <Label text="Tenant"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="300px">
                                        <header>
                                            <Label text="그룹 코드"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="코드"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="언어"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="200px">
                                        <header>
                                            <Label text="코드 명"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="생성자"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="100px">
                                        <header>
                                            <Label text="수정자"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="생성 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="수정 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="시스템 생성 시간"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="450px">
                                        <header>
                                            <Label text="시스템 수정 시간"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" id="codeLngColumnListItem">
                                        <cells>
                                            <Text id="lgn_row_state_" text="{CodeLanguages>_row_state_}"/>
                                            <Text id="lng_tenant_id" text="{CodeLanguages>tenant_id}"/>
                                            <Text id="lng_group_code" text="{CodeLanguages>group_code}"/>
                                            <Text id="lng_code" text="{CodeLanguages>code}"/>
                                            <Input id="lng_language_cd" value="{CodeLanguages>language_cd}"/>
                                            <Input id="lng_code_name" value="{CodeLanguages>code_name}"/>
                                            <Text id="lng_create_user_id" text="{CodeLanguages>create_user_id}"/>
                                            <Text id="lng_update_user_id" text="{CodeLanguages>update_user_id}"/>
                                            <Text id="lng_local_create_dtm" text="{CodeLanguages>local_create_dtm}"/>
                                            <Text id="lng_local_update_dtm" text="{CodeLanguages>local_update_dtm}"/>
                                            <Text id="lng_system_create_dtm" text="{CodeLanguages>system_create_dtm}"/>
                                            <Text id="lng_system_update_dtm" text="{CodeLanguages>system_update_dtm}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </layout:Splitter>
                </layout:Splitter>
            </f:content>
        </f:DynamicPage>
    </App>
</mvc:View>
