<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false">

		<core:Title text="기본정보" />

        <Label text="테넌트ID"/>
        <ComboBox
            editable="false"
            width="100%"
            selectedKey="{master>/tenant_id}"
            items="{
                path: 'org>/Org_Tenant'
            }"
            required="true">
        <items>
            <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
        </items>
        </ComboBox>

        <Label text="역할그룹코드"/>
        <Input
            value="{
                path: 'master>/role_group_code',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>

	<core:Title text="" />

        <Label text="역할설명"/>
        <Input 
            value="{
                path: 'master>/role_desc',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>
        
        <Label text="역할그룹명"/>
        <Input 
            value="{
                path: 'master>/role_group_name',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>

	</form:SimpleForm>
</core:FragmentDefinition>