<mvc:View 
    controllerName="cm.currencyMgr.controller.currencyMainView" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m" 
    xmlns:f="sap.f">
		<App id="app">
			<pages>
				<Page id="page" >
					<content>
                    	<f:FlexibleColumnLayout
                            id="flexibleColumnLayout"
                            stateChange=".onStateChanged"
                            backgroundDesign="Translucent"
                            layout="{Currency>/layout}"/>
                    </content>
				</Page>
			</pages>
		</App>
</mvc:View>
