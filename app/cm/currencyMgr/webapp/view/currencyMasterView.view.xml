<mvc:View
    class="sapUiSizeCompact"
	controllerName="cm.currencyMgr.controller.currencyMasterView"
	xmlns="sap.m"
	xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="true" headerExpanded="true">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="통화관리"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
         <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <layout:HorizontalLayout>
                        <form:Form editable="true" width="100%">
                            <form:formContainers >
                                <form:FormContainer >
                                    <form:formElements>
                                        <form:FormElement label="통화코드" >                                            
                                            <form:fields>            													
                                                <SearchField 
                                                    id="search_currency_code" 
                                                    width="100%"
                                                    search=".onSearch"/>
                                            </form:fields>
                                        </form:FormElement>  
                                  
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer >
                                    <form:formElements>
                                        <form:FormElement label="사용여부" >
                                            <form:fields >
                                                <ComboBox id="comboBox_use_yn"
                                                    selectedKey="Y"
                                                    width="100%">
                                                    <core:Item key="Y" text="Yes"/>                                                            
                                                    <core:Item key="N" text="No"/>
                                                 </ComboBox>	
                                            </form:fields>
                                        </form:FormElement>                                          
                                    </form:formElements>
                                </form:FormContainer>                                                                
                            </form:formContainers>
                            <form:layout>
                                <form:ResponsiveGridLayout columnsM="2" columnsL="2" columnsXL="2"/>
                            </form:layout>
                        </form:Form>
                    </layout:HorizontalLayout>
                    <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                        <items>
                            <Button text="New" type="Transparent" press="onCreateAdd" enabled="{Currency>/true6}"/>
                            <Button text="Search" type="Emphasized" press="onSearch" enabled="{Currency>/true6}"/>
                        </items>
                    </HBox>
                </f:DynamicPageHeader>
            </f:header>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<!-- <OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onAdd"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</OverflowToolbar> -->
				<Table
					id="currencyTable"
					inset="false"
					items="{
                                path : '/CurrencyView',
                                parameters: {
                                    $$updateGroupId : 'currencyMstUpdateGroup'
                                }
                            }"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
                    <!-- ,
                                filters : [{path : 'tenant_id', operator : 'EQ', value1 : '0000'}] -->
						<Column width="auto">
							<Text text="통화코드명"/>
						</Column>
						<Column	hAlign="End" >
							<Text text="통화코드설명"/>
						</Column>
                        <Column width="auto" 
                                minScreenWidth="Desktop"
								demandPopin="true"  popinHAlign="Right">
							<Text text="소수점자리"/>
						</Column>
						<Column	hAlign="End" minScreenWidth="Desktop"
								demandPopin="true"  popinHAlign="Right">
							<Text text="확장소수점자리"/>
						</Column>
                        <Column width="auto">
							<Text text="Prefix"/>
						</Column>
						<Column	hAlign="End" >
							<Text text="Suffix"/>
						</Column>
                        <Column width="auto" minScreenWidth="Desktop"
								demandPopin="false">
							<Text text="유효시작일자"/>
						</Column>
                        <Column width="auto" minScreenWidth="Desktop"
								demandPopin="false">
							<Text text="유효종료일자"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress" vAlign="Middle">
							<cells>
								<Text id="currency_code_name" text="{currency_code_name}"/>
                                <Text id="currency_code_desc" text="{currency_code_desc}"/>
                                <Text id="scale" text="{scale}"/>
                                <Text id="extension_scale" text="{extension_scale}"/>
                                <Text id="currency_prefix" text="{currency_prefix}"/>
                                <Text id="currency_suffix" text="{currency_suffix}"/>
                                <Text id="effective_start_date" text="{effective_start_date}"/>
                                <Text id="effective_end_date" text="{effective_end_date}"/>
								
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>