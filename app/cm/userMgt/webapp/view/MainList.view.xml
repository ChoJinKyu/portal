<mvc:View controllerName="cm.userMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:lib-m="ext.lib.m"
    xmlns:u="sap.ui.unified"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <!-- <Title text="{I18N>/USER_MANAGEMENT}" /> -->
                    <Title text="사용자 관리" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <!-- 테넌트 -->
                            <Label text="{I18N>/TENANT}:" labelFor="searchTenantCombo" required="true"></Label>
                            <ComboBox
                              id="searchTenantCombo"
                              width="100%"
                              selectedKey="L2100"
                              items="{
                                path: 'org>/Org_Tenant',
                                filters: [
                                ]
                              }"
                              change="handleChange">
                              <items>
                                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
                              </items>
                            </ComboBox>
                            <!-- 회사 -->
                            <Label text="{I18N>/COMPANY}:" labelFor="searchOrgCombo" required="true"></Label>
                            <ComboBox id="searchOrgCombo" width="100%" >
                              <!-- {path: 'tenant_id', operator: 'EQ', value1: 'L2100'} -->
                              <items>
                              <!--   <core:Item key="{org>company_code}" text="{org>company_code}: {org>company_name}" />-->
                              </items> 
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <!-- 사용자 ID -->
                            <!-- <Label text="{I18N>/USER_ID}:" labelFor="searchUserId"></Label> -->
                            <Label text="사용자ID:" labelFor="searchUserId"></Label>
                            <Input id="searchUserId" placeholder="User ID"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>

                            <!-- 이메일 -->
                            <Label text="{I18N>/EMAIL}:" labelFor="searchEmail"></Label>
                            <Input id="searchEmail" placeholder="Email Address"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <!-- 사용자 Name -->
                            <Label text="{I18N>/NAME}:" labelFor="searchUserName"></Label>
                            <Input id="searchUserName" placeholder="User Name or Eng Name" ></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>

                            <!-- 유효여부 -->
                            <!-- <Label text="{I18N>/USE_FLAG}:" labelFor="searchUseflag"></Label> -->
                            <Label text="사용여부:" labelFor="searchUseflag"></Label>
                            <SegmentedButton id="searchUseflag" width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="Yes" width="3em" key="true"/>
                                    <SegmentedButtonItem text="No" width="3em" key="false"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <FlexBox alignItems="End" justifyContent="End">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <table:Table id="mainTable"
                    rows="{list>/UserMgt}"
                    selectionMode="Single"
                    selectionBehavior="Row"
                    ariaLabelledBy="title"
                    rowSelectionChange="onMainTableItemPress">
                    <table:extension>
                        <OverflowToolbar>
                            <Title text="사용자 관리 ({=(${list>/UserMgt})?${list>/UserMgt}.length:0})" level="H2" />
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                            <!-- <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" type="Transparent" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> -->
                        </OverflowToolbar>
                    </table:extension>
                    <table:columns>
                        <table:Column id="mainColumnUserId">
                            <Label text="{I18N>/USER_ID}" textAlign="Center" />
                            <table:template>
                                <Text text="{list>user_id}" wrapping="false" textAlign="Left" />
                            </table:template>
                        </table:Column>
                        <table:Column width="8%" id="mainColumnEmpNo">
                            <Label text="{I18N>/EMPNO}" textAlign="Center" />
                            <table:template>
                                <Text text="{list>employee_number}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="8%" id="mainColumnEmpName">
                            <Label text="{I18N>/NAME}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>employee_name}" wrapping="false" textAlign="Left"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="8%" id="mainColumnEngEmpName">
                            <Label text="{I18N>/ENG_NAME}" textAlign="Center" />
                            <table:template>
                                <Text text="{list>english_employee_name}" wrapping="false" textAlign="Left"/>
                            </table:template>
                        </table:Column>
                        <table:Column id="mainColumnEmail">
                            <Label text="{I18N>/EMAIL}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>email}" wrapping="false" textAlign="Left"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10%" id="mainColumnStartDate">
                            <Label text="{I18N>/START_DATE}" textAlign="Center" />
                            <table:template>
                                <Text text="{
                                  path: 'list>start_date',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }" textAlign="Right"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10%" id="mainColumnEndDate">
                            <Label text="{I18N>/END_DATE}" textAlign="Center"/>
                            <table:template>
                                <Text text="{
                                  path: 'list>end_date',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }" textAlign="Right"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnCompany">
                            <Label text="{I18N>/COMPANY}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>company_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnLanguage">
                            <Label text="{I18N>/LANGUAGE}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>language_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnTimezone">
                            <Label text="{I18N>/TIMEZONE}" textAlign="Center" />
                            <table:template>
                                <Text text="{list>timezone_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnDateFormat">
                            <Label text="{I18N>/DATE_FORMAT}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>date_format_type_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnNumberFormat">
                            <Label text="{I18N>/NUMBER_FORMAT}" textAlign="Center" />
                            <table:template>
                                <Text text="{list>digits_format_type_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="5%" id="mainColumnCurrency">
                            <Label text="{I18N>/CURRENCY}" textAlign="Center"/>
                            <table:template>
                                <Text text="{list>currency_code}" wrapping="false" textAlign="Center"/>
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="{I18N>/SAVE}" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="{I18N>/CANCEL}" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>