<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false">

		<core:Title text="기본정보" />

        <Label text="사용자ID"/>
            <Input 
                value="{
                    path: 'master>/user_id',
                    type: 'sap.ui.model.type.String'
                }" 
                required="true"
                editable="false" />

        <Label text="성명"/>
        <Input
            value="{
                path: 'master>/employee_name',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>

        <Label text="이메일"/>
        <Input 
            value="{
                path: 'master>/email',
                type: 'sap.ui.model.type.String'
            }" 
            editable="false"/>

        <Label text="테넌트" labelFor="searchTenantCombo" required="true"></Label>
        <ComboBox
            editable="false"
            id="searchTenantCombo"
            width="100%"
            selectedKey="{master>/tenant_id}"
            items="{
                path: 'org>/Org_Tenant',
                filters: [
                ]
            }"
            change="searchTenantComboChange">
        <items>
            <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
        </items>
        </ComboBox>

        <Label text="언어" labelFor="searchLanguageCombo" required="true"></Label>
        <ComboBox
            editable="false"
            id="searchLanguageCombo"
            width="100%"
            selectedKey="{master>/language_code}"
            items="{
                    path: 'util>/CodeDetails',
                    filters: [
                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                        {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                    ]
                }">
            <items>
                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
            </items>
        </ComboBox>

        <Label text="날짜형식" labelFor="searchDateFormatCombo" required="false"></Label>
        <ComboBox
            editable="false"
            id="searchDateFormatCombo"
            width="100%"
            selectedKey="{master>/date_format_type_code}"
            items="{
                path: 'util>/CodeDetails',
                filters: [
                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                    {path: 'group_code', operator: 'EQ', value1: 'CM_DATE_FORMAT'}
                ]
            }">
        <items>
            <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
        </items>
        </ComboBox>

        <Label text="기본통화" labelFor="searchCurrencyCombo" required="true"></Label>
        <ComboBox
            editable="false"
            id="searchCurrencyCombo"
            width="100%"
            selectedKey="{master>/currency_code}"
            items="{
                path: 'currency>/CurrencyLng',
                filters: [
                ]
            }">
        <items>
            <core:Item key="{currency>currency_code}" text="{currency>currency_code}: {currency>currency_code_name}" />
        </items>
        </ComboBox>

	<core:Title text="" />

        <Label text="사번"/>
        <Input 
            value="{
                path: 'master>/employee_number',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>
        
        <Label text="성명(영문)"/>
        <Input 
            value="{
                path: 'master>/english_employee_name',
                type: 'sap.ui.model.type.String'
            }" 
            required="true" 
            editable="false"/>

        <Label text="사용기간" required="true"/>
        <DateRangeSelection
            dateValue="{path:'master>/start_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' } }"
            secondDateValue="{path:'master>/end_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' }}"
            editable="false"
        />

        <Label text="회사" labelFor="searchOrgCombo" required="true"></Label>
        <ComboBox editable="false" id="searchOrgCombo" width="100%" selectedKey="{master>/company_code}" 
        items="{
            path: 'org>/Org_Company',
            filters: [
            ]
        }">
        <items>
            <core:Item key="{org>company_code}" text="{org>company_code}: {org>company_name}" />
        </items>
        </ComboBox>

        <Label text="타임존" labelFor="searchTimeZoneCombo" required="true"></Label>
            <ComboBox
                editable="false"
                id="searchTimeZoneCombo"
                width="100%"
                selectedKey="{master>/timezone_code}"
                items="{
                    path: 'timeZoneMgt>/TimeZone',
                    filters: [
                    ]
                }">
            <items>
                <core:Item key="{timeZoneMgt>timezone_code}" text="{timeZoneMgt>timezone_code}: {timeZoneMgt>timezone_name}" />
            </items>
            </ComboBox>
    
        <Label text="숫자형식" labelFor="searchDigitsFormatCombo" required="true"></Label>
        <ComboBox
            editable="false"
            id="searchDigitsFormatCombo"
            width="100%"
            selectedKey="{master>/digits_format_type_code}"
            items="{
                    path: 'util>/CodeDetails',
                    filters: [
                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                        {path: 'group_code', operator: 'EQ', value1: 'CM_NUMBER_FORMAT'}
                    ]
                }">
            <items>
                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
            </items>
        </ComboBox>
        
        <Label text="비밀번호"/>
        <Input 
            value="{
                path: 'master>/password',
                type: 'sap.ui.model.type.String'
            }"
            required="true"
            editable="false"/>

	</form:SimpleForm>
</core:FragmentDefinition>