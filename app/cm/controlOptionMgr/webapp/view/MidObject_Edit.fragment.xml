	<form:SimpleForm id="midObjectForm1Edit" editable="false">
		
		<core:Title text="기본정보" />
    <Label text="Chain"/>
		<ComboBox 
			editable="{midObjectView>/isAddedMode}"
			id="searchChainCombo" 
			width="100%" 
			selectedKey="{master>/chain_code}" 
			required="true" 
			items="{
				path: 'util>/CodeDetails',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
					{path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
				]
			}">
			<items>
				<core:Item key="{util>code}" text="{util>code} : {util>code_description}" />
			</items>
		</ComboBox>

    <Label text="테넌트" labelFor="searchTenantCombo" required="true"></Label>
    <ComboBox
			editable="{midObjectView>/isAddedMode}"
      id="searchTenantCombo"
      width="100%"
      selectedKey="{master>/tenant_id}"
      items="{
        path: 'org>/Org_Tenant',
        filters: [
        ]
      }">
      <items>
        <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
      </items>
    </ComboBox>
		<core:Title text="" />

    <Label text="제어옵션코드"/>
		<Input 
			value="{
				path: 'master>/control_option_code',
				type: 'sap.ui.model.type.String',
				constraints: {
					maxLength: 30
				}
			}" 
			required="true" 
			editable="{midObjectView>/isAddedMode}"/>

