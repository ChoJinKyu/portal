<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="cm.orgMgr.controller.orgMgrMainView" 
    >
	<Table
        id="CompanyTable"
        growing="true"
        growingThreshold="30"
        items="{
            path: '/Org_Company',
            parameters : {
                $count : true,
                $$updateGroupId : 'Org_CompanyGroup'
                }
        }"
        mode="MultiSelect"
        width="auto"
        >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Org_Company" level="H2"/>
                    <SearchField id="midTableSearchField" width="10rem" search=".onMidTableFilterPress" />
                    <Button id="midTableApplyFilterButton" text="조회" type="Transparent" press=".onMidTableApplyFilterButton" />
                    <ToolbarSpacer/>
                    <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                    <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                    <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="tenant_id">
                <Text text="tenant_id"/>
            </Column>
            <Column id="company_code">
                <Text text="company_code"/>
            </Column>
            <Column id="company_name">
                <Text text="company_name"/>
            </Column>
            <Column id="use_flag" hAlign="Center" >
                <Text text="use_flag"/>
            </Column>
            <Column id="erp_type_code">
                <Text text="erp_type_code"/>
            </Column>
            <Column id="currency_code">
                <Text text="currency_code"/>
            </Column>
            <Column id="country_code">
                <Text text="country_code"/>
            </Column>
            <Column id="language_code">
                <Text text="language_code"/>
            </Column>
            <Column id="affiliate_code">
                <Text text="affiliate_code"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{tenant_id}"/>
                </cells>
                <cells>
                    <Input value="{company_code}"/>
                </cells>
                <cells>
                    <Input value="{company_name}"/>
                </cells>
                <cells>
                    <!-- <Input value="{use_flag}"/> -->
                    <Switch state="{use_flag}" customTextOn="Yes" customTextOff="No">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </cells>
                <cells>
                    <Input value="{erp_type_code}"/>
                </cells>
                <cells>
                    <Input value="{currency_code}"/>
                </cells>
                <cells>
                    <Input value="{country_code}"/>
                </cells>
                <cells>
                    <Input value="{language_code}"/>
                </cells>
                <cells>
                    <Input value="{affiliate_code}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>