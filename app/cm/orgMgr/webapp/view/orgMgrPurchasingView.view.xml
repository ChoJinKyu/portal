<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="cm.orgMgr.controller.orgMgrMainView" 
    >
	<Table
        id="PurchasingTable"
        growing="true"
        growingThreshold="30"
        items="{
            path: '/Org_Purchasing',
            parameters : {
                $count : true,
                $$updateGroupId : 'Org_PurchasingGroup'
                }
        }"
        mode="MultiSelect"
        width="auto"
        >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Org_Purchasing" level="H2"/>
                    <SearchField id="midTableSearchField" width="10rem" search=".onMidTableFilterPress" />
                    <Button id="midTableApplyFilterButton" text="조회" type="Transparent" press=".onMidTableApplyFilterButton" />
                    <ToolbarSpacer/>
                    <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                    <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                    <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="tenant_id">
                <Text text="tenant_id"/>
            </Column>
            <Column id="purchase_org_code">
                <Text text="purchase_org_code"/>
            </Column>
            <Column id="purchase_org_name">
                <Text text="purchase_org_name"/>
            </Column>
            <Column id="use_flag" hAlign="Center" width="10%">
                <Text text="use_flag"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{tenant_id}"/>
                </cells>
                <cells>
                    <Input value="{purchase_org_code}"/>
                </cells>
                <cells>
                    <Input value="{purchase_org_name}"/>
                </cells>
                <cells>
                    <Switch state="{use_flag}" customTextOn="Yes" customTextOff="No">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>