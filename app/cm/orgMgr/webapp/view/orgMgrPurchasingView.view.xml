<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="cm.orgMgr.controller.orgMgrMainView" 
    >
	<Table
        id="PurchasingTable"
        growing="true"
        growingThreshold="30"
        items="{
            path: '/Org_Purchasing',
            parameters : {
                $count : true,
                $$updateGroupId : 'Org_PurchasingGroup'
                }
        }"
        mode="MultiSelect"
        width="auto"
        >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Org_Purchasing" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="행추가" icon="sap-icon://add"  type="Accept" press="onAddRow"/>                                            
                    <Button text="행삭제" icon="sap-icon://delete" type="Reject" press="onDeleteRow"/>
                    <Button text="저장"   icon="sap-icon://save" type="Attention" press="onSave"/>
                    <Button icon="sap-icon://synchronize" type="Attention" press="onRefresh"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="tenant_id">
                <Text text="tenant_id"/>
            </Column>
            <Column id="purchase_org_code">
                <Text text="purchase_org_code"/>
            </Column>
            <Column id="purchase_org_name">
                <Text text="purchase_org_name"/>
            </Column>
            <Column id="use_flag" hAlign="Center" width="10%">
                <Text text="use_flag"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{tenant_id}"/>
                </cells>
                <cells>
                    <Input value="{purchase_org_code}"/>
                </cells>
                <cells>
                    <Input value="{purchase_org_name}"/>
                </cells>
                <cells>
                    <!-- <Input value="{use_flag}"/> -->
                    <CheckBox selected="{use_flag}" textAlign="Center"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>