<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="cm.orgMgr.controller.orgMgrMainView" 
    >
	<Table
        id="PlantTable"
        growing="true"
        growingThreshold="30"
        items="{
            path: '/Org_Plant',
            parameters : {
                $count : true,
                $$updateGroupId : 'Org_PlantGroup'
                }
        }"
        mode="MultiSelect"
        width="auto"
        >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Org_Plant" level="H2"/>
                    <SearchField id="midTableSearchField" width="10rem" search=".onMidTableFilterPress" />
                    <SearchField id="midTableSearchField1" width="10rem" search=".onMidTableFilterPress1" />
                    <Button id="midTableApplyFilterButton" text="조회" type="Transparent" press=".onMidTableApplyFilterButton" />
                    <ToolbarSpacer/>
                    <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                    <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                    <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="tenant_id">
                <Text text="tenant_id"/>
            </Column>
            <Column id="company_code">
                <Text text="company_code"/>
            </Column>
            <Column id="plant_code">
                <Text text="plant_code"/>
            </Column>
            <Column id="plant_name">
                <Text text="plant_name"/>
            </Column>
            <Column id="use_flag" hAlign="Center" width="10%">
                <Text text="use_flag"/>
            </Column>
            <Column id="purchase_org_code">
                <Text text="purchase_org_code"/>
            </Column>
            <Column id="bizdivision_code">
                <Text text="bizdivision_code"/>
            </Column>
            <Column id="au_code">
                <Text text="au_code"/>
            </Column>
            <Column id="hq_au_code">
                <Text text="hq_au_code"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{tenant_id}"/>
                </cells>
                <cells>
                    <Input value="{company_code}"/>
                </cells>
                <cells>
                    <Input value="{plant_code}"/>
                </cells>
                <cells>
                    <Input value="{plant_name}"/>
                </cells>
                <cells>
                    <!-- <Input value="{use_flag}"/> -->
                    <CheckBox selected="{use_flag}" textAlign="Center"/>
                </cells>
                <cells>
                    <Input value="{purchase_org_code}"/>
                </cells>
                <cells>
                    <Input value="{bizdivision_code}"/>
                </cells>
                <cells>
                    <Input value="{au_code}"/>
                </cells>
                <cells>
                    <Switch state="{use_flag}" customTextOn="Yes" customTextOff="No">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>