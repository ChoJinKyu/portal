<mvc:View controllerName="cm.roleMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="역할관리" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <!-- 테넌트 -->
                            <Label text="{I18N>/TENANT}:" labelFor="searchTenantCombo" required="true"></Label>
                            <ComboBox
                              id="searchTenantCombo"
                              width="100%"
                              selectedKey="L2100"
                              items="{
                                path: 'org>/Org_Tenant',
                                filters: [
                                ]
                              }" required="true">
                              <items>
                                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
                              </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- Chain -->
                        <VBox>
                            <Label text="Chain:" labelFor="searchChainCombo" required="true"></Label>
                            <ComboBox id="searchChainCombo" width="100%" 
                                selectedKey="CM" 
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code}: {util>code_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <!-- 역할코드 -->
                            <Label text="역할코드:" labelFor="searchRoleCode"></Label>
                            <Input id="searchRoleCode" placeholder="Role Code"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 역할명 -->
                            <Label text="역할명:" labelFor="searchRoleName"></Label>
                            <Input id="searchRoleName" placeholder="Role Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <!-- 사용여부 -->
                            <Label text="사용여부: " labelFor="searchUseflag">
                            </Label>
                            <SegmentedButton 
                                id="searchUseflag"
                                selectedKey="" 
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="Yes" width="3em" key="true"/>
                                    <SegmentedButtonItem text="No" width="3em" key="false"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="End" justifyContent="End">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/Role}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="역할목록 ({=(${list>/Role})?${list>/Role}.length:0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainRoleCodeColumn" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="역할코드" />
                        </Column>
                        <Column id="mainRoleNameColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="역할명" />
                        </Column>
                        <Column id="mainChainColumn" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="체인" />
                        </Column>
                        <Column id="mainRoleDescColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="설명" />
                        </Column>
                        <Column id="mainUseFlagColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="사용여부" />
                        </Column>
                        <Column id="mainCreateUserIdColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="생성자" />
                        </Column>
                        <Column id="mainSystemCreateDtmColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="시스템생성일시" />
                        </Column>
                        <Column id="mainUpdateUserIdColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="변경자" />
                        </Column>
                        <Column id="mainSystemUpdateDtmColumn" minScreenWidth="Tablet" hAlign="Center" importance="High" popinDisplay="WithoutHeader">
                            <Text text="시스템변경일시" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>role_code}"/>
                                <ObjectIdentifier text="{list>role_name}"/>
                                <ObjectIdentifier text="{list>chain_code}"/>
                                <ObjectIdentifier text="{list>role_desc}"/>
                                <ObjectIdentifier text="{list>use_flag}"/>
                                <ObjectIdentifier text="{list>create_user_id}"/>
                                <ObjectIdentifier text="{
                                  path: 'list>system_create_dtm',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }"/>
                                <ObjectIdentifier text="{list>update_user_id}"/>
                                <ObjectIdentifier text="{
                                  path: 'list>system_update_dtm',
                                  formatter: '.dateFormatter.toDateTimeString'
                                }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>