<mvc:View controllerName="cm.currencyMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/CURRENCY}{I18N>/MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">

                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/CURRENCY_CODE}" labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="{I18N>/CURRENCY_CODE}"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/USE_FLAG}" labelFor="searchChain"></Label>
                            <ComboBox id="searchChain" selectedKey=""
                                                    width="auto">
                                                    <core:Item key="" text="All"/>
                                                    <core:Item key="true" text="Yes"/>                                                            
                                                    <core:Item key="false" text="No"/>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL1 L1 M3 S3" />
                            </layoutData>
                        </VBox>
                        
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/CurrencyView}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{I18N>/CURRENCY}{I18N>/MANAGEMENT} : ({= ${list>/CurrencyView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/CREATE}" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <!-- <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> -->
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="auto">
							<Text text="{I18N>/CURRENCY_CODE_NAME}"/>
						</Column>
						<Column	hAlign="End" >
							<Text text="{I18N>/CURRENCY_CODE_DESC}"/>
						</Column>
                        <Column width="auto" 
                                minScreenWidth="Desktop"
								demandPopin="true"  popinHAlign="Right">
							<Text text="{I18N>/DECIMAL_PLACES}"/>
						</Column>
						<Column	hAlign="End" minScreenWidth="Desktop"
								demandPopin="true"  popinHAlign="Right">
							<Text text="{I18N>/EXTENSION_SCALE}"/>
						</Column>
                        <Column width="auto">
							<Text text="{I18N>/CURRENCY_PREFIX}"/>
						</Column>
						<Column	hAlign="End" >
							<Text text="{I18N>/CURRENCY_SUFFIX}"/>
						</Column>
                        <Column width="auto" minScreenWidth="Desktop"
								demandPopin="false">
							<Text text="{I18N>/EFFECTIVE_START_DATE}"/>
						</Column>
                        <Column width="auto" minScreenWidth="Desktop"
								demandPopin="false">
							<Text text="{I18N>/EFFECTIVE_END_DATE}"/>
						</Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
								<Text id="currency_code_name" text="{list>currency_code_name}"/>
                                <Text id="currency_code_desc" text="{list>currency_code_desc}"/>
                                <Text id="scale" text="{list>scale}"/>
                                <Text id="extension_scale" text="{list>extension_scale}"/>
                                <Text id="currency_prefix" text="{list>currency_prefix}"/>
                                <Text id="currency_suffix" text="{list>currency_suffix}"/>
                                <Text id="effective_start_date" text="{path: 'list>effective_start_date', formatter: '.dateFormatter.toUTCDateTimeString'}"/>
                                <Text id="effective_end_date" text="{path: 'list>effective_end_date', formatter: '.dateFormatter.toUTCDateTimeString'}"/>
							</cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <!-- <f:footer>
            <OverflowToolbar >
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer> -->
    </f:DynamicPage>
</mvc:View>