<mvc:View controllerName="sp.sf.fundingStatusSup.controller.Apply" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:core="sap.ui.core"
    height="100%">
    
    <uxap:ObjectPageLayout 
        id="Apply"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "true" 
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
        showFooter="true">
        
		<uxap:headerTitle>
			<!-- 타이틀 영역 -->
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="신청" wrapping="true" />
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<Title text="신청" wrapping="true" />
				</uxap:snappedHeading>
				<uxap:snappedTitleOnMobile>
					<Title text="신청" />
				</uxap:snappedTitleOnMobile>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
            <!-- <layout:VerticalLayout> -->
                <FlexBox id="headerContentId" height="80px" alignItems="Start" justifyContent="Start" >
                    <VBox>
                        <Label text="Supplier Code :"  class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/supplier_code}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                        <Label text="대표자명 :"  class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/repre_name}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                    </VBox>
                    <VBox>
                        <Label text="사업자번호 :" class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/tax_id}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                        <Label text="대표자 Mail Address :" class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/email_address}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                    </VBox>
                    <VBox>
                        <Label text="Supplier Name :"  class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/supplier_name}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                        <Label text="전화번호 :"  class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/tel_number}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                    </VBox>
                    <VBox>
                        <Label text="주소 :" class="sapUiLargeMarginBegin" />
                        <Label text="{viewModel>/Detail/Apply/local_full_address}" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                        <Label text="협력회 여부 :" class="sapUiLargeMarginBegin" />
                        <Label text="" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" design="Bold"/>
                    </VBox>
                </FlexBox>          
            <!-- </layout:VerticalLayout> -->
		</uxap:headerContent>

		<uxap:sections>
			<!-- General Infomation -->
			<uxap:ObjectPageSection id="genaralTab" titleUppercase="true" title="기본정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1">
                        <form:SimpleForm
                            maxContainerCols="2"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            adjustLabelSpan="false"
                            labelSpanL="4"
                            labelSpanM="4"
                            emptySpanL="0"
                            emptySpanM="0"
                            columnsL="2"
                            columnsM="2">
                            <form:content>
                                <VBox>
                                    <Label text="신청번호 :"/>
                                    <Text text="{viewModel>/Detail/Apply/funding_appl_number}" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="신청일 :"/>
                                    <Text text="{
                                        path:'viewModel>/Detail/Apply/funding_appl_date',
                                        type:'sap.ui.model.odata.type.DateTime',
                                        constraints : {
                                            displayFormat: 'Date'
                                        }
                                    }" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="거래사업부 :"/>
                                    <Text text="{viewModel>/Detail/Apply/org_name}" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="LG 구매팀 :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        fieldGroupIds="newRequest"
                                        required="true"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/purchasing_department_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="총 자본금(백만원) :"/>
                                    <Text text="" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" linebreak="true"/>
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="자기자본금(백만원) :"/>
                                    <Text text="" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="자산(백만원) :"/>
                                    <Text text="" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="전년도매출액(백만원) :" required="true"/>
                                    <Input
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        fieldGroupIds="newRequest"
                                        required="true"
                                        type="Number"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/pyear_sales_amount', 
                                            type: 'sap.ui.model.type.Integer'
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12"/>
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="주거래은행 :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/main_bank_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="신청금액(원) :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/funding_appl_amount',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" linebreak="true" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="희망년월 :" required="true"/>
                                    <DatePicker 
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        displayFormat='yyyy-MM'
                                        valueFormat ="yyyy-MM"
                                        change="onCheckDatePicker"
                                        value="{viewModel>/Detail/Apply/funding_hope_yyyymm}"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="상환방법 :"/>
                                    <!-- selectedKey="{applicationSup>/repayment_method_code}" -->
                                    <Text text="{viewModel>/Detail/Apply/repayment_method_code_name}" design="Bold"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="신청자 :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/appl_user_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="전화번호 :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/appl_user_tel_number',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="Mail Address :" required="true"/>
                                    <Input 
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        required="true"
                                        fieldGroupIds="newRequest"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/appl_user_email_address',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                            </form:content>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection id="reasonTab" titleUppercase="true" title="지원사유">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection2">
						<form:SimpleForm>
                            <VBox id="checkBoxContent">
                                <Label text="지원사유 :"  required="true"/>
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                                <!-- File Upload 끝-->
                            </VBox>
						</form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="investmentPlanTab" titleUppercase="true" title="투자계획">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <Table id="idProductsTable"
                            sticky="HeaderToolbar,ColumnHeaders"
                            inset="false"
                            class="sapFDynamicPageAlignContent"
                            items="{viewModel>/Detail/Apply/investPlanMst}"
                            width="auto">
                            <headerToolbar>
                                <OverflowToolbar id="productsTableToolbar" visible="true">
                                    <ToolbarSpacer/>
                                    <Button id="addRow" text="추가" type="Transparent" press=".onInvestmentPlanAddButtonPress" />
                                    <Button id="deleteRow" text="삭제" type="Transparent" press=".onInvestmentPlanDeleteButtonPress" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column hAlign="Left">
                                    <Text text="과제명" />
                                </Column>
                                <Column hAlign="Left">
                                    <Text text="투자 내역" />
                                </Column>
                                <Column hAlign="Left">
                                    <Text text="집행시기" />
                                </Column>
                                <Column hAlign="Right">
                                    <Text text="신청금액(원)" />
                                </Column>
                                <Column hAlign="Left">
                                    <Text text="적용모델" />
                                </Column>
                                <Column hAlign="Left">
                                    <Text text="투자장소" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Link text="{viewModel>investment_project_name}" press=".onOpenInvestmentDtl"/>
                                        <Text text="{viewModel>investment_desc}"/>
                                        <Text text="{viewModel>execution_yyyymm}"/>
                                        <Text text="{viewModel>appl_amount}"/>
                                        <Text text="{viewModel>apply_model_name}"/>
                                        <Text text="{viewModel>investment_place}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="collateralTab" titleUppercase="true" title="담보물">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm
                            maxContainerCols="2"
                            layout="ResponsiveGridLayout"
                            adjustLabelSpan="false">
                            <form:content>
                                <VBox>
                                    <Label text="담보물 :" required="true"/>
                                    <ComboBox 
                                        id="search_collateral_type_code"
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        fieldGroupIds="newRequest"
                                        required="true"
                                        width="100%"
                                        items="{
                                                    path : 'common>/Code',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'SP_SF_COLLATERAL_TYPE_CODE'}
                                                    ]
                                                }"

                                        selectedKey="{viewModel>/Detail/Apply/collateral_type_code}"
                                    >
                                        <core:Item key="{common>code}" text="{common>code_name}" />
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL6 L6 M12 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="담보금액(원) :" required="true"/>
                                    <Input
                                        editable="{viewModel>/Detail/Apply/editableMode}"
                                        fieldGroupIds="newRequest"
                                        required="true"
                                        type="Number"
                                        value="{
                                            path: 'viewModel>/Detail/Apply/collateral_amount', 
                                            type: 'sap.ui.model.type.Integer'
                                        }"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL6 L6 M12 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <!-- File Upload 시작-->
                                    <UploadCollection
                                        id="UploadCollection"
                                        maximumFilenameLength="55"
                                        maximumFileSize="10"
                                        multiple="true"
                                        noDataDescription=" "
                                        sameFilenameAllowed="true"
                                        instantUpload="false"
                                        uploadButtonInvisible="true"
                                    />
                                    <layoutData>
                                        <layout:GridData span="XL12 L12 M12 S12" />
                                    </layoutData>
                                </VBox>
                            </form:content>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
        </uxap:sections>
        
        <!-- 하단 버튼 처리 툴바 -->
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
                <Button id="pageCancelButton" type="Transparent" text="{I18N>/CANCEL}" press=".onPageNavBackButtonPress"/>
                <Button id="pageUpdateButton" enabled="false" type="Transparent" text="{I18N>/UPDATE}" press=".onPageUpdateButtonPress" />
                <Button id="pageSaveButton" enabled="false" type="Transparent" text="{I18N>/SAVE}" press=".onPageSaveButtonPress" />
                <Button id="pageSubmissionButton" enabled="false" type="Emphasized" text="{I18N>/SUBMIT}" press=".onPageSubmissionButtonPress" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>