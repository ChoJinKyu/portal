<mvc:View controllerName="sp.sf.fundingNotifySup.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/FUNDING_NOTIFICATION} (Supplier)" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/TITLE} :"></Label>
                            <Input id="searchTitle" placeholder="{I18N>/TITLE}"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/APPLICATION_PERIOD} :" labelFor="searchDateS" />
                            <DateRangeSelection 
                                id="searchDateS" 
                                displayFormat="yyyy-MM-dd" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                                dateValue="{
                                    path:'viewModel>/cond/BT/funding_appl_date/value1',
                                    type:'sap.ui.model.odata.type.DateTime',
                                    constraints : {
                                        displayFormat: 'Date'
                                    }
                                }"
                                secondDateValue="{
                                    path:'viewModel>/cond/BT/funding_appl_date/value2',
                                    type:'sap.ui.model.odata.type.DateTime',
                                    constraints : {
                                        displayFormat: 'Date'
                                    }
                                }"
                            />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="(임시세션)협력사 :" labelFor="searchDateS" />
                            <ComboBox id="sSupplierCode">
                                <core:Item key="KR00533800" text="세운철강(주)" />
                                <core:Item key="KR00616400" text="신혁기업사" />
                                <core:Item key="KR00687500" text="희성정밀(주)" />
                                <core:Item key="KR00818700" text="서울반도체(주)" />
                                <core:Item key="KR00862700" text="로옴세미컨덕터코리아 주식회사" />
                                <core:Item key="KR00941200" text="(주)필룩스" />
                                <core:Item key="KR01077700" text="코웰패션 주식회사" />
                                <core:Item key="KR01079700" text="(주)연호전자" />
                                <core:Item key="KR01093000" text="한국태양유전(주)" />
                                <core:Item key="KR01100100" text="(주)오성사창원공장" />
                                <core:Item key="KR01112100" text="(주)일해" />
                                <core:Item key="KR01114200" text="성철사(주)" />
                                <core:Item key="KR01357200" text="교세라커넥터코리아판매(주)" />
                                <core:Item key="KR01731200" text="(주)블루콤" />
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                    sticky="HeaderToolbar,ColumnHeaders" 
                    inset="false" 
                    growing="true"
                    growingThreshold="100"
                    class="sapFDynamicPageAlignContent" 
                    updateFinished=".onMainTableUpdateFinished"
                    items="{list>/SfFundingNotifyView}"
                    mode="None" 
                    width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{I18N>/FUNDING_NOTIFICATION} ({= ${list>/SfFundingNotify}.length || 0})" level="H2"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainFundingNumberColumn" minScreenWidth="Tablet" width="10em" hAlign="Center">
                            <Text text="{I18N>/NOTIFICATION_NUMBER}" />
                        </Column>
                        <Column id="mainFundingTitleComlumn" minScreenWidth="Tablet" width="35em" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/TITLE}" />
                        </Column>
                        <Column id="mainFundingCreateUser" minScreenWidth="Tablet" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/WRITER}" />
                        </Column>
                        <Column id="mainFundingLocalCreateDtm" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/WRITE_DATE}" />
                        </Column>
                        <Column id="mainFundingFundingStartDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/APPLICATION_PERIOD}" />
                        </Column>
                        <Column id="mainFundingApplClosingDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/APPLICATION_DUE_DATE}" />
                        </Column>
                        <Column id="mainFundingApply" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="{I18N>/APPLICATION}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <Text text="{list>funding_notify_number}"/>
                                <Text text="{list>funding_notify_title}"/>
                                <Text text="{list>create_user_name}"/>
                                <Text
                                    text="{
                                        path: 'list>local_create_dtm',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                            pattern: 'yyyy-MM-dd'
                                        }
                                    }"/>
                                <HBox justifyContent="Center">
                                    <Text
                                        text="{
                                            path: 'list>funding_notify_start_date',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'yyyy-MM-dd'
                                            }
                                        }"/>
                                    <Text textAlign="Center" text="~" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
                                    <Text textAlign="Center"
                                        text=" {
                                            path: 'list>funding_notify_end_date',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                pattern: 'yyyy-MM-dd'
                                            }
                                        }"/>
                                </HBox>
                                <Text
                                    text="{
                                        path: 'list>funding_appl_closing_date',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                            pattern: 'yyyy-MM-dd'
                                        }
                                    }"/>
                                <HBox justifyContent="Center">
                                    <Button id="applicationCreateBtn" text="작성" type="Emphasized" press=".onCreateFundingNotify" visible="{list>btnCreate}"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>