<mvc:View controllerName="sp.sf.fundingNotifySup.controller.MainCreateObject" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:core="sap.ui.core"
	height="100%">
	<uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
		showFooter="true">
		<uxap:headerTitle>
			<!-- 타이틀 영역 -->
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="자금지원 신청" wrapping="true" />
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<Title text="자금지원 신청" wrapping="true" />
				</uxap:snappedHeading>
				<uxap:snappedTitleOnMobile>
					<Title text="자금지원 신청" />
				</uxap:snappedTitleOnMobile>
                <uxap:navigationActions>
                    <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<!-- 헤더 영역 -->
			<FlexBox wrap="Wrap" visible="{midObjectView>/showMode}">
				<VBox>
                    <ObjectStatus
                        title="공고번호"
                        text="{applicationSup>/funding_notify_number}"/>
                    <ObjectStatus
                        title="신청번호"
                        text="{applicationSup>/funding_appl_number}"/>
                    <layoutData>
                        <layout:GridData span="XL4 L4 M6 S12" />
                    </layoutData>
                </VBox>
			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<!-- General Infomation -->
			<uxap:ObjectPageSection id="genaralTab" titleUppercase="true" title="기본정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1">
                        <form:SimpleForm
                            maxContainerCols="2"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            adjustLabelSpan="false"
                            labelSpanL="4"
                            labelSpanM="4"
                            emptySpanL="0"
                            emptySpanM="0"
                            columnsL="2"
                            columnsM="2">
                            <form:content>
                                <VBox>
                                    <Label text="거래사업부 :" required="true"/>
                                    <ComboBox 
                                        id="transactionDivision" 
                                        selectedKey="{applicationSup>/org_code}"
                                        required="true" 
                                        items="{transactionDivision>/}" width="100%">
                                        <items>
                                            <core:Item key="{transactionDivision>org_code}" text="{transactionDivision>org_code} :  {transactionDivision>org_name}" />
                                        </items>
                                    </ComboBox>
                                    
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="LG 구매팀 :" required="true"/>
                                    <Input id="purchasingDepartmentName" editable="{midObjectView>/editMode}"
                                        value="{
                                            path: 'applicationSup>/purchasing_department_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 30
                                            }
                                        }"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="전년도매출액(백만원) :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{applicationSup>/pyear_sales_amount}"
                                        type="Number"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="주거래은행 :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{
                                            path: 'applicationSup>/main_bank_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 100
                                            }
                                        }"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="신청금액(원) :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{applicationSup>/funding_appl_amount}"
                                        type="Number"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" linebreak="true" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="희망년월 :" required="true"/>
                                    <DatePicker 
                                        displayFormat='yyyy-MM'
                                        valueFormat ="yyyy-MM"
                                        value="{applicationSup>/funding_hope_yyyymm}"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="상환방법 :" required="true"/>
                                    <!-- selectedKey="{applicationSup>/repayment_method_code}" -->
                                    <ComboBox id="search_repayment_method_code" editable="false"
                                        width="100%"
                                        items="{
                                                    path : 'util>/Code',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'SP_SF_REPAYMENT_METHOD_CODE'}
                                                    ]
                                                }"

                                        selectedKey="A"
                                    >
                                        <core:Item key="{util>code}" text="{util>code_description}" />
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="신청자 :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{
                                            path: 'applicationSup>/appl_user_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 240
                                            }
                                        }"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="전화번호 :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{
                                            path: 'applicationSup>/appl_user_tel_number',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 15
                                            }
                                        }"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                                
                                <VBox>
                                    <Label text="Mail Address :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{
                                            path: 'applicationSup>/appl_user_email_address',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 240
                                            }
                                        }"/>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M6 S12" />
                                    </layoutData>
                                </VBox>
                            </form:content>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection id="reasonTab" titleUppercase="true" title="지원사유">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<form:SimpleForm>
                            <VBox id="checkBoxContent">
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                                <!-- File Upload 끝-->
                            </VBox>
						</form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="investmentPlanTab" titleUppercase="true" title="투자계획">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <Table id="idProductsTable"
                            sticky="HeaderToolbar,ColumnHeaders"
                            inset="false"
                            mode="MultiSelect"
                            class="sapFDynamicPageAlignContent"
                            items="{applicationSup>/investPlanMst}"
                            width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <ToolbarSpacer/>
                                    <Button id="addRow" text="추가" type="Transparent" press=".onInvestmentPlanAddButtonPress" />
                                    <Button id="deleteRow" text="삭제" type="Transparent" press=".onInvestmentPlanDeleteButtonPress" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="과제명" />
                                </Column>
                                <Column>
                                    <Text text="투자 내역" />
                                </Column>
                                <Column>
                                    <Text text="집행시기" />
                                </Column>
                                <Column>
                                    <Text text="신청금액(원)" />
                                </Column>
                                <Column>
                                    <Text text="적용모델" />
                                </Column>
                                <Column>
                                    <Text text="투자장소" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Link text="{applicationSup>investment_project_name}" press=".onOpenInvestmentDtl" />
                                        <Text text="{applicationSup>investment_desc}"/>
                                        <Text text="{applicationSup>execution_yyyymm}"/>
                                        <Text text="{applicationSup>appl_amount}"/>
                                        <Text text="{applicationSup>apply_model_name}"/>
                                        <Text text="{applicationSup>investment_place}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="collateralTab" titleUppercase="true" title="담보물">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm
                            maxContainerCols="2"
                            layout="ResponsiveGridLayout"
                            adjustLabelSpan="false">
                            <form:content>
                                <VBox>
                                    <Label text="담보물 :" required="true"/>
                                    <ComboBox id="search_collateral_type_code"
                                        width="100%"
                                        items="{
                                                    path : 'util>/Code',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'SP_SF_COLLATERAL_TYPE_CODE'}
                                                    ]
                                                }"

                                        selectedKey="{applicationSup>/collateral_type_code}"
                                    >
                                        <core:Item key="{util>code}" text="{util>code_description}" />
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL6 L6 M12 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <Label text="담보금액(원) :" required="true"/>
                                    <Input editable="{midObjectView>/editMode}"
                                        value="{applicationSup>/collateral_amount}"
                                        type="Number"/>
                                    <layoutData>
                                        <layout:GridData span="XL6 L6 M12 S12" />
                                    </layoutData>
                                </VBox>
                                <VBox>
                                    <!-- File Upload 시작-->
                                    <UploadCollection
                                        id="UploadCollection"
                                        maximumFilenameLength="55"
                                        maximumFileSize="10"
                                        multiple="true"
                                        sameFilenameAllowed="true"
                                        instantUpload="false"
                                        noDataDescription="Drop files or use the &quot;Add&quot; button to keep files ready for upload"
                                        change="onChange"
                                        fileDeleted="onFileDeleted"
                                        filenameLengthExceed="onFilenameLengthExceed"
                                        fileSizeExceed="onFileSizeExceed"
                                        typeMissmatch="onTypeMissmatch"
                                        uploadComplete="onUploadComplete"
                                        beforeUploadStarts="onBeforeUploadStarts" />
                                    <layoutData>
                                        <layout:GridData span="XL12 L12 M12 S12" />
                                    </layoutData>
                                </VBox>
                            </form:content>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>

		<!-- 하단 버튼 처리 툴바 -->
		<uxap:footer>
			<OverflowToolbar>
                <!-- <Button
                    icon="sap-icon://alert"
                    type="Emphasized"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    press=".onMessagePopoverPress" /> -->
				<ToolbarSpacer />
                <Button id="pageCancelButton" type="Transparent" text="{I18N>/CANCEL}" press=".onPageNavBackButtonPress"/>
                <Button id="pageSaveButton" type="Transparent" text="{I18N>/TEMP_SAVE}" press=".onPageSaveButtonPress" />
                <Button id="pageSubmissionButton" type="Emphasized" text="{I18N>/SUBMIT}" press=".onPageSubmissionButtonPress" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>