<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="investmentPlanDetails" class="sapUiSmallMargin" title="투자계획" resizable="true" contentWidth="80%" >
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="거래사업부 :"/>
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/org_name',
                                    type: 'sap.ui.model.type.String'
                                }"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="협력회사명 :"/>
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/supplier_local_name',
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        maxLength: 30
                                    }
                                }"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="투자 유형 :"/>
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_type_code_name',
                                    type: 'sap.ui.model.type.String'
                                }"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="과제명 :"/>
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_project_name',
                                    type: 'sap.ui.model.type.String'
                                }"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="투자년월 :"/>
                            <Text design="Bold"
                                displayFormat='yyyy-MM'
                                valueFormat ="yyyy-MM"
                                text="{viewModel>/Detail/Apply/popUpInvestPlanMst/investment_yyyymm}"
                            />
                            <layoutData>
                               <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="신청금액(원) :"/>
                            <Text 
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/appl_amount',
                                    type: 'sap.ui.model.odata.type.Decimal'
                                }" design="Bold"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="투자 배경 및 목적 :" />
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_purpose',
                                    type: 'sap.ui.model.type.String'
                                }"
                            />
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="적용모델 :" />
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/apply_model_name',
                                    type: 'sap.ui.model.type.String'
                                }"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="년간 예상물동 :" />
                            <Text 
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/annual_mtlmob_quantity',
                                    type: 'sap.ui.model.odata.type.Decimal'
                                }" design="Bold"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="투자내역 :" />
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_desc',
                                    type: 'sap.ui.model.type.String'
                                }"/>
                            <layoutData>
                                <layout:GridData span="XL9 L9 M9 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="집행년월 :" />
                            <Text design="Bold"
                                displayFormat='yyyy-MM'
                                valueFormat ="yyyy-MM"
                                text="{viewModel>/Detail/Apply/popUpInvestPlanMst/execution_yyyymm}"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="투자효과 :" />
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_effect',
                                    type: 'sap.ui.model.type.String'
                                }"
                            />
                            <layoutData>
                                <layout:GridData span="XL9 L9 M9 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="투자장소 :" />
                            <Text design="Bold"
                                text="{
                                    path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/investment_place',
                                    type: 'sap.ui.model.type.String'
                                }"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </VBox>
            <VBox>
                <HBox>
                    <Table id="investmentDtl"
                        sticky="HeaderToolbar,ColumnHeaders"
                        inset="false"
                        class="sapFDynamicPageAlignContent"
                        items="{viewModel>/Detail/Apply/popUpInvestPlanDtl}"
                        width="auto">
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title text="상세내역" level="H2"/>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column hAlign="Left">
                                <Label text="품목"/>
                            </Column>
                            <Column hAlign="Right">
                                <Label text="구입단가(원)"/>
                            </Column>
                            <Column hAlign="Right">
                                <Label text="구입대수"/>
                            </Column>
                            <Column hAlign="Right">
                                <Label text="구입금액(원)"/>
                                <footer>
                                    <Text 
                                        text="{
                                            path: 'viewModel>/Detail/Apply/popUpInvestPlanMst/sum_item_pur_amt',
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }" design="Bold"/>
                                </footer>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text
                                        text="{
                                            path: 'viewModel>investment_item_name',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 500
                                            }
                                        }"
                                    />
                                    <Text 
                                        text="{
                                            path: 'viewModel>investment_item_purchasing_price',
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }" design="Bold"/>
                                    <Text 
                                        text="{
                                            path: 'viewModel>investment_item_purchasing_qty',
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }" design="Bold"/>
                                    <Text  
                                        text="{
                                            path: 'viewModel>investment_item_purchasing_amt', 
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </HBox>
                <!-- <HBox class="investmentItemPurchasingAmtSum" alignItems="Center" justifyContent="End">
                    <Label text="총 구입금액 : "/>
                    <Text id ="investment_item_purchasing_amt_sum" text="{viewModel>/Detail/Apply/popUpInvestPlanMst/sum_item_pur_amt}" class="inputPurchasingAmt" />
                </HBox> -->
            </VBox>
        </content>

        <ToolbarSpacer/>
        <!-- <HBox justifyContent="End" > -->
            <endButton>
                <Button text="닫기" type="Transparent" press=".onCreatePopupClose"/>
            </endButton>
        <!-- </HBox> -->
    </Dialog>
</core:FragmentDefinition>