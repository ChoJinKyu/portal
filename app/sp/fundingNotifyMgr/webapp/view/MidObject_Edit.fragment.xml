<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:core="sap.ui.core">
	<form:SimpleForm
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        adjustLabelSpan="false"
        labelSpanL="4"
        labelSpanM="4"
        emptySpanL="0"
        emptySpanM="0"
        columnsL="2"
        columnsM="2">
        <form:content>
            <VBox>
                <Label text="공고번호 :" required="true"/>
                <Input 
                value="{
                    path: 'master>/',
                    type: 'sap.ui.model.type.String'
                }"/>
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </VBox>
            <VBox>
                <Label text="공고기간 :" required="true"/>
                <Input 
                value="{
                    path: 'master>/',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 30
                    }
                }"/>
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </VBox>
            <VBox>
                <Label text="신청마감일 :" required="true"/>
                <Input 
                value="{
                    path: 'master>/',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 30
                    }
                }"/>
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </VBox>
            <VBox>
                <Label text="제목 :" required="true"/>
                <Input 
                value="{
                    path: 'master>/',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 30
                    }
                }"/>
                <layoutData>
                    <l:GridData span="XL2 L12 M12 S12" />
                </layoutData>
            </VBox>
            
            <VBox>
                <Label text="내용 :" required="true"/>
                <richtexteditor:RichTextEditor id="idrichtexteditor1" 
                    editorType="TinyMCE4"
                    useLegacyTheme="false" 
                    showGroupClipboard="false" 
                    showGroupTextAlign="true" 
                    showGroupStructure="true" 
                    showGroupLink="true"  
                    showGroupFont="false"
                    width="100%"
                    height="400px">
                </richtexteditor:RichTextEditor>
                <layoutData>
                    <l:GridData span="XL2 L12 M12 S12" />
                </layoutData>
            </VBox>
        </form:content>
        
	</form:SimpleForm>
</core:FragmentDefinition>