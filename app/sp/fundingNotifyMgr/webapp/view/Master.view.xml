<mvc:View displayBlock="true" controllerName="sp.fundingNotifyMgr.controller.Master" height="100%"
	  xmlns="sap.m"
      xmlns:form="sap.ui.layout.form"
      xmlns:layout="sap.ui.layout"
	  xmlns:f="sap.f"
	  xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId"
        headerExpanded="{contModel>/headerExpandFlag}"
		toggleHeaderOnTitleClick="true">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Products ({products>/ProductCollectionStats/Counts/Total})"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label
                                text="Input : "
                                labelFor="input"
                                required="true">
                            </Label>
                            <Input
                                placeholder="필수"
                                id="input">
                            </Input>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label
                                text="Segmented Button : "
                                required="true">
                            </Label>
                            <SegmentedButton selectedKey="all" class="sapUiSmallMarginBottom" width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" key="all"/>
                                    <SegmentedButtonItem text="PR" width="3em"/>
                                    <SegmentedButtonItem text="Budget" width="5em"/>
                                    <SegmentedButtonItem text="RFQ" />
                                    <SegmentedButtonItem text="Mold Spec" width="6em"/>
                                    <SegmentedButtonItem text="PO" width="3em"/>
                                    <SegmentedButtonItem text="RCV" width="4em"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL8 L6 M12 S12"/>
                            </layoutData>
                        </VBox>
                        <FlexBox
                            alignItems="Start"
                            justifyContent="End">
                            <Button 
                                text="Search"
                                type="Emphasized"
                                press=".onSearch"/>
                            <layoutData>
                                <layout:GridData
                                     span="XL2 L3 M6 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="productsTable"
                mode="MultiSelect"
				   sticky="ColumnHeaders,HeaderToolbar"
				   inset="false"
				   growing="true"
                   growingThreshold="10"
				   items="{
						path: 'products>/ProductCollection',
						sorter: {
							path: 'Name'
						}
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<headerToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Affiliate" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="false">
                        <Text text="Division"/>
                    </Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="Model" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="Part No" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="false">
						<Text text="Seq" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="Order Supplier" />
					</Column>
					<Column	hAlign="End">
						<Text text="Status" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
                            <ObjectIdentifier title="{products>1}" />
                            <ObjectIdentifier text="{products>2}" />
                            <ObjectIdentifier text="{products>3}" />
                            <ObjectIdentifier title="{products>4}" />
                            <ObjectIdentifier text="{products>5}" />
                            <ObjectIdentifier text="{products>6}" />
                            <ObjectStatus
                                text="{products>7}"
                                state="{= (${products>7} === 'Saved') ? 'Error' : 'Success' }" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>