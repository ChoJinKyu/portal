<mvc:View controllerName="sp.se.evalProgressList.controller.SheetMgt" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:suiteCom="sap.suite.ui.commons"
	height="100%">
    <uxap:ObjectPageLayout 
        id="sheetMgtPage"
		alwaysShowContentHeader = "true"
		upperCaseAnchorBar="false"
        showFooter="true"
    >
		<uxap:headerTitle>
            <!-- 상세 -->
			<uxap:ObjectPageHeader objectTitle="{I18N>/DETAIL}">
                
                <uxap:navigationBar>
                    
                </uxap:navigationBar>
                <uxap:actions>
                </uxap:actions> 
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>

		<uxap:headerContent>
            <IconTabBar
                id="progressBar"
                expandable="false"
                expanded="true"
                class="sapUiNoContentPadding"
                backgroundDesign="Translucent"
                applyContentPadding="false"
            >
                <items>
                    <IconTabFilter
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="평가 Sheet 관리"
                        design="Horizontal"
                        key="step1" />
                    <IconTabSeparator icon="sap-icon://open-command-field" />
                    <IconTabFilter
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="평가발의"
                        design="Horizontal"
                        key="step2" />
                    <IconTabSeparator icon="sap-icon://open-command-field" />
                    <IconTabFilter
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="평가 모니터링"
                        design="Horizontal"
                        count="0 of 128"
                        key="step3" />
                    <IconTabSeparator icon="sap-icon://open-command-field" />
                    <IconTabFilter
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="평가 결과조회"
                        design="Horizontal"
                        key="step4" />
                </items>
            </IconTabBar>
		</uxap:headerContent>

		<uxap:sections>
            <!-- 일반정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/EVAL_ITEM}" visible="{=${viewModel>/Args/new} === 'Y'}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm 
                            layout="ResponsiveGridLayout"
                        >
                            <VBox>
                                <!-- 평가항목 명 -->
                                <Label text="{I18N>/EVAL_ITEM_NM}" required="true"/>
                                <Input />
                                <layoutData>
                                    <layout:GridData span="L12 M12 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <!-- Node 유형 -->
                                <Label text="{I18N>/NODE_TYPE}" required="true"/>
                                <ComboBox 
                                    width="100%"
                                />
                                <layoutData>
                                    <layout:GridData span="L12 M12 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" title="{I18N>/EVAL_ITEM}2" visible="{=${viewModel>/Args/new} === 'Y'}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm 
                            layout="ResponsiveGridLayout"
                        >
                            <VBox>
                                <!-- 평가항목 명 -->
                                <Label text="{I18N>/EVAL_ITEM_NM}" required="true"/>
                                <Input />
                                <layoutData>
                                    <layout:GridData span="L12 M12 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <!-- Node 유형 -->
                                <Label text="{I18N>/NODE_TYPE}" required="true"/>
                                <ComboBox 
                                    width="100%"
                                />
                                <layoutData>
                                    <layout:GridData span="L12 M12 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>
            
		</uxap:sections>

		<uxap:footer>
			<OverflowToolbar>
                <ToolbarSpacer />
                <Button 
                    text="{I18N>/UPDATE}" 
                    enabled="{=
                        !${viewModel>/App/EditMode} &amp;&amp;
                        ${viewModel>/Args/new} !== 'Y'
                    }"
                    type="Transparent" 
                    press="onPressModeChange($event, 'UPDATE')" 
                />
				<Button 
                    text="{I18N>/CANCEL}" 
                    enabled="{viewModel>/App/EditMode}"
                    type="Transparent" 
                    press="onPressModeChange($event, 'CANCEL')" 
                />
				<Button 
                    text="{I18N>/DELETE}" 
                    enabled="{=
                        !${viewModel>/App/EditMode} &amp;&amp;
                        ${viewModel>/Args/new} !== 'Y'
                    }"
                    type="Transparent" 
                    press="onPressDelete" 
                />
                <Button 
                    text="{I18N>/SAVE}" 
                    enabled="{=
                        ${viewModel>/App/EditMode} ||
                        ${viewModel>/Args/new} === 'Y'
                    }"
                    type="Emphasized" 
                    press="onPressSave" 
                />
			</OverflowToolbar>
		</uxap:footer>
        
	</uxap:ObjectPageLayout>
</mvc:View>