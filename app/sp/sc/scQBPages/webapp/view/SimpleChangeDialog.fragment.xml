<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" 
                    xmlns:html="http://www.w3.org/1999/xhtml" 
                    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit" xmlns:sf="sap.ui.comp.smartform"
                    xmlns:form="sap.ui.layout.form"
                    class="sapUiSizeCompact"  
                    displayBlock="true"  >
	<Dialog title="{I18N>/SIMPLE_CHANGE}" resizable="false" draggable="true" contentWidth="30rem" contentHeight="40rem">
        <IconTabBar
		id="idIconTabBarFiori2"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Basic Info" >
                <Table id="simpleChangeTable" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop" > 

                    <columns>
                        <Column width="12em">
                            <Text text=""/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                            <Text text=""/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem >
                            <cells>
                                <Text text="Specification"/>
                                <ComboBox id="comboBoxSpecification" value="" ></ComboBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Quantity"/>
                                <Input id="inputQuantity" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Currency"/>
                                <ComboBox id="comboBoxCurrency" value="" ></ComboBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Start Price"/>
                                <Input id="inputStartPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Target Price"/>
                                <Input id="inputTargetPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Display to Supplier"/>
                                <ToggleButton id="toggleBtnDisplay" text="NO" pressed="false"  press="onPress_toggleDisplay"/>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem visible="{= ${propInfo>/outCome} === 'view' }">
                            <cells>
                                <Text text="납기 요청일"/>
                                <DatePicker id="datePickerMaturitydate"
                                    valueFormat="yyyy/MM/dd" displayFormat="yyyy/MM/dd" 
                                    value="{path: 'NegoHeaders>/maturity_date', type: 'sap.ui.model.odata.type.Date', 
                                            formatOptions: { pattern: 'yyyy/MM/dd' , UTC: true} }" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="Current Price"/>
                                <Input id="inputCurrentPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </IconTabFilter>

            <IconTabFilter enabled="false"
                text="Response Currency" >
                
                <VBox >
                     <form:SimpleForm  editable="true"  layout="ColumnLayout" 
                                    columnsM="2"
                                    columnsL="2"
                                    columnsXL="2">
                        <Label  text="Exchange Rate Type"  /> 
                        <ComboBox value="" ></ComboBox>
                        <Label  text="Target Total Amount" /> 
                        <DatePicker 
                                    valueFormat="yyyy/MM/dd" displayFormat="yyyy/MM/dd" 
                                    value="{path: 'NegoHeaders>/maturity_date', type: 'sap.ui.model.odata.type.Date', 
                                            formatOptions: { pattern: 'yyyy/MM/dd' , UTC: true} }" />
                    </form:SimpleForm>

                    <Table sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop" > 

                        <columns>
                            <Column width="12em">
                                <Text text="통화"/>
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="Description"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem >
                                <cells>
                                    <Text text="USD"/>
                                    <Text text="US Dollar"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="CNY"/>
                                    <Text text="위안"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="YEN"/>
                                    <Text text="엔"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="KRW"/>
                                    <Text text="원화"/>
                                </cells>
                            </ColumnListItem>
                            
                        </items>
                    </Table>
                
                </VBox>

            </IconTabFilter>
            
        </items>
	</IconTabBar>
        
        


        

        <beginButton>
			<Button text="{I18N>/CANCEL}" press=".onPressSimpleChangeDialogClose"/>
	    </beginButton>
        <endButton>
            <Button text="{I18N>/APPLY}" type="Emphasized" press=".onPressSimpleChangeDialogSave" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>