<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" 
                    xmlns:html="http://www.w3.org/1999/xhtml" 
                    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit" xmlns:sf="sap.ui.comp.smartform"
                    xmlns:form="sap.ui.layout.form"
                    class="sapUiSizeCompact"  
                    displayBlock="true"  >
	<Dialog title="{I18N>/SIMPLE_CHANGE}" resizable="false" draggable="true" contentWidth="30rem" contentHeight="40rem">
        <IconTabBar
		id="idIconTabBarFiori2"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Basic Info" >
                <Table id="simpleChangeTable" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop" > 

                    <columns>
                        <Column width="12em">
                            <Text text=""/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                            <Text text=""/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/SPECIFICATION_NAME}"/>
                                <ComboBox id="comboBoxSpecification" items="{
                                        path: '/Sc_Spec_Code_View', 
                                        templateShareable:true, 
                                        filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}],
                                        sorter: {
                                            path: 'sort_no',
                                            descending: false
                                        }}" 
                                    showSecondaryValues= "true"
                                    width="100%" required="true">
                                    <core:ListItem key="{specification_code}" text="{specification_name}" additionalText="{specification_code}"/>
                                </ComboBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/QUANTITY}"/>
                                <Input id="inputQuantity" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/CURRENCY}"/>
                                <ComboBox id="comboBoxCurrency" items="{
                                        path: 'common>/Currency', 
                                        templateShareable:true, 
                                        filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}],
                                        sorter: {
                                            path: 'currency_code',
                                            descending: false
                                        }}" 
                                    showSecondaryValues= "true"
                                    width="100%" required="true">
                                    <core:ListItem key="{common>currency_code}" text="{common>currency_code_name}" additionalText="{common>currency_code}"/>
                                </ComboBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/BIDDING_START_NET_PRICE}"/>
                                <Input id="inputStartPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/BIDDING_TARGET_NET_PRICE}"/>
                                <Input id="inputTargetPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/BIDDING_START_NET_PRICE_FLAG}"/>
                                <ToggleButton id="toggleBtnDisplay" text="NO" pressed="false"  press="onPress_toggleDisplay"/>
                            </cells>
                        </ColumnListItem>
                        <!-- <ColumnListItem visible="{= ${propInfo>/outCome} === 'view' }"> -->
                        <ColumnListItem visible="false">
                            <cells>
                                <Text text="{I18N>/MATURITY_DATE}"/>
                                <DatePicker id="datePickerMaturitydate"
                                    valueFormat="yyyy/MM/dd" displayFormat="yyyy/MM/dd" 
                                     />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem >
                            <cells>
                                <Text text="{I18N>/CURRENT_PRICE}"/>
                                <Input id="inputCurrentPrice" value="" type="Number" textAlign="Right"></Input>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </IconTabFilter>

            <IconTabFilter enabled="false"
                text="Response Currency" >
                
                <VBox >
                     <form:SimpleForm  editable="true"  layout="ColumnLayout" 
                                    columnsM="2"
                                    columnsL="2"
                                    columnsXL="2">
                        <Label  text="Exchange Rate Type"  /> 
                        <ComboBox value="" ></ComboBox>
                        <Label  text="Target Total Amount" /> 
                        <DatePicker 
                                    valueFormat="yyyy/MM/dd" displayFormat="yyyy/MM/dd" 
                                   />
                    </form:SimpleForm>

                    <Table sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop" > 

                        <columns>
                            <Column width="12em">
                                <Text text="통화"/>
                            </Column>
                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="Description"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem >
                                <cells>
                                    <Text text="USD"/>
                                    <Text text="US Dollar"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="CNY"/>
                                    <Text text="위안"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="YEN"/>
                                    <Text text="엔"/>
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem >
                                <cells>
                                    <Text text="KRW"/>
                                    <Text text="원화"/>
                                </cells>
                            </ColumnListItem>
                            
                        </items>
                    </Table>
                
                </VBox>

            </IconTabFilter>
            
        </items>
	</IconTabBar>
        
        


        

        <beginButton>
			<Button text="{I18N>/CANCEL}" press=".onPressSimpleChangeDialogClose"/>
	    </beginButton>
        <endButton>
            <Button text="{I18N>/APPLY}" type="Emphasized" press=".onPressSimpleChangeDialogSave" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>