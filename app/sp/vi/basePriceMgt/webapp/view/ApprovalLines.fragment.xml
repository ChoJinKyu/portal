<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:uxap="sap.uxap" 
                         xmlns:form="sap.ui.layout.form" 
                         xmlns:core="sap.ui.core" 
                         xmlns:layout="sap.ui.layout" 
                         xmlns:tnt="sap.tnt"  
                         xmlns:co="sap.suite.ui.commons" 
                         xmlns:si="sap.suite.ui.commons.statusindicator" 
                         xmlns:u="sap.ui.unified" 
                         xmlns:table="sap.ui.table"
                         xmlns:smartForm="sap.ui.comp.smartform" 
                         xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
                         xmlns:dnd="sap.ui.core.dnd"
                         xmlns:t="sap.ui.table"
                         >
	<VBox class="sapUiSmallMargin">
		<form:SimpleForm editable="true" 
                         layout="ResponsiveGridLayout" 
                         labelSpanXL="2" 
                         labelSpanL="2" 
                         labelSpanM="2" 
                         labelSpanS="2" 
                         adjustLabelSpan="false" 
                         emptySpanXL="0" 
                         emptySpanL="0" 
                         emptySpanM="0" 
                         emptySpanS="0" 
                         columnsXL="2" 
                         columnsL="1" 
                         columnsM="1" 
                         singleContainerFullSize="true">
			<form:content>
				<!-- Approval Line --> 
                <t:Table id="ApproverTable" selectionMode="{= ${detailViewModel>/viewMode} ? 'MultiToggle' : 'None'}"
                    rowSelectionChange=".onApprRowSelectionChange" fixedColumnCount="3" visibleRowCount="5" rows="{approverModel>/results}" >
                     <t:extension>
                        <OverflowToolbar class="sapFDynamicPageAlignContent">
                            <Title text="Approval Line" level="H2"/>
                        <ToolbarSpacer />
                        <Button text="{I18N>/ROW_ADD}" type="Emphasized" press="onApprRowdd" visible="{= ${detailViewModel>/viewMode}}" />
                        <Button text="{I18N>/ROW_DELETE}" type="Emphasized" press="onApprtRowDelete" visible="{= ${detailViewModel>/viewMode}}" />
                        </OverflowToolbar>
                    </t:extension>
                    <t:columns>
                        <t:Column hAlign="Left" width="3rem">
                            <Label text="{I18N>/SEQUENCE}" textAlign="Center" width="100%"/>
                            <t:template>
                                <Text text="{approverModel>approve_sequence}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Left" width="8rem">
                            <Label text="{I18N>/TYPE}" textAlign="Center" width="100%"/>
                            <t:template>
                                <VBox>
                                    <ComboBox selectedKey="{approverModel>appr_type}"  items="{ path: 'approverModel>/appr_type' }"
                                        visible="{= ${detailViewModel>/viewMode}}" editable="true" >
                                        <items>
                                            <core:Item key="{approverModel>code}" text="{approverModel>text}" />
                                        </items>
                                    </ComboBox>
                                    <Text text="승인자" visible="{= !${detailViewModel>/viewMode}}" />
                                </VBox>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Left" width="20rem">
                            <Label text="{I18N>/NAME}/{I18N>/DEPARTMENT}" textAlign="Center" width="100%"/>
                            <t:template>
                                <VBox>
                                    <MultiInput valueHelpRequest="onApprEmployeeDialogPress" visible="{= ${detailViewModel>/viewMode}}"
                                        value="{approverModel>approver_local_nm}/{approverModel>approver_dept_local_nm}"/>
                                    <Text text="{approverModel>approver_local_nm}/{approverModel>approver_dept_local_nm}" visible="{= !${detailViewModel>/viewMode}}" />
                                </VBox>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Left" width="5rem">
                            <Label text="{I18N>/STATUS}" textAlign="Center" width="100%"/>
                            <t:template>
                                <Text text="{approverModel>status}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Left" width="100%">
                            <Label text="{I18N>/COMMENT}" textAlign="Center" width="100%"/>
                            <t:template>
                                <Input value="{approverModel>comment}" visible="{= !${detailViewModel>/viewMode}}" />
                                <Text text="{approverModel>comment}" visible="{= ${detailViewModel>/viewMode}}" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm editable="true" 
                         layout="ResponsiveGridLayout" 
                         labelSpanXL="2" 
                         labelSpanL="2" 
                         labelSpanM="2" 
                         labelSpanS="2" 
                         adjustLabelSpan="false" 
                         emptySpanXL="0" 
                         emptySpanL="0" 
                         emptySpanM="0" 
                         emptySpanS="0" 
                         columnsXL="2" 
                         columnsL="1" 
                         columnsM="1" 
                         singleContainerFullSize="true">
			<form:content>
				<VBox class="sapUiSmallMarginBegin">
                    <Toolbar>
                    <Label text="Referer" />
                    <ToolbarSpacer/>
                    <HBox alignItems="End" justifyContent="End" >
                        <Label text="Adress Book" class=""/>
                        <core:Icon src="sap-icon://address-book" class="size2 sapUiSmallMarginBeginEnd" >
                        </core:Icon>
                    </HBox>
                    </Toolbar>
                    <layout:VerticalLayout class="sapUiContentPadding" width="100%"> 
                        <MultiInput id="referMulti"
                                placeholder="Choose codes from the ValueHelp"
                                showValueHelp="true" 
                                valueHelpRequest=".onMultiInputWithEmployeeValuePress"
                                editable="true" >
                        </MultiInput>
                    </layout:VerticalLayout>
                    <layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </layoutData> 
                </VBox>
			</form:content>
		</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>
