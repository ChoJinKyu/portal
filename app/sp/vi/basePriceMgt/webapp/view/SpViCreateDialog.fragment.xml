<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="dialogApprovalCategory" class="sapUiSmallMargin" title="품의서 유형 선택" contentWidth="20%" >
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    id="dialogCreateForm"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" >
                    <form:content>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="General" fieldGroupIds="toggleButtons" text="일반자재" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="InternalTrading" fieldGroupIds="toggleButtons" text="사내거래자재" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="ProcessingCost" fieldGroupIds="toggleButtons" text="가공비자재-SRS" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="Sulphate" fieldGroupIds="toggleButtons" text="가공비자재-알박/동박/Sulphate" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="Anode" fieldGroupIds="toggleButtons" text="가공비자재-양극재/전구체" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="{I18N>/CLOSE}" type="Transparent" press=".createPopupClose"/>
            <Button text="{I18N>/OPTION}" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".handleConfirm"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
