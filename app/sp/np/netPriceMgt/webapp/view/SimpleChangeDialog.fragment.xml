<core:FragmentDefinition 
    xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit" xmlns:sf="sap.ui.comp.smartform"
    xmlns:form="sap.ui.layout.form"
    class="sapUiSizeCompact"  
    displayBlock="true">
	<Dialog title="{I18N>/SIMPLE_CHANGE}" resizable="false" draggable="true" contentWidth="30rem" contentHeight="40rem">
        <Table id="simpleChangeTable" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop" > 
            <columns>
                <Column width="12em">
                    <Text text=""/>
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                    <Text text=""/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/VENDOR_POOL}"/>
                        <Input id="venderPoolPop" type="Text" showValueHelp="true" valueHelpRequest=".vhVendorPoolCodePop" value=""  />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/MARKET_CODE}"/>
                        <ComboBox id="marketCodePop"
                            width="100%"
                            items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'group_code', operator: 'EQ', value1: 'DP_VI_MARKET_CODE'},
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    templateShareable:false
                                }">
                            <items>
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </items>
                        </ComboBox>
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/NET_PRICE_TYPE_CODE}"/>
                        <ComboBox id="netPricePop"
                            width="100%"
                            items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'group_code', operator: 'EQ', value1: 'SP_NET_PRICE_TYPE'},
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    templateShareable:false
                                }">
                            <items>
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </items>
                        </ComboBox>
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/EFFECTIVE_START_DATE}"/>
                        <DatePicker id="effStartDatePop" placeholder="Date" value="" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/EFFECTIVE_END_DATE}"/>
                        <DatePicker id="effEndDatePop" placeholder="Date" value="" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/PAYMENT_TERMS_CODE}"/>
                        <ComboBox id="paymentTermPop"
                            width="100%"
                            items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'group_code', operator: 'EQ', value1: 'PAYMENT_TERMS'},
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    templateShareable:false
                                }">
                            <items>
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </items>
                        </ComboBox>
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="{I18N>/INCOTERMS}"/>
                        <ComboBox id="incotermsPop"
                            width="100%"
                            items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_INCOTERMS'}
                                ],
                                templateShareable:false
                            }">
                            <items>
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </items>
                        </ComboBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <beginButton>
			<Button text="{I18N>/CANCEL}" press=".onPressSimpleChangeDialogClose"/>
	    </beginButton>
        <endButton>
            <Button text="{I18N>/APPLY}" type="Emphasized" press=".onPressSimpleChangeDialogSave" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>