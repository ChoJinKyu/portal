<mvc:View controllerName="op.prMgr.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>PR_MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{i18n>listHDRequestDate}" labelFor="searchRequestDate" required="true"></Label>
                            <DateRangeSelection id="searchRequestDate" width="100%" change="handleChange"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBsart}" labelFor="searchBsart" required="false"></Label>
                            <MultiComboBox
                              id="searchBsart"
                              width="100%"
                              items="{
                                path: 'util>/CodeDetails',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_TEST_BSART'}
                                ]
                              }">
                              <items>
                                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                              </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBanfn}" labelFor="searchBanfn" required="true"></Label>
                            <Input id="searchBanfn" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="{i18n>listHDBCreater}" labelFor="searchCreater2" required="false"></Label>
                            <Input id="searchKeyword2" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBStatus}" labelFor="SearchBStatus" required="false"></Label>
                            <MultiComboBox
                              id="SearchBStatus"
                              width="100%"
                              items="{
                                path: 'util>/CodeDetails',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_TEST_STATUS'}
                                ]
                              }">
                              <items>
                                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                              </items>
                            </MultiComboBox>
                             <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBLgort}" labelFor="searchOrgCombo4" required="false"></Label>
                            <Input id="searchKeyword4" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBOprater}" labelFor="searchBOprater" required="false"></Label>
                            <Input id="searchBOprater" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBMaktx}" labelFor="searchBMaktx"></Label>
                            <Input id="searchBMaktx" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/Pr_Mst}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_Mst}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddDialogPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnCode" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 진행상태" />
                        </Column>
                        <Column id="mainColumnName" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="구매요청 유형" />
                        </Column>                       
                        <Column id="mainColumnSiteFlag" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 번호" />
                        </Column>
                        <Column id="mainColumnCompanyFlag" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 생성자" />
                        </Column>
                         <Column id="mainColumnStartDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매요청 생성일자" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>                                
                                <ObjectIdentifier text="{list>pr_create_status_code}"/>                                
                                <ObjectIdentifier text="{list>erp_pr_type_code}"/>
                                <ObjectIdentifier text="{list>pr_number}"/>
                                <ObjectIdentifier text="{list>requestor_name}"/>
                                <ObjectIdentifier text="{
                                        path: 'list>local_create_dtm',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>                                
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>