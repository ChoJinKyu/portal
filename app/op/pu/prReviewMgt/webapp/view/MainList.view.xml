<mvc:View controllerName="op.pu.prReviewMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="(미정)구매요청 검토/접수" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press="onSearch($event)" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm 
                    id="pageSearchForm" 
                    maxContainerCols="2" 
                    editable="true" 
                    layout="ResponsiveGridLayout" 
                    adjustLabelSpan="false" 
                    labelSpanL="4" labelSpanM="4" 
                    emptySpanL="0" emptySpanM="0" 
                    columnsL="2" columnsM="2"
                >
                    <form:content>
                        <VBox>
                            <!-- 구매요청 생성일자 -->
                            <Label text="{I18N>/PR_REQUEST_DATE}"/>
                            <DateRangeSelection 
                                editable="{midObjectView>/editMode}"
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/request_date/values/0'}, 
                                        {path: 'jSearch>/request_date/values/1'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                            />
                            <!-- 구매요청생성상태코드 -->
                            <Label text="{I18N>/PR_CREATE_STATUS_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_create_status_code/values}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100' },
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                    ]
                                }"
                            >
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청 생성자 -->
                            <Label text="{I18N>/REQUESTOR}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)구매요청생성자"
                                selectedKey="{jSearch>/requestor_empno}"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }"
                            >
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)구매요청 생성자를 선택하세요."
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/PR_REQUESTOR_EMPNO}" 
                                    textFieldHeaderText="{I18N>/PR_REQUESTOR_NAME}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 확정일자 (미정) -->
                            <Label text="(미정)확정일자"/>
                            <DateRangeSelection 
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/request_date/values/0'}, 
                                        {path: 'jSearch>/request_date/values/1'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                            />
                            <!-- 구매요청 유형 -->
                            <Label text="{I18N>/PR_TYPE_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_type_code/values}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                    ]
                                }">
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청자 부서 -->
                            <Label text="{I18N>/REQUESTOR_DEPARTMENT}"/>
                            <!-- <lib-m:CodePicker 
                                placeholder="(미정)부서명을 입력하세요"
                                selectedKey="{jSearch>/requestor_department_code}"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)부서를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/PR_DEPARTMENT_CODE}" 
                                    textFieldHeaderText="{I18N>/PR_DEPARTMENT_NAME}"
                                />
                            </lib-m:CodePicker> -->
                            <MultiInput 
                                id="requestorDepartmentCode"
                                showValueHelp="true" 
                                valueHelpRequest=".onValueHelpRequest($event, 'requestor_department_code', 'jSearch', {})" 
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 구매요청 번호 -->
                            <Label text="{I18N>/PR_NUMBER}"/>
                            <Input 
                                placeholder="(미정)구매요청번호를 입력하세요"
                                value="{path: 'jSearch>/pr_number/values/0'}"
                            />
                            <!-- 구매요청 품명 -->
                            <Label text="{I18N>/PR_ITEM_NAME}"/>
                            <Input 
                                placeholder="(미정)구매요청품명을 입력하세요"
                                value="{path: 'jSearch>/pr_desc/values/0'}"
                            />
                            <!-- 구매담당자 -->
                            <Label text="{I18N>/BUYER}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)구매담당자를 입력하세요"
                                selectedKey="{jSearch>/buyer_empno}"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)구매담당자를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/BUYER_EMPNO}" 
                                    textFieldHeaderText="{I18N>/BUYER_NAME}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 조직코드 -->
                            <Label text="{I18N>/ORG_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/org_code/values}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                    ]
                                }"
                            >
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                            <!-- <MultiInput
                                placeholder="(미정)조직을 선택하세요."
                                showValueHelp="true" 
                                valueHelpRequest=".onValueHelpRequest($event, 'org_code', 'jSearch', {})" 
                            />
                            <layoutData>
                                <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData> -->
                            <!-- 자재코드 -->
                            <Label text="{I18N>/MATERIAL_CODE}"/>
                            <Input
                                value="{jSearch>/material_code}"
                                placeholder="(미정)자재를 선택하세요"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'material_code', 'jSearch', {})" 
                            />
                            <!-- 구매담당자 부서 -->
                            <Label text="{I18N>/BUYER_DEPARTMENT}" labelFor="searchRequestDepartmentS"/>
                            <!-- <lib-m:CodePicker 
                                placeholder="(미정)구매담당자 부서명을 입력하세요"
                                selectedKey="{jSearch>/buyer_department_code}"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)부서를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/BUYER_DEPARTMENT_CODE}" 
                                    textFieldHeaderText="{I18N>/BUYER_DEPARTMENT_CODE}"
                                />
                            </lib-m:CodePicker> -->
                            <MultiInput 
                                id="buyerDepartmentCode"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'buyer_department_code', 'jSearch', {})" 
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table 
                    id="mainTable" 
                    visible="true"
                    sticky="HeaderToolbar,ColumnHeaders" 
                    inset="false" 
                    growing="true"
                    mode="MultiSelect"
                    growingThreshold="10"
                    class="sapFDynamicPageAlignContent" 
                    items="{
                        path : 'list>/Pr_ReviewListView',
                        sorter: {
                            path: 'pr_number',
                            descending: true
                        }
                    }"                        
                    width="auto"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_ReviewListView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button 
                                text="(미정)RFQ작성"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'RFQ',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="(미정)입찰작성"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'BIDDING',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="(미정)재작성요청"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'REWRITE',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="(미정)마감"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'CLOSING',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="(미정)구매담당자변경"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'CHANGE',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <ToolbarSeparator/>
                            <Button 
                                icon="sap-icon://excel-attachment" 
                                press="onExcel($event, 'Download', ${list>/Pr_ReviewListView}, 'PR Review List', ${session>/tenant_id}, {
                                    tId: 'mainTable'
                                })"
                            >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onButtonPress($event, 'personalize', {})">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> 
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <!-- 구매요청 번호 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        <!-- 구매요청 유형 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_TYPE_CODE}" />
                        </Column>
                        <!-- 품목 번호 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/ITEM_NUMBER}" />
                        </Column>
                        <!-- 조직코드 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/ORG_CODE}" />
                        </Column>
                        <!-- 자재코드 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto">
                            <Text text="{I18N>/MATERIAL_CODE}" />
                        </Column>
                        <!-- 구매요청 품명 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto"> 
                            <Text text="{I18N>/ITEM_NAME}" />
                        </Column>
                        <!-- 단위 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/UNIT}" />
                        </Column>
                        <!-- 요청수량 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto">
                            <Text text="{I18N>/REQUEST_QUANTITY}" />
                        </Column>
                        <!-- 잔여수량 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/REMAIN_QUANTITY}" />
                        </Column>
                        <!-- 납품요청 일자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/DELIVERY_REQUEST_DATE}" />
                        </Column>
                        <!-- 금액 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/AMOUNT}" />
                        </Column>
                        <!-- 통화 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/CURRENCY}" />
                        </Column>
                        <!-- 구매담당자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/BUYER}" />
                        </Column>
                        <!-- 구매요청자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_REQUESTOR}" />
                        </Column>
                        <!-- 구매요청 일자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_DATE}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onColumnListItemPress($event, 'navigation', 'list', {})">
                            <cells>
                                <!-- 구매요청 번호 -->
                                <Text text="{list>pr_number}"/>
                                <!-- 구매요청 유형 -->
                                <Text text="{list>pr_type_name}"/>
                                <!-- 품목 번호 -->
                                <Text text="{list>pr_item_number}"/>
                                <!-- 조직코드 -->
                                <Text text="{list>org_code}"/>
                                <!-- 자재코드 -->
                                <Text text="{list>material_code}"/>
                                <!-- 구매요청 품명 -->                            
                                <Text text="{list>pr_desc}"/>
                                <!-- 단위 -->
                                <Text text="{list>pr_unit}"/>
                                <!-- 요청수량 -->
                                <Text text="{
                                    path: 'list>pr_quantity', 
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                                <!-- 잔여수량 -->
                                <Text text="{
                                    path: 'list>remain_quantity', 
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                                <!-- 납품요청 일자 -->
                                <Text text="{
                                    path: 'list>delivery_request_date',
                                    formatter: '.dateFormatter.toUTCDateString'
                                }"/>
                                <!-- 금액 -->
                                <Text text="{
                                    path: 'list>estimated_price', 
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                                <!-- 통화 -->
                                <Text text="{list>currency_code}"/>
                                <!-- 구매담당자 -->
                                <Text text="{list>buyer_name}"/>
                                <!-- 구매요청자 -->
                                <Text text="{list>requestor_name}"/>
                                <!-- 구매요청 일자 -->
                                <Text text="{
                                    path: 'list>request_date',
                                    formatter: '.dateFormatter.toUTCDateString'
                                }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
                 <ToolbarSpacer />
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>