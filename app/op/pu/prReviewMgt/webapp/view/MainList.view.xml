<mvc:View controllerName="op.pu.prReviewMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PR_REVIEW_RECEIPT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press="onSearch($event)" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm 
                    id="pageSearchForm" 
                    maxContainerCols="2" 
                    editable="true" 
                    layout="ResponsiveGridLayout" 
                    adjustLabelSpan="false" 
                    labelSpanL="4" labelSpanM="4" 
                    emptySpanL="0" emptySpanM="0" 
                    columnsL="2" columnsM="2"
                >
                    <form:content>
                        <VBox>
                            <!-- 구매요청 생성일자 -->
                            <Label text="{I18N>/PR_REQUEST_DATE}"/>
                            <DateRangeSelection 
                                editable="{midObjectView>/editMode}"
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/request_date/values/0'}, 
                                        {path: 'jSearch>/request_date/values/1'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                            />
                            <!-- 구매요청생성상태코드 -->
                            <Label text="{I18N>/PR_CREATE_STATUS_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_create_status_code/values}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100' },
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                    ]
                                }"
                            >
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청 생성자 -->
                            <Label text="{I18N>/REQUESTOR}"/>
                            <MultiInput 
                                id="requestorEmpno"
                                showValueHelp="true" 
                                valueHelpRequest=".onValueHelpRequest($event, 'requestor_empno', 'jSearch', {})"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 확정일자 -->
                            <Label text="{I18N>/CONFIRMED_DATE}"/>
                            <DateRangeSelection 
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/confirmed_date/values/0'}, 
                                        {path: 'jSearch>/confirmed_date/values/1'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                            />
                            <!-- 구매요청 유형 -->
                            <Label text="{I18N>/PR_TYPE_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_type_code/values}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                    ]
                                }">
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청자 부서 -->
                            <Label text="{I18N>/REQUESTOR_DEPARTMENT}"/>
                            <MultiInput 
                                id="requestorDepartmentCode"
                                showValueHelp="true" 
                                valueHelpRequest=".onValueHelpRequest($event, 'requestor_department_code', 'jSearch', {})" 
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 구매요청 번호 -->
                            <Label text="{I18N>/PR_NUMBER}"/>
                            <Input value="{path: 'jSearch>/pr_number/values/0'}"/>
                            <!-- 구매요청 품명 -->
                            <Label text="{I18N>/PR_ITEM_NAME}"/>
                            <Input value="{path: 'jSearch>/pr_desc/values/0'}"/>
                            <!-- 구매담당자 -->
                            <Label text="{I18N>/BUYER}"/>
                            <MultiInput 
                                id="buyerEmpno"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'buyer_empno', 'jSearch', {})"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 조직코드 -->
                            <Label text="{I18N>/ORG_CODE}"/>
                            <MultiInput 
                                id="orgCode"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'org_code', 'jSearch', {})"
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                            <!-- 자재코드 -->
                            <Label text="{I18N>/MATERIAL_CODE}"/>
                            <MultiInput 
                                id="materialCode"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'material_code', 'jSearch', {})" 
                            />
                            <!-- 구매담당자 부서 -->
                            <Label text="{I18N>/BUYER_DEPARTMENT}" labelFor="searchRequestDepartmentS"/>
                            <MultiInput 
                                id="buyerDepartmentCode"
                                showValueHelp="true"
                                valueHelpRequest=".onValueHelpRequest($event, 'buyer_department_code', 'jSearch', {})" 
                            />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table 
                    id="mainTable" 
                    visible="true"
                    sticky="HeaderToolbar,ColumnHeaders" 
                    inset="false" 
                    growing="true"
                    mode="MultiSelect"
                    growingThreshold="10"
                    class="sapFDynamicPageAlignContent" 
                    items="{
                        path : 'list>/Pr_ReviewListView',
                        sorter: {
                            path: 'pr_number',
                            descending: true
                        }
                    }"                        
                    width="auto"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_ReviewListView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button 
                                text="{I18N>/RFQ_WRITE}"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'RFQ',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="{I18N>/BIDDING_WRITE}"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'BIDDING',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="{I18N>/REWRITE_REQUEST}"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'REWRITE',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="{I18N>/PR_REVIEW_CLOSING}"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'CLOSING',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <Button 
                                text="{I18N>/BUYER_CHANGE}"
                                type="Transparent"
                                press=".onButtonPress($event, 'service', {
                                    action: 'CHANGE',
                                    service: 'op.prReviewMgtV4Service',
                                    entry: 'CallPrReviewSaveProc',
                                    tId: 'mainTable'
                                })"
                            />
                            <ToolbarSeparator/>
                            <Button 
                                icon="sap-icon://excel-attachment" 
                                press="onExcel($event, 'Download', ${list>/Pr_ReviewListView}, {
                                    tId: 'mainTable', 
                                    fileName: 'PR Review List',
                                    numbers: ['pr_quantity', 'remain_quantity', 'estimated_price']
                                })"
                            >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <!-- <Button icon="sap-icon://action-settings" press=".onButtonPress($event, 'personalize', {})">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>  -->
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <!-- 구매요청 유형 -->
                        <Column hAlign="Center" width="8em">
                            <Text text="{I18N>/PR_TYPE_CODE}" />
                        </Column>
                        <!-- 구매요청 번호 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        <!-- 품목 번호 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/ITEM_NUMBER}" />
                        </Column>
                        <!-- 조직코드 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/ORG_CODE}" />
                        </Column>
                        <!-- 조직명 -->
                        <Column hAlign="Center" width="auto">
                            <Text text="{I18N>/ORG_NAME}" />
                        </Column>
                        <!-- 자재코드 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto">
                            <Text text="{I18N>/MATERIAL_CODE}" />
                        </Column>
                        <!-- 구매요청 품명 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto"> 
                            <Text text="{I18N>/ITEM_NAME}" />
                        </Column>
                        <!-- 요청수량 -->
                        <Column demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto">
                            <Text text="{I18N>/REQUEST_QUANTITY}" />
                        </Column>
                        <!-- 잔여수량 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/REMAIN_QUANTITY}" />
                        </Column>
                        <!-- 단위 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/UNIT}" />
                        </Column>
                        <!-- 금액 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/AMOUNT}" />
                        </Column>
                        <!-- 통화 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/CURRENCY}" />
                        </Column>
                        <!-- 구매담당자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/BUYER}" />
                        </Column>
                        <!-- 구매요청자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_REQUESTOR}" />
                        </Column>
                        <!-- 구매요청 일자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_DATE}" />
                            <customData>
                                <core:CustomData key="bindName" value="request_date" />
                                <core:CustomData key="type" value="DateTime" />
                                <core:CustomData key="format" value="yyyy-mm-dd" />
                            </customData>
                        </Column>
                        <!-- 납품요청 일자 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/DELIVERY_REQUEST_DATE}" />
                            <customData>
                                <core:CustomData key="bindName" value="delivery_request_date" />
                                <core:CustomData key="type" value="DateTime" />
                                <core:CustomData key="format" value="yyyy-mm-dd" />
                            </customData>
                        </Column>
                        <!-- 진행상태 -->
                        <Column minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/PROGRESS_STATUS}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onColumnListItemPress($event, 'navigation', 'list', {})">
                            <cells>
                                <!-- 구매요청 유형 -->
                                <Text text="{list>pr_type_name}"/>
                                <!-- 구매요청 번호 -->
                                <Text text="{list>pr_number}"/>
                                <!-- 품목 번호 -->
                                <Text text="{list>pr_item_number}"/>
                                <!-- 조직코드 -->
                                <Text text="{list>org_code}"/>
                                <!-- 조직 -->
                                <Text text="{list>org_name}"/>
                                <!-- 자재코드 -->
                                <Text text="{list>material_code}" width="10em"/>
                                <!-- 구매요청 품명 -->                            
                                <Text text="{list>pr_desc}"/>
                                <!-- 요청수량 -->
                                <Text text="{
                                    path: 'list>pr_quantity', 
                                    formatter: '.numberFormatter.toNumberString'
                                }" width="5em"/>
                                <!-- 잔여수량 -->
                                <Text text="{
                                    path: 'list>remain_quantity', 
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                                <!-- 단위 -->
                                <Text text="{list>pr_unit}"/>
                                <!-- 금액 -->
                                <Text text="{
                                    path: 'list>estimated_price', 
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                                <!-- 통화 -->
                                <Text text="{list>currency_code}"/>
                                <!-- 구매담당자 -->
                                <Text text="{list>buyer_name}"/>
                                <!-- 구매요청자 -->
                                <Text text="{list>requestor_name}"/>
                                <!-- 구매요청 일자 -->
                                <Text text="{
                                    path: 'list>request_date',
                                    formatter: '.dateFormatter.toUTCDateString'
                                }"/>
                                <!-- 납품요청 일자 -->
                                <Text text="{
                                    path: 'list>delivery_request_date',
                                    formatter: '.dateFormatter.toUTCDateString'
                                }"/>
                                <!-- 진행상태 -->
                                <ObjectStatus
                                    visible="{= !!${list>pr_progress_status_name}}"
                                    text="{path: 'list>pr_progress_status_name'}"
                                    inverted="true"
                                    active="false"
                                    state="{= 
                                        ${list>pr_progress_status_code} ===  'RUN' 
                                        ? 'Information' 
                                        : ${list>pr_progress_status_code} ===  'CLOSING' 
                                        ? 'Success' 
                                        : 'None' 
                                    }" 
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
        </f:footer>
    </f:DynamicPage>
</mvc:View>