<mvc:View controllerName="op.pu.prReviewMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PURCHASE_REQUISITION} {I18N>/WRITE} {I18N>/CURST}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" 
                adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" 
                                        emptySpanL="0" emptySpanM="0" 
                                        columnsL="2" columnsM="2" >
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/PR_REQUEST_DATE}" labelFor="searchRequestDate" required="true"></Label>
                            <DateRangeSelection id="searchRequestDate" width="100%" change="handleChange"/>
                            <Label text="{I18N>/PR_CREATE_STATUS_CODE}" labelFor="SearchPr_create_status" required="false"></Label>
                            <MultiComboBox
                              id="SearchPr_create_status"
                              showSecondaryValues="false"
                              width="100%"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                ]
                              }">
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PR_TYPE_CODE}" labelFor="searchPR_TYPE_CODE" required="false"></Label>
                            <MultiComboBox
                              id="searchPR_TYPE_CODE"
                              showSecondaryValues="false"
                              width="100%"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                ]
                              }">
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </MultiComboBox>
                            <Label text="{I18N>/REQUESTOR_DEPARTMENT_NAME}" labelFor="searchRequestDepartmentS"></Label>
                                <!-- <Input id="searchRequestDepartment" placeholder="Input data"></Input> -->
                                <lib-m:CodePicker id="searchRequestDepartmentS"
                                    placeholder="Enter a department name"
                                    keyField="department_id"
                                    textField="department_local_name"
                                    suggestionItems="{
                                        path: '/',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                        ],
                                        serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                        entityName: 'Department'
                                    }">
                                    <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                        keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                                </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PR_TEMPLATE_NUMBER}" labelFor="searchPR_TEMPLATE_NUMBER"></Label>
                            <MultiComboBox 
                                id="searchPR_TEMPLATE_NUMBER" 
                                showSecondaryValues="false"
                                width="100%" 
                                items="{
                                        path: '/Pr_TLng',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'language_code', operator: 'EQ', value1: 'KO'}
                                        ]
                                    }">
                                    <items>
                                        <core:ListItem key="{pr_template_number}" text="{pr_template_name}"  
                                            additionalText="{pr_template_number}" />
                                    </items>
                                </MultiComboBox>
                                <Label text="{I18N>/REQUESTOR_NAME}" labelFor="multiInputWithEmployeeValueHelp"></Label>
                                <!-- <Input id="searchRequestor" placeholder="Input data"></Input> -->
                                <MultiInput id="multiInputWithEmployeeValueHelp"
                                    placeholder="Choose employees from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithEmployeeValuePress">
                                </MultiInput>    
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="{I18N>/PR_NUMBER}" labelFor="searchPrNumber" ></Label>
                            <Input id="searchPrNumber" placeholder="Search"></Input>
                            <Label text="{I18N>/PR_DESC}" labelFor="searchPr_desc" ></Label>
                            <Input id="searchPr_desc" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                            
                        </VBox>                      
                            
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        mode="MultiSelect"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{
                                    path : 'list>/Pr_MstView',
                                    sorter: {
                                        path: 'pr_number',
                                        descending: true
                                    }
                                }"                        
                        width="auto">
                        <!-- mode="MultiSelect"  -->
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_MstView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/CREATE}" type="Transparent" press=".onMainTableAddDialogPress" />
                            <Button id="mainTableDeleteButton" text="{I18N>/DELETE}" type="Transparent" press=".onPrDeletePress" visible="false" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://excel-attachment" press=".onExportPress" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> 
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <!-- <Column id="mainColumnCHK" width="2.5em" minScreenWidth="Desktop" >
                            <CheckBox selected="false" select=".onColumnChecBox"/>
                        </Column> -->
                        <!-- 구매요청 유형 -->
                        <Column id="mainColumnPR_TYPE_CODE" minScreenWidth="Desktop" hAlign="Center"  width="auto">
                            <Text text="{I18N>/PR_TYPE_CODE}" />
                        </Column>
                        <!-- 구매요청 번호 -->
                        <Column id="mainColumnPR_NUMBER"   hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        <!-- 품목 번호 -->
                        <Column id="mainColumnPR_NUMBER"   hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        pr_item_number
                        <!-- 조직코드 -->
                        org_code
                        <!-- 자재코드 -->
                        material_code
                        <!-- 구매요청 품명 -->
                        <Column id="mainColumnPR_DESC"  demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto"> 
                            <Text text="{I18N>/PR_DESC}" />
                        </Column>
                        <!-- 단위 -->
                        pr_unit
                        <!-- 요청수량 -->
                        pr_quantity
                        <!-- 잔여수량 -->
                        <!-- 납품요청 일자 -->
                        delivery_request_date
                        <!-- 금액 -->
                        <!-- 통화 -->
                        currency_code
                        <!-- 구매담당자 -->
                        buyer_empno
                        <!-- 구매그룹 -->
                        purchasing_group_code
                        <!-- 구매요청자 -->
                        requestor_empno, requestor_name
                        <!-- 구매요청 일자 -->
                        request_date

                        <Column id="mainColumnERP_PR_NUMBER"   minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/ERP_PR_NUMBER}" />
                        </Column>        
                        <Column id="mainColumnPR_TEMPLATE_NUMBER" minScreenWidth="Desktop" hAlign="Center" width="12em">
                            <Text text="{I18N>/PR_TEMPLATE_NUMBER}" />
                        </Column>
                        <Column id="mainColumnREQUESTOR_DEPARTMENT_NAME" minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/REQUESTOR_DEPARTMENT_NAME}" />
                        </Column>
                        <Column id="mainColumnREQUESTOR_NAME" minScreenWidth="Desktop" hAlign="Center" width="auto">
                            <Text text="{I18N>/REQUESTOR_NAME}" />
                        </Column>                        
                        <Column id="mainColumnREQUEST_DATET" minScreenWidth="Desktop" hAlign="Center"  width="auto">
                            <Text text="{I18N>/PR_REQUEST_DATE}" />
                        </Column>
                        <Column id="mainColumnPR_COUNT"  hAlign="Center"  width="auto">
                            <Text text="{I18N>/PR_COUNT}" />
                        </Column>
                        <Column id="mainColumnPR_CREATE_STATUS_CODE"  hAlign="Center"  width="auto">
                            <Text text="{I18N>/PR_CREATE_STATUS_CODE}" />
                        </Column>
                       
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>             
                                <!-- <CheckBox fieldGroupIds="{= ${list>pr_create_status_code}==='DR'? 'checkBoxs':''}"  visible="{= ${list>pr_create_status_code}==='DR'? true:false }" select=".onCheck" />   -->
                                <Text text="{list>pr_type_name}" vAlign="Left"/>
                                <Text text="{list>pr_number}" vAlign="Left" />
                                <Text text="{list>pr_item_number}" vAlign="Left"/>
                                <Text text="{list>org_code}"/>
                                <Text text="{list>material_code}"/>                                
                                <Text text="{list>pr_desc}"/> 
                                <Text text="{list>pr_unit}"/>                                                                                                
                                <Text text="{list>pr_quantity}"/>
                                <Text text="{list>delivery_request_date}"/>
                                <Text text="{list>currency_code}"/>
                                <Text text="{list>buyer_empno}"/>
                                <Text text="{list>purchasing_group_code}"/>
                                <Text text="{list>requestor_name}"/>
                                <Text text="{list>request_date}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
                 <ToolbarSpacer />
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />               
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>