<mvc:View controllerName="op.pu.prReviewMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PURCHASE_REQUISITION} {I18N>/WRITE} {I18N>/CURST}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm 
                    id="pageSearchForm" 
                    maxContainerCols="2" 
                    editable="true" 
                    layout="ResponsiveGridLayout" 
                    adjustLabelSpan="false" 
                    labelSpanL="4" labelSpanM="4" 
                    emptySpanL="0" emptySpanM="0" 
                    columnsL="2" columnsM="2"
                >
                    <form:content>
                        <VBox>
                            <!-- 구매요청 생성일자 -->
                            <Label text="{I18N>/PR_REQUEST_DATE}"/>
                            <DateRangeSelection 
                                editable="{midObjectView>/editMode}"
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/request_date/0'}, 
                                        {path: 'jSearch>/request_date/1'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                                change=".onDateRangeSelectionChange($event)"
                            />
                            <!-- 구매요청생성상태코드 -->
                            <Label text="{I18N>/PR_CREATE_STATUS_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_progress_status_code}"
                                placeholder="{I18N>/ALL}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                    ]
                                }"
                            >
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청 생성자 -->
                            <Label text="{I18N>/REQUESTOR}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)구매요청생성자"
                                keyField="requestor_empno"
                                textField="requestor_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }"
                            >
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)구매요청 생성자를 선택하세요."
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/PR_REQUESTOR_EMPNO}" 
                                    textFieldHeaderText="{I18N>/PR_REQUESTOR_NAME}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 구매요청 접수일자 -->
                            <Label text="{I18N>/PR_RECEIPT_DATE}"/>
                            <DateRangeSelection 
                                width="100%"
                                value="{
                                    parts: [
                                        {path: 'jSearch>/request_date/0'}, 
                                        {path: 'jSearch>/request_date/0'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" 
                                placeholder="YYYY-MM-DD - YYYY-MM-DD"
                                change=".onDateRangeSelectionChange($event)"
                            />
                            <!-- 구매요청 유형 -->
                            <Label text="{I18N>/PR_TYPE_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/pr_type_code}"
                                placeholder="{I18N>/ALL}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                    ]
                                }">
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 구매요청자 부서 -->
                            <Label text="{I18N>/REQUESTOR_DEPARTMENT}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)부서명을 입력하세요"
                                keyField="requestor_department_code"
                                textField="requestor_department_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)부서를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/PR_DEPARTMENT_CODE}" 
                                    textFieldHeaderText="{I18N>/PR_DEPARTMENT_NAME}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 구매요청 번호 -->
                            <Label text="{I18N>/PR_NUMBER}"/>
                            <Input 
                                placeholder="(미정)구매요청번호를 입력하세요"
                                value="{path: 'jSearch>/pr_number'}"
                            />
                            <!-- 구매요청 품명 -->
                            <Label text="{I18N>/PR_ITEM_NAME}"/>
                            <Input 
                                placeholder="(미정)구매요청품명을 입력하세요"
                                value="{path: 'jSearch>/pr_desc'}"
                            />
                            <!-- 구매담당자 -->
                            <Label text="{I18N>/BUYER}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)구매담당자를 입력하세요"
                                keyField="buyer_empno"
                                textField="buyer_empno"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)구매담당자를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/BUYER_EMPNO}" 
                                    textFieldHeaderText="{I18N>/BUYER_NAME}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- 조직코드 -->
                            <Label text="{I18N>/ORG_CODE}"/>
                            <MultiComboBox
                                selectedKeys="{jSearch>/org_code}"
                                placeholder="{I18N>/ALL}"
                                showSecondaryValues="false"
                                width="100%"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                    ]
                                }"
                            >
                                <items>
                                    <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                                </items>
                            </MultiComboBox>
                            <!-- 자재코드 -->
                            <Label text="{I18N>/MATERIAL_CODE}"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)자재정보를 입력하세요."
                                keyField="material_code"
                                textField="material_code"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)자재를 선택하세요."
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/MATERIAL_CODE}" 
                                    textFieldHeaderText="{I18N>/MATERIAL_NAME}"
                                />
                            </lib-m:CodePicker>
                            <!-- 구매담당자 부서 -(미정) 부서정보-->
                            <Label text="{I18N>/BUYER_DEPARTMENT}" labelFor="searchRequestDepartmentS"/>
                            <lib-m:CodePicker 
                                placeholder="(미정)구매담당자 부서명을 입력하세요."
                                keyField="buyer_empno"
                                textField="buyer_empno"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp 
                                    title="(미정)부서를 선택하세요"
                                    contentWidth="500px"
                                    keyFieldHeaderText="{I18N>/BUYER_DEPARTMENT_CODE}" 
                                    textFieldHeaderText="{I18N>/BUYER_DEPARTMENT_CODE}"
                                />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table 
                    id="mainTable" 
                    visible="false"
                    sticky="HeaderToolbar,ColumnHeaders" 
                    inset="false" 
                    growing="true"
                    mode="MultiSelect"
                    growingThreshold="10"
                    class="sapFDynamicPageAlignContent" 
                    updateFinished=".onMainTableUpdateFinished"
                    items="{
                        path : 'list>/Pr_MstView',
                        sorter: {
                            path: 'pr_number',
                            descending: true
                        }
                    }"                        
                    width="auto"
                >
                    <!-- mode="MultiSelect"  -->
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_MstView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/CREATE}" type="Transparent" press=".onMainTableAddDialogPress" />
                            <Button id="mainTableDeleteButton" text="{I18N>/DELETE}" type="Transparent" press=".onPrDeletePress" visible="false" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://excel-attachment" press=".onExportPress" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> 
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <!-- 구매요청 번호 -->
                        <Column id="mainColumnPR_NUMBER" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        <!-- 품목 번호 -->
                        <Column id="mainColumnITEM_NUMBER" hAlign="Center" width="auto">
                            <Text text="{I18N>/ITEM_NUMBER}" />
                        </Column>
                        <!-- 조직코드 -->
                        <Column id="mainColumnORG_CODE" hAlign="Center" width="auto">
                            <Text text="{I18N>/ORG_CODE}" />
                        </Column>
                        <!-- 자재코드 -->
                        <Column id="mainColumnMATERIAL_CODE" hAlign="Center" width="auto">
                            <Text text="{I18N>/MATERIAL_CODE}" />
                        </Column>
                        <!-- 구매요청 품명 -->
                        <Column id="mainColumnITEM_NAME" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center" width="auto"> 
                            <Text text="{I18N>/ITEM_NAME}" />
                        </Column>
                        <!-- 단위 -->
                        <Column id="mainColumnUNIT" hAlign="Center" width="auto">
                            <Text text="{I18N>/UNIT}" />
                        </Column>
                        <!-- 요청수량 -->
                        <Column id="mainColumnREQUEST_QUANTITY" hAlign="Center" width="auto">
                            <Text text="{I18N>/REQUEST_QUANTITY}" />
                        </Column>
                        <!-- 잔여수량 -->
                        <Column id="mainColumnSTOCK_QUANTITY" Align="Center" width="auto">
                            <Text text="{I18N>/STOCK_QUANTITY}" />
                        </Column>
                        <!-- 납품요청 일자 -->
                        <Column id="mainColumnDELIVERY_REQUEST_DATE" Align="Center" width="auto">
                            <Text text="{I18N>/DELIVERY_REQUEST_DATE}" />
                        </Column>
                        <!-- 금액 -->
                        <Column id="mainColumnAMOUNT" Align="Center" width="auto">
                            <Text text="{I18N>/AMOUNT}" />
                        </Column>
                        <!-- 통화 -->
                        <Column id="mainColumnCURRENCY" hAlign="Center" width="auto">
                            <Text text="{I18N>/CURRENCY}" />
                        </Column>
                        <!-- 구매담당자 -->
                        <Column id="mainColumnBUYER" hAlign="Center" width="auto">
                            <Text text="{I18N>/BUYER}" />
                        </Column>
                        <!-- 구매요청자 -->
                        <Column id="mainColumnPR_REQUESTOR" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_REQUESTOR}" />
                        </Column>
                        <!-- 구매요청 일자 -->
                        <Column id="mainColumnPR_DATE" hAlign="Center" width="auto">
                            <Text text="{I18N>/PR_DATE}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>             
                                <Text text="{list>pr_number}" vAlign="Left" />
                                <Text text="{list>pr_item_number}" vAlign="Left"/>
                                <Text text="{list>org_code}"/>
                                <Text text="{list>material_code}"/>                                
                                <Text text="{list>pr_desc}"/> 
                                <Text text="{list>pr_unit}"/>                                                                                                
                                <Text text="{list>pr_quantity}"/>
                                <Text text="{list>remain_quantity}"/>
                                <Text text="{list>delivery_request_date}"/>
                                <Text text="{list>estimated_price}"/>
                                <Text text="{list>currency_code}"/>
                                <Text text="{list>buyer_name}"/>
                                <Text text="{list>requestor_name}"/>
                                <Text text="{list>request_date}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
                 <ToolbarSpacer />
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />               
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>