<mvc:View controllerName="op.pu.prMgt.controller.MidCreateObject" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:layout="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    xmlns:si="sap.suite.ui.commons.statusindicator"
    xmlns:u="sap.ui.unified" 
    xmlns:table="sap.ui.table" 
    xmlns:richtexteditor="sap.ui.richtexteditor"
    xmlns="sap.m"
	height="100%">

	<uxap:ObjectPageLayout 
        id="page"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
        upperCaseAnchorBar="false"
		showFooter="true"
		editHeaderButtonPress="handleEditBtnPress" >

		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="{path:'I18N>/PURCHASING'} {path:'I18N>/REQUEST'} {path:'I18N>/CREATE'}" wrapping="true" />
				</uxap:expandedHeading>

                <uxap:navigationActions>
					<OverflowToolbarButton id="pageNavigationBackButton" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onNavigationBackPress" />
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap" >
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="{path:'I18N>/PR_NUMBER'} :"/>
                    <ObjectStatus
                        text="{viewModel>/PrMst/pr_number}"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="{path:'I18N>/PR_TEMPLATE_NUMBER'} :"/>
                    <ObjectStatus
                        text="{viewModel>/PrMst/pr_template_name}"/>
				</layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="{path:'I18N>/PR_CREATION_DATE'} :"/>
                    <ObjectStatus
                        text="{ path: 'viewModel>/PrMst/request_date',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                pattern: 'yyyy-MM-dd'
                                }
                            }"/>
				</layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="{path:'I18N>/PR_CREATOR'} :"/>
                    <ObjectStatus
                        text="{viewModel>/PrMst/requestor_name}"/>
				</layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<Label text="{path:'I18N>/PR_PROGRESS_STATUS'} :"/>
                    <ObjectStatus
                        class="sapMObjectStatusLarge"
                        text="New"
                        state="Error" />
				</layout:VerticalLayout>
			</FlexBox>
		</uxap:headerContent>

		<uxap:sections id="pss">

			<uxap:ObjectPageSection  id="pageSectionMain" titleUppercase="true" title="{I18N>/BASIC_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd"> 
                            
                                <HBox alignItems="Center">
                                    <Label text="{I18N>/APPROVAL_TITLE}" class="sapUiTinyMarginEnd" width="5em" textAlign="Left" required="{contModel>/DisplayFlag/OP_PU_PR_MST/PR_HEADER_TEXT/mandatory_column_flag}"/>
                                    <Input width="60em" class="sapUiContentPadding"
                                        value="{
                                            path: 'viewModel>/PrMst/pr_header_text',
                                            type: 'sap.ui.model.type.String',
                                            constraints: {
                                                maxLength: 200
                                            }
                                        }"
                                        required="{contModel>/DisplayFlag/OP_PU_PR_MST/PR_HEADER_TEXT/mandatory_column_flag}"/>
                                </HBox>
                            
                            
                                <HBox alignItems="Center">
                                    <Label text="{I18N>/APPROVAL_CONTENTS}" class="sapUiTinyMarginEnd" width="5em" textAlign="Left" />
                                    <layout:VerticalLayout id="idApprovalContentsTextEditor" class="sapUiTinyMarginEnd" width="60em"></layout:VerticalLayout>
                                </HBox>                         
                        </layout:VerticalLayout> 
                        
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <!-- 품목 정보 시작 -->
            <uxap:ObjectPageSection titleUppercase="false" title="{I18N>/ITEM_INFO}">
				<uxap:subSections>
                    <uxap:ObjectPageSubSection>

                        <table:Table id="pritemTable"
                                selectionMode="MultiToggle"
                                fixedColumnCount="1"
                                visibleRowCountMode="Auto"
                                rows="{viewModel>/Pr_Dtl}"
                                >
                             <table:extension>
                                <OverflowToolbar>
                                    <Title text="{I18N>/ITEM} ({= (${viewModel>/Pr_Dtl})?${viewModel>/Pr_Dtl}.length:0})" level="H2"/>
                                    <ToolbarSpacer/>
                                    <Button type="Emphasized" text="Add Item" press=".onItemAddRow" />
                                    <Button type="Transparent" text="Add Multiple Item" press=".onItemAddMultiRow" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_CODE/display_column_flag}"/>
                                    <Button type="Transparent" text="Copy"  press=".onItemCopyRow" />
                                    <!-- <Button id="btnItemEditMulti"   type="Transparent" text="Edit Multiple"  press=".onItemEditMultiRow" /> -->
                                    <Button type="Transparent" text="Delete"  press=".onItemDeleteRow" />
                                </OverflowToolbar>
                            </table:extension>          

                            <table:columns>
                                <table:Column width="5em" hAlign="Center">
                                    <Label text="{I18N>/ITEM_NUMBER}"/>
                                    <table:template>
                                        <Text text="{viewModel>pr_item_number}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center">
                                    <Label text="{I18N>/ORG_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_CODE/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input
                                            value="{viewModel>org_code}"
                                            maxLength="10"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onValueHelpRequest($event, 'org_code', {})" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_CODE/display_column_flag}" >
                                    <Label text="{I18N>/MATERIAL_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_CODE/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input value="{viewModel>material_code}"
                                            maxLength="40"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onValueHelpRequest($event, 'material_code', {})" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="18em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_DESC/display_column_flag}">
                                    <Label text="{I18N>/PR_ITEM_NAME}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_DESC/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input value="{viewModel>pr_desc}"  textAlign="Begin" maxLength="100" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_DESC/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>       
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_QUANTITY/display_column_flag}">
                                    <Label text="{I18N>/REQUEST_QUANTITY}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_QUANTITY/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input 
                                            value="{path: 'viewModel>pr_quantity', 
                                                    type : 'sap.ui.model.odata.type.Decimal'}" 
                                            textAlign="End"
                                            maxLength="30"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_QUANTITY/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>                                     
                                <table:Column width="7em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_UNIT/display_column_flag}">
                                    <Label text="{I18N>/UNIT}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_UNIT/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input value="{viewModel>pr_unit}"
                                            maxLength="3" 
                                            showValueHelp="true" 
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onOpenUomDialog" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PR_UNIT/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>   
                                <table:Column width="9em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/DELIVERY_REQUEST_DATE/display_column_flag}">
                                    <Label text="{I18N>/DELIVERY_REQUEST_DATE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/DELIVERY_REQUEST_DATE/mandatory_column_flag}"/> 
                                    <table:template>
                                        <DatePicker id="i_delivery_request_date"
                                                visible="true"
                                                value="{
                                                    path:'viewModel>delivery_request_date',
                                                    type:'sap.ui.model.odata.type.DateTime',
                                                    formatOptions: {
                                                        UTC: true,
                                                        pattern: 'yyyy-MM-dd'
                                                    }
                                                }"
                                                required="{contModel>/DisplayFlag/OP_PU_PR_DTL/DELIVERY_REQUEST_DATE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>                                      
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/BUYER_EMPNO/display_column_flag}">
                                    <Label text="{I18N>/BUYER_EMPNO}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/BUYER_EMPNO/mandatory_column_flag}"/>      
                                    <table:template>
                                        <Input
                                            value="{viewModel>buyer_empno}"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onOpenSearchEmpDialog" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/BUYER_EMPNO/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="7em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/PURCHASING_GROUP_CODE/display_column_flag}">
                                    <Label text="{I18N>/PURCHASING_GROUP_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PURCHASING_GROUP_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>purchasing_group_code}" 
                                            maxLength="3" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PURCHASING_GROUP_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>                              
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/ESTIMATED_PRICE/display_column_flag}">
                                    <Label text="{path:'I18N>/PRICE'}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ESTIMATED_PRICE/mandatory_column_flag}"/>           
                                    <table:template>                                        
                                        <Input 
                                            value="{
                                                parts: [
                                                    {path: 'viewModel>estimated_price'},
                                                    {path: 'viewModel>currency_code'}
                                                ],
                                                type:'sap.ui.model.type.Currency',
                                                formatOptions:{showMeasure:false}
                                            }"
                                            maxLength="30"
                                            textAlign="End"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ESTIMATED_PRICE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column  width="7em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/CURRENCY_CODE/display_column_flag}">
                                    <Label text="{path:'I18N>/CURRENCY_CODE'}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/CURRENCY_CODE/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input value="{viewModel>currency_code}" 
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onValueHelpRequest($event, 'currency_code', {})"  
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/CURRENCY_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>   
                                <table:Column width="7em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/PRICE_UNIT/display_column_flag}">
                                    <Label text="{path:'I18N>/PRICE_UNIT'}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PRICE_UNIT/mandatory_column_flag}"/>           
                                    <table:template>                                        
                                        <Input 
                                            value="{
                                                parts: [
                                                    {path: 'viewModel>price_unit'},
                                                    {path: 'viewModel>currency_code'}
                                                ],
                                                type:'sap.ui.model.type.Currency',
                                                formatOptions:{showMeasure:false}
                                            }"
                                            maxLength="6"
                                            textAlign="End"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/PRICE_UNIT/mandatory_column_flag}"/> 
                                    </table:template>
                                </table:Column> 
                                <table:Column width="9em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ACCOUNT_CODE/display_column_flag}">
                                    <Label text="{I18N>/ACCOUNT_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ACCOUNT_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>account_code}"
                                            textAlign="Begin"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onValueHelpRequest($event, 'account_code', {})" 
                                            required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ACCOUNT_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="9em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/CCTR_CODE/display_column_flag}">
                                    <Label text="{I18N>/COST_CENTER}" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/CCTR_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>cctr_code}"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onValueHelpRequest($event, 'cctr_code', {})" 
                                            textAlign="Begin"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/CCTR_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>                                                                 
                                <table:Column width="13em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/WBS_CODE/display_column_flag}">
                                    <Label text="{I18N>/WBS_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/WBS_CODE/mandatory_column_flag}"/>           
                                    <table:template>
                                        <Input value="{viewModel>wbs_code}"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onOpenSearchWbsDialog"
                                            textAlign="Begin"
                                            maxLength="30"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/WBS_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ASSET_NUMBER/display_column_flag}">
                                    <Label text="{I18N>/ASSET_NUMBER}" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ASSET_NUMBER/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>asset_number}" maxLength="30" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ASSET_NUMBER/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ORDER_NUMBER/display_column_flag}">
                                    <Label text="{I18N>/ORDER_NUMBER}" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ORDER_NUMBER/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>order_number}" maxLength="30" required="{contModel>/DisplayFlag/OP_PU_PR_ACCOUNT/ORDER_NUMBER/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="7em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_GROUP_CODE/display_column_flag}">
                                    <Label text="{I18N>/MATERIAL_GROUP_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_GROUP_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>material_group_code}" maxLength="10" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/MATERIAL_GROUP_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/SLOC_CODE/display_column_flag}">
                                    <Label text="{I18N>/STORAGE_LOCATION}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/SLOC_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>sloc_code}" maxLength="4" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/SLOC_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/SUPPLIER_CODE/display_column_flag}">
                                    <Label text="{I18N>/SUPPLIER_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/SUPPLIER_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>supplier_code}" 
                                            maxLength="10"
                                            showValueHelp="true"
                                            valueHelpOnly="true"
                                            valueHelpRequest=".onOpenSearchSupplierDialog"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/SUPPLIER_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_TYPE_CODE/display_column_flag}">
                                    <Label text="{I18N>/ORG_TYPE_CODE}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_TYPE_CODE/mandatory_column_flag}" />
                                    <table:template>
                                        <Input value="{viewModel>org_type_code}" 
                                            maxLength="2"
                                            visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_TYPE_CODE/input_column_flag}"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ORG_TYPE_CODE/mandatory_column_flag}" />
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/REMARK/display_column_flag}">
                                    <Label text="{I18N>/REMARK}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/REMARK/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>remark}" 
                                            maxLength="2000"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/REMARK/mandatory_column_flag}" />                                            
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/ITEM_CATEGORY_CODE/display_column_flag}">
                                    <Label text="{I18N>/ITEM_CATEGORY}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ITEM_CATEGORY_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>item_category_code}" 
                                            maxLength="2"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ITEM_CATEGORY_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10em" hAlign="Center" visible="{contModel>/DisplayFlag/OP_PU_PR_DTL/ACCOUNT_ASSIGNMENT_CATEGORY_CODE/display_column_flag}">
                                    <Label text="{I18N>/ACCOUNT_ASSIGNMENT_CATEGORY}" required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ACCOUNT_ASSIGNMENT_CATEGORY_CODE/mandatory_column_flag}"/>
                                    <table:template>
                                        <Input value="{viewModel>account_assignment_category_code}" 
                                            maxLength="2"
                                            required="{contModel>/DisplayFlag/OP_PU_PR_DTL/ACCOUNT_ASSIGNMENT_CATEGORY_CODE/mandatory_column_flag}"/>
                                    </table:template>
                                </table:Column>
                            </table:columns>
                          </table:Table>

                        <!-- // -->
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
            <!-- 품목 정보 끝 -->

            <!-- 첨부파일 시작 -->
			<uxap:ObjectPageSection titleUppercase="false" title="Attachment">
				<uxap:subSections>
                    <uxap:ObjectPageSubSection title="외부용" level="H2">
                        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd" width="100%">                    
                            <UploadCollection
                                id="UploadCollectionOuter"
                                maximumFilenameLength="55"
                                maximumFileSize="10"
                                multiple="true"
                                sameFilenameAllowed="false"
                                instantUpload="false"
                                noDataDescription="Drop files or use the &quot;Add&quot; button to keep files ready for upload"
                                change="onChange"
                                fileDeleted="onFileDeleted"
                                filenameLengthExceed="onFilenameLengthExceed"
                                fileSizeExceed="onFileSizeExceed"
                                typeMissmatch="onTypeMissmatch"
                                uploadComplete="onUploadComplete"
                                beforeUploadStarts="onBeforeUploadStarts" />
                            <Button id="ButtonUploadOuter" text="Upload Now" press="onStartUpload" />
                        </layout:VerticalLayout>
					</uxap:ObjectPageSubSection>

                    <uxap:ObjectPageSubSection title="내부용" level="H2">
                        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd" width="100%">                    
                            <UploadCollection
                                id="UploadCollectionInner"
                                maximumFilenameLength="55"
                                maximumFileSize="10"
                                multiple="true"
                                sameFilenameAllowed="false"
                                instantUpload="false"
                                noDataDescription="Drop files or use the &quot;Add&quot; button to keep files ready for upload"
                                change="onChange"
                                fileDeleted="onFileDeleted"
                                filenameLengthExceed="onFilenameLengthExceed"
                                fileSizeExceed="onFileSizeExceed"
                                typeMissmatch="onTypeMissmatch"
                                uploadComplete="onUploadComplete"
                                beforeUploadStarts="onBeforeUploadStarts" />
                            <Button id="ButtonUploadInner" text="Upload Now" press="onStartUpload" />
                        </layout:VerticalLayout>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
            <!-- 첨부파일 끝 -->

			<uxap:ObjectPageSection titleUppercase="false" title="Report Line">
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<uxap:blocks>
                            <Table  id="reportLineTable"
                                    sticky="HeaderToolbar,ColumnHeaders"
                                    inset="false"
                                    class="sapFDynamicPageAlignContent"
                                    width="auto">
                                <headerToolbar>
                                    <Toolbar>
                                        <Title id="title" text="Approval Line"/>
                                        <ToolbarSpacer/>
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="8em">
                                        <Text text="No." />
                                    </Column>
                                    <Column>
                                        <Text text="Type" />
                                    </Column>
                                    <Column>
                                        <Text text="Name / Dept." />
                                    </Column>
                                    <Column>
                                        <Text text="Comment" />
                                    </Column>
                                    <Column>
                                        <Text text="Status" />
                                    </Column>
                                    <Column>
                                        <Text text="Add / Delete" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <ObjectIdentifier title="{Name}" text="{ProductId}"/>
                                            <Text text="{SupplierName}" />
                                            <Text text="" />
                                            <Text text="" />
                                            <Text text="" />
                                            <Text text="" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

					<uxap:ObjectPageSubSection>
						<uxap:blocks>
                            <Table  id="referrerTable"
                                    sticky="HeaderToolbar"
                                    inset="false"
                                    class="sapFDynamicPageAlignContent"
                                    width="auto">
                                <headerToolbar>
                                    <Toolbar>
