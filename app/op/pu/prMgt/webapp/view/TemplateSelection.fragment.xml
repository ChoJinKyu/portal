<!-- 
   description : 구매요청서 생성[Add] 버튼 클릭
-->
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogTemplateSelection" class="sapUiSmallMargin" title="Select Templet" contentWidth="35%" >
        <VBox class="sapUiSmallMargin" >
            <form:SimpleForm  title="구매요청 생성"             
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"     
                singleContainerFullSize="false" >                    
                    <form:content >                      
                        <VBox>
                            <Label text = "품목그룹" labelFor="TemplateSelectionBsart" required="false"/> 
                            <ComboBox
                              id="SelectionPR_TYPE2"
                              width="100%"
                              showSecondaryValues= "true"
                              selectionChange=".onInitPR_TYPE3"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE_2'}
                                ]
                              }">
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Category" labelFor="SelectionPR_TYPE3" required="false"/> 
                             <ComboBox
                              id="SelectionPR_TYPE3"
                              showSecondaryValues= "true"
                              width="100%"
                              selectionChange=".onInitPR_TYPE">
                            </ComboBox>
                             <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "구매요청 유형" labelFor="SelectionPR_TYPE" required="false"/>
                            <ComboBox
                              id="SelectionPR_TYPE"
                              showSecondaryValues= "true"
                              width="100%"
                              selectionChange=".onInitTemplate">
                            </ComboBox>
                             <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                       </form:content>
                   
                  </form:SimpleForm>
                  <form:SimpleForm  title="Template 선택"             
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"     
                    singleContainerFullSize="false" >                    
                    <form:content > 
                        <VBox>
                            <SegmentedButton id="searchUsageSegmentButton" class="sapUiSmallMarginBottom" width="100%" >
                                <items>                            
                                </items>                                
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox> 
                    </form:content>
                   
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="Cancel" class="sapUiSmallMarginEnd" press=".onExit"/>
            <Button text="Apply" class="sapUiSmallMarginEnd" type="Emphasized" press=".onMainTableAddButtonPress"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
