<!-- 
   description : 구매요청서 생성[Add] 버튼 클릭
-->
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogTemplateSelection" class="sapUiSmallMargin" title="{I18N>/PURCHASE_REQUISITION} {I18N>/CREATE}" contentWidth="35%" 
        afterOpen=".onDialogOpen">
        <VBox class="sapUiSmallMargin" >
            <form:SimpleForm  title="{I18N>/REQUEST_TYPE_SELECT}"     
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"     
                singleContainerFullSize="false" >                    
                    <form:content >                      
                        <VBox>
                            <Label text = "{I18N>/PR_TYPE_CODE_2}" labelFor="SelectionPR_TYPE2" required="false"/> 
                            <ComboBox
                              id="SelectionPR_TYPE2"
                              width="100%"
                              required="true"
                              showSecondaryValues= "false"
                              
                              selectionChange=".onInitPR_TYPE3"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE_2'}
                                ]
                              }">
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "{I18N>/PR_TYPE_CODE_3}" labelFor="SelectionPR_TYPE3" required="false"/> 
                             <ComboBox
                              id="SelectionPR_TYPE3"
                              showSecondaryValues= "false"
                              width="100%"
                              required="true"
                              selectionChange=".onInitPR_TYPE">
                            </ComboBox>
                             <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "{I18N>/PR_TYPE_CODE}" labelFor="SelectionPR_TYPE" required="false"/>
                            <ComboBox
                              id="SelectionPR_TYPE"
                              showSecondaryValues= "false"
                              width="100%"
                              required="true"
                              selectionChange=".onInitTemplate">
                            </ComboBox>
                             <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                       </form:content>
                   
                  </form:SimpleForm>
                  <form:SimpleForm  title="{I18N>/TEMPLATE} {I18N>/SELECT}"             
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="1"
                    labelSpanL="1"
                    labelSpanM="1"
                    labelSpanS="1"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"     
                    singleContainerFullSize="false" >                    
                    <form:content > 
                        <VBox>
                            <SegmentedButton id="searchUsageSegmentButton" class="sapUiSmallMarginBottom" required="true">
                                <items>                            
                                </items>                                
                            </SegmentedButton>  
                             <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>                          
                        </VBox> 
                       
                    </form:content>
                   
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="Cancel" class="sapUiSmallMarginEnd" press=".onDialogClose"/>
            <Button text="Apply" class="sapUiSmallMarginEnd" type="Emphasized" press=".onMainTableAddButtonPress"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
