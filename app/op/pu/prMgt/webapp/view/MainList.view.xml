<mvc:View controllerName="op.pu.prMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:op-ui="op.util.control.ui"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PURCHASE_REQUISITION} {I18N>/WRITE} {I18N>/CURST}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" 
                adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" 
                                        emptySpanL="0" emptySpanM="0" 
                                        columnsL="2" columnsM="2" >
                    <form:content>
                        <VBox>
                               
                            <!-- <MultiInput id="multiInputWithOrderValueHelp"
                                placeholder="Choose Orders"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithOrderPress">
                            </MultiInput> 


                            <MultiInput id="multiInputWithAssetValueHelp"
                                placeholder="Choose Assets"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithAssetPress">
                            </MultiInput> 

                            <MultiInput id="multiInputWithAccountValueHelp"
                                placeholder="Choose Accounts"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithAccountPress">
                            </MultiInput> 

                              <MultiInput id="multiInputWithCctrValueHelp"
                                placeholder="Choose Cctrs"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithCctrPress">
                            </MultiInput>  -->


                            <Label text="{I18N>/PR_REQUEST_DATE}" labelFor="searchRequestDate" required="true"></Label>
                            <DateRangeSelection id="searchRequestDate" width="100%" change="handleChange"/>
                            <Label text="{I18N>/PR_CREATE_STATUS_CODE}" labelFor="SearchPr_create_status" required="false"></Label>
                            <MultiComboBox
                              id="SearchPr_create_status"
                              showSecondaryValues="false"
                              width="100%"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS_CODE'}
                                ]
                              }">
                              
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </MultiComboBox>


                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PR_TYPE_CODE}" labelFor="searchPR_TYPE_CODE" required="false"></Label>
                            <MultiComboBox
                              id="searchPR_TYPE_CODE"
                              showSecondaryValues="false"
                              width="100%"
                              items="{
                                path: 'util>/Code',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                ]
                              }">
                              <items>
                                <core:ListItem key="{util>code}" text="{util>code_name}" additionalText="{util>code}" />
                              </items>
                            </MultiComboBox>
                            <Label text="{I18N>/REQUESTOR_DEPARTMENT_NAME}" labelFor="multiInputWithDepartmentValueHelp"></Label>
                            <MultiInput id="multiInputWithDepartmentValueHelp"
                                placeholder="Choose Departments from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithDepartmentValuePress">
                            </MultiInput> 


                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PR_TEMPLATE_NUMBER}" labelFor="searchPR_TEMPLATE_NUMBER"></Label>
                            <MultiComboBox 
                                id="searchPR_TEMPLATE_NUMBER" 
                                showSecondaryValues="false"
                                width="100%" 
                                items="{
                                        path: '/Pr_TLng',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'language_code', operator: 'EQ', value1: 'KO'}
                                        ]
                                    }">
                                    <items>
                                        <core:ListItem key="{pr_template_number}" text="{pr_template_name}"  
                                            additionalText="{pr_template_number}" />
                                    </items>
                                </MultiComboBox>
                                <Label text="{I18N>/REQUESTOR_NAME}" labelFor="multiInputWithEmployeeValueHelp"></Label>
                                <!-- <Input id="searchRequestor" placeholder="Input data"></Input> -->
                                <MultiInput id="multiInputWithEmployeeValueHelp"
                                    placeholder="Choose employees from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithEmployeeValuePress">
                                </MultiInput>    
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="{I18N>/PR_NUMBER}" labelFor="searchPrNumber" ></Label>
                            <Input id="searchPrNumber" placeholder="Search"></Input>
                            <Label text="{I18N>/PR_DESC}" labelFor="searchPr_desc" ></Label>
                            <Input id="searchPr_desc" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                            
                        </VBox>                      
                            
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        mode="MultiSelect"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{
                                    path : 'list>/Pr_MstView',
                                    sorter: {
                                        path: 'pr_number',
                                        descending: true
                                    }
                                }"                        
                        width="auto">
                        <!-- mode="MultiSelect"  -->
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_MstView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="{I18N>/CREATE}" type="Transparent" press=".onMainTableAddDialogPress" />
                            <Button id="mainTableDeleteButton" text="{I18N>/DELETE}" type="Transparent" press=".onPrDeletePress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://excel-attachment" press=".onExportPress" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button> 
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <!-- <Column id="mainColumnCHK" width="2.5em" minScreenWidth="Desktop" >
                            <CheckBox selected="false" select=".onColumnChecBox"/>
                        </Column> -->
                        <Column id="mainColumnPR_NUMBER"   hAlign="Center" width="8em">
                            <Text text="{I18N>/PR_NUMBER}" />
                        </Column>
                        <Column id="mainColumnERP_PR_NUMBER"   minScreenWidth="Desktop" hAlign="Center" width="9.5em">
                            <Text text="{I18N>/ERP_PR_NUMBER}" />
                        </Column>        
                        <Column id="mainColumnPR_DESC"  demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center"  width="25em"> 
                            <Text text="{I18N>/PR_DESC}" />
                        </Column>                       
                        <Column id="mainColumnPR_TYPE_CODE" minScreenWidth="Desktop" hAlign="Center"  width="8em">
                            <Text text="{I18N>/PR_TYPE_CODE}" />
                        </Column>
                        <Column id="mainColumnPR_TYPE_CODE_2" minScreenWidth="Desktop" hAlign="Center"  width="6em">
                            <Text text="{I18N>/PR_TYPE_CODE_2}" />
                        </Column>
                        <Column id="mainColumnPR_TYPE_CODE_3" minScreenWidth="Desktop" hAlign="Center" width="6em">
                            <Text text="{I18N>/PR_TYPE_CODE_3}" />
                        </Column>
                        <Column id="mainColumnPR_TEMPLATE_NUMBER" minScreenWidth="Desktop" hAlign="Center" width="14em">
                            <Text text="{I18N>/PR_TEMPLATE_NUMBER}" />
                        </Column>
                        <Column id="mainColumnREQUESTOR_DEPARTMENT_NAME" minScreenWidth="Desktop" hAlign="Center" width="6.5em">
                            <Text text="{I18N>/REQUESTOR_DEPARTMENT_NAME}" />
                        </Column>
                        <Column id="mainColumnREQUESTOR_NAME" minScreenWidth="Desktop" hAlign="Center" width="5em">
                            <Text text="{I18N>/REQUESTOR_NAME}" />
                        </Column>
                        <Column id="mainColumnREQUEST_DATE" minScreenWidth="Desktop" hAlign="Center"    width="7.5em">
                            <Text text="{I18N>/PR_REQUEST_DATE}" />
                        </Column> 
                        <Column id="mainColumnPR_COUNT"  hAlign="Center"  width="7.5em" >
                            <Text text="{I18N>/PR_COUNT}" />
                        </Column>
                        <Column id="mainColumnPR_CREATE_STATUS_CODE"  hAlign="Center"  width="6em">
                            <Text text="{I18N>/PR_CREATE_STATUS_CODE}" />
                        </Column>
                       
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>             
                                <!-- <CheckBox fieldGroupIds="{= ${list>pr_create_status_code}==='DR'? 'checkBoxs':''}"  visible="{= ${list>pr_create_status_code}==='DR'? true:false }" select=".onCheck" />   -->
                                <Text text="{list>pr_number}" width="7em"  />
                                <Text text="{list>erp_pr_number}"/>
                                <Text text="{list>pr_desc}"  hAlign="Begin" width="25em"/>
                                <Text text="{list>pr_type_name}"    />
                                <Text text="{list>pr_type_name_2}"  />
                                <Text text="{list>pr_type_name_3}"      />
                                <Text text="{list>pr_template_name}"  />                                
                                <Text text="{list>requestor_department_name}"/> 
                                <Text text="{list>requestor_name}"/>     
                                <Text text="{list>request_dateT}"/>     
                                <!-- <DatePicker dateValue="{path : 'list>request_date'}"  valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd"/> -->
                                <!-- <Text text="{
                                                    path:'list>request_date',
                                                    type:'sap.ui.model.odata.type.DateTime',
                                                    formatOptions: {
                                                        UTC: true,
                                                        pattern: 'yyyy-MM-dd'
                                                    }
                                                }" /> -->
                                <Text text="{list>pr_progress_status_cnt_txt}"/>
                                <Text text="{list>pr_create_status_name}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
                 <ToolbarSpacer />
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />               
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>