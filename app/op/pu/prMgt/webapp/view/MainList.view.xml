<mvc:View controllerName="op.pu.PrMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>PR_MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" 
                adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{i18n>listHDRequestDate}" labelFor="searchRequestDate" required="true"></Label>
                            <DateRangeSelection id="searchRequestDate" width="100%" change="handleChange"/>
                            <Label text="구매요청 진행상태" labelFor="SearchBStatus" required="false"></Label>
                            <MultiComboBox
                              id="SearchBStatus"
                              width="100%"
                              items="{
                                path: 'util>/CodeDetails',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_CREATE_STATUS'}
                                ]
                              }">
                              <items>
                                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                              </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="구매요청 유형" labelFor="searchBsart" required="false"></Label>
                            <MultiComboBox
                              id="searchBsart"
                              width="100%"
                              items="{
                                path: 'util>/CodeDetails',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                    {path: 'group_code', operator: 'EQ', value1: 'OP_PR_TYPE_CODE'}
                                ]
                              }">
                              <items>
                                <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                              </items>
                            </MultiComboBox>
                            <Label text="조직코드" labelFor="searchOrgCombo4" required="false"></Label>
                            <MultiComboBox id="searchPlantS" width="100%" selectedKey="" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                                            {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                            {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{i18n>listHDBanfn}" labelFor="searchBanfn" required="true"></Label>
                            <Input id="searchBanfn" placeholder="Search"></Input>
                            <Label text="{i18n>listHDBOprater}" labelFor="searchBOprater" required="false"></Label>
                            <Input id="searchBOprater" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="{i18n>listHDBCreater}" labelFor="searchCreater2" required="false"></Label>
                            <Input id="searchKeyword2" placeholder="Search"></Input>
                            <Label text="{i18n>listHDBMaktx}" labelFor="searchBMaktx"></Label>
                            <Input id="searchBMaktx" placeholder="Search"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                      
                            
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/Pr_MstView}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{i18n>appTitle} ({= ${list>/Pr_MstView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddDialogPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnCode" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 번호" />
                        </Column>
                        <Column id="mainColumnName1" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="구매요청 대표품명" />
                        </Column>                       
                        <Column id="mainColumnSiteFlag2" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 유형" />
                        </Column>
                        <Column id="mainColumnSiteFlag4" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 품목그룹" />
                        </Column>
                        <Column id="mainColumnSiteFlag5" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 Category" />
                        </Column>
                        <Column id="mainColumnSiteFlag6" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 Template" />
                        </Column>
                        <Column id="mainColumnCompanyFlag7" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="구매요청 생성자" />
                        </Column>
                         <Column id="mainColumnStartDate111" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매요청자 부서명" />
                        </Column>
                        <Column id="mainColumnStartDate11" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매요청 생성일자" />
                        </Column>
                        <Column id="mainColumnStartDate12" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매진행건수" />
                        </Column>
                         <Column id="mainColumnpr_create_system_code11" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매요청 상태" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>                                
                                <ObjectIdentifier text="{list>pr_number}"/>
                                <ObjectIdentifier text="{list>pr_header_text}"/>
                                <ObjectIdentifier text="{list>pr_type_name}"/>
                                <ObjectIdentifier text="{list>pr_type_name_2}"/>
                                <ObjectIdentifier text="{list>pr_type_name_3}"/>
                                <ObjectIdentifier text="{list>pr_template_name}"/>
                                <ObjectIdentifier text="{list>requestor_name}"/>
                                <ObjectIdentifier text="{list>requestor_department_name}"/> 
                                <ObjectIdentifier text="{
                                        path: 'list>request_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>                                                                  
                                <ObjectIdentifier text="{list>pr_dtl_cnt} / {list>pr_progress_status_cnt}"/>
                                <ObjectIdentifier text="{list>pr_create_status_name}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
                 <ToolbarSpacer />
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />               
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>