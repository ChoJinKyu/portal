<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{message>/}"
        initiallyExpanded="true">
        <MessagePopoverItem
            type="{message>type}"
            title="{message>message}"
            subtitle="{message>additionalText}"
            activeTitle="{message>active}"
            counter="{message>counter}"
            description="{message>description}"/>
    </MessagePopover>
</core:FragmentDefinition>