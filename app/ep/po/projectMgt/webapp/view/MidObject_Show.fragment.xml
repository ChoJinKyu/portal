<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

    <VBox>

        <form:SimpleForm id="midObjectForm1Show" editable="false"> 
        <VBox alignContent="Center" alignItems="Stretch"> 
            <Label text="* 프로젝트명" design="Bold" class="sapMLabelNoText"/>
            <Text text="{masterView>/project_name}" width="100%"/>
        </VBox>
        </form:SimpleForm>

        <form:SimpleForm id="midObjectForm2Show" editable="false" layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">

            <Label text="* 사업본부" design="Bold" class="sapMLabelNoText" />
            <Text text="{masterView>/bizunit_name}"/>
            <Label text="* 사업부" design="Bold" class="sapMLabelNoText"/>
            <Text text="{masterView>/bizdivision_name}"/>
            <Label text="* 플랜트" design="Bold" class="sapMLabelNoText"/>
            <Text text="{masterView>/plant_name}"/>
            <Label text="* 구매유형" design="Bold" class="sapMLabelNoText"/>
            <Text text="{masterView>/ep_purchasing_type_name}"/> 

        </form:SimpleForm>

        <form:SimpleForm id="midObjectForm3Show" editable="false"> 
        <VBox alignContent="Center" alignItems="Stretch"> 
            <Label text="* 비고" design="Bold" class="sapMLabelNoText"/>
            <Text text="{masterView>/remark}" width="100%"/>
        </VBox>
        </form:SimpleForm>

    </VBox>

</core:FragmentDefinition>