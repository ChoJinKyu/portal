<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

    <VBox>

    <form:SimpleForm id="midObjectForm1Edit" editable="true"> 
    <VBox alignContent="Center" alignItems="Stretch"> 
		<Label text="프로젝트명" required="true" design="Bold" class="sapMLabelNoText"/>
		<Input value="{
			path: 'master>/project_name',
			type: 'sap.ui.model.type.String',
			constraints: {
				maxLength: 50
			}
		}" required="true" editable="true" width="100%"/>
    </VBox>
    </form:SimpleForm>

    <form:SimpleForm id="midObjectForm2Edit" editable="true" layout="ColumnLayout"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2">

	    <Label text="사업본부" design="Bold" class="sapMLabelNoText" />
		<ComboBox id="bizunitCode" selectedKey="{master>/bizunit_code}" required="true" items="{
				path: 'org>/Org_Unit',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
				]
			}">
			<items>
				<core:Item key="{org>bizunit_code}" text="{org>bizunit_code}: {org>bizunit_name}" />
			</items>
		</ComboBox>
		<Label text="사업부" design="Bold" class="sapMLabelNoText"/>
		<ComboBox id="bizdivisionCode" selectedKey="{master>/bizdivision_code}" required="true" items="{
				path: 'org>/Org_Division',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
				]
			}">
			<items>
				<core:Item key="{org>bizdivision_code}" text="{org>bizdivision_code}: {org>bizdivision_name}" />
			</items>
		</ComboBox>
		<Label text="플랜트" design="Bold" class="sapMLabelNoText"/>
		<ComboBox id="plantCode" selectedKey="{master>/plant_code}" required="true" items="{
				path: 'org>/Org_Plant',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                    {path: 'company_code', operator: 'EQ', value1: 'LGCKR'}
				]
			}">
			<items>
				<core:Item key="{org>plant_code}" text="{org>plant_code}: {org>plant_name}" />
			</items>
		</ComboBox>
		<Label text="구매유형" design="Bold" required="true" class="sapMLabelNoText"/>
        <SegmentedButton class="sapUiSmallMarginBottom" selectedKey="{master>/ep_purchasing_type_code}">
            <items>
                <SegmentedButtonItem text="설비" key="E" width="6rem" />
                <SegmentedButtonItem text="공사" key="C" width="6rem" />
            </items>                                                    
        </SegmentedButton>          
        <!-- <SegmentedButton id="epPurchasingTypeCode" selectedKey="{master>/ep_purchasing_type_code}" items="{
                        path: 'common>/Code',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                            {path: 'group_code', operator: 'EQ', value1: 'EP_PURCHASING_TYPE'}
                        ],
                        sorter: { path: 'code'}
                    }" class="sapUiSmallMarginBottom" required="true">
            <items>
                <SegmentedButtonItem width="6em" key="{common>code}" text="{common>code_name}" />
            </items>                                                        
        </SegmentedButton>     -->
    </form:SimpleForm>

    <form:SimpleForm id="midObjectForm3Edit" editable="true"> 
    <VBox alignContent="Center" alignItems="Stretch"> 
		<Label text="비고" design="Bold" class="sapMLabelNoText"/>
		<TextArea id="remark" value="{master>/remark}" rows="8" width="100%" />
    </VBox>
    </form:SimpleForm>

    </VBox>

</core:FragmentDefinition>