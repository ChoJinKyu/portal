		<Label text="사업본부"/>
		<ComboBox id="bizunitCode" width="100%" selectedKey="{master>/bizunit_code}" required="true" items="{
				path: 'org>/Org_Unit',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
				]
			}">
			<items>
				<core:Item key="{org>bizunit_code}" text="{org>bizunit_code}: {org>bizunit_name}" />
			</items>
		</ComboBox>
		<Label text="사업부"/>
		<ComboBox id="bizdivisionCode" width="100%" selectedKey="{master>/bizdivision_code}" required="true" items="{
				path: 'org>/Org_Division',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
				]
			}">
			<items>
				<core:Item key="{org>bizdivision_code}" text="{org>bizdivision_code}: {org>bizdivision_name}" />
			</items>
		</ComboBox>
		<Label text="플랜트"/>
		<ComboBox id="plantCode" width="100%" selectedKey="{master>/plant_code}" required="true" items="{
				path: 'org>/Org_Plant',
				filters: [
					{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                    {path: 'company_code', operator: 'EQ', value1: 'LGCKR'}
				]
			}">
			<items>
				<core:Item key="{org>plant_code}" text="{org>plant_code}: {org>plant_name}" />
			</items>
		</ComboBox>
		<Label text="구매유형"/>
		<ComboBox id="epPurchasingTypeCode" width="100%" selectedKey="{master>/ep_purchasing_type_code}" required="true">
			<items>
				<core:Item key="E" text="설비" />
                <core:Item key="C" text="공사" />
			</items>
		</ComboBox>                

		<Label text="비고"/>
		<TextArea id="remark" value="{master>/remark}" rows="8" />

