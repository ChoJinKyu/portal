		<Label text="프로젝트명"/>
		<Input value="{
			path: 'master>/project_name',
			type: 'sap.ui.model.type.String',
			constraints: {
				maxLength: 50
			}
		}" required="true" editable="{midObjectView>/isAddedMode}"/>
		<!-- <Label text="프로젝트 번호"/>
