<mvc:View controllerName="ep.po.projectMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="설비/공사 Project 현황" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="사업본부" labelFor="searchChain" required="true"></Label>
                            <ComboBox id="searchChain" width="100%" placeholder="All" selectedKey="" items="{
                                    path: 'org>/Org_Unit',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{org>bizunit_code}" text="{org>bizunit_code}: {org>bizunit_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="프로젝트명:" labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="Search" submit="onPageSearchButtonPress"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="구매유형:" labelFor="searchUsageSegmentButton"></Label>
                            <!-- <SegmentedButton id="searchUsageSegmentButton" items="{
                                                path: 'common>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                    {path: 'group_code', operator: 'EQ', value1: 'EP_PURCHASING_TYPE'}
                                                ],
                                                sorter: { path: 'code'}
                                            }" class="sapUiSmallMarginBottom" width="100%"> -->
                            <SegmentedButton id="searchUsageSegmentButton" class="sapUiSmallMarginBottom" width="100%">                                            
                                <items>
                                    <SegmentedButtonItem text="All" key="all" width="4.1rem" />
                                    <SegmentedButtonItem text="설비" key="E" width="5rem" />
                                    <SegmentedButtonItem text="공사" key="C" width="5rem" />
                                </items>
                                <!-- <items>
                                    <SegmentedButtonItem width="6em" key="{common>code}" text="{common>code_name}" />
                                </items>                                                         -->
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{
                            path: 'list>/ProjectView',
                            sorter: { 
                                path: 'system_create_dtm',
                                descending: true 
                            }                   
                        }"                        
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Project {= ${list>/ProjectView}.length > 0 ? '(' + ${list>/ProjectView}.length + ')' : ''}" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Create" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnBizunitCode" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="사업본부" />
                        </Column>
                        <Column id="mainColumnBizdivisionCode" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="사업부" />
                        </Column>
                        <Column id="mainColumnProjectName" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="프로젝트명" />
                        </Column>
                        <Column id="mainColumnPlantCode" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="플랜트" />
                        </Column>
                        <Column id="mainColumnEpPurchasingTypeCode" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="구매유형" />
                        </Column>
                        <Column id="mainColumnCreateUserId" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="작성자" />
                        </Column>     
                        <Column id="mainColumnSystemCreateDtm" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="작성일자" />
                        </Column>                                

                        <!-- <Column id="mainColumnCode" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="Code" />
                        </Column>
                        <Column id="mainColumnName" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="Name" />
                        </Column>
                        <Column id="mainColumnStartDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Start Date" />
                        </Column>
                        <Column id="mainColumnEndDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="End Date" />
                        </Column>
                        <Column id="mainColumnSiteFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Site" />
                        </Column>
                        <Column id="mainColumnCompanyFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Company" />
                        </Column>
                        <Column id="mainColumnRoleFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Role" />
                        </Column>
                        <Column id="mainColumnOrganizationFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Org." />
                        </Column>
                        <Column id="mainColumnUserFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="User" />
                        </Column> -->
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>bizunit_name}"/>
                                <ObjectIdentifier text="{list>bizdivision_name}"/>
                                <ObjectIdentifier text="{list>project_name}"/>
                                <ObjectIdentifier text="{list>plant_name}"/>
                                <ObjectIdentifier text="{list>ep_purchasing_type_name}"/>
                                <ObjectIdentifier text="{list>create_user_id}"/>
                                <ObjectIdentifier text="{
                                        path: 'list>system_create_dtm',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>