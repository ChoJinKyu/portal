<mvc:View controllerName="ep.po.loiRequestMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="true" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="LOI 발행요청 현황" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <!-- <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" /> -->
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader>
                <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="LOI 번호" labelFor="searchLoiNumberS" ></Label>
                                <MultiInput width="100%"
                                    id="searchLoiNumberS"
                                    suggestionItems="{
                                        path: '/LoiNumberGroupbyView',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: 'C100'}
                                        ],         
                                        sorter: { path: 'loi_number' }
                                    }"
                                    showValueHelp="false" placeholder="" submit=".onPageSearchButtonPress">
                                    <core:Item key="{loi_number}" text="{loi_number}" />
                                </MultiInput>  

                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>

                            </VBox>
                            <VBox>
                                <Label text="요청일자" labelFor="searchRequestDateS"></Label>
                                    <DateRangeSelection id="searchRequestDateS" width="100%" change="creationDateChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="요청부서" labelFor="searchRequestDepartmentS"></Label>
                                <lib-m:CodePicker id="searchRequestDepartmentS"
                                    placeholder="Enter a department name"
                                    keyField="department_id"
                                    textField="department_local_name"
                                    suggestionItems="{
                                        path: '/',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                        ],
                                        serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                        entityName: 'Department'
                                    }">
                                    <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                        keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                                </lib-m:CodePicker>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="요청자" labelFor="searchRequestorS"></Label>
                                <lib-m:CodePicker id="searchRequestorS"
                                    placeholder="Enter a employee name"
                                    keyField="employee_number"
                                    textField="user_local_name"
                                    suggestionItems="{
                                        path: '/',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                        ],
                                        serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                        entityName: 'Employee'
                                    }">
                                    <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Employee"
                                        keyFieldHeaderText="Employee ID" textFieldHeaderText="Employee" />
                                </lib-m:CodePicker>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />                                   
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="진행상태"></Label>
                                <SegmentedButton id="searchStatus" selectedKey="" class="sapUiSmallMarginBottom" width="100%" selectionChange="onStatusSelectionChange" >
                                    <items>
                                        <SegmentedButtonItem text="All" key="" width="4.1rem" />
                                        <SegmentedButtonItem text="작성중" key="121010" width="4.1rem" />
                                        <SegmentedButtonItem text="결재진행중" key="121020" width="6rem" />
                                        <SegmentedButtonItem text="결재반려" key="121030" width="5.5rem" />
                                        <SegmentedButtonItem text="요청완료" key="121040" width="5.5rem" />
                                    </items>
                                </SegmentedButton>
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M12 S12" />
                                </layoutData>
                            </VBox>

                            <FlexBox
                                alignItems="Start"
                                justifyContent="End">
                                
                                <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                                <layoutData>
                                    <!-- <layout:GridData
                                        span="XL4 L6 M12 S12" /> -->
                                        <layout:GridData span="XL6 L6 M12 S12" />
                                </layoutData>
                            </FlexBox>      
                        </form:content>
                    </form:SimpleForm>
                            
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"
            
            rows="{listModel>/}"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            columnResize="onColumnResize"
            rowActionCount="1">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                <!-- <Title text="Request List {= ${listModel>/LOIRequestListView}.length > 0 ? '(' + ${listModel>/LOIRequestListView}.length + ')' : ''}" level="H2"/> -->
                <Title text="Request List {= ${listModel>/}.length > 0 ? '(' + ${listModel>/}.length + ')' : ''}" level="H2"/>
                <ToolbarSpacer/>

                <Button id="mainTableAddButton" text="Create" type="Transparent" press=".onMainTableAddButtonPress" />
                <ToolbarSeparator/>
                <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="mainLoiNumber" width="10rem">
                <Label text="LOI번호" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>loi_number}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestDepartmentCode" width="15rem">
                <Label text="요청부서" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>request_department_name}"/>
                </t:template>
                </t:Column>

                <t:Column id="mainRequestorEmpno" width="6rem">
                <Label text="요청자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>requestor_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestDate" width="8rem" hAlign="Center">
                <Label text="요청일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'listModel>request_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainLoiRequestTitle" width="20rem">
                <Label text="요청명" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>loi_request_title}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainLoiRequestStatusCode" width="10rem">
                <Label text="진행상태" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>loi_request_status_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainBuyerEmpno" width="6rem">
                <Label text="구매담당자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>buyer_name}"/>
                </t:template>
                </t:Column>    
                <t:Column id="mainPublishDate" width="8rem">
                <Label text="발행일자" textAlign="Center" width="100%"/>
                <t:template>
                     <Text text="{
                                path: 'listModel>publish_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>   
                <t:Column id="mainVendorPoolCode" width="12rem">
                <Label text="협력사" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{listModel>supplier_name}"/>
                </t:template>
                </t:Column>                                                                                                                    
            </t:columns>
            <t:rowActionTemplate>
                <t:RowAction>
                    <t:RowActionItem type="Navigation" press="onTableItemPress"></t:RowActionItem>
                </t:RowAction>
            </t:rowActionTemplate>   
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>