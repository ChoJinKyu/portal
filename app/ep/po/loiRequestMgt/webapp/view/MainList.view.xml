            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/LOIRequestListView}"
                        rows="{
                            path: 'list>/LOIRequestListView',
                            sorter: { 
                                path: 'loi_number',
                                descending: false 
                            }                   
                        }"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Request List ({= (${list>/LOIRequestListView})?${list>/LOIRequestListView}.length:0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Create" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainLoiNumber" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="LOI번호" />
                        </Column>
                        <Column id="mainRequestDepartmentCode" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="요청부서" />
                        </Column>
                        <Column id="mainRequestorEmpno" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="요청자" />
                        </Column>
                        <Column id="mainRequestDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="요청일자" />
                        </Column>
                        <Column id="mainLoiRequestTitle" minScreenWidth="Tablet" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader" width="300px">
                            <Text text="요청명" />
                        </Column>
                        <Column id="mainLoiRequestStatusCode" minScreenWidth="Tablet" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader" width="100px">
                            <Text text="진행상태" />
                        </Column>
                        <!-- <Column id="mainInvestmentReviewFlag" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="투자심의여부" />
                        </Column> -->
                        <Column id="mainBuyerEmpno" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="구매담당자" /> 
                        </Column>
                        <Column id="mainPublishDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="발행일자" /> 
                        </Column>
                        <Column id="mainVendorPoolCode" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="협력사" /> 
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>loi_number}" />
                                <ObjectIdentifier text="{list>request_department_name}" />
                                <ObjectIdentifier text="{list>requestor_name}" />
                                <ObjectIdentifier text="{
                                        path: 'list>request_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                                <ObjectIdentifier text="{list>loi_request_title}" />
                                <ObjectIdentifier text="{list>loi_request_status_name}" />
                                <!-- <ObjectIdentifier text="{list>investment_review_flag}" /> -->
                                <ObjectIdentifier text="{list>buyer_name}" />
                                <ObjectIdentifier text="{
                                        path: 'list>publish_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                                <ObjectIdentifier text="{list>supplier_code}" />
                                
                            </cells>
                        </ColumnListItem>
                    </items>
