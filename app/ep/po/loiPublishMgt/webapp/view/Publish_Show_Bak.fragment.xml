<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" displayBlock="true"
    xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:core="sap.ui.core">

    <VBox>

        <form:SimpleForm id="publishForm1Show" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label text="* 품의명" design="Bold" class="sapMLabelNoText"/>
                <Text text="{master>/loi_publish_title}" width="100%"/>
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm id="publishForm2Show" editable="true" layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">

            <Label text="* 협력사명" design="Bold" class="sapMLabelNoText" />
            <Text text="OO공조"/>

            <Label text="* 계약서식" design="Bold" class="sapMLabelNoText"/>
            <Text text="구매의향서(국문)"/>

            <Label text="* 계약일자" design="Bold" class="sapMLabelNoText"/>
            <Text text="{master>/contract_date}" />   

            <Label text="* 서명방식" design="Bold" class="sapMLabelNoText"/>
            <Text text="{master>/offline_flag}" />   
                                  
        </form:SimpleForm>

        <form:SimpleForm id="publishForm3Show" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label  text="* 부대조건" 
                            design="Bold" 
                            class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                <richtexteditor:RichTextEditor
                    editorType="TinyMCE4"
                    width="98%"
                    height="200px"
                    editable="false"
                    customToolbar="true"
                    showGroupFont="true"
                    showGroupLink="true"
                    showGroupInsert="true"
                    value="{master>/additional_condition_desc}">
                </richtexteditor:RichTextEditor> 
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm id="publishForm4Show" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label  text="* 특기사항" 
                            design="Bold" 
                            class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                <richtexteditor:RichTextEditor
                    editorType="TinyMCE4"
                    width="98%"
                    height="200px"
                    editable="false"
                    customToolbar="true"
                    showGroupFont="true"
                    showGroupLink="true"
                    showGroupInsert="true"
                    value="{master>/special_note}">
                </richtexteditor:RichTextEditor> 
            </VBox>
        </form:SimpleForm>        

    </VBox>

</core:FragmentDefinition>