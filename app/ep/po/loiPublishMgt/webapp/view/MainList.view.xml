<mvc:View controllerName="ep.po.loiPublishMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    xmlns:u="sap.ui.unified"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="LOI 발행현황" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="LOI 번호:" labelFor="searchLoiNumber"></Label>
                            <!-- group by 추가(일단 view에서 추가)-->
                            <MultiInput width="100%"
                                id="searchLoiNumber"
                                suggestionItems="{
                                    path: '/LoiNumberGroupbyView',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: '1000'},
                                        {path: 'company_code', operator: 'EQ', value1: 'C100'}
                                    ],         
                                    sorter: { path: 'loi_number' }
                                }"
                                showValueHelp="false" placeholder="">
                                <core:Item key="{loi_number}" text="{loi_number}" />
                            </MultiInput>                            
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="요청일자 : " labelFor="searchRequestDate"/>
                            <!-- <DatePicker
                                id="searchRequestDate"
                                visible="true"
                                placeholder="Date"/>                             -->
                            <DateRangeSelection id="searchRequestDate" width="100%" placeholder="" />                                
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="요청부서 :" labelFor="searchRequestDepartment"></Label>
                            <Input id="searchRequestDepartment" placeholder=""></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="요청자 :" labelFor="searchRequestor"></Label>
                            <Input id="searchRequestor" placeholder=""></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>    
                        <VBox>
                            <Label text="LOI발행상태 :" labelFor="searchLoiPublishStatus"></Label>
                            <MultiComboBox id="searchLoiPublishStatus" width="100%" selectedKey=""
                                            items="{
                                                path: 'common>/CodeDetails',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                    {path: 'group_code', operator: 'EQ', value1: 'EP_LOI_PUBLISH_STATUS'}
                                                ],
                                                sorter: { path: 'code'}
                                            }"
                            selectionFinish="handleSelectionFinishComp" placeholder="">
                                <items>
                                    <core:Item key="{common>code}" text="{common>code}: {common>code_description}" />
                                </items>
                            </MultiComboBox>                     

                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                                            
                    </form:content>
                </form:SimpleForm>
                <form:SimpleForm id="pageSearchForm2" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="작성일자 : " labelFor="searchSystemCreateDate"/>
                            <!-- <DatePicker
                                id="searchSystemCreateDate"
                                visible="true"
                                placeholder="Date"/>                            -->
                            <DateRangeSelection id="searchSystemCreateDate" width="100%" placeholder="" />       
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="발행일자 : " labelFor="searchPublishDate"/>
                            <!-- <DatePicker
                                id="searchPublishDate"
                                visible="true"
                                placeholder="Date"/>      -->
                                <DateRangeSelection id="searchPublishDate" width="100%" placeholder="" />                        
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="구매부서 :" labelFor="searchPurchasingDepartment"></Label>
                            <Input id="searchPurchasingDepartment" placeholder=""></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="구매자 :" labelFor="searchBuyer"></Label>
                            <Input id="searchBuyer" placeholder=""></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>    
                        <VBox>
                            <Label text="발주상태 :" labelFor="searchPoStatus"></Label>
                            <MultiComboBox id="searchPoStatus" width="100%" selectedKey=""
                                            items="{
                                                path: 'common>/CodeDetails',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                    {path: 'group_code', operator: 'EQ', value1: 'EP_LOI_PO_STATUS'}
                                                ],
                                                sorter: { path: 'code'}
                                            }"
                            selectionFinish="handleSelectionFinishComp" placeholder="">
                                <items>
                                    <core:Item key="{common>code}" text="{common>code}: {common>code_description}" />
                                </items>
                            </MultiComboBox>                     

                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                                            
                    </form:content>
                </form:SimpleForm>                
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="MultiToggle"
            rows="{
                path: 'list>/LOIPublishItemView',
                sorter: { 
                    path: 'system_create_dtm',
                    descending: true 
                }                   
            }"
            cellClick=".onCellClick"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            columnResize="onColumnResize">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                <Title text="LOI발행현황 {= ${list>/LOIPublishItemView}.length > 0 ? '(' + ${list>/LOIPublishItemView}.length + ')' : ''}" level="H2"/>
                <ToolbarSpacer/>
                <Button text="RFQ" id="RfqButton" press=".onRfqButtonPress" type="Transparent"/>
                <Button text="업체선정품의" id="supplierSelectionButton" press=".onSupplierSelectionButtonPress" type="Transparent"/>
                <Button text="발행품의" id="publishButton" press=".onSave('mainTable', 'list')"   type="Transparent"/>
                <Button text="발주매핑" id="poMappingButton" press=".onSave('mainTable', 'list')"   type="Transparent"/>
                <Button text="발주매핑취소" id="poMappingCansel" press=".onSave('mainTable', 'list')"   type="Transparent"/>
                <ToolbarSeparator/>
                <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                    <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <!-- <t:Column width="0rem" hAlign="Center" visible="false">
                <Label text="tenant_id"/>
                <t:template>
                    <Text text="{list>tenant_id}"/>
                </t:template>
                </t:Column> -->
                <t:Column id="mainLoiNumber" width="6rem">
                <Label text="LOI번호" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>loi_number}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainItemSequence" width="5rem">
                <Label text="Line No." textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>item_sequence}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestDepartmentName" width="5rem">
                <Label text="요청부서" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>request_department_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestorName" width="4rem">
                <Label text="요청자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>requestor_name}"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainPurchasingDepartmentName" width="5rem">
                <Label text="구매부서" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>purchasing_department_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainBuyerName" width="5rem">
                <Label text="구매담당자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>buyer_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainLoiRequestTitle" width="6rem">
                <Label text="요청명" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>loi_request_title}"/>
                </t:template>
                </t:Column> 
                <t:Column id="mainItemDesc" width="4rem">
                <Label text="품명" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>item_desc}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainSupplierName" width="4rem">
                <Label text="협력사" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>supplier_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainPublishDate" width="5rem">
                <Label text="발행일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>publish_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainDeliveryRequestDate" width="5rem">
                <Label text="납기일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>delivery_request_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestQuantity" width="3rem">
                <Label text="수량" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>request_quantity}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainCurrencyCode" width="3rem">
                <Label text="통화" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>currency_code}"/>
                </t:template>
                </t:Column> 
                <t:Column id="mainRequestAmount" width="3rem">
                <Label text="금액" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>request_amount}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainLoiSelectionStatusCode" width="4rem">
                <Label text="업체선정진행상태" textAlign="Center" width="100%" tooltip="업체선정진행상태"/>
                <t:template>
                    <Text text="{list>loi_selection_status_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainLoiPublishStatusCode" width="4rem">
                <Label text="LOI발행상태" textAlign="Center" width="100%" tooltip="업체선정진행상태"/>
                <t:template>
                    <Text text="{list>loi_publish_status_code}"/>
                </t:template>
                </t:Column> 
                <t:Column id="mainPoStatusCode" width="4rem">
                <Label text="발주상태" textAlign="Center" width="100%" tooltip="발주상태"/>
                <t:template>
                    <Text text="{list>po_status_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestDate" width="4rem">
                <Label text="요청일자" textAlign="Center" width="100%" tooltip="요청일자"/>
                <t:template>
                    <Text text="{
                                path: 'list>request_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainSystemCreateDtm" width="4rem">
                <Label text="작성일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>system_create_dtm',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>      
                <t:Column id="mainSupplierOpinion" width="4rem">
                <Label text="VOS" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>supplier_opinion}"/> -->
                    <Button id="vosButton" text="Show" type="Default" press=".onVosButtonPress" />
                </t:template>
                </t:Column>   
                <t:Column id="mainPoNumber" width="4rem">
                <Label text="발주번호" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>po_number}"/>
                </t:template>
                </t:Column>   
                    <t:Column id="mainPurchasingRequestDate" width="4rem">
                <Label text="구매요청일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column>   
                <t:Column id="mainPoDate" width="4rem">
                <Label text="발주일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column> 
                <t:Column id="mainPoDate2" width="4rem">
                <Label text="입고일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column>   
                <t:Column id="mainRemark" width="4rem">
                <Label text="비고" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>supplier_opinion}"/> -->
                    <Button id="remarkButton" text="조회" type="Default" press=".onRmkButtonPress" />
                </t:template>
                </t:Column>                                                                                                                                          
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>