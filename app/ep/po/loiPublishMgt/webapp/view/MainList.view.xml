<mvc:View controllerName="ep.po.loiPublishMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="true" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="LOI 발행현황" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/LOI_NUMBER} : " labelFor="searchLoiNumber"></Label>
                            <!-- group by 추가(일단 view에서 추가)-->
                            <MultiInput width="100%"
                                id="searchLoiNumber"
                                suggestionItems="{
                                    path: '/LoiNumberGroupbyView',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'company_code', operator: 'EQ', value1: 'C100'}
                                    ],         
                                    sorter: { path: 'loi_number' }
                                }"
                                showValueHelp="false" placeholder="" submit=".onPageSearchButtonPress">
                                <core:Item key="{loi_number}" text="{loi_number}" />
                            </MultiInput>                            
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/REQUEST_DATE} : " labelFor="searchRequestDate"/>
                            <DateRangeSelection id="searchRequestDate" displayFormat="yyyy-MM-dd" width="100%" placeholder="" />                                
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/REQUEST_DEPARTMENT} :" labelFor="searchRequestDepartment"></Label>
                            <lib-m:CodePicker id="searchRequestDepartment"
                                placeholder="Enter a department name"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                    keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/REQUESTOR} :" labelFor="searchRequestor"></Label>
                            <lib-m:CodePicker id="searchRequestor"
                                placeholder="Enter a Employee name"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Employee"
                                    keyFieldHeaderText="Employee ID" textFieldHeaderText="Employee" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>    
                        <VBox>
                            <Label text="{I18N>/LOI}{I18N>/PUBLISH_STATUS} :" labelFor="searchLoiPublishStatus"></Label>
                            <MultiComboBox id="searchLoiPublishStatus" width="100%"
                                            items="{
                                                path: 'common>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                    {path: 'group_code', operator: 'EQ', value1: 'EP_LOI_PUBLISH_STATUS'}
                                                ],
                                                sorter: { path: 'code'}
                                            }"
                            selectionFinish="handleSelectionFinishComp" placeholder="">
                                <items>
                                    <core:Item key="{common>code}" text="{common>code}: {common>code_name}" />
                                </items>
                            </MultiComboBox>                     

                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>                                            
                    </form:content>
                </form:SimpleForm>
                <form:SimpleForm id="pageSearchForm2" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/WRITE_DATE} : " labelFor="searchSystemCreateDate"/>
                            <!-- <DatePicker
                                id="searchSystemCreateDate"
                                visible="true"
                                placeholder="Date"/>                            -->
                            <DateRangeSelection id="searchSystemCreateDate" displayFormat="yyyy-MM-dd" width="100%" placeholder="" />       
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PUBLISH_DATE} : " labelFor="searchPublishDate"/>
                            <!-- <DatePicker
                                id="searchPublishDate"
                                visible="true"
                                placeholder="Date"/>      -->
                                <DateRangeSelection id="searchPublishDate" displayFormat="yyyy-MM-dd" width="100%" placeholder="" />                        
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PURCHASING_DEPARTMENT} :" labelFor="searchPurchasingDepartment"></Label>
                            <lib-m:CodePicker id="searchPurchasingDepartment"
                                placeholder="Enter a department name"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Employee"
                                    keyFieldHeaderText="Employee ID" textFieldHeaderText="Employee" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/BUYER} :" labelFor="searchBuyer"></Label>
                            <lib-m:CodePicker id="searchBuyer"
                                placeholder="Enter a Employee name"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Employee"
                                    keyFieldHeaderText="Employee ID" textFieldHeaderText="Employee" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M12 S12" />
                            </layoutData>
                        </VBox>    
                        <VBox>
                            <Label text="{I18N>/EP_PO_STATUS} :" labelFor="searchPoStatus"></Label>
                            <MultiComboBox id="searchPoStatus" width="100%"
                                            items="{
                                                path: 'common>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                    {path: 'group_code', operator: 'EQ', value1: 'EP_LOI_PO_STATUS'}
                                                ],
                                                sorter: { path: 'code'}
                                            }"
                            selectionFinish="handleSelectionFinishComp" placeholder="">
                                <items>
                                    <core:Item key="{common>code}" text="{common>code}: {common>code_name}" />
                                </items>
                            </MultiComboBox>                     

                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>                                            
                    </form:content>
                </form:SimpleForm>                
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="MultiToggle"
            rows="{
                path: 'list>/LOIPublishItemView',
                sorter: { 
                    path: 'system_create_dtm',
                    descending: true 
                }                   
            }"
            cellClick=".onCellClick"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            fixedColumnCount="2"
            columnResize="onColumnResize">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                <Title text="LOI발행현황 {= ${list>/LOIPublishItemView}.length > 0 ? '(' + ${list>/LOIPublishItemView}.length + ')' : ''}" level="H2"/>
                <ToolbarSpacer/>
                <Button text="{I18N>/RFQ_CREATE}" id="RfqButton" press=".onRfqButtonPress" type="Transparent"/>
                <Button text="{I18N>/SUPPLIER_SELECTION_APPROVAL}" id="supplierSelectionButton" press=".onSupplierSelectionButtonPress" type="Transparent"/>
                <Button text="{I18N>/PUBLISH_APPROVAL}" id="publishButton" press=".onPublishButtonPress"   type="Transparent"/>
                <Button text="{I18N>/ORDER_MAPPING}" id="poMappingButton" press=".onPoMapping"   type="Transparent"/>
                <Button text="{I18N>/ORDER_MAPPING_CANCEL}" id="poMappingCansel" press=".onPoMappingCancel"   type="Transparent"/>
                <ToolbarSeparator/>
                <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                    <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <!-- <t:Column width="0rem" hAlign="Center" visible="false">
                <Label text="tenant_id"/>
                <t:template>
                    <Text text="{list>tenant_id}"/>
                </t:template>
                </t:Column> -->
                <t:Column id="mainLoiNumber" width="7rem">
                <Label text="{I18N>/LOI_NUMBER}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>loi_number}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainItemSequence" width="5rem">
                <Label text="{I18N>/LINE_NO}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>item_sequence}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainLoiRequestTitle" width="12rem">
                <Label text="{I18N>/REQUEST_TITLE}" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Link text="{list>loi_request_title}" press="goToLoiRequest" tooltip="{list>loi_request_title}" /> -->
                    <Text text="{list>loi_request_title}" />
                </t:template>
                </t:Column> 
                <t:Column id="mainItemDesc" width="6rem">
                <Label text="{I18N>/ITEM_NAME}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>item_desc}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainSupplierName" width="4rem">
                <Label text="{I18N>/SUPPLIER}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>supplier_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainPublishDate" width="6rem" hAlign="Center">
                <Label text="{I18N>/PUBLISH_DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>publish_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainDeliveryRequestDate" width="6rem" hAlign="Center">
                <Label text="{I18N>/DUE_DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>delivery_request_date',
                                formatter: '.dateFormatter.toUTCDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestQuantity" width="3rem" hAlign="Right">
                <Label text="{I18N>/QUANTITY}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>request_quantity}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainCurrencyCode" width="3rem" hAlign="Center">
                <Label text="{I18N>/CURRENCY}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>currency_code}"/>
                </t:template>
                </t:Column> 
                <t:Column id="mainRequestAmount" width="6rem" hAlign="Right">
                <Label text="{I18N>/AMOUNT}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text  text="{
                                path: 'list>request_amount',
                                formatter: '.numberFormatter.toNumberString'
                            }" />
                </t:template>
                </t:Column>
                <t:Column id="mainLoiSelectionStatusCode" width="9rem" hAlign="Center">
                <Label text="{I18N>/SUPPLIER_SELECTION_STATUS}" textAlign="Center" width="100%" tooltip="업체선정진행상태"/>
                <t:template>
                    <tnt:InfoLabel 
                        text="{list>loi_selection_status_name}" 
                        visible="{= ${list>loi_selection_status_code} === '' ? false : true }"
                        colorScheme="{
                                path: 'list>loi_selection_status_color',
                                formatter: '.onStatusColor'
                            }" />                    
			        <!-- <Link text="{list>loi_selection_status_name}" press="onTableSupplierSelectionPress" enabled="{= ${list>loi_selection_status_code} !== '122020' ? true : false }" />                 -->
                <!-- <Text text="{list>loi_selection_status_name}" visible="{= ${list>loi_selection_status_code} === '122020' ? true : false }" /> -->
                </t:template>
                </t:Column>
                <t:Column id="mainLoiPublishStatusCode" width="7rem" hAlign="Center">
                <Label text="{I18N>/LOI}{I18N>/PUBLISH_STATUS}" textAlign="Center" width="100%" tooltip="LOI발행상태"/>
                <t:template>
                    <tnt:InfoLabel 
                        text="{list>loi_publish_status_name}" 
                        visible="{= ${list>loi_publish_status_code} === '' ? false : true }"
                        colorScheme="{
                                path: 'list>loi_publish_status_color',
                                formatter: '.onStatusColor'
                            }" />                          
                    <!-- <Link text="{list>loi_publish_status_name}" press="onTablePublishPress" /> -->
                    <!-- <Text text="{list>loi_publish_status_name}"/> -->
                </t:template>
                </t:Column> 
                <t:Column id="mainPoStatusCode" width="5rem" hAlign="Center">
                <Label text="{I18N>/EP_PO_STATUS}" textAlign="Center" width="100%" tooltip="발주상태"/>
                <t:template>
                    <Text text="{list>po_status_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestDepartmentName" width="15rem">
                <Label text="{I18N>/REQUEST_DEPARTMENT}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>request_department_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainRequestorName" width="4rem" hAlign="Center">
                <Label text="{I18N>/REQUESTOR}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>requestor_name}"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainPurchasingDepartmentName" width="15rem">
                <Label text="{I18N>/PURCHASING_DEPARTMENT}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>purchasing_department_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainBuyerName" width="6rem" hAlign="Center">
                <Label text="{I18N>/BUYER}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>buyer_name}"/>
                </t:template>
                </t:Column>                
                <t:Column id="mainRequestDate" width="6rem" hAlign="Center">
                <Label text="{I18N>/REQUEST_DATE}" textAlign="Center" width="100%" tooltip="요청일자"/>
                <t:template>
                    <Text text="{
                                path: 'list>request_date',
                                formatter: '.dateFormatter.toUTCDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainSystemCreateDtm" width="9rem" hAlign="Center">
                <Label text="업체선정작성일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>supplier_selection_date',
                                formatter: '.dateFormatter.toUTCDateString'
                            }" />
                </t:template>
                </t:Column>      
                <t:Column id="mainSupplierOpinion" width="4rem" hAlign="Center">
                <Label text="{I18N>/VOS}" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>supplier_opinion}"/> -->
                    <Button icon="sap-icon://notes" press=".onVosButtonPress" />
                    <!-- <Button id="vosButton" text="조회" type="Default" press=".onVosButtonPress" /> -->
                </t:template>
                </t:Column>   
                <t:Column id="mainPoNumber" width="6rem">
                <Label text="{I18N>/PO_NUMBER}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>po_number}"/>
                </t:template>
                </t:Column>   
                    <t:Column id="mainPurchasingRequestDate" width="8rem" hAlign="Center">
                <Label text="{I18N>/PURCHASE_REQUISITION}{I18N>/DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column>   
                <t:Column id="mainPoDate" width="6rem" hAlign="Center">
                <Label text="{I18N>/PO_DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column> 
                <t:Column id="mainPoDate2" width="6rem" hAlign="Center">
                <Label text="{I18N>/RECEIPT}{I18N>/DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text=""/>
                </t:template>
                </t:Column>   
                <t:Column id="mainRemark" width="4rem" hAlign="Center">
                <Label text="{I18N>/REMARK}" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>supplier_opinion}"/> -->
                    <Button icon="sap-icon://notes" press=".onRmkButtonPress" />
                    <!-- <Button id="remarkButton" text="조회" type="Default" press=".onRmkButtonPress" /> -->
                </t:template>
                </t:Column>                                                                                                                                          
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <!-- <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer> -->
    </f:DynamicPage>
</mvc:View>