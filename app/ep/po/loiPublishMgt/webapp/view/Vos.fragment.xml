<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogVos" class="sapUiMediumMargin" title="" contentWidth="35%" >
        <VBox class="sapUiMediumMargin">
            <form:SimpleForm id="VosForm" editable="false" >
                <Toolbar>
                    <Title text="VOS"/>
                </Toolbar>            
                <Label text="VOS"/>
                <TextArea id="saveSupplierOpinion" value="{
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 1500
                    }
                }" required="true" rows="4" />
            </form:SimpleForm> 
        </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="Center" justifyContent="Center" >
            <Button text="Cancel" class="sapUiSmallMargin" press=".onExitVos"/>
            <Button text="Save" class="sapUiSmallMargin" type="Emphasized" press=".onSaveVos"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
