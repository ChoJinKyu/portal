<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" displayBlock="true"
    xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:core="sap.ui.core">

    <VBox id="publishEditBox">

        <form:SimpleForm id="publishForm1Edit" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label text="* 품의명" required="true" design="Bold" class="sapMLabelNoText"/>
                <Input value="{
                    path: 'master>/loi_publish_title',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }" required="true" editable="true" width="98%"/>
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm id="publishForm2Edit" editable="true" layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">

            <Label text="* 협력사명" design="Bold" class="sapMLabelNoText" />
            <Input value="{
                    path: 'master>/supplier_code',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        maxLength: 50
                    }
                }" required="true" editable="true" width="100%"/>

            <Label text="* 계약서식" design="Bold" class="sapMLabelNoText"/>
            <Select selectedKey="{master>/contract_format_id}">
                <items>
                    <core:Item key="K" text="구매의향서(국문)" />
                    <core:Item key="E" text="구매의향서(영문)" />
                </items>
            </Select>            

            <Label text="* 계약일자" design="Bold" class="sapMLabelNoText"/>
            <DatePicker displayFormat="yyyy-MM-dd" valueFormat="yyyyMMdd" value="{master>/contract_date}" placeholder="Date"/>   

            <Label text="* 서명방식" design="Bold" required="true" class="sapMLabelNoText"/>
            <SegmentedButton class="sapUiSmallMarginBottom" selectedKey="{master>/offline_flag}" width="100%">                                            
                <items>
                    <SegmentedButtonItem text="온라인" key="false" />
                    <SegmentedButtonItem text="오프라인" key="true" />
                </items>
            </SegmentedButton>   
                                  
        </form:SimpleForm>

        <form:SimpleForm id="publishForm3Edit" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label  text="* 부대조건" 
                            design="Bold" 
                            class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                <TextArea value="{master>/additional_condition_desc}" rows="8" width="98%" />            
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm id="publishForm4Edit" editable="true"> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label  text="* 특기사항" 
                            design="Bold" 
                            class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                <richtexteditor:RichTextEditor
                    editorType="TinyMCE4"
                    width="98%"
                    height="200px"
                    editable="true"
                    customToolbar="true"
                    showGroupFont="true"
                    showGroupLink="true"
                    showGroupInsert="true"
                    value="{master>/special_note}">
                </richtexteditor:RichTextEditor> 
            </VBox>
        </form:SimpleForm>        

    </VBox>

</core:FragmentDefinition>