<mvc:View controllerName="ep.ne.ucContractMgt.controller.UcContractDetail" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:sc="sap.suite.ui.commons"
	xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor"
    xmlns:ep-ui="ep.util.control.ui"
    xmlns:t="sap.ui.table"
	height="100%">

	<uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
		showFooter="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="End">
                        <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        <Title text="공사단가계약 상세" wrapping="true" class="" />
                    </HBox>
                </uxap:heading>              
                <!-- <uxap:navigationActions>
					<OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                </uxap:navigationActions> -->
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap" visible="true">
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <ObjectStatus
                        title="{I18N>/NET_PRICE_CONTRACT_DOCUMENT_NO} : "
                        text="{viewModel>/mst/net_price_contract_document_no}"/>
                    <ObjectStatus
                        title="{I18N>/WRITER} : "
                        text="{viewModel>/mst/buyer_name}"/>
				</layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <ObjectStatus 
                        title="{I18N>/WRITE_DATE} : "
                        text="{viewModel>/mst/contract_write_date}" />

                    <ObjectStatus
                        title="{I18N>/WRITE_DEPARTMENT} : "
                        text="{viewModel>/mst/purchasing_department_name}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <Label text="{I18N>/PROGRESS_STATUS} :"/>
                    <ObjectStatus
                        class="sapMObjectStatusLarge"
                        text="{viewModel>/mst/net_price_contract_status_name}"
                        state="Error" />
                </layout:VerticalLayout>

                <!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="Process : "/>
                    <HBox>
                        <sc:MicroProcessFlow>
                            <sc:content>
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                                <sc:MicroProcessFlowItem state="Error" stepWidth="3rem" icon="sap-icon://circle-task" />
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                            </sc:content>
                        </sc:MicroProcessFlow>
                    </HBox>
                    <HBox>
                        <Text text="LOI요청"  width="4em" renderWhitespace="true" />
                        <Text text=" LOI업체&#10; 선정"  width="4em" renderWhitespace="true" />
                        <Text text="LOI발행" width="6em" textAlign="Center" />
                        <Text text=" LOI발행&#10; 통보" renderWhitespace="true" />
                    </HBox>
                </layout:VerticalLayout>   -->

			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="{I18N>/BASIC_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1">
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <!-- 협력사 정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/SUPPLIER_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <t:Table id="supplierTable" 
                                noData="{I18N>/NCM01004}"
                                rows="{viewModel>/supplier}"
                                selectionMode="MultiToggle"
                                visibleRowCount="5"
                                columnResize="onColumnResize"
                                cellClick=".onCellClick"
                                rowSelectionChange=".onCheck"
                                width="100%">
                            <t:extension>
                                <OverflowToolbar>
                                    <ToolbarSpacer/>
                                    <Button id="supplierTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onSupplierTableAddButtonPress" />
                                    <Button id="supplierTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onSupplierTableDeleteButtonPress" />
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column id="supplierColumnState" hAlign="Center" width="2em" >
                                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                                    <t:template>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>row_state',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" visible="{viewSet>/isEditMode}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="15em" >
                                    <Label text="{I18N>/SUPPLIER}" required="true" />
                                    <t:template>
                                    <HBox>
                                        <Input value="{viewModel>supplier_name}" 
                                            placeholder="협력사"
                                            showValueHelp="true" valueHelpRequest=".openSupplierPopupInTable" width="14em"
                                            visible="{viewSet>/isEditMode}">
                                        </Input>     
                                        <Text text="{viewModel>supplier_code}" visible="false" />  
                                        <Text text="{viewModel>supplier_name}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />        
                                    </HBox>                                   
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="8em" >
                                    <Label text="{I18N>/DISTRB_RATE}" />
                                    <t:template>
                                        <HBox justifyContent="End">
                                            <Input value="{viewModel>distrb_rate}" visible="{viewSet>/isEditMode}" type="Number" textAlign="Right" width="7em" />
                                            <Text text="{viewModel>distrb_rate}%" visible="{= ${viewSet>/isEditMode} === true ? false : true }" textAlign="Right" />    
                                        </HBox>     
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="20em">
                                    <Label text="{I18N>/REGION_TYPE_DESC}" required="true" />
                                    <t:template>
                                        <HBox>
                                            <Input value="{viewModel>apply_plant_desc}" visible="{viewSet>/isEditMode}" required="true" width="19em" />
                                            <Text text="{viewModel>apply_plant_desc}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>     
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="{I18N>/CONTRACT_NUMBER}"/>
                                    <t:template>
                                        <Text text="{viewModel>contract_number}" width="9em" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="{I18N>/CONTRACT_PROGRESS_STATUS}" />
                                    <t:template>
                                        <Text text="{viewModel>contract_number}" width="9em"  />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="{I18N>/CONTRACT_MODE}" />
                                    <t:template>
                                        <Text text="{viewModel>contract_number}" width="9em" />
                                    </t:template>
                                </t:Column>   
                                <t:Column hAlign="Center" width="30em" >
                                    <Label text="{I18N>/REMARK}"/>
                                    <t:template>
                                        <HBox>
                                            <Input value="{viewModel>remark}" visible="{viewSet>/isEditMode}" width="28em"/>
                                            <Text text="{viewModel>remark}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>     
                                    </t:template>
                                </t:Column>                                                                                             
                            </t:columns>
                        </t:Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>      

			<!-- 품목정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/ITEM_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <t:Table id="dtlTable" 
                                noData="{I18N>/NCM01004}"
                                rows="{viewModel>/dtl}"
                                selectionMode="MultiToggle"
                                visibleRowCount="5"
                                columnResize="onColumnResize"
                                cellClick=".onItemCellClick"
                                rowSelectionChange=".onCheck"
                                width="100%">
                            <t:extension>
                                <OverflowToolbar>
                                    <!-- <Title text="품목 {= ${viewModel>/dtl}.length > 0 ? '(' + ${viewModel>/dtl}.length + ')' : ''}" level="H2"/> -->
                                    <ToolbarSpacer/>
                                    <Button id="dtlTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onDtlTableAddButtonPress" />
                                    <Button id="dtlTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onDtlTableDeleteButtonPress" />
                                    <!-- <Button id="dtlItemAddButton" text="{I18N>/NEW_ITEM_REGISTER}" type="Transparent" press=".onDtlItemAddButtonPress" />         -->
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column id="dtlColumnState" hAlign="Center" width="2em" >
                                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                                    <t:template>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>row_state',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" visible="{viewSet>/isEditMode}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="6em" >
                                    <Label text="{I18N>/LINE_NO}" />
                                    <t:template>
                                        <Text text="{viewModel>item_sequence}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="12em">
                                    <Label text="{I18N>/ITEM_CODE}" required="true" />
                                    <t:template>
                                        <HBox justifyContent="Center">
                                            <Input value="{viewModel>ep_item_code}" 
                                                placeholder="품목코드" required="true"
                                                showValueHelp="true" valueHelpRequest=".openItemPopupInTable" width="11em"
                                                visible="{viewSet>/isEditMode}">
                                            </Input>                                         
                                            <Text text="{viewModel>ep_item_code}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />
                                        </HBox>    
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="14em">
                                    <Label text="{I18N>/ITEM_NAME}" required="true" />
                                    <t:template>
                                        <HBox>
                                            <Input value="{viewModel>ep_item_name}" required="true" editable="false" visible="{viewSet>/isEditMode}" width="13em" />
                                            <Text text="{viewModel>ep_item_name}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" /> 
                                        </HBox>       
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="18em">
                                    <Label text="{I18N>/SPECIFICATION}" />
                                    <t:template>
                                        <HBox>
                                            <Input value="{viewModel>spec_desc}" editable="false" visible="{viewSet>/isEditMode}" width="17em" />
                                            <Text text="{viewModel>spec_desc}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />     
                                        </HBox>    
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="6em" >
                                    <Label text="{I18N>/UNIT}" required="true" />
                                    <t:template>
                                        <HBox justifyContent="Center">
                                            <Input value="{viewModel>unit}" required="true" editable="false" textAlign="Center" visible="{viewSet>/isEditMode}" width="5em" />
                                            <Text text="{viewModel>unit}" textAlign="Center" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>    
                                    </t:template>
                                </t:Column>     
                                <t:Column hAlign="Center" width="6em" >
                                    <Label text="{I18N>/MATERIAL_APPLY}" />
                                    <t:template>
                                        <HBox justifyContent="Center">
                                            <!-- <Input value="{= ${viewModel>material_apply_flag} === true ? 'Y' : 'N' }" /> -->
                                            <Input value="{viewModel>material_apply_flag}" editable="false" textAlign="Center" visible="{viewSet>/isEditMode}" width="5em" />  
                                            <Text text="{viewModel>material_apply_flag}" textAlign="Center" visible="{= ${viewSet>/isEditMode} === true ? false : true }" /> 
                                        </HBox>         
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="6em" >
                                    <Label text="{I18N>/LABOR_APPLY}" />
                                    <t:template>
                                        <HBox justifyContent="Center">
                                            <!-- <Input value="{= ${viewModel>labor_apply_flag} === true ? 'Y' : 'N' }" /> -->
                                            <Input value="{viewModel>labor_apply_flag}" editable="false" textAlign="Center" visible="{viewSet>/isEditMode}" width="5em" />    
                                            <Text text="{viewModel>labor_apply_flag}" textAlign="Center" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />   
                                        </HBox>     
                                    </t:template>
                                </t:Column>    
                                <t:Column hAlign="Center" width="11em" >
                                    <Label text="{I18N>/CURRENCY}" />
                                    <t:template>
                                        <HBox justifyContent="Center">
                                            <ComboBox selectedKey="{viewModel>currency_code}" 
                                                    visible="{viewSet>/isEditMode}"
                                                    width="10em"
                                                    items="{
                                                            path: 'common>/Currency',
                                                            filters: [
                                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                                            ],
                                                            sorter: { path: 'currency_code'}
                                                        }">
                                                <core:Item key="{common>currency_code}" text="{common>currency_code}" />
                                            </ComboBox>   
                                            <Text text="{viewModel>currency_code}" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>                                          
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="8em" >
                                    <Label text="{I18N>/MATERIAL_NET_PRICE}" />
                                    <t:template>
                                        <HBox justifyContent="End">
                                            <Input value="{viewModel>material_net_price}" type="Number" textAlign="Right" editable="{= ${viewModel>material_apply_flag} !== 'Y' ? false : true }" visible="{viewSet>/isEditMode}" width="7em" />
                                            <Text text="{viewModel>material_net_price}" textAlign="Right" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />
                                        </HBox>    
                                    </t:template>
                                </t:Column>    
                                <t:Column hAlign="Center" width="8em" >
                                    <Label text="{I18N>/LABOR_NET_PRICE}" />
                                    <t:template>
                                        <HBox justifyContent="End">
                                            <Input value="{viewModel>labor_net_price}" type="Number" textAlign="Right" editable="{= ${viewModel>labor_apply_flag} !== 'Y' ? false : true }" visible="{viewSet>/isEditMode}" width="7em" />
                                            <Text text="{viewModel>labor_net_price}" textAlign="Right" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />
                                        </HBox>    
                                    </t:template>
                                </t:Column>                                                                                                                            
                            </t:columns>
                        </t:Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>            

            <!-- 할증정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/EXTRA_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>

						<Table id="extraTable" 
								sticky="HeaderToolbar,ColumnHeaders" 
								inset="false" 
                                items="{viewModel>/extra}"
								class="sapFDynamicPageAlignContent" 
								updateFinished=".onMidTableUpdateFinished"
                                mode="MultiSelect" 
                                noDataText="{I18N>/NCM01004}"
								width="auto">

							<headerToolbar>
								<OverflowToolbar>
                                    <!-- <Title text="할증 {= ${viewModel>/extra}.length > 0 ? '(' + ${viewModel>/extra}.length + ')' : ''}" level="H2"/> -->
									<ToolbarSpacer/>
                                    <Button id="extraTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onExtraTableAddButtonPress" />
                                    <Button id="extraTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onExtraTableDeleteButtonPress" />
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column id="extraColumnState" minScreenWidth="Tablet" hAlign="Center" width="2em" >
									<Label text=""/>
								</Column>
								<Column minScreenWidth="Tablet" hAlign="Center" width="12em">
									<Label text="{I18N>/EXTRA_CLASS}" required="{viewSet>/isEditMode}"/>
								</Column>
								<Column minScreenWidth="Tablet" hAlign="Center" width="15em">
									<Label text="{I18N>/EXTRA_NAME}" required="{viewSet>/isEditMode}"/>
								</Column>   
								<Column minScreenWidth="Tablet" hAlign="Center" width="8em">
									<Label text="{I18N>/APPLY_EXTRA_RATE}" required="{viewSet>/isEditMode}"/>
								</Column>  
								<Column minScreenWidth="Tablet" hAlign="Center" width="25em">
									<Label text="{I18N>/APPLY_EXTRA_DESC}"/>
								</Column>                                                                                               
							</columns>
							<items>
                                <ColumnListItem>
									<cells>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>row_state',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" visible="{viewSet>/isEditMode}" />                                    
                                        <HBox justifyContent="Center">
                                            <ComboBox selectedKey="{viewModel>extra_class_number}" selectionChange="setExtraClass" required="true"
                                                visible="{viewSet>/isEditMode}" width="11em"         
                                                items="{
                                                            path: '/UcExtraClass',
                                                            filters: [
                                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                                {path: 'company_code', operator: 'EQ', value1: 'LGCKR'},
                                                                {path: 'use_flag', operator: 'EQ', value1: true}
                                                            ],
                                                            sorter: { path: 'extra_class_number'}
                                                        }">
                                                <core:Item key="{extra_class_number}" text="{extra_class_name}" />
                                            </ComboBox>   
                                            <Text text="{viewModel>extra_class_name}" textAlign="Center" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>  
                                        <HBox justifyContent="Center">
                                            <ComboBox selectedKey="{viewModel>extra_number}" selectionChange="setExtra" required="true"
                                                visible="{viewSet>/isEditMode}" width="14em"       
                                                items="{
                                                            path: '/UcExtraItem',
                                                            filters: [
                                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                                {path: 'company_code', operator: 'EQ', value1: 'LGCKR'},
                                                                {path: 'extra_class_number', operator: 'EQ', value1: ''}
                                                            ],
                                                            sorter: { path: 'extra_number'}
                                                        }">
                                                <core:Item key="{extra_number}" text="{extra_name}" />
                                            </ComboBox>   
                                            <Text text="{viewModel>extra_name}" textAlign="Center" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />    
                                        </HBox>  
                                        <HBox justifyContent="End">
                                            <Input value="{viewModel>apply_extra_rate}" visible="{viewSet>/isEditMode}" required="true" textAlign="Right" type="Number" width="100%" />
                                            <Text text="{viewModel>apply_extra_rate}" textAlign="Right" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />     
                                        </HBox>
                                        <HBox justifyContent="Start">  
                                            <Input value="{viewModel>apply_extra_desc}" visible="{viewSet>/isEditMode}" textAlign="Left" width="35em"/>
                                            <Text text="{viewModel>apply_extra_desc}" textAlign="Left" visible="{= ${viewSet>/isEditMode} === true ? false : true }" />        
                                        </HBox>      
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection> 

            <!-- 첨부파일 시작 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/Attachments}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm >                    
                            <VBox alignContent="Center" alignItems="Stretch" class="sapUiSmallMarginBegin"> 
                                <!-- File Upload 시작-->
                                <!-- <UploadCollection
                                    id="UploadCollection"
                                    maximumFilenameLength="55"
                                    maximumFileSize="10"
                                    multiple="true"
                                    sameFilenameAllowed="true"
                                    instantUpload="false"
                                    noDataDescription="Drop files or use the &quot;Add&quot; button to keep files ready for upload"
                                    change="onChange"
                                    fileDeleted="onFileDeleted"
                                    filenameLengthExceed="onFilenameLengthExceed"
                                    fileSizeExceed="onFileSizeExceed"
                                    typeMissmatch="onTypeMissmatch"
                                    uploadComplete="onUploadComplete"
                                    beforeUploadStarts="onBeforeUploadStarts" /> -->
                                <!-- File Upload 끝-->
                                <Label text="{I18N>/SPECIAL_NOTE}" 
                                            design="Bold" 
                                            class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                                <richtexteditor:RichTextEditor
                                    editorType="TinyMCE4"
                                    width="98%"
                                    height="150px"
                                    editable="{viewSet>/isEditMode}"
                                    customToolbar="true"
                                    showGroupFont="true"
                                    showGroupLink="true"
                                    showGroupInsert="true"
                                    value="{viewModel>/mst/special_note}">
                                </richtexteditor:RichTextEditor>                            
                            </VBox>
                        </form:SimpleForm>   						
					</uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!-- 첨부파일 끝 -->

            <!-- 결재라인 시작 -->
			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/APPROVAL_LINE}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
                            <!-- Approval & Reference 시작 -->
                            <HBox>
        
                            </HBox>
                            <!-- Approval & Reference 끝 -->
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!-- 결재라인 끝 -->

		</uxap:sections>
		
		<uxap:footer>
			<OverflowToolbar>
                <Button
                    icon="sap-icon://alert"
                    type="Emphasized"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
				<ToolbarSpacer />
                <Button id="pageEditButton" type="Transparent" text="{I18N>/EDIT}" press=".onPageEditButtonPress" />
                <!-- <Button id="pageCopyButton" type="Transparent" text="{I18N>/COPY}" press=".onPageCopyButtonPress" /> -->
                <Button id="pageSaveButton" type="Emphasized" text="{I18N>/TEMP_SAVE}" press=".onPageSaveButtonPress('D')" />
                <Button id="pageCancelButton" type="Transparent" text="{I18N>/CANCEL}" press=".onPageCancelEditButtonPress"/>
                <Button id="pageDeleteButton" type="Transparent" text="{I18N>/DELETE}" press=".onPageDeleteButtonPress" />                
                <Button id="pageRequestButton" type="Emphasized" text="{I18N>/REQUEST}" press=".onPageSaveButtonPress('R')" />
                <Button id="pageByPassButton" type="Emphasized" text="{I18N>/BYPASS}" press=".onPageSaveButtonPress('B')" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
    <ep-ui:SupplierDialog id="supplierWithOrgDialog" 
        title="협력사 검색"
        items="{
            filters: [
                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                {path: 'company_code', operator: 'EQ', value1: 'LGCKR'}
            ]
        }"
        apply=".onSupplierDialogApplyPress"
    />       
</mvc:View>