<mvc:View controllerName="ep.ne.ucContractMgt.controller.UcContractDetail" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:sc="sap.suite.ui.commons"
	xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:sp-ui="sp.util.control.ui"
    xmlns:t="sap.ui.table"
	height="100%">

	<uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
		showFooter="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="End">
                        <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        <Title text="공사단가계약 상세" wrapping="true" class="" />
                    </HBox>
                </uxap:heading>              
                <!-- <uxap:navigationActions>
					<OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                </uxap:navigationActions> -->
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap" visible="true">
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <ObjectStatus
                        title="단가계약 그룹번호: "
                        text="{viewModel>/mst/net_price_contract_document_no}"/>
                    <ObjectStatus
                        title="작성자"
                        text="{viewModel>/mst/buyer_name}"/>
				</layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <ObjectStatus 
                        title="작성일자"
                        text="{
                                path: 'viewModel>/mst/contract_write_date',
                                formatter: '.dateFormatter.toUTCDateString'
                            }" />

                    <ObjectStatus
                        title="작성부서"
                        text="{viewModel>/mst/purchasing_department_name}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <Label text="Status :"/>
                    <ObjectStatus
                        class="sapMObjectStatusLarge"
                        text="{viewModel>/mst/net_price_contract_status_name}"
                        state="Error" />
                </layout:VerticalLayout>

                <!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="Process : "/>
                    <HBox>
                        <sc:MicroProcessFlow>
                            <sc:content>
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                                <sc:MicroProcessFlowItem state="Error" stepWidth="3rem" icon="sap-icon://circle-task" />
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                                <sc:MicroProcessFlowItem state="None" stepWidth="3rem" />
                            </sc:content>
                        </sc:MicroProcessFlow>
                    </HBox>
                    <HBox>
                        <Text text="LOI요청"  width="4em" renderWhitespace="true" />
                        <Text text=" LOI업체&#10; 선정"  width="4em" renderWhitespace="true" />
                        <Text text="LOI발행" width="6em" textAlign="Center" />
                        <Text text=" LOI발행&#10; 통보" renderWhitespace="true" />
                    </HBox>
                </layout:VerticalLayout>   -->

			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="기본정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1">
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <!-- 협력사 정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="협력사정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <t:Table id="supplierTable" 
                                noData="{I18N>/NCM01004}"
                                rows="{viewModel>/supplier}"
                                selectionMode="MultiToggle"
                                visibleRowCount="5"
                                columnResize="onColumnResize"
                                cellClick=".onCellClick"
                                rowSelectionChange=".onCheck"
                                width="100%">
                            <t:extension>
                                <OverflowToolbar>
                                    <Title text="협력사 {= ${viewModel>/supplier}.length > 0 ? '(' + ${viewModel>/supplier}.length + ')' : ''}" level="H2"/>
                                    <ToolbarSpacer/>
                                    <Button id="supplierTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onSupplierTableAddButtonPress" />
                                    <Button id="supplierTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onSupplierTableDeleteButtonPress" />
                                    
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column id="supplierColumnState" hAlign="Center" width="2em" >
                                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                                    <t:template>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>_row_state_',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="협력사명" required="true" />
                                    <t:template>
                                    <HBox>
                                        <Input value="{viewModel>supplier_name}" 
                                            placeholder="협력사"
                                            showValueHelp="true" valueHelpRequest=".openSupplierPopupInTable"
                                            visible="true">
                                        </Input>     
                                        <Text text="{viewModel>supplier_code}" visible="false" />    
                                    </HBox>                                   
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="18em" >
                                    <Label text="배분율" />
                                    <t:template>
                                        <Input value="{viewModel>distrb_rate}" editable="{= ${viewModel>_row_state_} === 'C' }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" minWidth="30rem" >
                                    <Label text="공장/지역구분" required="true" />
                                    <t:template>
                                        <Input value="{viewModel>apply_plant_desc}" required="true" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="계약번호"/>
                                    <t:template>
                                        <Text text="{viewModel>contract_number}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="계약진행상태" />
                                    <t:template>
                                        <Text text="{viewModel>contract_number}"  />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="계약방식" />
                                    <t:template>
                                        <Text text="{viewModel>contract_number}" />
                                    </t:template>
                                </t:Column>                                                                
                            </t:columns>
                        </t:Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>      

			<!-- 품목정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="품목정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <t:Table id="dtlTable" 
                                noData="{I18N>/NCM01004}"
                                rows="{viewModel>/dtl}"
                                selectionMode="MultiToggle"
                                visibleRowCount="5"
                                columnResize="onColumnResize"
                                cellClick=".onCellClick"
                                rowSelectionChange=".onCheck"
                                width="100%">
                            <t:extension>
                                <OverflowToolbar>
                                    <Title text="품목 {= ${viewModel>/dtl}.length > 0 ? '(' + ${viewModel>/dtl}.length + ')' : ''}" level="H2"/>
                                    <ToolbarSpacer/>
                                    <Button id="dtlTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onDtlTableAddButtonPress" />
                                    <Button id="dtlTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onDtlTableDeleteButtonPress" />
                                    
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column id="dtlColumnState" hAlign="Center" width="2em" >
                                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                                    <t:template>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>_row_state_',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="품목순번" required="true" />
                                    <t:template>
                                        <Text text="{viewModel>item_sequence}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="18em" >
                                    <Label text="품목코드" required="true" />
                                    <t:template>
                                        <Input value="{viewModel>ep_item_code}" editable="{= ${viewModel>_row_state_} === 'C' }" required="true" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" minWidth="30rem" >
                                    <Label text="품목명" required="true" />
                                    <t:template>
                                        <Input value="{viewModel>ep_item_name}" required="true" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center" width="10em" >
                                    <Label text="규격" required="true" />
                                    <t:template>
                                        <Input value="{viewModel>spec_desc}" required="true" />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>            

            <!-- 할증정보 -->
			<uxap:ObjectPageSection titleUppercase="false" title="할증정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>

						<Table id="extraTable" 
								sticky="HeaderToolbar,ColumnHeaders" 
								inset="false" 
                                items="{viewModel>/extra}"
								class="sapFDynamicPageAlignContent" 
								updateFinished=".onMidTableUpdateFinished"
								mode="MultiSelect" 
								width="auto">

							<headerToolbar>
								<OverflowToolbar>
                                    <Title text="할증 {= ${viewModel>/extra}.length > 0 ? '(' + ${viewModel>/extra}.length + ')' : ''}" level="H2"/>
									<ToolbarSpacer/>
                                    <Button id="extraTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onExtraTableAddButtonPress" />
                                    <Button id="extraTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onExtraTableDeleteButtonPress" />
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column id="extraColumnState" minScreenWidth="Tablet" hAlign="Center" width="2em" >
									<Label text=""/>
								</Column>
								<Column minScreenWidth="Tablet" hAlign="Center" width="10em">
									<Label text="할증분류"/>
								</Column>
								<Column minScreenWidth="Tablet" hAlign="Center" width="10em">
									<Label text="할증명"/>
								</Column>   
								<Column minScreenWidth="Tablet" hAlign="Center" width="15em">
									<Label text="할증요율·적용기준"/>
								</Column>  
								<Column minScreenWidth="Tablet" hAlign="Center" width="30em">
									<Label text="할증비고"/>
								</Column>                                                                                               
							</columns>
							<items>
                                <ColumnListItem press=".onMidTableItemPress">
									<cells>
                                        <ObjectStatus icon="{
                                            path: 'viewModel>_row_state_',
                                            formatter: '.formatter.toModelStateColumnIcon'
                                        }" />                                    
                                        <HBox width="100%" textAlign="Center">
                                            <ComboBox selectedKey="{viewModel>extra_class_number}" selectionChange="setExtraItem"
                                                    items="{
                                                            path: '/UcExtraClass',
                                                            filters: [
                                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                                {path: 'company_code', operator: 'EQ', value1: 'LGCKR'}
                                                            ],
                                                            sorter: { path: 'extra_class_number'}
                                                        }">
                                                <core:Item key="{extra_class_number}" text="{extra_class_name}" />
                                            </ComboBox>   
                                            <Text text="{viewModel>extra_class_name}" visible="false" />    
                                        </HBox>  
                                        <HBox width="100%" alignContent="Center">
                                            <ComboBox id="saveExtraItem" selectedKey="{viewModel>extra_number}"
                                                    items="{
                                                            path: '/UcExtraItem',
                                                            filters: [
                                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                                                {path: 'company_code', operator: 'EQ', value1: 'LGCKR'}
                                                            ],
                                                            sorter: { path: 'extra_number'}
                                                        }">
                                                <core:Item key="{extra_number}" text="{extra_name}" />
                                            </ComboBox>   
                                            <Text text="{viewModel>extra_name}" visible="false" />    
                                        </HBox>  
                                        <Input value="{viewModel>apply_extra_rate}" required="true" textAlign="Center" width="100%" />
                                        <Input value="{viewModel>apply_extra_desc}" required="true" textAlign="Center" width="100%" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
