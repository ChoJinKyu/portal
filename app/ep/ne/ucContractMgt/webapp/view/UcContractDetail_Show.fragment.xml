<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" 
	xmlns:core="sap.ui.core">

    <VBox id="showBox">

        <form:SimpleForm> 
            <VBox alignContent="Center" alignItems="Stretch"> 
                <Label text="* 계약명" design="Bold"/>
                <Text text="{viewModel>/mst/net_price_contract_title}" class="sapUiSmallMarginBottom" />
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm>
            
            <VBox alignContent="Center">
                <Label text="* 운영단위(플랜트)" design="Bold" />
                <Text text="{viewModel>/mst/org_name}"/>
                <layoutData>
                    <layout:GridData span="XL6 L6 M6 S12" />
                </layoutData>    
            </VBox>   

            <VBox alignContent="Center">
                <Label text="* 계약기간" design="Bold"/>
                <HBox>
                    <Text text="{viewModel>/mst/net_price_contract_start_date}"/>                        
                    <Text text="~" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" />
                    <Text text="{viewModel>/mst/net_price_contract_end_date}"/>    
                </HBox>
                <layoutData>
                    <layout:GridData span="XL6 L6 M6 S12" />
                </layoutData>     
            </VBox>  
                            
        </form:SimpleForm>    

        <form:SimpleForm> 
            <VBox alignContent="Center">
                <Label text="* 대분류" design="Bold" class="sapUiSmallMarginTop"/>
                <Text text="{viewModel>/mst/ep_item_class_name}"/>
                <layoutData>
                    <layout:GridData span="XL6 L6 M6 S12" />
                </layoutData>     
            </VBox> 

            <VBox alignContent="Center"> 
                <Label text="* 견적참조정보" design="Bold" class="sapUiSmallMarginTop"/>
                <Text text="{viewModel>/mst/quotation_reference_info}"/>
                <layoutData>
                    <layout:GridData span="XL6 L6 M6 S12" />
                </layoutData>                   
            </VBox>            
        </form:SimpleForm>

        <form:SimpleForm> 
            <VBox alignContent="Center"> 
                <Label  text="* 비고" 
                            design="Bold" 
                            class="sapUiSmallMarginTop"/>
                <Text text="{viewModel>/mst/remark}"/>            
            </VBox>
        </form:SimpleForm>

        <form:SimpleForm visible="{= ${viewModel>/mst/net_price_contract_chg_type_cd} === 'D' ? true : false }"> 
            <VBox alignContent="Center"> 
                <Label  text="* 계약종료사유" 
                            design="Bold" 
                            class="sapUiSmallMarginBottom"/>
                <Text text="{viewModel>/mst/delete_reason}"/>                 
            </VBox>
        </form:SimpleForm>        

    </VBox>

</core:FragmentDefinition>