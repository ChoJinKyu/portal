<mvc:View controllerName="ep.ne.ucQuotationMgtSup.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="true" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="[협력사]공사물량등록" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <!-- <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" /> -->
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader>
                
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label
                                text="{I18N>/CONST_NAME} : "
                                labelFor="searchConstName">
                            </Label>
                            <Input id="searchConstName" 
                                placeholder="Search"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL3 L3 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/CONST_START_DATE} : " labelFor="searchConstDate" required = "true"/>
                            <DateRangeSelection id="searchConstDate" displayFormat="yyyy-MM-dd" width="100%" placeholder="" />                                
                            <layoutData>
                                <layout:GridData span="XL3 L3 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label
                                text="{I18N>/CONST_QUOTATION_NUMBER} : "
                                labelFor="searchConstQuotationNumber">
                            </Label>
                            <Input id="searchConstQuotationNumber" 
                                placeholder="Search"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL3 L3 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <layoutData>
                                <layout:GridData
                                    span="XL3 L3 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PROGRESS_STATUS}"></Label>
                            <SegmentedButton id="searchStatus" selectedKey="All" class="sapUiSmallMarginBottom" width="100%" selectionChange="onStatusSelectionChange" >
                                <!-- <items>
                                    <SegmentedButtonItem text="All" key="" width="4.1rem" EP_QUOTATION_STATUS/>
                                    <SegmentedButtonItem text="BM등록요청" key="221010" width="7rem" />
                                    <SegmentedButtonItem text="물량확정요청" key="221020" width="7rem" />
                                    <SegmentedButtonItem text="물량수정요청" key="221030" width="7rem" />
                                    <SegmentedButtonItem text="물량확정" key="221040" width="5.5rem" />
                                </items> -->
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>


                        <FlexBox
                            alignItems="Start"
                            justifyContent="End">
                            
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                            <layoutData>
                                <!-- <layout:GridData
                                    span="XL4 L6 M12 S12" /> -->
                                    <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </FlexBox>                                          
                    </form:content>
                </form:SimpleForm>
                            
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"
            
            rows="{viewModel>/list}"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            fixedColumnCount="2"
            columnResize="onColumnResize"
            rowActionCount="1">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                <Title text="{I18N>/BM_CURST} {= ${viewModel>/list}.length > 0 ? '(' + ${viewModel>/list}.length + ')' : ''}" level="H2"/>
                <ToolbarSpacer/>
                
                <ToolbarSeparator/>
                <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                    <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="mainConstQuotationNumber" width="12rem"  hAlign="Center">
                <Label text="{I18N>/CONST_QUOTATION_NUMBER}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{viewModel>const_quotation_number}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainConstName" width="35rem">
                <Label text="{I18N>/CONST_NAME}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{viewModel>const_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainConstStartDate" width="10rem" hAlign="Center">
                <Label text="{I18N>/CONST_START_DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'viewModel>const_start_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainConstEndDate" width="10rem" hAlign="Center">
                <Label text="{I18N>/CONST_START_DATE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'viewModel>const_end_date',
                                formatter: '.dateFormatter.toUTCDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainQuotationStatusCode" width="12rem" hAlign="Center">
                <Label text="{I18N>/PROGRESS_STATUS}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{viewModel>quotation_status_name}"/>
                    <tnt:InfoLabel 
                            text="{viewModel>quotation_status_name}" 
                            colorScheme="{
                                path: 'viewModel>color_type_code',
                                formatter: '.onStatusColor'
                            }" 
                            />
                </t:template>
                </t:Column>                                                                                                                     
            </t:columns>
            <t:rowActionTemplate>
                <t:RowAction>
                    <t:RowActionItem type="Navigation" press="onTableItemPress"></t:RowActionItem>
                </t:RowAction>
            </t:rowActionTemplate>       
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>