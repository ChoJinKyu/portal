<mvc:View controllerName="ep.cm.forexDeclarationMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:u="sap.ui.unified"
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="외화신고대상관리" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="PO번호:" labelFor="searchPoNumber"></Label>
                            <MultiInput width="100%"
                                    id="searchPoNumber"
                                    suggestionItems="{
                                        path: '/ForexDeclarationView'
                                    }"
                                    showValueHelp="false" placeholder="" submit=".onPageSearchButtonPress">
                                    <core:Item key="{po_number}" text="{po_number}" />
                                </MultiInput>                          
                            <layoutData>
                                <layout:GridData span="XL3 L4 M12 S12" />
                                
                            </layoutData>
                        </VBox>
                        <VBox>
                                <Label text="PO일자" labelFor="searchPoDate"></Label>
                                    <DateRangeSelection id="searchPoDate" width="100%" change="creationDateChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L2 M6 S12" />
                                </layoutData>
                            </VBox>
                        <VBox>
                            <Label text="담당부서 :" labelFor="searchPurchasingDepartmentName"></Label>
                            <lib-m:CodePicker id="searchPurchasingDepartmentName"
                                placeholder="Enter a department name"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                    keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="담당자 :" labelFor="searchBuyerName"></Label>
                            <lib-m:CodePicker id="searchBuyerName"
                                placeholder="Enter a Employee name"
                                keyField="employee_number"
                                textField="user_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Employee'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Employee"
                                    keyFieldHeaderText="Employee ID" textFieldHeaderText="Employee" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL3 L4 M6 S12" />
                            </layoutData>
                        </VBox>    
                                                                 
                    </form:content>
                </form:SimpleForm>
                <form:SimpleForm id="pageSearchForm2" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Status : "></Label>
                            <SegmentedButton id="searchStatus" selectedKey="" class="sapUiSmallMarginBottom" width="100%" selectionChange="onStatusSelectionChange" >
                                <items>
                                    <SegmentedButtonItem text="All" key="" width="4.1rem" />
                                    <SegmentedButtonItem text="작성대기" key="920010" width="5.5rem" />
                                    <SegmentedButtonItem text="신고진행중" key="920020" width="6rem" />
                                    <SegmentedButtonItem text="신고완료" key="920030" width="5.5rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL3 L4 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="관리대상여부 : "></Label>
                            <HBox>
                                <CheckBox id="selectManagementTargetFlag" text="대상" selected="true"/>
                                <Text text=" " class="sapUiTinyMarginEnd" />
                                <CheckBox id="selectManagementTargetFlag2" text="비대상" />
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL3 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="신고대상여부 : "></Label>
                            <HBox>
                                <CheckBox id="selectDeclareTargetFlag" text="대상" selected="true" />
                                <Text text=" " class="sapUiTinyMarginEnd" />
                                <CheckBox id="selectDeclareTargetFlag2" text="비대상" />
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL3 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="PO명 :" labelFor="searchPoName"></Label>
                            <Input id="searchPoName" placeholder=""></Input>
                            <layoutData>
                                <layout:GridData span="XL3 L4 M12 S12" />
                            </layoutData>
                        </VBox>    
                                                                   
                    </form:content>
                </form:SimpleForm>                
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"
            rows="{
                path: 'list>/ForexDeclarationView'                 
            }"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            columnResize="onColumnResize"
            >
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                <Title text="외화신고대상 목록 : {= ${list>/ForexDeclarationView}.length > 0 ? '(' + ${list>/ForexDeclarationView}.length + ')' : ''}" level="H2"/>
                <ToolbarSpacer/>
                <Button text="Summary Chart" id="RfqButton" press=".onSummaryChartButtonPress" type="Transparent"/>
                <ToolbarSeparator/>
                <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                    <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="mainPoNumber" width="6rem" >
                <Label text="PO번호" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>po_number}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainPoName" width="20rem">
                <Label text="PO명" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>po_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainPlantName" width="5rem">
                <Label text="플랜트" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>plant_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainCurrencyName" width="4rem" hAlign="Center">
                <Label text="통화" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>currency_name}"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainPoAmount" width="5rem" hAlign="Right">
                <Label text="PO금액" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>po_amount}"/> -->
                    <Text  text="{
                                path: 'list>po_amount',
                                formatter: '.numberFormatter.toNumberString'
                            }" />
                </t:template>
                </t:Column>
                <t:Column id="mainPrepayAmount" width="5rem" hAlign="Right">
                <Label text="선급금액" textAlign="Center" width="100%"/>
                <t:template>
                    <!-- <Text text="{list>prepay_amount}"/> -->
                    <Text  text="{
                            path: 'list>prepay_amount',
                            formatter: '.numberFormatter.toNumberString'
                        }" />
                </t:template>
                </t:Column>
                <t:Column id="mainSupplierName" width="8rem">
                <Label text="협력사" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>supplier_name}"/>
                </t:template>
                </t:Column> 
                <t:Column id="mainPoDate" width="8rem" hAlign="Center">
                <Label text="PO일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>po_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>  
                <t:Column id="mainReceiptScheduledDate" width="8rem" hAlign="Center">
                <Label text="입고예정일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>receipt_scheduled_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainReceiptDate" width="8rem" hAlign="Center">
                <Label text="입고일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>receipt_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainDeclareScheduledDate" width="8rem" hAlign="Center">
                <Label text="신고예정일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>declare_scheduled_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainDeclareDate" width="8rem" hAlign="Center">
                <Label text="신고일자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{
                                path: 'list>declare_date',
                                formatter: '.dateFormatter.toDateString'
                            }"/>
                </t:template>
                </t:Column>
                <t:Column id="mainManagementTargetFlag" width="6.5rem"  hAlign="Center">
                <Label text="관리대상여부" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{= ${list>management_target_flag} === true ? 'Y' : 'N'}"/> 
                </t:template>
                </t:Column>
                <t:Column id="mainDeclareTargetFlag" width="6.5rem"  hAlign="Center">
                <Label text="신고대상여부" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{= ${list>declare_target_flag} === true ? 'Y' : 'N'}"/> 
                </t:template>
                </t:Column> 
                <t:Column id="mainForexDeclareStatusName" width="6rem">
                <Label text="진행상태" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>forex_declare_status_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainPurchasingDepartmentName" width="12rem">
                <Label text="구매담당부서" textAlign="Center" width="100%" tooltip="구매담당부서"/>
                <t:template>
                    <Text text="{list>purchasing_department_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="mainBuyerName" width="6rem">
                <Label text="구매담당자" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>buyer_name}"/>
                </t:template>
                </t:Column> 
                                                                                                                                                         
            </t:columns>   
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>