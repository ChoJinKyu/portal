<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:uxap="sap.uxap" 
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
    <Dialog id="dialogForex" class="sapUiSmallMargin" title="외화신고대상 상세" contentWidth="35%"  afterClose="dialogAfterclose">
        <VBox id="forexEdit">
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
                singleContainerFullSize="false" >
                    
                    <form:content>
                        <VBox>
                            <Label text = "{I18N>/PO_NUMBER} : "/> 
                             <Text id="poNumber" width="100%"/> 

                             <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "{I18N>/PO_NAME} : "/>
                             <Text id="poName" width="100%"/> 
                             <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "{I18N>/RECEIPT_SCHEDULED_DATE} : "/> 
                             <Text id="receiptScheduledDate"  width="100%"/>
                             <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/DECLARE_SCHEDULED_DATE} : " labelFor="declareScheduledDate"></Label>
                            <DatePicker id="declareScheduledDate" placeholder="Date" />
                            <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/DECLARE_DATE} : " labelFor="declareDate" required="true"></Label>
                            <DatePicker id="declareDate" placeholder="Date" required="true"/>
                            <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text = "{I18N>/PROCESSED_COMPLETE_DATE} : "/>
                             <Text id="processedCompleteDate" width="100%"/>
                             <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/REMARK} : "/>
                            <Input id="remark" value="" editable="true"/>
                            <layoutData>
                                <layout:GridData span="L12 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text = "{I18N>/Attachments} : "/>
                             <Text id="attchGroupNumber" width="100%"/>
                             <layoutData>
                                <layout:GridData span="XL6 L12 M6 S6" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <MessageStrip class="sapUiMediumMarginBottom"
                                text="{I18N>/NEP00001}"
                                showIcon="true"
                                showCloseButton="false">
                            </MessageStrip>
                            <layoutData>
                                <layout:GridData span="L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        
                       </form:content>
                    
                  </form:SimpleForm>
            </VBox>       
      
         <ToolbarSpacer/>
        <HBox alignItems="Center" justifyContent="Center" >
            <Button text="Cancel" class="sapUiSmallMargin" type="Transparent" press=".onExitForex"/>
            <Button text="Save" class="sapUiSmallMargin" type="Emphasized" press=".onForexSave('S')"/>
            <Button text="Complete" class="sapUiSmallMargin" type="Emphasized" press=".onForexSave('C')"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
