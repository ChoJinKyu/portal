<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:microchart="sap.suite.ui.microchart"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogForexChart" class="sapUiSmallMargin" title="{I18N>/FOREX_PROGRESS_CURST}" contentWidth="45%" afterClose="dialogChartAfterclose">
        <VBox class="sapUiSmallMargin">
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
     
                singleContainerFullSize="false" >
                    
                    <form:content>
                        <VBox>
                            <Label text = "{I18N>/PO_DATE} :" required="true"/> 
                            <DateRangeSelection id="searchChartPoDate" width="100%" change="creationDateChange"/>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Button text="Search" class="sapUiSmallMargin" type="Emphasized" press="onChartSearchButtonPress($event,'searchChartPoDate')"/>
                               <layoutData>
                                <layout:GridData span="XL2 L2 M2 S2" />
                            </layoutData> 
                        </VBox>

                       </form:content>
                    <form:content>
                    <HBox>
                        <Table id="mainChartTable"       
                            growing="true"
                            growingThreshold="3"
                            class="sapFDynamicPageAlignContent" 
                            updateFinished="" 
                            selectionChange=".selectMoldItemChange" 
                            width="auto"
                            items="{
                                path : 'popup>/summaryChart'
                            }" 
                            >
                         <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{I18N>/DISPLAY_RESULT}" level="H2"/>
                            <ToolbarSpacer/>
                        </OverflowToolbar>
                    </headerToolbar> 
                        <columns>
                            <Column id="modelItem_modelPartNo1" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/APPLY_TYPE}" />
                            </Column>
                            <Column id="modelItem_modelPartNo2" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/FOREX_DECLARE_TODO}" />
                            </Column> 
                            <Column id="modelItem_modelPartNo3" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/FOREX_DECLARE_STANDBY}" />
                            </Column>
                            <Column id="modelItem_modelPartNo" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/FOREX_DECLARE_ONGOING}" />
                            </Column>
                            <Column id="modelItem_seq" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/FOREX_DECLARE_COMPLETE}" />
                            </Column>
                            <Column id="modelItem_description" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="{I18N>/PROGRESS_CURST}" />
                            </Column> 
                            <!-- <Column id="modelItem_moldItemType" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="chart" />
                            </Column>				 -->
                        </columns>
                        <items>
                             <ColumnListItem>
                                <cells>
                                    <Text text="{popup>group_type}" />
                                    <Text text="{popup>todo_count}" />
                                    <Text text="{popup>standby_count}" />
                                    <Text text="{popup>ongoing_count}" />
                                    <Text text="{popup>complete_count}" />
                                    
                                    <microchart:StackedBarMicroChart size="Responsive" press="press">
                                        <microchart:bars>
                                            <microchart:StackedBarMicroChartBar value="{popup>standby_count}" />
                                            <microchart:StackedBarMicroChartBar value="{popup>ongoing_count}" />
                                            <microchart:StackedBarMicroChartBar value="{popup>complete_count}" />
                                        </microchart:bars>
                                    </microchart:StackedBarMicroChart>

                                    <!-- <microchart:ComparisonMicroChart minValue="0" maxValue="200" colorPalette="sapUiChartPaletteQualitativeHue1, sapUiChartPaletteQualitativeHue2, sapUiChartPaletteQualitativeHue3"
                                                size="Responsive" press="press">
                                        <microchart:data>
                                            <microchart:ComparisonMicroChartData value="{popup>todo_count}" title="작성대상"/>
                                            <microchart:ComparisonMicroChartData value="{popup>ongoing_count}" title="신고진행중"/>
                                            <microchart:ComparisonMicroChartData value="{popup>complete_count}" title="신고완료"/>
                                        </microchart:data>
                                    </microchart:ComparisonMicroChart>  -->
                                </cells>
                            </ColumnListItem>   
                            </items>
                            
                        </Table>
                         <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData> 
                       </HBox>
                         </form:content>
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="Cancel" class="sapUiSmallMarginEnd" press=".onExitSummaryChart"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
