                    <form:content>
                    <HBox>
                        <Table id="mainChartTable"       
                            growing="true"
                            growingThreshold="3"
                            class="sapFDynamicPageAlignContent" 
                            updateFinished="" 
                            selectionChange=".selectMoldItemChange" 
                            width="auto"

                            >
                         <headerToolbar>
                            <OverflowToolbar>
                               
                            </OverflowToolbar>
                        </headerToolbar> 
                        <columns>
                            <Column id="modelItem_modelPartNo1" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true"  >
                                <Text text="구분" />
                            </Column>
                            <Column id="modelItem_modelPartNo2" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true"  >
                                <Text text="작성대상" />
                            </Column>
                            <Column id="modelItem_modelPartNo" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" >
                                <Text text="신고진행중" />
                            </Column>
                            <Column id="modelItem_seq" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="신고완료" />
                            </Column>
                            <Column id="modelItem_description" minScreenWidth="Tablet" hAlign="Center"  >
