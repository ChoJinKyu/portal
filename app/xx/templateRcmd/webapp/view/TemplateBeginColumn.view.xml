<mvc:View controllerName="xx.templateRcmd.controller.TemplateBeginColumn"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-f="ext.lib.control.f"
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{beginPageViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <lib-f:CustomDynamicPageTitle>
                <lib-f:heading>
                    <Title text="3컬럼 Layout" />
                </lib-f:heading>
                <lib-f:actions>
                </lib-f:actions>
                <lib-f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </lib-f:navigationActions>
                <lib-f:fixedContent>
                    <form:SimpleForm class="searchBox" maxContainerCols="2" layout="ResponsiveGridLayout" editable="true" 
                        adjustLabelSpan="false" 
                        labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox visible="{= ${beginPageViewModel>/lessImportantSearchConditionsVisible} !== false}">
                                <Label text="{I18N>/TENANT}:" labelFor="searchTenant"></Label>
                                <ComboBox id="searchTenant" width="100%" placeholder="{I18N>/TENANT}" items="{/Tenant}">
                                    <items>
                                        <core:Item key="{tenant_id}" text="{tenant_name}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M5 S10" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/KEYWORD}:" labelFor="searchKeyword"></Label>
                                <Input id="searchKeyword" placeholder="{I18N>/KEYWORD}"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M5 S10" />
                                </layoutData>
                            </VBox>
                            <VBox visible="{= ${beginPageViewModel>/lessImportantSearchConditionsVisible} !== false}">
                                <Label text="{I18N>/COUNTRY}:" labelFor="searchCountry"></Label>
                                <MultiInput id="searchCountry"
                                    placeholder="{I18N>/COUNTRY}"
                                    showValueHelp="true" valueHelpRequest=".onSearchCountryDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M5 S10" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                                <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </lib-f:fixedContent>
            </lib-f:CustomDynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout" editable="true" 
                    adjustLabelSpan="false" 
                    labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/LANGUAGE}:" labelFor="searchLanguage"></Label>
                            <Input id="searchLanguage" placeholder="{I18N>/LANGUAGE}">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M5 S10" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="companyList" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        items="{
                            path: '/Company',
                            parameters: {
                                expand: 'tenant,currency,country,language'
                            },
                            sorter: [{
                                path: 'tenant_id', descending: true
                            },{
                                path: 'company_code', descending: false
                            }]
                        }"
                        growing="true"
                        growingThreshold="20"
                        class="sapFDynamicPageAlignContent" 
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Companies " level="H2"/>
                            <ToolbarSpacer/>
                            <Button type="Transparent" press=".onCompanyListExportButtonPress" icon="sap-icon://excel-attachment" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column minScreenWidth="Desktop" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Label text="{I18N>/COMPANY}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="5rem" popinDisplay="WithoutHeader">
                            <Label text="{I18N>/TENANT}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/CURRENCY}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/COUNTRY}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/LANGUAGE}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="Using" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onCompanyListItemPress">
                            <cells>
                                <ObjectIdentifier title="{company_code}" text="{company_name}"/>
                                <Text text="{tenant/tenant_name}"/>
                                <ObjectIdentifier text="{currency/currency_name}, {currency/currency_code}"/>
                                <ObjectIdentifier text="{country/country_name}, {country/country_code}"/>
                                <ObjectIdentifier text="{language/language_name}, {language/language_code}"/>
                                <ObjectStatus icon="{= ${use_flag} === true ? 'sap-icon://accept' : ''}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>