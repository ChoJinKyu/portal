<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false">

		<core:Title text="Normal" />
		<Label text="{I18N>/CODE}"/>
		<Input value="{company>/company_code}"/>
		<Label text="{I18N>/NAME}"/>
		<Input value="{company>/company_name}"/>
		<Label text="{I18N>/USED}"/>
		<Input value="{
				path: 'company>/use_flag',
				formatter: '.viewFormatter.toYesNo'
			}"/>

		<core:Title text="Settings" />
		<Label text="{I18N>/CURRENCY}"/>
		<Input value="{company>/currency}" />
		<Label text="{I18N>/COMPANY}"/>
		<Input value="{company>/company}" />
		<Label text="{I18N>/LANGUAGE}"/>
		<Input value="{company>/language}" />

	</form:SimpleForm>
</core:FragmentDefinition>