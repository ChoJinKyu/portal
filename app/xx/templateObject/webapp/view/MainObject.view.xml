<mvc:View controllerName="xx.templateObject.controller.MainObjectSample1" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:uxap="sap.uxap"
  xmlns:form="sap.ui.layout.form"
  xmlns:layout="sap.ui.layout"
  xmlns:tnt="sap.tnt"
  xmlns:co="sap.suite.ui.commons"
  xmlns:si="sap.suite.ui.commons.statusindicator"
  xmlns:u="sap.ui.unified"
  xmlns="sap.m"
  height="100%">
    
  <uxap:ObjectPageLayout 
    id="page"
    showTitleInHeaderContent="true"
    showEditHeaderButton="true"
    editHeaderButtonPress="handleEditBtnPress"
    upperCaseAnchorBar="false"
    showAnchorBarPopover="false"
    showFooter="true">

		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:breadcrumbs>
				</uxap:breadcrumbs>

				<uxap:expandedHeading>
          <Title text="Order Report" wrapping="true"/>
				</uxap:expandedHeading>

				<uxap:snappedHeading>
					<FlexBox fitContainer="true" alignItems="Center">
						<Title text="Order Report" wrapping="true"/>
					</FlexBox>
				</uxap:snappedHeading>

				<uxap:expandedContent>
				</uxap:expandedContent>

				<uxap:snappedContent>
				</uxap:snappedContent>

				<uxap:snappedTitleOnMobile>
				</uxap:snappedTitleOnMobile>

				<uxap:actions>
				</uxap:actions>

        <uxap:navigationActions>
					<OverflowToolbarButton id="pageNavBackButton" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" />
        </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap">
        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
          <ObjectStatus
              title="Report No"
              text="332424-20B-00144"/>
          <ObjectStatus
              title="Requester"
              text="김갑수[ks.kim]"/>
          <ObjectStatus
              title="Request Date"
              text="2020-07-02"/>
        </layout:VerticalLayout>

        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
          <ObjectStatus
              title="Affiliate"
              text="EKHQ"/>
          <ObjectStatus
              title="Division"
              text="DFZ"/>
        </layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<Label text="Status :"/>
          <ObjectStatus
              class="sapMObjectStatusLarge"
              text="New"
              state="Error" />
				</layout:VerticalLayout>

        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
          <Label text="Process 2 : "/>
          <co:ProcessFlow
            id="processflow"
            scrollable="false"
            nodePress="onNodePress">
            <co:lanes>
              <co:ProcessFlowLaneHeader
                laneId="id0"
                iconSrc="sap-icon://order-status"
                text="In Order"
                position="0" />
              <co:ProcessFlowLaneHeader
                laneId="id1"
                iconSrc="sap-icon://monitor-payments"
                text="In Delivery"
                position="1" />
              <co:ProcessFlowLaneHeader
                laneId="id2"
                iconSrc="sap-icon://payment-approval"
                text="In Invoice"
                position="2" />
              <co:ProcessFlowLaneHeader
                laneId="id3"
                iconSrc="sap-icon://money-bills"
                text="In Accounting"
                position="3" />
            </co:lanes>
          </co:ProcessFlow>
        </layout:VerticalLayout>
			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection titleUppercase="false" id="informationSection" title="General Information">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
              <HBox alignItems="Center">
                  <Label
                      text="Report Name : "
                      design="Bold"
                      class="sapUiTinyMarginEnd"
                      textAlign="Left"
                      labelFor="input"
                      required="{contModel>/editMode}"/>
                  <Text
                      text="Hisen2 에너지 1등급 금형 발주품의"
                      visible="{contModel>/readMode}">
                  </Text>
              </HBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

					<uxap:ObjectPageSubSection title="info">
						<uxap:blocks>
                            <form:SimpleForm
                                id="informationInfoFrom"
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                adjustLabelSpan="false"
                                labelSpanL="4"
                                labelSpanM="4"
                                emptySpanL="0"
                                emptySpanM="0"
                                columnsL="2"
                                columnsM="2">
                                <form:content>
                                    <VBox>
                                        <Label
                                            text="Purpose of Order "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="읽기모드">
                                        </Text>
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="Period : "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="2020-11-04">
                                        </Text>
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="Remark : "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="Remark">
                                        </Text>
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                </form:content>
                            </form:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

					<uxap:ObjectPageSubSection title="Process별 담당부서">
						<uxap:blocks>
                            <form:SimpleForm
                                id="informationProcessForm"
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                adjustLabelSpan="false"
                                labelSpanL="4"
                                labelSpanM="4"
                                emptySpanL="0"
                                emptySpanM="0"
                                columnsL="2"
                                columnsM="2">
                                <form:content>
                                    <VBox>
                                        <HBox alignItems="Center">
                                            <tnt:InfoLabel text="1" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <Label
                                                text="금형개발의뢰 : "/>
                                        </HBox>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="의뢰">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <HBox alignItems="Center">
                                            <tnt:InfoLabel text="2" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <Label
                                                text="금형개발접수 : "/>
                                        </HBox>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="접수">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <HBox alignItems="Center">
                                            <tnt:InfoLabel text="3" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <Label
                                                text="예산집행품의 : "/>
                                        </HBox>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="품의">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="4. 금형 상세 확정: "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="확정">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="5. 발주품의 : "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="발주품의">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>

                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="6. 입고확정 : "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="입고확정">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                    <VBox>
                                        <Label
                                            text="7. 입고품의 : "/>
                                        <Text
                                            visible="{contModel>/readMode}"
                                            text="입고품의">
                                        </Text>
                                        
                                        <layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </layoutData>
                                    </VBox>
                                </form:content>
                            </form:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

          <uxap:ObjectPageSubSection title="Descriprion">
						<uxap:blocks>
              <layout:VerticalLayout id="informationLayout" class="sapUiContentPadding" width="100%">
              </layout:VerticalLayout>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection id="attachmentSection" titleUppercase="false" title="Attachment" importance="Medium">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
              <u:FileUploader
                  id="attachmentFileUploader"
                  name="myFileUpload"
                  uploadUrl="upload/"
                  tooltip="Upload your file to the local server"
                  uploadComplete="handleUploadComplete"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection id="orderPartsSection" titleUppercase="false" title="Order Parts">
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<uxap:blocks>
              <Table id="orderPartsTable"
                mode="{= ${contModel>/readMode}?'None':'MultiSelect'}"
                sticky="HeaderToolbar,ColumnHeaders"
                inset="false"
                class="sapFDynamicPageAlignContent"
                width="auto">
                  <headerToolbar>
                    <Toolbar>
                      <Title text="Total Order Amount" level="H2"/>
                      <ObjectStatus
                          text="27,000,000 KRW"
                          state="Error" />
                      <ToolbarSpacer/>
                      <HBox 
                          visible="{contModel>/editMode}">
                          <Button type="Transparent" text="Add"/>
                          <Button type="Transparent" text="Delete"/>
                      </HBox>
                    </Toolbar>
                  </headerToolbar>
                  <columns>
                      <Column id="orderPartsModelColumn"
                              width="12em">
                          <Text text="Model" />
                      </Column>
                      <Column
                              id="orderPartsPartNoColumn"
                              minScreenWidth="Tablet"
                              demandPopin="true">
                          <Text text="Part No" />
                      </Column>
                      <Column
                              minScreenWidth="Tablet"
                              demandPopin="true">
                          <Text text="Budget" />
                      </Column>
                      <Column>
                          <Text text="Currency" />
                      </Column>
                      <Column>
                          <Text text="Order" />
                      </Column>
                      <Column>
                          <Text text="Test Amount" />
                      </Column>
                      <Column>
                          <Text text="Prod Type" />
                      </Column>
                      <Column>
                          <Text text="Family Part No" />
                      </Column>
                  </columns>
                  <items>
                      <ColumnListItem>
                          <cells>
                              <ObjectIdentifier
                                      title="{Name}"
                                      text="{ProductId}"/>
                              <Text
                                      text="{SupplierName}" />
                              <Text
                                      text="" />
                              <Text
                                      text="" />
                              <Text
                                      text="" />
                              <Text
                                      text="" />
                              <Text
                                      text="" />
                          </cells>
                      </ColumnListItem>
                  </items>
              </Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="Report Line">
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<uxap:blocks>
                    <Table
                            id="reportLineTable"
                            sticky="HeaderToolbar,ColumnHeaders"
                            inset="false"
                            class="sapFDynamicPageAlignContent"
                            width="auto">
                        <headerToolbar>
                            <Toolbar>
                                <ToolbarSpacer/>
                                <Button 
                                    type="Transparent" 
                                    text="Address Book"
                                    icon="sap-icon://address-book"/>
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column id="reportLineModelColumn"
                                    width="12em">
                                <Text text="Model" />
                            </Column>
                            <Column
                                    minScreenWidth="Tablet"
                                    demandPopin="true">
                                <Text text="Part No" />
                            </Column>
                            <Column
                                    minScreenWidth="Tablet"
                                    demandPopin="true">
                                <Text text="Budget" />
                            </Column>
                            <Column>
                                <Text text="Currency" />
                            </Column>
                            <Column>
                                <Text text="Order" />
                            </Column>
                            <Column>
                                <Text text="T_EST Amount" />
                            </Column>
                            <Column>
                                <Text text="Prod Type" />
                            </Column>
                            <Column>
                                <Text text="Family Part No" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <ObjectIdentifier
                                            title="{Name}"
                                            text="{ProductId}"/>
                                    <Text
                                            text="{SupplierName}" />
                                    <Text
                                            text="" />
                                    <Text
                                            text="" />
                                    <Text
                                            text="" />
                                    <Text
                                            text="" />
                                    <Text
                                            text="" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button type="Transparent" text="Cancel" press=".onPageCancelEditButtonPress"/>
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>