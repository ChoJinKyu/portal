<mvc:View controllerName="xx.exampleControls.controller.Example" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:lib-m="ext.lib.m" height="100%">

    <Page id="page" title="Example #2" titleLevel="H2" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavigationBackPress">
        <subHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Search Area Controls" level="H3" />
                <ToolbarSpacer />
                <Text text="SearchAreaControls.view.xml" />
            </Toolbar>
        </subHeader>
        <content>
            <VBox>

                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Masked Number: "></Label>
                            <MaskInput mask="999999" placeholderSymbol="_" placeholder="Enter a six digit number"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Required: "></Label>
                            <Input required="true" placeholder="Required"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="100 to 999: "></Label>
                            <Input type="Number" value="{
                                    path: 'form>/number',
                                    type: 'sap.ui.model.type.Integer',
                                    constraints: {
                                        minimum: '100',
                                        maximum: '999'
                                    }
                                }" placeholder="Enter 100 to 999 digit number"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Currency: "></Label>
                            <Input type="Number" value="{
                                    path: 'form>/number',
                                    type: 'sap.ui.model.type.Integer',
                                    constraints: {
                                        minimum: '100',
                                        maximum: '999'
                                    }
                                }" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="RegEx Search: "></Label>
                            <Input value="{
                                    path: 'form>/email',
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        search: '\\S+@\\S+\\.\\S+'
                                    }
                                }" placeholder="Enter eMail address."/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>


            </VBox>
        </content>
		<footer>
			<OverflowToolbar>
                <Button
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
				<ToolbarSpacer />
				<Button type="Transparent" text="Done" press=".onPageCancelEditButtonPress"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>