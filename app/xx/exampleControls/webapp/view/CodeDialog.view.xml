<mvc:View controllerName="xx.exampleControls.controller.CodeDialog"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap" 
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:op-ui="op.util.control.ui"
    height="100%">

	<uxap:ObjectPageLayout id="page"
            toggleHeaderOnTitleClick="true"
            alwaysShowContentHeader = "true"
            preserveHeaderStateOnScroll="false"
            headerContentPinnable="true"
            isChildPage="true"
            upperCaseAnchorBar="false"
            showTitleInHeaderContent="true"
            showEditHeaderButton="true" 
            showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Toolbar style="Clear" width="100%">
                        <Button icon="sap-icon://nav-back" press=".onNavigationBackPress"/>
					    <Title text="Code Dialog" wrapping="true" />             
                    </Toolbar>
                </uxap:heading>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:sections>

			<uxap:ObjectPageSection titleUppercase="false" title="Code">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <VBox>
                                <Label text="Input with Dialog (Code): " labelFor="inputWithCodeDialog"></Label>
                                <Input id="inputWithCodeDialog"
                                    placeholder="Choose a code from the ValueHelp"
                                    value="{/chain}"
                                    showValueHelp="true" valueHelpRequest=".onInputWithCodeDialogPress">
                                </Input>
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="MultiInput with Dialog (Code): " labelFor="multiInputWithCodeDialog"></Label>
                                <MultiInput id="multiInputWithCodeDialog"
                                    placeholder="Choose codes from the ValueHelp"
                                    tokens="{/processTypes}"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithCodeDialogPress">
                                    <tokens>
                                        <Token key="{key}" text="{text}" />
                                    </tokens>
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>
            
			<uxap:ObjectPageSection titleUppercase="false" title="Company Detail">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <VBox>
                                <Label text="Input with CompanyDetail Dialog (cm.util.control.ui.CompanyDetailDialog): " labelFor="inputWithCompanyDetailValueHelp"></Label>
                                <Input id="inputWithCompanyDetailValueHelp"
                                    placeholder="Choose a CompanyDetail from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onInputWithCompanyDetailDialogPress">
                                </Input>
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                                <cm-ui:CompanyDetailDialog id="companyDetailDialog" 
                                    title="{I18N>/COMPANY_CODE}"
                                    apply=".onCompanyDetailDialogApplyPress"
                                />
                            </VBox>
                            <VBox>
                                <Label text="MultiInput with CompanyDetail Dialog (cm.util.control.ui.CompanyDetailDialog): " labelFor="multiInputWithCompanyDetailValueHelp"></Label>
                                <MultiInput id="multiInputWithCompanyDetailValueHelp"
                                    placeholder="Choose CompanyDetails from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithCompanyDetailDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>
            
			<uxap:ObjectPageSection titleUppercase="false" title="Dept. and Employee">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <VBox>
                                <Label text="Input with Department Dialog (cm.util.control.ui.DepartmentDialog): " labelFor="inputWithDepartmentValueHelp"></Label>
                                <Input id="inputWithDepartmentValueHelp"
                                    placeholder="Choose a Department from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onInputWithDepartmentDialogPress">
                                </Input>
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                                <cm-ui:DepartmentDialog id="departmentDialog" 
                                    title="부서 검색"
                                    closeWhenApplied="true"
                                    apply=".onDepartmentDialogApplyPress"
                                />
                            </VBox>
                            <VBox>
                                <Label text="Input with Employee Dialog (cm.util.control.ui.EmployeeDialog): " labelFor="inputWithEmployeeValueHelp"></Label>
                                <Input id="inputWithEmployeeValueHelp"
                                    placeholder="Choose a employee from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onInputWithEmployeeDialogPress">
                                </Input>
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                                <cm-ui:EmployeeDialog id="employeeDialog" 
                                    title="직원 검색"
                                    closeWhenApplied="true"
                                    apply=".onEmployeeDialogApplyPress"
                                />
                            </VBox>
                            <VBox>
                                <Label text="MultiInput with Employee Dialog (cm.util.control.ui.EmployeeDialog): " labelFor="multiInputWithEmployeeValueHelp"></Label>
                                <MultiInput id="multiInputWithEmployeeValueHelp"
                                    placeholder="Choose employees from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithEmployeeDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>

            
			<uxap:ObjectPageSection titleUppercase="false" title="Note">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <VBox>
                            <MessageStrip class="sapUiMediumMarginBottom"
                                text="스크럼 별 공통 Dialog 구현 및 테스트룰 위한 예제 시트는 Scrum Dialog를 이용하세요"
                                showIcon="true"
                                showCloseButton="false">
                            </MessageStrip>
                            <Button type="Emphasized" text="Scrum Dialog Examples로 이동" press=".onGoScrumDialogExamplePress" icon="sap-icon://display-more" />
                        </VBox>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>

		</uxap:sections>
		

        <uxap:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Transparent" text="Open Code Dialog" press=".onCodeDialogPress"/>
                <Button type="Transparent" text="Open CompanyDetail Dialog" press=".onCompanyDetailDialogPress"/>
            </OverflowToolbar>
        </uxap:footer>

    </uxap:ObjectPageLayout>
    
</mvc:View>



