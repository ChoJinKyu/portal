<mvc:View controllerName="xx.exampleControls.controller.CodeDialog"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:op-ui="op.util.control.ui"
    height="100%">

    <Page id="page" 
        title="Code Dialog" 
        titleLevel="H2" 
        class="sapUiContentPadding" 
        showNavButton="true" 
        navButtonPress=".onNavigationBackPress"
		floatingFooter="true">
        <content>
            <VBox>

                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" class="searchBox"
                    adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                    
                        <VBox>
                            <Label text="Input with Dialog (Code): " labelFor="inputWithCodeDialog"></Label>
                            <Input id="inputWithCodeDialog"
                                placeholder="Choose a code from the ValueHelp"
                                value="{/chain}"
                                showValueHelp="true" valueHelpRequest=".onInputWithCodeValuePress">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="CM Input with Dialog (Code): " labelFor="inputWithCodeDialog"></Label>
                            <Input id="cmInputWithCodeDialog"
                                placeholder="Choose a code from the ValueHelp"
                                value="{/tenant_id}"
                                showValueHelp="true" valueHelpRequest=".onCmInputWithCodeValuePress">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="MultiInput with Dialog (Code): " labelFor="multiInputWithCodeDialog"></Label>
                            <MultiInput id="multiInputWithCodeDialog"
                                placeholder="Choose codes from the ValueHelp"
                                tokens="{/processTypes}"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithCodeValuePress">
                                <tokens>
                                    <Token key="{key}" text="{text}" />
                                </tokens>
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Input with CompanyDetail Dialog (cm.util.control.ui.CompanyDetailDialog): " labelFor="inputWithCompanyDetailValueHelp"></Label>
                            <Input id="inputWithCompanyDetailValueHelp"
                                placeholder="Choose a CompanyDetail from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputWithCompanyDetailValuePress">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="MultiInput with CompanyDetail Dialog (cm.util.control.ui.CompanyDetailDialog): " labelFor="multiInputWithCompanyDetailValueHelp"></Label>
                            <MultiInput id="multiInputWithCompanyDetailValueHelp"
                                placeholder="Choose CompanyDetails from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithCompanyDetailValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Input with Employee Dialog (cm.util.control.ui.EmployeeDialog): " labelFor="inputWithEmployeeValueHelp"></Label>
                            <Input id="inputWithEmployeeValueHelp"
                                placeholder="Choose a employee from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputWithEmployeeValuePress">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="MultiInput with Employee Dialog (cm.util.control.ui.EmployeeDialog): " labelFor="multiInputWithEmployeeValueHelp"></Label>
                            <MultiInput id="multiInputWithEmployeeValueHelp"
                                placeholder="Choose employees from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithEmployeeValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="MaterialOrg (dp.util.control.ui.MaterialOrgDialog): " labelFor="searchMultiMaterialOrgFromDialog"></Label>
                            <MultiInput id="searchMultiMaterialOrgFromDialog"
                                placeholder="Choose codes from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMaterialOrgMultiDialogPress">
                            </MultiInput>
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <!-- OP-->

                        <VBox>
                            <Label text="Account (op.util.control.ui.AccountDialog): " labelFor="multiInputWithAccountValueHelp"></Label>
                             <MultiInput id="multiInputWithAccountValueHelp"
                                placeholder="Choose Accounts"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithAccountPress">
                            </MultiInput> 
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>


                        <VBox>
                            <Label text="Asset (op.util.control.ui.AssetDialog): " labelFor="multiInputWithAssetValueHelp"></Label>
                             <MultiInput id="multiInputWithAssetValueHelp"
                                placeholder="Choose Assets"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithAssetPress">
                            </MultiInput> 
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Cost Center (op.util.control.ui.CctrDialog): " labelFor="multiInputWithCctrValueHelp"></Label>
                             <MultiInput id="multiInputWithCctrValueHelp"
                                placeholder="Choose Cctrs"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithCctrPress">
                            </MultiInput> 
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Order (op.util.control.ui.OrderDialog): " labelFor="multiInputWithOrderValueHelp"></Label>
                             <MultiInput id="multiInputWithOrderValueHelp"
                                placeholder="Choose Orders"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithOrderPress">
                            </MultiInput> 
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>

                       

                         <VBox>
                            <Label text="Account (cm.util.control.ui.WbsDialog): " labelFor="multiInputWithWbsValueHelp"></Label>
                             <MultiInput id="multiInputWithWbsValueHelp"
                                placeholder="Choose WBS"
                                showValueHelp="true" valueHelpRequest=".onMultiInputWithWbsPress">
                            </MultiInput> 
                            <layoutData>
                                 <layout:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </VBox>


                        <!-- OP End-->

                        <!--SP Start-->
                        <VBox>
                            <Label text="Single Supplier With Org" labelFor="input_supplierwithorg_code"></Label>
                            <Input id="input_supplierwithorg_code"
                            placeholder="Choose a supplier from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onInputSupplierWithOrgValuePress" />
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi Supplier With Org" labelFor="multiinput_supplierwithorg_code"></Label>
                                <MultiInput id="multiinput_supplierwithorg_code"
                                placeholder="Choose codes from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputSupplierWithOrgValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Single Supplier" labelFor="input_supplier_code"></Label>
                            <Input id="input_supplier_code"
                            placeholder="Choose a supplier from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onInputSupplierValuePress" />
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi Supplier" labelFor="multiinput_supplier_code"></Label>
                                <MultiInput id="multiinput_supplier_code"
                                placeholder="Choose codes from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputSupplierValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>

                        
                        <VBox>
                            <Label text="Single Maker" labelFor="input_maker_code"></Label>
                            <Input id="input_maker_code"
                            placeholder="Choose a maker from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onInputMakerValuePress" />
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi Maker" labelFor="multiinput_maker_code"></Label>
                            <MultiInput id="multiinput_maker_code"
                            placeholder="Choose a maker from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onMultiInputMakerValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Single BP" labelFor="input_bp_code"></Label>
                            <Input id="input_bp_code"
                            placeholder="Choose a BP from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onInputBPValuePress" />
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi BP" labelFor="multiinput_bp_code"></Label>
                            <MultiInput id="multiinput_bp_code"
                            placeholder="Choose a BP from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onMultiInputBPValuePress">
                            </MultiInput>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S10" />
                            </layoutData>
                        </VBox>
                        <!-- SP End-->


                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button text="Open Employee Dialog" type="Transparent" press=".onInputWithCompanyDetailValuePress"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>

