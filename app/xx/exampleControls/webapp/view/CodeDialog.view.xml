            </VBox>
            
        </content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Transparent" text="Open Code Dialog" press=".onCodeDialogPress"/>
			</OverflowToolbar>
		</footer>
        
        <cm-ui:EmployeeDialog id="employeeDialog" 
            title="직원 검색"
            items="{
                filters: [
                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                ]
            }"
