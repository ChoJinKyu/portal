<mvc:View
	controllerName="xx.exampleControls.controller.NumberFormat"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:layout="sap.ui.layout" 
    xmlns:lib-m="ext.lib.m"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%">

    <Page id="page" title="Number Format with Locale and Currency" titleLevel="H2" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavigationBackPress">
        <content>
            <Table id="idProductsTable"
                items="{/}">
                <columns>
                    <Column id="exapnseColumn" hAlign="Begin">
                        <Text text="Expense"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="Raw" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Default" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Locale Only&#10;(ko-KR)" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Locale / Currency&#10;(ko / KRW)" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Locale / Currency&#10;(de-DE / EUR)" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Locale / Currency&#10;(en / USD)" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Locale / Currency&#10;(pl-PL / PLN)" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier text="{expense}"/>
                            <ObjectIdentifier text="{amount}"/>
                            <ObjectIdentifier text="{
                                    path: 'amount',
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                            <ObjectIdentifier text="{
                                    parts: [
                                        {path: 'amount'},
                                        {value: 'ko-KR'}
                                    ],
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                            <ObjectIdentifier text="{
                                    parts: [
                                        {path: 'amount'},
                                        {value: 'ko'},
                                        {value: 'KRW'}
                                    ],
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                            <ObjectIdentifier text="{
                                    parts: [
                                        {path: 'amount'},
                                        {value: 'de-DE'},
                                        {value: 'EUR'}
                                    ],
                                    formatter: '.numberFormatter.toNumberString'
                                }"/>
                            <ObjectIdentifier text="{
                                parts: [
                                    {path: 'amount'},
                                    {value: 'en'},
                                    {value: 'USD'}
                                ],
                                formatter: '.numberFormatter.toNumberString'
                            }"/>
                            <ObjectIdentifier text="{
                                parts: [
                                    {path: 'amount'},
                                    {value: 'pl-PL'},
                                    {value: 'PLN'}
                                ],
                                formatter: '.numberFormatter.toNumberString'
                            }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <MessageStrip
                class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                type="Information"
                text='sap.ui.define([&#10;&#10;&#160;&#160;&#160;&#160;"ext/lib/formatter/NumberFormatter"&#10;&#10;], function (NumberFormatter) .. &#10;&#10;&#160;&#160;&#160;&#160;numberFormatter: NumberFormatter' />
            
        </content>
    </Page>
</mvc:View>