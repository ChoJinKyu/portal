<mvc:View controllerName="xx.exampleControls.controller.PivotTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    height="100%">

    <Page id="page" title="Dynamic Column Table likes Pivot" titleLevel="H2" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavigationBackPress">
        <content>
            <VBox>

                <table:Table id="table"
                    selectionMode="MultiToggle"
                    visibleRowCount="7"
                    ariaLabelledBy="title">
                    <table:extension>
                        <OverflowToolbar>
                            <Title id="title" text="Products"/>
                            <ToolbarSpacer />
                            <Button text="Apply Style" type="Transparent" press=".applyStyle"/>
                            <Button text="Refresh" type="Transparent" press=".refresh"/>
                        </OverflowToolbar>
                    </table:extension>
                </table:Table>

                <MessageStrip
                    class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    type="Information"
                    text="&#10;@See&#160;'odata/v4/xx.ExampleV4Service/GetPivotData'&#10;&#10;srv/cds/xx/example-v4-service.cds&#10;lg.sppCap.handlers.xx.ExampleV4Service.java&#10;&#10;" />
            
            </VBox>
        </content>
    </Page>
</mvc:View>