<mvc:View controllerName="xx.exampleControls.controller.ScrumDialog"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap" 
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:op-ui="op.util.control.ui"
    height="100%">

	<uxap:ObjectPageLayout id="page"
            toggleHeaderOnTitleClick="true"
            alwaysShowContentHeader = "true"
            preserveHeaderStateOnScroll="false"
            headerContentPinnable="true"
            isChildPage="true"
            upperCaseAnchorBar="false"
            showTitleInHeaderContent="true"
            showEditHeaderButton="true" 
            showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Toolbar style="Clear" width="100%">
                        <Button icon="sap-icon://nav-back" press=".onNavigationBackPress"/>
					    <Title text="Scrum Dialog" wrapping="true" />             
                    </Toolbar>
                </uxap:heading>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:sections>

			<uxap:ObjectPageSection titleUppercase="false" title="MaterialOrg">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <VBox>
                                <Label text="MaterialOrg (dp.util.control.ui.MaterialOrgDialog): " labelFor="searchMultiMaterialOrgFromDialog"></Label>
                                <MultiInput id="searchMultiMaterialOrgFromDialog"
                                    placeholder="Choose codes from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMaterialOrgMultiDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="OP">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">

                            <VBox>
                                <Label text="Account (op.util.control.ui.AccountDialog): " labelFor="multiInputWithAccountValueHelp"></Label>
                                <MultiInput id="multiInputWithAccountValueHelp"
                                    placeholder="Choose Accounts"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithAccountPress">
                                </MultiInput> 
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="Asset (op.util.control.ui.AssetDialog): " labelFor="multiInputWithAssetValueHelp"></Label>
                                <MultiInput id="multiInputWithAssetValueHelp"
                                    placeholder="Choose Assets"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithAssetPress">
                                </MultiInput> 
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="Cost Center (op.util.control.ui.CctrDialog): " labelFor="multiInputWithCctrValueHelp"></Label>
                                <MultiInput id="multiInputWithCctrValueHelp"
                                    placeholder="Choose Cctrs"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithCctrPress">
                                </MultiInput> 
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="Order (op.util.control.ui.OrderDialog): " labelFor="multiInputWithOrderValueHelp"></Label>
                                <MultiInput id="multiInputWithOrderValueHelp"
                                    placeholder="Choose Orders"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithOrderPress">
                                </MultiInput> 
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="WBS (op.util.control.ui.WbsDialog): " labelFor="multiInputWithWbsValueHelp"></Label>
                                <MultiInput id="multiInputWithWbsValueHelp"
                                    placeholder="Choose WBS"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputWithWbsPress">
                                </MultiInput> 
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="SP - Supplier &amp; Maker, BP">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
                            adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">

                            <VBox>
                                <Label text="Single Supplier With Org" labelFor="input_supplierwithorg_code"></Label>
                                <Input id="input_supplierwithorg_code"
                                placeholder="Choose a supplier from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputSupplierWithOrgDialogPress" />
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Multi Supplier With Org" labelFor="multiinput_supplierwithorg_code"></Label>
                                    <MultiInput id="multiinput_supplierwithorg_code"
                                    placeholder="Choose codes from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputSupplierWithOrgDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="Single Supplier" labelFor="input_supplier_code"></Label>
                                <Input id="input_supplier_code"
                                placeholder="Choose a supplier from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputSupplierDialogPress" />
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Multi Supplier" labelFor="multiinput_supplier_code"></Label>
                                    <MultiInput id="multiinput_supplier_code"
                                    placeholder="Choose codes from the ValueHelp"
                                    showValueHelp="true" valueHelpRequest=".onMultiInputSupplierDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                            
                            <VBox>
                                <Label text="Single Maker" labelFor="input_maker_code"></Label>
                                <Input id="input_maker_code"
                                placeholder="Choose a maker from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputMakerDialogPress" />
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Multi Maker" labelFor="multiinput_maker_code"></Label>
                                <MultiInput id="multiinput_maker_code"
                                placeholder="Choose a maker from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputMakerDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>

                            <VBox>
                                <Label text="Single BP" labelFor="input_bp_code"></Label>
                                <Input id="input_bp_code"
                                placeholder="Choose a BP from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onInputBPDialogPress" />
                                <layoutData>
                                    <layout:GridData span="XL3 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Multi BP" labelFor="multiinput_bp_code"></Label>
                                <MultiInput id="multiinput_bp_code"
                                placeholder="Choose a BP from the ValueHelp"
                                showValueHelp="true" valueHelpRequest=".onMultiInputBPDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL9 L8 M6 S12" />
                                </layoutData>
                            </VBox>
                            
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
            </uxap:ObjectPageSection>

		</uxap:sections>
		
    </uxap:ObjectPageLayout>
    
</mvc:View>



