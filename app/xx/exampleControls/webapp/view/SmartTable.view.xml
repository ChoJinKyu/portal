<mvc:View controllerName="xx.exampleControls.controller.SmartTable" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:layout="sap.ui.layout" 
    xmlns:lib-m="ext.lib.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%">

    <Page id="page" title="Example #3" titleLevel="H2" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavigationBackPress">
        <content>

			<smartFilterBar:SmartFilterBar id="smartFilterBar"
				entitySet="Message" persistencyKey="SmartFilter_Explored">
				<!-- <smartFilterBar:controlConfiguration>
					<smartFilterBar:ControlConfiguration key="Bukrs">
						<smartFilterBar:defaultFilterValues>
							<smartFilterBar:SelectOption low="0001">
							</smartFilterBar:SelectOption>
						</smartFilterBar:defaultFilterValues>
					</smartFilterBar:ControlConfiguration>
					<smartFilterBar:ControlConfiguration key="Gjahr">
						<smartFilterBar:defaultFilterValues>
							<smartFilterBar:SelectOption low="2014">
							</smartFilterBar:SelectOption>
						</smartFilterBar:defaultFilterValues>
					</smartFilterBar:ControlConfiguration>
				</smartFilterBar:controlConfiguration> -->
			</smartFilterBar:SmartFilterBar>

            <smartTable:SmartTable id="smartTable" 
                tableBindingPath="{list>/Message}"
                entitySet="Message" tableType="ResponsiveTable" useExportToExcel="true"
                useVariantManagement="false" useTablePersonalisation="true" header="Smart Table"
                showRowCount="true" enableAutoBinding="true" beforeRebindTable="onBeforeRebindTable"
				initiallyVisibleFields="tenant_id,language_code,message_code,message_contents">

        <Table mode="MultiSelect">
			<columns>
				<Column id="tenant_id" width="100px" hAlign="Begin">
					<customData>
						<core:CustomData key="p13nData"
							value='\{"columnKey": "tenant_id", "columnIndex":"1", "leadingProperty": "tenant_id", "sortProperty": "tenant_id"}' />
					</customData>
					<Text text="{/#Message/tenant_id/@sap:label}" />
				</Column>
				<Column id="language_code" width="100px" hAlign="Begin">
					<customData>
						<core:CustomData key="p13nData"
							value='\{"columnKey": "language_code", "columnIndex":"2", "leadingProperty": "language_code", "sortProperty": "language_code"}' />
					</customData>
					<Text text="{/#Message/language_code/@sap:label}" />
				</Column>
				<Column id="message_code" width="100px" hAlign="Begin">
					<customData>
						<core:CustomData key="p13nData"
							value='\{"columnKey": "message_code", "columnIndex":"3", "leadingProperty": "message_code", "sortProperty": "message_code"}' />
					</customData>
					<Text text="Msg code" />
				</Column>
				<Column id="message_contents" width="100px" hAlign="Begin">
					<customData>
						<core:CustomData key="p13nData"
							value='\{"columnKey": "message_contents", "columnIndex":"4", "leadingProperty": "message_contents", "sortProperty": "message_contents"}' />
					</customData>
					<Text text="Msg Content" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{tenant_id}" />
						<Text text="{language_code}" />
						<Text text="{message_code}" />
						<Text text="{message_contents}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>

            </smartTable:SmartTable>

        </content>
    </Page>
</mvc:View>