<mvc:View controllerName="xx.exampleControls.controller.CodeCombo"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:lib-m="ext.lib.control.m"
    xmlns:cm-ui="cm.util.control.ui"
    xmlns:html="http://www.w3.org/1999/xhtml"
    height="100%">

    <Page id="page" 
        title="Free Test" 
        titleLevel="H2" 
        class="sapUiContentPadding" 
        showNavButton="true" 
        navButtonPress=".onNavigationBackPress"
		floatingFooter="true">
        <content>

            <HBox
                displayInline="false"
                alignItems="End" 
                class="sapUiSmallMargin nestedFlexboxes">

                <HBox width="100%" alignItems="Start" justifyContent="Start" class="test-hbox" displayInline="true">
                    <form:SimpleForm class="test-form"
                        maxContainerCols="2" 
                        layout="ResponsiveGridLayout" 
                        adjustLabelSpan="false" 
                        labelSpanL="4" 
                        labelSpanM="4" 
                        emptySpanL="0" 
                        emptySpanM="0" 
                        columnsL="2" 
                        columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Input"></Label>
                                <Input width="100%" />
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M4 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Combo"></Label>
                                <ComboBox width="100%" />
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M4 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Input"></Label>
                                <Input width="100%" />
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M4 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                    <layoutData>
                        <FlexItemData growFactor="10" styleClass="item1" />
                    </layoutData>
                </HBox>

                <FlexBox
                    alignItems="Start"
                    justifyContent="End">
                    <Button text="Show Filters" type="Transparent" class="sapUiSmallMarginEnd" />
                    <Button text="Search" type="Accept" />
                    <layoutData>
                        <FlexItemData growFactor="2" styleClass="item2" />
                    </layoutData>
                </FlexBox>
            </HBox>
                
        </content>
    </Page>
</mvc:View>