			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Message" persistencyKey="SmartFilter_Explored" basicSearchFieldName="tenant_id" enableBasicSearch="true" >
                <smartFilterBar:controlConfiguration>
                </smartFilterBar:controlConfiguration>
			</smartFilterBar:SmartFilterBar>

