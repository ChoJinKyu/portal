			<smartTable:SmartTable id="smartTable" entitySet="Message" smartFilterId="smartFilterBar" tableType="ResponsiveTable" useExportToExcel="true"
            beforeExport="onBeforeExport" useVariantManagement="false" useTablePersonalisation="true" header="Line Items" showRowCount="true" editable="true" 
            persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="false" demandPopin="true" class="sapUiResponsiveContentPadding">	
