<mvc:View controllerName="xx.exampleControls.controller.Home" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m" 
    height="100%">

    <Page id="page" title="UI5 Examples">
        <content>
            <VBox>

                <List headerText="Examples" items="{examples>/}" >
                    <StandardListItem
                        title="{examples>name}"
                        icon="{examples>icon}"
                        description="{examples>desc}"
                        info="{examples>info}"
                        infoState="{examples>highlight}"
                        infoStateInverted="true" 
                        type="Navigation" press=".onListItemPress"/>
                </List>
                
                <MessageStrip class="sapUiMediumMarginBottom"
                    text="항목을 선택하여 예제를 참조하세요."
                    showIcon="true"
                    showCloseButton="false">
                </MessageStrip>
                
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="SAPUI5 API" type="Transparent" press=".onSAPUI5APIButtonPress" />
				<Button text="Thanks" type="Emphasized" press=".onThanksButtonPress"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>