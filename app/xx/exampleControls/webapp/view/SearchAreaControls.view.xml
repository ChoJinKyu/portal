<mvc:View controllerName="xx.exampleControls.controller.Empty"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <Page id="page"
        title="Search Area Controls"
        titleLevel="H2"
        class="sapUiContentPadding"
        showNavButton="true"
        navButtonPress=".onNavigationBackPress">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Search Area Controls" level="H3"/>
                <ToolbarSpacer/>
                <Text text="SearchAreaControls.view.xml" />
			</Toolbar>
		</subHeader>
        <content>
            <VBox>

                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Input: " labelFor="searchKeywordInput" required="true"></Label>
                            <Input placeholder="필수" id="searchKeywordInput"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Segmented Button: " labelFor="searchCodeSegmentButton" required="true"></Label>
                            <SegmentedButton id="searchCodeSegmentButton" selectedKey="all" class="sapUiSmallMarginBottom" width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" key="all" />
                                    <SegmentedButtonItem text="PR" width="3em" />
                                    <SegmentedButtonItem text="Budget" width="5em" />
                                    <SegmentedButtonItem text="RFQ" />
                                    <SegmentedButtonItem text="Mold Spec" width="6em" />
                                    <SegmentedButtonItem text="PO" width="3em" />
                                    <SegmentedButtonItem text="RCV" width="4em" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL10 L9 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Toolbar height="1px" class="sapUiSmallMarginBottom" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Search Field: " labelFor="searchSomethingField"></Label>
                            <SearchField id="searchSomethingField" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Select Box: " labelFor="searchSomethingSelect"></Label>
                            <Select id="searchSomethingSelect" width="100%" selectedKey="all">
                                <items>
                                    <core:Item key="all" text="ALL" />
                                    <core:Item key="1" text="Select 1" />
                                    <core:Item key="2" text="Select 2" />
                                </items>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Combo Box: " labelFor="searchSomethingComboBox"></Label>
                            <ComboBox width="100%" id="searchSomethingComboBox">
                                <core:Item text="Combo 1" />
                                <core:Item text="Combo 2" />
                                <core:Item text="Combo 3" />
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi Combo Box: " labelFor="searchSomethingMultiComboBox"></Label>
                            <MultiComboBox id="searchSomethingMultiComboBox">
                                <core:Item text="Multi 1" />
                                <core:Item text="Multi 2" />
                                <core:Item text="Multi 3" />
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Date Range 1: " labelFor="searchDateRangeSelect"></Label>
                            <HBox>
                                <Select id="searchDateRangeSelect" class="sapUiTinyMarginEnd" selectedKey="save">
                                    <items>
                                        <core:Item key="save" text="Saved Date" />
                                        <core:Item key="update" text="Update Date" />
                                    </items>
                                </Select>
                                <DateRangeSelection displayFormat="yyyy/MM/dd'" />
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Date Range 2: "></Label>
                            <HBox>
                                <DatePicker placeholder="Start Date ..." id="searchFromDatePicker"/>
                                <Text text="~" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" />
                                <DatePicker placeholder="End Date ..." id="searchToDatePicker"/>
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Date: " labelFor="selectBirthdayDatePicker"></Label>
                            <DatePicker id="selectBirthdayDatePicker" placeholder="Date" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Time: " labelFor="selectStartTimePicker"></Label>
                            <TimePicker id="selectStartTimePicker" width="100%" placeholder="Time" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Date Time: " labelFor="selectSomeTimePicker"></Label>
                            <DateTimePicker id="selectSomeTimePicker" placeholder="Date Time" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Number: " labelFor="selectPointNumber"></Label>
                            <Input textAlign="Right" id="selectPointNumber" type="Number" fieldWidth="80%" description="KRW" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Stepper: " labelFor="selectWalkingStepInput"></Label>
                            <StepInput id="selectWalkingStepInput" value="5" min="0" max="10" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Open Popup: " labelFor="selectCompanyValueHelpInput"></Label>
                            <Input showValueHelp="true" id="selectCompanyValueHelpInput"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Slider (Range): " labelFor="selectRangeSlider"></Label>
                            <RangeSlider id="selectRangeSlider" showAdvancedTooltip="true" min="0" max="100" width="100%" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Slider (Discrete): " labelFor="selectDiscreateSlider"></Label>
                            <Slider id="selectDiscreateSlider" enableTickmarks="true" showAdvancedTooltip="true" step="5" min="0" max="100" width="100%" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="Radio Button: " labelFor="selectOption1RadioGroup"></Label>
                            <RadioButtonGroup id="selectOption1RadioGroup" columns="4" width="100%">
                                <RadioButton id="RB1-1" text="Radio 1" />
                                <RadioButton id="RB1-2" text="Radio 2" />
                                <RadioButton id="RB1-3" text="Radio 3" />
                                <RadioButton id="RB1-4" text="Radio 4" />
                            </RadioButtonGroup>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Check Box: "></Label>
                            <HBox>
                                <CheckBox id="selectOptionACheckBox" text="Check Box1" />
                                <Text text=" " class="sapUiTinyMarginEnd" />
                                <CheckBox id="selectOptionBCheckBox" text="Check Box2" />
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="Start" justifyContent="End">
                            <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onSearch" />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>


            </VBox>
        </content>
    </Page>
</mvc:View>