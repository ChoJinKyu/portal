<mvc:View
	controllerName="xx.exampleControls.controller.DateFormat"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:layout="sap.ui.layout" 
    xmlns:lib-m="ext.lib.m"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%">

    <Page id="page" title="Date Format" titleLevel="H2" class="sapUiContentPadding" showNavButton="true" navButtonPress=".onNavigationBackPress">
        <content>
            <Table items="{/}">
                <columns>
                    <Column hAlign="Begin" width="22em">
                        <Text text="Date"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Date Time" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Date" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Time" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Date Time&#10;UTC=true" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Date&#10;UTC=true" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Time&#10;UTC=true" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier text="{title}" title="{zone}"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toDateTimeString'
                                }"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toDateString'
                                }"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toTimeString'
                                }"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toUTCDateTimeString'
                                }"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toUTCDateString'
                                }"/>
                            <ObjectIdentifier text="{
                                    path: 'dt',
                                    formatter: '.DateFormatter.toUTCTimeString'
                                }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <MessageStrip
                class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                type="Information"
                text='sap.ui.define([&#10;&#10;&#160;&#160;&#160;&#160;"ext/lib/formatter/DateFormatter"&#10;&#10;], function (DateFormatter) .. &#10;&#10;&#160;&#160;&#160;&#160;DateFormatter: DateFormatter' />
            
        </content>
    </Page>
</mvc:View>