<mvc:View controllerName="xx.exampleBlockBasedLayout.controller.BlockBasePage2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
	xmlns:layout="sap.ui.layout" 
    xmlns:block="xx.exampleBlockBasedLayout.block"
    height="100%">

	<uxap:ObjectPageLayout id="page" 
		showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectTitle="Block Based View"/>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:navigationActions>
					<OverflowToolbarButton id="pageNavBackButton" icon="sap-icon://decline" text="back" 
						type="Transparent" tooltip="back to the list" press=".onNavigationBackPress" />
				</uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<ObjectAttribute title="" text="This example explains the rules for the rendering of sections"/>
		</uxap:headerContent>

		<uxap:sections>
            
			<uxap:ObjectPageSection titleUppercase="false" title="example">
				<uxap:subSections>

					<uxap:ObjectPageSubSection title="Block 3" titleUppercase="false">
						<uxap:blocks>
							<block:Section3Block id="block3" />
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

				</uxap:subSections>
			</uxap:ObjectPageSection>
        
			<uxap:ObjectPageSection titleUppercase="false" title="example">
				<uxap:subSections>

					<uxap:ObjectPageSubSection title="Block 2" titleUppercase="false">
						<uxap:blocks>
							<block:Section2Block id="block2" sectionTitle="Product Form"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

				</uxap:subSections>
			</uxap:ObjectPageSection>
            
			<uxap:ObjectPageSection titleUppercase="false" title="example">
				<uxap:subSections>

					<uxap:ObjectPageSubSection title="Block 1" titleUppercase="false">
						<uxap:blocks>
							<block:Section1Block id="block1" requestButtonPress="onBlock1TableRequestButtonPress" tableSelected="onBlock1TableSelected" />
						</uxap:blocks>
					</uxap:ObjectPageSubSection>

				</uxap:subSections>
			</uxap:ObjectPageSection>

		</uxap:sections>

		
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button type="Emphasized" text="Save" press=".onPageSaveButtonPress" />
			</OverflowToolbar>
		</uxap:footer>

	</uxap:ObjectPageLayout>

</mvc:View>