<mvc:View controllerName="xx.exampleBlockBasedLayout.block.Section1Block"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	width="100%" >

	<Table id="table1"
		mode="SingleSelectLeft" selectionChange=".onTableSelected"
		items="{
			path: 'products>/ProductCollection'
		}"
		columns="{
			path: 'column>/'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Products (Correct Usage)" level="H2"/>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Request" press=".onTableRequestButtonPress" />
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="{column>width}" styleClass="{column>styleClass}" demandPopin="{column>demandPopin}" minScreenWidth="{column>minScreenWidth}" popinDisplay="WithoutHeader">
				<Input value="{column>width}" description="{column>header}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation" >
				<cells>
					<Text text="{products>Name}" wrapping="false" />
					<Text text="{products>SupplierName}" wrapping="false"/>
					<Text text="{products>Description}" wrapping="false" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	
</mvc:View>
