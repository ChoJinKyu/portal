<mvc:View controllerName="xx.exampleBlockBasedLayout.block.Section2Block"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	width="100%" >
	
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="form1"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="Product" />
				<Label text="Main Category" />
				<Text text="{product>/MainCategory}" />
				<Label text="SupplierName" />
				<Text text="{product>/SupplierName}" />
				<Label text="Price" />
				<Text text="{product>/Price} {product>/Code}" />
				<Label text="DateOfSale" />
				<Text text="{product>/DateOfSale}" />
				<core:Title text="Details" />
				<Label text="Description" />
				<Text text="{product>/Description}" />
				<Label text="Status" />
				<Text text="{product>/Status}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
	
</mvc:View>
