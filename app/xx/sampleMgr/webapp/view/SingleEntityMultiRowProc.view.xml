<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="xx.sampleMgr.controller.SingleEntityMultiRowProc"
>
    
	<Table
        id="sampleHeaderList"
        growing="true"
        growingThreshold="30"
        items="{path : 'headerList>/SampleHeaders', 
                        parameters: {
                            $count: true,
                            $$updateGroupId : 'sampleHeaderGroup'
                            }
                        }" 
        mode="MultiSelect"
        width="auto"
    >
   
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Single Table Multi Rows" level="H2"/>
                    <ToolbarSpacer/>
                    <Button id="btnSearch" text="Search" press="onSearch"></Button>
                    <Button id="btnAdd" text="Add" press="onCreate"></Button>
                    <Button id="btnSaveProc" press="onSampleMultiHeaderProc" text="Procedure"></Button>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Center">
                <header>
                    <Label text="Header ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Code"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Name"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{headerList>header_id}"/>
                    <Input value="{headerList>cd}"/>
                    <Input type="Text" value="{headerList>name}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

	<Table
        id="sampleHeaderListReturn"
        growing="true"
        growingThreshold="30"
        items="{path : 'returnModel>/headerList'}" 
        width="auto"
    >   
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Return" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Center">
                <header>
                    <Label text="Header ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Code"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Name"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input type="Text" value="{returnModel>header_id}"/>
                    <Input type="Text" value="{returnModel>cd}"/>
                    <Input type="Text" value="{returnModel>name}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>