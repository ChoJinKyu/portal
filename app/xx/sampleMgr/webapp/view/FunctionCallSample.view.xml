<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="xx.sampleMgr.controller.FunctionCallSample"
>
	<Table
        id="sampleMasterList"
        growing="true"
        growingThreshold="30"
        items="{path : 'viewModel>/masterList'}" 
        width="auto"
    >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Function 조회" level="H2"/>
                    <ToolbarSpacer/>
                    <Button id="btnSearch" text="Search" press="onSearch"></Button>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Center">
                <header>
                    <Label text="Master ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Code"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="Name"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input type="Text" value="{viewModel>master_id}"/>
                    <!-- <Input type="Text" value="{viewModel>cd}"/> -->
                    <ComboBox id="sample_combo" items="{path: 'viewComboModel>/masterCombo'}" selectedKey="{viewModel>cd}">
                        <core:Item key="{viewComboModel>cd}" text="{viewComboModel>name}"/>
                    </ComboBox>
                    <Input type="Text" value="{viewModel>name}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>