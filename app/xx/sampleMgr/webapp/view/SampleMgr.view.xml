<mvc:View controllerName="xx.sampleMgr.controller.SampleMgr" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<!-- <Shell id="shell"> -->
		<App id="app">
			<pages>
                <Page id="listPage" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
                   
                    <content>
                    <HBox>
                        <VBox width="45%">
                            <Table  id="sampleHeaderList" 
                                    items="{path : 'headerList>/SampleHeaders', 
                                            parameters: {
                                                $count: true,
                                                $$updateGroupId : 'sampleHeaderGroup'
                                                }
                                            }"
                                    mode="MultiSelect"
                                    growing="true"
                                    growingThreshold="5"
                                    growingScrollToLoad="false"                    
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <ToolbarSpacer/>
                                            <Button id="btnSearch" text="search" press="onSearch" tooltip="조회"></Button>
                                            <Button id="btnAdd" text="Add" press="onCreate" tooltip="추가"></Button>
                                            <Button id="btnDelete" text="Delete" press="onDelete" tooltip="삭제"></Button>
                                            <Button id="btnSave" text="Save" press="onSave" tooltip="저장"></Button>
                                            <Button id="btnSaveProc" press="onSampleMultiHeaderProc" tooltip="SampleMultiHeaderProc" text="Procedure"></Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <header>
                                            <Label text="Header ID"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center">
                                        <header>
                                            <Label text="Code"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center">
                                        <header>
                                            <Label text="Name"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" id="sampleHeaderItemList" press="onTableItemPress">
                                        <cells>
                                            <Input value="{headerList>header_id}"/>
                                            <Input value="{headerList>cd}"/>
                                            <Input type="Text" value="{headerList>name}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                        <VBox width="10%"></VBox>
                        <VBox width="45%">
                            <Table  id="sampleDetailList" 
                                    items="{path : 'detailList>/SampleDetails', 
                                            parameters: {
                                                $count: true,
                                                $$updateGroupId : 'sampleDetailGroup'
                                                }
                                            }"
                                    mode="MultiSelect"
                                    growing="true"
                                    growingThreshold="5"
                                    growingScrollToLoad="false"                    
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <ToolbarSpacer/>
                                            <Button id="btnSearchDetail" text="search" press="onSearchDetail" tooltip="조회"></Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <header>
                                            <Label text="Detail ID"/>
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Label text="Header ID"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center">
                                        <header>
                                            <Label text="Code"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center">
                                        <header>
                                            <Label text="Name"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" id="sampleDetailItemList" press="onTableItemPress">
                                        <cells>
                                            <Input value="{detailList>detail_id}"/>
                                            <Input value="{detailList>header_id}"/>
                                            <Input value="{detailList>cd}"/>
                                            <Input type="Text" value="{detailList>name}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                        </HBox>
                    </content>
                </Page>
			</pages>
		</App>
	<!-- </Shell> -->
</mvc:View>
