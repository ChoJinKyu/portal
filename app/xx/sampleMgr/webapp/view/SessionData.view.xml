<mvc:View 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="xx.sampleMgr.controller.SessionData"
>
	<Table
        id="sessionList"
        growing="true"
        growingThreshold="30"
        items="{path : 'session>/SppUserSession'}" 
        width="auto"
    >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="Function 조회" level="H2"/>
                    <ToolbarSpacer/>
                    <Button id="btnSearch" text="Search" press="onSearch"></Button>
                    <Button id="btnTest" text="Test" press="onTest"></Button>
                    <Text text="{USER_SESSION>/USER_ID}"></Text>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Center">
                <header>
                    <Label text="USER_ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="TENANT_ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="COMPANY_CODE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="EMPLOYEE_NUMBER"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="EMPLOYEE_NAME"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="ENGLISH_EMPLOYEE_NAME"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="EMPLOYEE_STATUS_CODE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="LANGUAGE_CODE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="TIMEZONE_CODE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="DATE_FORMAT_TYPE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="DIGITS_FORMAT_TYPE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="CURRENCY_CODE"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="EMAIL"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="ROLES"/>
                </header>
            </Column>

        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{session>USER_ID}"/>
                    <Text text="{session>TENANT_ID}"/>
                    <Text text="{session>COMPANY_CODE}"/>
                    <Text text="{session>EMPLOYEE_NUMBER}"/>
                    <Text text="{session>EMPLOYEE_NAME}"/>
                    <Text text="{session>ENGLISH_EMPLOYEE_NAME}"/>
                    <Text text="{session>EMPLOYEE_STATUS_CODE}"/>
                    <Text text="{session>LANGUAGE_CODE}"/>
                    <Text text="{session>TIMEZONE_CODE}"/>
                    <Text text="{session>DATE_FORMAT_TYPE}"/>
                    <Text text="{session>DIGITS_FORMAT_TYPE}"/>
                    <Text text="{session>CURRENCY_CODE}"/>
                    <Text text="{session>EMAIL}"/>
                    <Text text="{session>ROLES}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>


<Table
        id="userValue"
        growing="true"
        growingThreshold="30"
        items="{path : 'sessionTest>/UserValue'}" 
        width="auto"
    >
        <columns>
            <Column hAlign="Center">
                <header>
                    <Label text="USER"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="USER_ID"/>
                </header>
            </Column>
            <Column hAlign="Center">
                <header>
                    <Label text="USER_LOCALE"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{sessionTest>USER}"/>
                    <Text text="{sessionTest>USER_ID}"/>
                    <Text text="{sessionTest>USER_LOCALE}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>