<mvc:View controllerName="xx.sampleGrpMgr.controller.SampleGrpMgr" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="listPage" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
                    <subHeader>
                        <Bar>
                            <contentLeft>
                                <SearchField search="onFilter"/>
                            </contentLeft>
                        </Bar>
                    </subHeader>
                    <content>            
                        <Table  id="sampleGrpList" 
                                items="{path : '/SampleGroups', 
                                        parameters: {
                                            $count: true,
                                            $$updateGroupId : 'sampleGrpGroup'
                                            }
                                        }"
                                mode="MultiSelect"
                                growing="true"
                                growingThreshold="5"
                                growingScrollToLoad="false"                    
                        >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer/>
                                        <Button id="btnAdd" icon="sap-icon://add" press="onCreate" tooltip="추가"></Button>
                                        <Button id="btnDelete" icon="sap-icon://delete" press="onDelete" tooltip="삭제"></Button>
                                        <Button id="btnSave" icon="sap-icon://save" press="onSave" tooltip="저장"></Button>
                                        <Button id="btnReset" icon="sap-icon://reset" press="onResetChanges" tooltip="초기화"></Button>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <header>
                                        <Label text="ID"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center">
                                    <header>
                                        <Label text="Code"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center">
                                    <header>
                                        <Label text="Name"/>
                                    </header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" id="sampleGrpItemList" press="onTableItemPress">
                                    <cells>
                                        <Input value="{group_id}"/>
                                        <Input value="{cd}"/>
                                        <Input type="Text" value="{name}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
