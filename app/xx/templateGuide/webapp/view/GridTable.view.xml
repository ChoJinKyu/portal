<mvc:View
	controllerName="xx.templateGuide.controller.GridTable"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Panel>
		<content>
                <SegmentedButton enabled="false">
					<items>
						<SegmentedButtonItem text="Kids" key="kids" />
						<SegmentedButtonItem text="Adults" />
						<SegmentedButtonItem text="Seniors" />
					</items>
                </SegmentedButton>
                
			<t:Table
				id="table1"
				ariaLabelledBy="title"
				selectionMode="MultiToggle"
				rows="{/modelData}"
				visibleRowCount="5"
				enableColumnFreeze="true"
                showColumnVisibilityMenu="true"
                rowSelectionChange="onRowSelectionChange"
                selectionBehavior="Row">
				<t:extension>
					<OverflowToolbar>
						<Title id="title" text="Contacts"/>
					</OverflowToolbar>
				</t:extension>
				<t:columns>
					<t:Column
						width="11rem"
						sortProperty="supplier"
						filterProperty="supplier">
                        <!-- <Label text="Supplier" textAlign="Center" width="100%"/> -->
                        <HBox width="100%" alignItems="Center" justifyContent="Center">
							    <Label text="Supplier" textAlign="Center" width="100%"/>
                                <Button icon="sap-icon://action-settings" press="onHeaderBtnPress" />
                            </HBox>
						<t:template>
							<Text text="{supplier}"/>                            
						</t:template>                    
					</t:Column>
					<t:Column
						width="11rem"
						sortProperty="street"
						filterProperty="street"
						headerSpan="3,2">
						<t:multiLabels>
                            <HBox width="100%" alignItems="Center" justifyContent="Center">
							    <Label text="Contact" textAlign="Center" width="100%"/>
                                <Button icon="sap-icon://action-settings" press="onHeaderBtnPress" />
                            </HBox>
							<Label text="Address" textAlign="Center" width="100%"/>
							<Label text="Street" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Text text="{street}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column
						width="11rem"
						sortProperty="city"
						headerSpan="2">
						<t:multiLabels>
                             <HBox width="100%" alignItems="Center" justifyContent="Center">
							    <Label text="Contact" textAlign="Center" width="100%"/>
                                <Button icon="sap-icon://action-settings" press="onHeaderBtnPress" />
                            </HBox>
							<Label text="Address"/>
							<Label text="City" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
							<Input value="{city}" change="onChange"/>
						</t:template>
					</t:Column>
					<t:Column
						width="11rem"
						sortProperty="phone">
						<t:multiLabels>
							<HBox width="100%" alignItems="Center" justifyContent="Center">
							    <Label text="Contact" textAlign="Center" width="100%"/>
                                <Button icon="sap-icon://action-settings" press="onHeaderBtnPress" />
                            </HBox>
							<Label text="Phone" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
                            <HBox>
							<Input value="{phone}"/>
                            <Button icon="sap-icon://action-settings" press="handlePressOpenMenu" />
                            </HBox>
						</t:template>
					</t:Column>
					<t:Column width="8rem" hAlign="End">
						<t:multiLabels>
							<Label visible="false" />
							<Label visible="false" />
							<Label text="Open Orders" />
						</t:multiLabels>
						<t:template>
							<Text text="{openOrders}"/>
						</t:template>
					</t:Column>
					<t:Column width="8rem" hAlign="End">
						<t:multiLabels>
							<Label visible="false" />
							<Label visible="false" />
							<Label text="Open Orders2" />
						</t:multiLabels>
						<t:template>
							<Text text="{openOrders}"/>
						</t:template>
					</t:Column>
					<t:Column width="8rem" hAlign="End">
						<t:multiLabels>
							<Label visible="false" />
							<Label visible="false" />
							<Label text="Open Orders3" />
						</t:multiLabels>
						<t:template>
							<Text text="{openOrders}"/>
						</t:template>
					</t:Column>
					<t:Column width="8rem" hAlign="End">
						<t:multiLabels>
							<Label visible="false" />
							<Label visible="false" />
							<Label text="Open Orders5" />
						</t:multiLabels>
						<t:template>
							<Text text="{openOrders}"/>
						</t:template>
					</t:Column>
					<t:Column width="8rem" hAlign="End">
						<t:multiLabels>
							<Label visible="false" />
							<Label visible="false" />
							<Label text="Open Orders5" />
						</t:multiLabels>
						<t:template>
							<Text text="{openOrders}"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Panel>
</mvc:View>
