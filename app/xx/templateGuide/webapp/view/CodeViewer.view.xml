<mvc:View controllerName="xx.templateGuide.controller.CodeViewer" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:ce="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    displayBlock="true" 
    xmlns="sap.m">

    <Panel height="100%">
    <headerToolbar>
        <OverflowToolbar style="Clear">
            <Title text="{i18n>title}" />
            <ToolbarSpacer />
            <Button icon="sap-icon://syntax" press="onNavToCodeViewer" />
        </OverflowToolbar>
    </headerToolbar>
    <l:ResponsiveSplitter defaultPane="default">
        <l:PaneContainer>
            <l:SplitPane requiredParentWidth="400">            
                <Panel height="100%">
                    <content>
                        <ce:CodeEditor id="viewCodeEditor" height="100%" type="javascript" />
                    </content>
                </Panel> 
            </l:SplitPane>
                <l:SplitPane requiredParentWidth="400">            
                <Panel height="100%">
                    <content>
                            <ce:CodeEditor id="ControllerCodeEditor" height="100%" type="javascript" />
                    </content>
                </Panel> 
            </l:SplitPane>         
        </l:PaneContainer>
    </l:ResponsiveSplitter>
    </Panel>
</mvc:View>