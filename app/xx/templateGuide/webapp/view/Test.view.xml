        <m:HBox>
            <!-- <TreeTable -->
            <Table
                id="TreeTableBasic"
                rows="{/modelData}"
                selectionMode="Single"
                selectionBehavior="RowOnly"
                enableSelectAll="false"
                ariaLabelledBy="title"
                rowSelectionChange="onRowSelectionChange"
                >
                <extension>
                    <m:OverflowToolbar>
                        <m:Title id="title" text="Clothing"/>
                        <m:ToolbarSpacer/>
                        <!-- <m:Button text="Collapse all" press="onCollapseAll"/>
                        <m:Button text="Collapse selection" press="onCollapseSelection"/>
                        <m:Button text="Expand first level" press="onExpandFirstLevel"/>
                        <m:Button text="Expand selection" press="onExpandSelection"/> -->
                    </m:OverflowToolbar>
                </extension>
                <columns>
                    <Column width="13rem">
                        <m:Label text="Street"/>
                        <template>
                            <m:Text text="{street}" wrapping="false" />
                        </template>
                    </Column>
                    <Column width="9rem">
                        <m:Label text="City"/>
                        <template>
                            <m:Text text="{city}" wrapping="false" />
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label text="Phone"/>
                         <template>
                        <m:Input value="{phone}" />
                        </template>
                    </Column>
                </columns>
                <dragDropConfig>
                    <dnd:DragDropInfo
                            sourceAggregation="rows"
                            targetAggregation="rows"
                            dropPosition="Between"
                            dragStart="onDragStart"
                            drop="onDrop"/>
                </dragDropConfig>
            </Table>
            <!-- </TreeTable> -->
