<mvc:View
	controllerName="xx.templateGuie.controller.MainDashBoard"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:l="sap.ui.layout">
    <ScrollContainer
		height="100%"
		width="100%"
		vertical="true">
		<f:GridContainer
			class="sapUiSmallMargin"
			snapToRow="true">
			<f:layout>
				<f:GridContainerSettings rowSize="320px" columnSize="380px" gap="8px" />
			</f:layout>
			<f:layoutXS>
				<f:GridContainerSettings rowSize="320px" columnSize="380px" gap="8px" />
			</f:layoutXS>

            <l:VerticalLayout>
                <Text text="Work to do" />
                <GenericTile header="Sales Fulfillment Application Title" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="EUR" footer="Current Quarter">
                        <ImageContent src="sap-icon://home-share" />
                    </TileContent>
                </GenericTile>

                <GenericTile header="Manage Activity Master Data Type" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent>
                        <ImageContent src="sap-icon://activities" />
                    </TileContent>
                </GenericTile>         
                
                <GenericTile header="Cumulative Totals" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="Unit" footer="Footer Text">
                        <NumericContent value="12" />
                    </TileContent>
                </GenericTile>
            </l:VerticalLayout>

            <l:VerticalLayout>
                <Text text="Feedback to do" />
                <GenericTile header="Approve" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="EUR" footer="Current Quarter">
                        <List showSeparators="None">
                            <CustomListItem highlight="Error">
                                <HBox alignItems="Center" justifyContent="SpaceBetween">
                                    <VBox>
                                        <Title level="H3" text="Hisen2 에너지 1등급 금형 발주 품의" />
                                        <HBox>
                                  		<core:Icon src="sap-icon://history" class="size1" color="#031E48"></core:Icon>
                                        <Text text="1h ago" />
                                  		<core:Icon src="sap-icon://employee" class="size1" color="#031E48"></core:Icon>
                                        <Text text="Barbarian" />
                                        </HBox>                                
                                    </VBox>
                                </HBox>
                            </CustomListItem>
                        </List>
                    </TileContent>
                </GenericTile>

                <GenericTile header="Manage Activity Master Data Type" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent>
                        <ImageContent src="sap-icon://activities" />
                    </TileContent>
                </GenericTile>         
                
                <GenericTile header="Cumulative Totals" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="Unit" footer="Footer Text">
                        <NumericContent value="12" />
                    </TileContent>
                </GenericTile>
            </l:VerticalLayout>
          
            <l:VerticalLayout>
                <Text text="What to monitor" />
                <GenericTile header="Sales Fulfillment Application Title" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="EUR" footer="Current Quarter">
                        <ImageContent src="sap-icon://home-share" />
                    </TileContent>
                </GenericTile>

                <GenericTile header="Manage Activity Master Data Type" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent>
                        <ImageContent src="sap-icon://activities" />
                    </TileContent>
                </GenericTile>         
                
                <GenericTile header="Cumulative Totals" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="Unit" footer="Footer Text">
                        <NumericContent value="12" />
                    </TileContent>
                </GenericTile>
            </l:VerticalLayout>
         
            <l:VerticalLayout>
                <Text text="" />
                <GenericTile header="Sales Fulfillment Application Title" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="EUR" footer="Current Quarter">
                        <ImageContent src="sap-icon://home-share" />
                    </TileContent>
                </GenericTile>

                <GenericTile header="Manage Activity Master Data Type" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent>
                        <ImageContent src="sap-icon://activities" />
                    </TileContent>
                </GenericTile>         
                
                <GenericTile header="Cumulative Totals" subheader="Subtitle" frameType="TwoByOne">
                    <layoutData>
                        <f:GridContainerItemLayoutData minRows="3" columns="3" />
                    </layoutData>
                    <TileContent unit="Unit" footer="Footer Text">
                        <NumericContent value="12" />
                    </TileContent>
                </GenericTile>
            </l:VerticalLayout>
		</f:GridContainer>
	</ScrollContainer>	
</mvc:View>