<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false">

		<core:Title text="Normal" />
		<Label text="{I18N>/CODE}"/>
		<Text text="{company>/company_code}"/>
		<Label text="{I18N>/NAME}"/>
		<Text text="{company>/company_name}"/>
		<Label text="Used"/>
		<Text text="{
				path: 'company>/use_flag',
				formatter: '.viewFormatter.toYesNo'
			}"/>

		<core:Title text="Settings" />
		<Label text="{I18N>/CURRENCY}"/>
		<Text text="{company>/currency_code}" />
		<Label text="{I18N>/COUNTRY}"/>
		<Text text="{company>/country_code}" />
		<Label text="{I18N>/LANGUAGE}"/>
		<Text text="{company>/language_code}" />

	</form:SimpleForm>
</core:FragmentDefinition>