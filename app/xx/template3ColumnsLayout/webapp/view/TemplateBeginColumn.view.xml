<mvc:View controllerName="xx.template3ColumnsLayout.controller.TemplateBeginColumn"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-f="ext.lib.control.f"
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{beginPageViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <lib-f:CustomDynamicPageTitle>
                <lib-f:heading>
                    <HBox>
                        <lib-m:FavoriteMenuButton />
                        <Title text="3컬럼 Layout" />
                    </HBox>
                </lib-f:heading>
                <lib-f:actions>
                </lib-f:actions>
                <lib-f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </lib-f:navigationActions>
                <lib-f:fixedContent>
                    <form:SimpleForm class="searchBox" maxContainerCols="2" layout="ResponsiveGridLayout" editable="true" 
                        adjustLabelSpan="false" 
                        labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/KEYWORD}:" labelFor="searchKeyword"></Label>
                                <Input id="searchKeyword" placeholder="{I18N>/KEYWORD}"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/COUNTRY}:" labelFor="searchCountry"></Label>
                                <MultiInput id="searchCountry"
                                    placeholder="{I18N>/COUNTRY}"
                                    showValueHelp="true" valueHelpRequest=".onSearchCountryDialogPress">
                                </MultiInput>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M5 S10" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                                <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </lib-f:fixedContent>
            </lib-f:CustomDynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout" editable="true" 
                    adjustLabelSpan="false" 
                    labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/LANGUAGE}:" labelFor="searchLanguage"></Label>
                            <Input id="searchLanguage" placeholder="{I18N>/LANGUAGE}">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M5 S10" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="20"
                        class="sapFDynamicPageAlignContent" 
                        items="{list>/}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Main List ({= ${list>/}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button type="Transparent" press=".onMainTableExportButtonPress" icon="sap-icon://excel-attachment" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column minScreenWidth="Desktop" hAlign="Left" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <!-- <Label text="{I18N>/COMPANY}" /> -->
                            <lib-m:ColoredLabel id="fontColor" text="{I18N>/COMPANY}" color="red"/>
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/CURRENCY}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/COUNTRY}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="{I18N>/LANGUAGE}" />
                        </Column>
                        <Column minScreenWidth="Desktop" hAlign="Center" width="7rem">
                            <Label text="Using" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier title="{list>company_code}" text="{list>company_name}"/>
                                <ObjectIdentifier text="{list>currency_name}, {list>currency_code}"/>
                                <ObjectIdentifier text="{list>country_name}, {list>country_code}"/>
                                <ObjectIdentifier text="{list>language_name}, {list>language_code}"/>
                                <ObjectStatus icon="{= ${list>use_flag} === true ? 'sap-icon://accept' : ''}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>