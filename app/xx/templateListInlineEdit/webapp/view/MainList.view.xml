<mvc:View controllerName="xx.templateListInlineEdit.controller.MainList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Chain" labelFor="searchChainS" required="true"></Label>
                                <ComboBox id="searchChainS" width="100%" selectedKey="CM" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Language" labelFor="searchLanguageS"></Label>
                                <ComboBox id="searchLanguageS" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="" text="Choose a Language" />
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Keyword" labelFor="searchKeywordS"></Label>
                                <Input id="searchKeywordS" placeholder="Code or Content"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Chain" labelFor="searchChainE" required="true"></Label>
                                <ComboBox id="searchChainE" width="100%" selectedKey="CM" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Language" labelFor="searchLanguageE"></Label>
                                <ComboBox id="searchLanguageE" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="" text="Choose a Language" />
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Keyword" labelFor="searchKeywordE"></Label>
                                <Input id="searchKeywordE" placeholder="Keywords of the Code or Content"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/}"
                        mode="MultiSelect" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Messages" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <Button id="mainTableDeleteButton" text="Delete" type="Transparent" press=".onMainTableDeleteButtonPress" />
                            <Button id="mainTableSaveButton" text="Save" type="Emphasized" press=".onMainTableSaveButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnState" minScreenWidth="Tablet" hAlign="Center" width="40px" >
                            <Text text="S" />
                        </Column>
                        <Column id="mainColumnChainCode" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="12em" >
                            <Text text="Chain" />
                        </Column>
                        <Column id="mainColumnLanguageCode" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="12em" >
                            <Text text="Language" />
                        </Column>
                        <Column id="mainColumnMessageCode" minScreenWidth="Tablet" hAlign="Center" width="12em" >
                            <Text text="Code" />
                        </Column>
                        <Column id="mainColumnMessageContents" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="Content" />
                        </Column>
                        <Column id="mainColumnMessageTypeCode" minScreenWidth="Tablet" hAlign="Center" width="12em" >
                            <Text text="Type" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{list>_row_state_}"></Text>
                                <ComboBox selectedKey="{list>chain_code}" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <ComboBox selectedKey="{list>language_code}" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <Input value="{list>message_code}"></Input>
                                <Input value="{list>message_contents}"></Input>
                                <ComboBox selectedKey="{list>message_type_code}" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_MESSAGE_TYPE_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code_description}" />
                                    </items>
                                </ComboBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>