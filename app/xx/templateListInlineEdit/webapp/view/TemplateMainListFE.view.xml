<mvc:View controllerName="xx.templateListInlineEdit.controller.TemplateMainListFE" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:t="sap.ui.table"
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        showFooter="{= ${message>/}.length > 0 }"
        toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="다건(목록)의 Edit 모드" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchForm" class="searchBox" maxContainerCols="2" layout="ResponsiveGridLayout" editable="true" 
                        adjustLabelSpan="false" 
                        labelSpanL="4" 
                        labelSpanM="4" 
                        emptySpanL="0" 
                        emptySpanM="0" 
                        columnsL="2" 
                        columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/KEYWORD}: " labelFor="searchKeyword" required="true"></Label>
                                <Input id="searchKeyword" placeholder="{I18N>/NCM02001}" change=".onPageSearchButtonPress"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/TYPE}: " labelFor="searchType"></Label>
                                <lib-m:CodeComboBox id="searchType" width="100%"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_MESSAGE_TYPE_CODE'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }">
                                </lib-m:CodeComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/LANGUAGE}: " labelFor="searchLanguage"></Label>
                                <lib-m:CodeComboBox id="searchLanguage" width="100%" showSecondaryValues="true"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }">
                                </lib-m:CodeComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/CHAIN}: " labelFor="searchChain"></Label>
                                <lib-m:CodeComboBox id="searchChain" width="100%" showSecondaryValues="true"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }">
                                </lib-m:CodeComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L2 M5 S10" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                                <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table id="mainTable" 
                    noData="{I18N>/NCM01004}"
                    rows="{list>/Message}"
                    selectionMode="Single"
                    selectionBehavior="Row"
                    visibleRowCountMode="Auto"
                    rowSelectionChange=".onMainTableRowSelectionChange"
                    width="auto">
                <t:extension>
                    <OverflowToolbar>
                        <Title text="{I18N>/MESSAGE} {= ${list>/Message}.length > 0 ? '(' + ${list>/Message}.length + ')' : ''}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                        <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                        <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column width="2em" >
                        <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                        <t:template>
							<ObjectStatus icon="{
                                path: 'list>_row_state_',
                                formatter: '.formatter.toModelStateColumnIcon'
                            }" />
						</t:template>
                    </t:Column>
                    <t:Column hAlign="Center" width="10em" >
                        <Label text="{I18N>/LANGUAGE}" textAlign="Center" width="100%" required="true" />
                        <t:template>
                            <lib-m:EditModeVBox editableValue="{list>_row_editable_}">
                                <Text text="{list>language_code}" />
                                <lib-m:CodeComboBox selectedKey="{list>language_code}" width="100%" showSecondaryValues="true"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }"
                                    editable="{= ${list>_row_state_} === 'C' }" required="true">
                                </lib-m:CodeComboBox>
                            </lib-m:EditModeVBox>
						</t:template>
                    </t:Column>
                    <t:Column hAlign="Left" width="18em" >
                        <Label text="{I18N>/CODE}" textAlign="Center" width="100%" required="true" />
                        <t:template>
                            <lib-m:EditModeVBox editableValue="{list>_row_editable_}">
                                <Text text="{list>message_code}" />
                                <Input value="{
                                        path: 'list>message_code',
                                        type: 'sap.ui.model.type.String',
                                        constraints: {
                                            maxLength: 30
                                        }
                                    }" editable="{= ${list>_row_state_} === 'C' }" required="true" ></Input>
                            </lib-m:EditModeVBox>
						</t:template>
                    </t:Column>
                    <t:Column minWidth="30rem">
                        <Label text="{I18N>/CONTENTS}" textAlign="Center" width="100%" required="true" />
                        <t:template>
                            <lib-m:EditModeVBox editableValue="{list>_row_editable_}">
                                <Text text="{list>message_contents}" textAlign="Left" />
							    <Input value="{list>message_contents}" required="true" />
                            </lib-m:EditModeVBox>
						</t:template>
                    </t:Column>
                    <t:Column hAlign="Center" width="10em" >
                        <Label text="{I18N>/TYPE}" textAlign="Center" width="100%" required="true" />
                        <t:template>
                            <lib-m:EditModeVBox editableValue="{list>_row_editable_}">
                                <Text text="{list>message_type_code}" />
                                <lib-m:CodeComboBox selectedKey="{list>message_type_code}" width="100%"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_MESSAGE_TYPE_CODE'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }"
                                    required="true" >
                                </lib-m:CodeComboBox>
                            </lib-m:EditModeVBox>
						</t:template>
                    </t:Column>
                    <t:Column hAlign="Center" width="10em" >
                        <Label text="{I18N>/CHAIN}" textAlign="Center" width="100%" required="true" />
                        <t:template>
                            <lib-m:EditModeVBox editableValue="{list>_row_editable_}">
                                <Text text="{list>message_type_code}" />
                                <lib-m:CodeComboBox selectedKey="{list>chain_code}" width="100%" showSecondaryValues="true"
                                    items="{
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ],
                                        serviceName: 'cm.util.CommonService',
                                        entityName: 'Code'
                                    }"
                                    editable="{= ${list>_row_state_} === 'C' }" required="true">
                                </lib-m:CodeComboBox>
                            </lib-m:EditModeVBox>
						</t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
		<f:footer>
			<OverflowToolbar>
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
				<ToolbarSpacer />
			</OverflowToolbar>
		</f:footer>
    </f:DynamicPage>
</mvc:View>