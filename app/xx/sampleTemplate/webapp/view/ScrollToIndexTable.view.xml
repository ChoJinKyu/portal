<mvc:View
    controllerName="com.template.sampleTemplate.controller.ScrollToIndexTable"
    displayBlock="true"
    xmlns="sap.f"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">
    <core:ComponentContainer
        height="100%"
        settings="{
            id : 'sap.m.TableScrollToIndex'
        }">
        <FlexibleColumnLayout
            autoFocus="false"
            id="fcl"
            stateChange="onStateChanged"
            restoreFocusOnBackNavigation="true"
            backgroundDesign="Translucent"/>
    </core:ComponentContainer>
</mvc:View>