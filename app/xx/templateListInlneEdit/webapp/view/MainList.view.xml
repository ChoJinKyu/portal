<mvc:View 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    controllerName="xx.templateListInlneEdit.controller.MainList"
    height="100%">
    <!-- controllerName="xx.templateListInlneEdit.controller.MainList"  -->

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            
                            <VBox>
                                <Label text="Chain" labelFor="searchChainS" required="true"></Label>
                                <ComboBox id="searchChainS" width="100%" selectedKey="CM" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Language" labelFor="searchLanguageS"></Label>
                                <ComboBox id="searchLanguageS" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="" text="Choose a Language" />
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Keyword" labelFor="searchKeywordS"></Label>
                                <Input id="searchKeywordS" placeholder="Keywords of the Code or Content"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Chain" labelFor="searchChainE" required="true"></Label>
                                <ComboBox id="searchChainE" width="100%" selectedKey="CM" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Language" labelFor="searchLanguageE"></Label>
                                <ComboBox id="searchLanguageE" width="100%" items="{
                                        path: 'util>/CodeDetails',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                            {path: 'company_code', operator: 'EQ', value1: '*'},
                                            {path: 'group_code', operator: 'EQ', value1: 'CM_LANG_CODE'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="" text="Choose a Language" />
                                        <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Keyword" labelFor="searchKeywordE"></Label>
                                <Input id="searchKeywordE" placeholder="Keywords of the Code or Content"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Chain " labelFor="searchfield"></Label>
                            <SearchField />
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Select Box " labelFor="select"></Label>
                            <Select width="100%" selectedKey="all">
                                <items>
                                    <core:Item key="all" text="ALL" />
                                    <core:Item key="1" text="Select 1" />
                                    <core:Item key="2" text="Select 2" />
                                </items>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Combo Box " labelFor="combo"></Label>
                            <ComboBox width="100%">
                                <core:Item text="Combo 1" />
                                <core:Item text="Combo 2" />
                                <core:Item text="Combo 3" />
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Multi Combo Box "></Label>
                            <MultiComboBox>
                                <core:Item text="Multi 1" />
                                <core:Item text="Multi 2" />
                                <core:Item text="Multi 3" />
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="listMainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        mode="MultiSelect" 
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onListMainTableUpdateFinished"
                        items="{
                            path: '/Message',
                            parameters: {
                                $$updateGroupId : 'odataGroupIdForUpdate'
                            }
                        }"
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Messages" level="H2"/>
                            <ToolbarSpacer/>
                            <SearchField width="17.5rem" search=".onListMainTableFilterPress" />
                            <!-- Add the Personalization button -->
                            <Button id="listMainTableDraftButton" text="Draft" type="Transparent" press=".onListMainTableDraftButtonPress" />
                            <Button id="listMainTableCancelButton" text="Cancel" type="Transparent" press=".onListMainTableCancelButtonPress" />
                            <Button id="listMainTableConfirmButton" text="Confirm" type="Emphasized" press=".onListMainTableConfirmButtonPress" />
                            <ToolbarSeparator/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="listMainColumnChainCode" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="12em" >
                            <Text text="Chain" />
                        </Column>
                        <Column id="listMainColumnLanguageCode" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="12em" >
                            <Text text="Language" />
                        </Column>
                        <Column id="listMainColumnMessageCode" minScreenWidth="Tablet" hAlign="Right" width="12em" >
                            <Text text="Code" />
                        </Column>
                        <Column id="listMainColumnMessageContents" minScreenWidth="Tablet" hAlign="Left">
                            <Text text="Content" />
                        </Column>
                        <Column id="listMainColumnMessageTypeCode" minScreenWidth="Tablet" hAlign="Center" width="12em" >
                            <Text text="Type" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Input value= "{chain_code}" />
                            </cells>
                            <cells>
                                <Input value="{language_code}" />
                            </cells>
                            <cells>
                                <Input value="{message_code}" />
                            </cells>
                            <cells>
                                <Input value="{message_contents}"/>
                            </cells>
                            <cells>
                                <ComboBox id="MainTableMessageTypeCodeColumnComboBox" width="100%" items="{
                                    path: 'util>/CodeDetails',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'company_code', operator: 'EQ', value1: '*'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_MESSAGE_TYPE_CODE'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="" text="Choose a Language" />
                                    <core:Item key="{util>code}" text="{util>code} :{util>code_description}" />
                                </items>
                                </ComboBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>