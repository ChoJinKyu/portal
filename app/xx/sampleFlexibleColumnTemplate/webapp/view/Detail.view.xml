<mvc:View displayBlock="true" controllerName="com.template.sampleFlexibleColumnTemplate.controller.Detail" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
        xmlns:form="sap.ui.layout.form"
        xmlns:layout="sap.ui.layout"
        xmlns:tnt="sap.tnt"
        xmlns:co="sap.suite.ui.commons"
        xmlns:u="sap.ui.unified"
        xmlns:m="sap.m">

	<ObjectPageLayout id="ObjectPageLayout"
        showFooter="true"
        toggleHeaderOnTitleClick="true"
        headerExpanded="true"
        showTitleInHeaderContent = "true"
        alwaysShowContentHeader = "true"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle>
						<expandedHeading>
							<m:Title text="{products>4}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

						<navigationActions>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
						</navigationActions>

					</ObjectPageDynamicHeaderTitle>
				</headerTitle>

				<headerContent>
			<m:FlexBox wrap="Wrap">
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Process : "/>
                    <co:MicroProcessFlow>
                        <co:content>
                            <co:MicroProcessFlowItem icon="sap-icon://complete" stepWidth="3em"/>
                            <co:MicroProcessFlowItem icon="sap-icon://complete" stepWidth="3em"/>
                            <co:MicroProcessFlowItem icon="sap-icon://complete" stepWidth="3em"/>
                            <co:MicroProcessFlowItem icon="sap-icon://complete" stepWidth="3em"/>
                            <co:MicroProcessFlowItem icon="sap-icon://complete" stepWidth="3em"/>
                            <co:MicroProcessFlowItem state="Error" icon="sap-icon://circle-task" stepWidth="3em"/>
                            <co:MicroProcessFlowItem stepWidth="3em"/>
                            <co:MicroProcessFlowItem stepWidth="3em"/>
                            <co:MicroProcessFlowItem stepWidth="3em"/>
                        </co:content>
			        </co:MicroProcessFlow>
                    <layout:HorizontalLayout>
                        <m:Text text="PR" width="4em" textAlign="Center"/>
                        <m:Text text="Budget" width="4em" textAlign="Center"/>
                        <m:Text text="RFQ" width="5em" textAlign="Center"/>
                        <m:Text text="Mold Spec" width="5em" textAlign="Center"/>
                        <m:Text text="Purchase Contract" width="5em" textAlign="Center"/>
                        <m:Text text="PO" width="5em" textAlign="Center"/>
                        <m:Text text="RCV" width="5em" textAlign="Center"/>
                        <m:Text text="Lease Contract" width="5em" textAlign="Center"/>
                        <m:Text text="Invoice" width="5em" textAlign="Center"/>
                    </layout:HorizontalLayout>
                </layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" id="goalsSection" title="General Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
                            <m:HBox alignItems="Center">
                                <m:Label
                                    text="Report Name"
                                    design="Bold"
                                    class="sapUiTinyMarginEnd"
                                    textAlign="Left"
                                    labelFor="input"
                                    required="{contModel>/editMode}"/>
                                <m:Text
                                    text="Hisen2 에너지 1등급 금형 발주품의"
                                    visible="{contModel>/readMode}">
                                </m:Text>
                                <m:Input
                                    id="input"
                                    width="20em"
                                    placeholder="필수"
                                    value="Hisen2 에너지 1등급 금형 발주품의"
                                    visible="{contModel>/editMode}">
                                </m:Input>
                            </m:HBox>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="info">
						<blocks>
                            <form:SimpleForm
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                adjustLabelSpan="false"
                                labelSpanL="4"
                                labelSpanM="4"
                                emptySpanL="0"
                                emptySpanM="0"
                                columnsL="2"
                                columnsM="2">
                                <form:content>
                                    <m:VBox>
                                        <m:Label
                                            text="Purpose of Order"/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="읽기모드">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            value="수정모드"
                                            placeholder="">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="Period"/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="2020-11-04">
                                        </m:Text>
                                        <m:DatePicker
                                            id="date"
                                            visible="{contModel>/editMode}"
                                            placeholder="Date"/>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="Remark"/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="Remark">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder="">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                </form:content>
                            </form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="Process별 담당부서">
						<blocks>
                            <form:SimpleForm
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                adjustLabelSpan="false"
                                labelSpanL="4"
                                labelSpanM="4"
                                emptySpanL="0"
                                emptySpanM="0"
                                columnsL="2"
                                columnsM="2">
                                <form:content>
                                    <m:VBox>
                                        <m:HBox alignItems="Center">
                                            <tnt:InfoLabel text="1" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <m:Label
                                                text="금형개발의뢰 : "/>
                                        </m:HBox>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="의뢰">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:HBox alignItems="Center">
                                            <tnt:InfoLabel text="2" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <m:Label
                                                text="금형개발접수 : "/>
                                        </m:HBox>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="접수">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:HBox alignItems="Center">
                                            <tnt:InfoLabel text="3" 
                                                renderMode="Narrow" 
                                                colorScheme="7" 
                                                displayOnly= "true" 
                                                class="sapUiTinyMarginEnd"/>
                                            <m:Label
                                                text="예산집행품의 : "/>
                                        </m:HBox>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="품의">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="4. 금형 상세 확정: "/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="확정">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="5. 발주품의 : "/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="발주품의">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="6. 입고확정 : "/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="입고확정">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                    <m:VBox>
                                        <m:Label
                                            text="7. 입고품의: "/>
                                        <m:Text
                                            visible="{contModel>/readMode}"
                                            text="입고품의">
                                        </m:Text>
                                        <m:Input
                                            visible="{contModel>/editMode}"
                                            placeholder=""
                                            showValueHelp="true">
                                        </m:Input>
                                        <m:layoutData>
                                            <layout:GridData
                                                span="XL2 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:VBox>
                                </form:content>
                            </form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>

                    <ObjectPageSubSection title="Descriprion">
						<blocks>
                            <layout:VerticalLayout id="idVerticalLayout" class="sapUiContentPadding" width="100%">
                            </layout:VerticalLayout>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="Attachment" importance="Medium">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
                            <u:FileUploader
                                id="fileUploader"
                                name="myFileUpload"
                                uploadUrl="upload/"
                                tooltip="Upload your file to the local server"
                                uploadComplete="handleUploadComplete"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" id="employmentSection" title="Order Parts">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
                            <m:Table id=""
                                    mode="{= ${contModel>/readMode}?'None':'MultiSelect'}"
                                    sticky="HeaderToolbar,ColumnHeaders"
                                    inset="false"
                                    class="sapFDynamicPageAlignContent"
                                    width="auto">
                                <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:Title text="Total Order Amount" level="H2"/>
                                        <m:ObjectStatus
                                            text="27,000,000 KRW"
                                            state="Error" />
                                        <m:ToolbarSpacer/>
                                        <m:HBox 
                                            visible="{contModel>/editMode}">
                                            <m:Button type="Transparent" text="Add"/>
                                            <m:Button type="Transparent" text="Delete"/>
                                        </m:HBox>
                                    </m:Toolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column
                                            width="12em">
                                        <m:Text text="Model" />
                                    </m:Column>
                                    <m:Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true">
                                        <m:Text text="Part No" />
                                    </m:Column>
                                    <m:Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true">
                                        <m:Text text="Budget" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Currency" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Order" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="T_EST Amount" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Prod Type" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Family Part No" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:ObjectIdentifier
                                                    title="{Name}"
                                                    text="{ProductId}"/>
                                            <m:Text
                                                    text="{SupplierName}" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="Report Line">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
                            <m:Table
                                    sticky="HeaderToolbar,ColumnHeaders"
                                    inset="false"
                                    class="sapFDynamicPageAlignContent"
                                    width="auto">
                                <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:ToolbarSpacer/>
                                        <m:Button 
                                            type="Transparent" 
                                            text="Address Book"
                                            icon="sap-icon://address-book"/>
                                    </m:Toolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column
                                            width="12em">
                                        <m:Text text="Model" />
                                    </m:Column>
                                    <m:Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true">
                                        <m:Text text="Part No" />
                                    </m:Column>
                                    <m:Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true">
                                        <m:Text text="Budget" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Currency" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Order" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="T_EST Amount" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Prod Type" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Family Part No" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:ObjectIdentifier
                                                    title="{Name}"
                                                    text="{ProductId}"/>
                                            <m:Text
                                                    text="{SupplierName}" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                            <m:Text
                                                    text="" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Transparent" text="Draft"/>
                <m:Button type="Transparent" text="Edit" press=".doEditMode"/>
				<m:Button type="Transparent" text="Cancel" press=".doCancelMode"/>
				<m:Button type="Emphasized" text="Confirm"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>