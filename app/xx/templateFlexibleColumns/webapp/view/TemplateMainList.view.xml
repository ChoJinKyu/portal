<mvc:View controllerName="xx.templateFlexibleColumns.controller.TemplateMainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/CONTROL_OPTION_MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2" class="searchBox">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/CHAIN}:" labelFor="searchChain" required="true"></Label>
                            <ComboBox id="searchChain" width="100%" selectedKey="CM" items="{
                                    path: 'common>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{common>code}" text="{common>code}: {common>code_description}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/KEYWORD}:" labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="Code or Content"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/OPTION}:" labelFor="searchUsageSegmentButton"></Label>
                            <SegmentedButton id="searchUsageSegmentButton" selectedKey="all" class="sapUiSmallMarginBottom" width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="all" width="4.1rem" />
                                    <SegmentedButtonItem text="Site" key="site" width="4.1rem" />
                                    <SegmentedButtonItem text="Company" key="company" width="4.1rem" />
                                    <SegmentedButtonItem text="Role" key="role" width="4.1rem" />
                                    <SegmentedButtonItem text="Org." key="org" width="4.1rem" />
                                    <SegmentedButtonItem text="User" key="user" width="4.1rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="CM Input with Dialog (Code): " labelFor="cmInputWithCodeDialog"></Label>
                            <Input id="cmInputWithCodeDialog"
                                placeholder="Choose a code from the ValueHelp"
                                value=""
                                showValueHelp="true" valueHelpRequest=".onCmInputWithCodeValuePress">
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S10" />
                            </layoutData>
                        </VBox>
                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/ControlOptionMasters}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Control Options ({= ${list>/ControlOptionMasters}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnCode" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="{I18N>/CODE}" />
                        </Column>
                        <Column id="mainColumnName" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="Name" />
                        </Column>
                        <Column id="mainColumnStartDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Start Date" />
                        </Column>
                        <Column id="mainColumnEndDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="End Date" />
                        </Column>
                        <Column id="mainColumnSiteFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Site" />
                        </Column>
                        <Column id="mainColumnCompanyFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Company" />
                        </Column>
                        <Column id="mainColumnRoleFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Role" />
                        </Column>
                        <Column id="mainColumnOrganizationFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="Org." />
                        </Column>
                        <Column id="mainColumnUserFlag" minScreenWidth="Tablet" hAlign="Center" width="3rem">
                            <Text text="User" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>control_option_code}"/>
                                <ObjectIdentifier text="{list>control_option_name}"/>
                                <ObjectIdentifier text="{
                                        path: 'list>start_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                                <ObjectIdentifier text="{
                                        path: 'list>end_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                                <ObjectStatus
                                    icon="{= ${list>site_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>company_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>role_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>organization_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>user_flag} === true ? 'sap-icon://accept' : ''}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>