<mvc:View
    controllerName="pg.md.mdCategoryItem.controller.mdCategoryItemDetail"
	xmlns:uxap="sap.uxap"
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">

    <uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="false"
		alwaysShowContentHeader = "true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="false"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
		showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="End">
                        <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        <Title text="{I18N>/SPMD_CHARACTER_DETAIL}" wrapping="true" class="" />
                    </HBox>
                </uxap:heading>
				<!-- <uxap:expandedHeading>
					<Title text="{I18N>/SPMD_CHARACTER_DETAIL}" wrapping="true" />
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<Title text="{I18N>/SPMD_CHARACTER_DETAIL}" wrapping="true" />
				</uxap:snappedHeading>
				<uxap:snappedTitleOnMobile>
					<Title text="{I18N>/MASTER}" />
				</uxap:snappedTitleOnMobile>
				 <uxap:actions>
					<Button id="pageEditButton" text="{I18N>/UPDATE}" type="Emphasized" press=".onPageEditButtonPress" />
					<Button id="pageDeleteButton" text="Delete" type="Transparent" press=".onPageDeleteButtonPress" />
				</uxap:actions> -->
                <uxap:navigationActions>
					<OverflowToolbarButton id="pageEnterFullScreenButton" type="Transparent" icon="sap-icon://full-screen" press="onPageEnterFullScreenButtonPress" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<OverflowToolbarButton id="pageExitFullScreenButton" type="Transparent" icon="sap-icon://exit-full-screen" press="onPageExitFullScreenButtonPress" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<!-- <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/> -->
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap" visible="true">
			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="{I18N>/MASTER}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1" >
                        <form:SimpleForm id="midObjectForm1Edit" editable="true">
                            
                            <!-- <core:Title text="Normal" /> -->	
                            <Label text="{I18N>/BIZUNIT_CODE}" />
                            <Text text="{master>/org_code}"/>
                                
                            <Label text="{I18N>/BIZUNIT_NAME}" />
                            <Text text="{master>/org_infos/bizunit_name}"/>	

                            <Label text="{I18N>/SPMD_CHARACTER_CODE}"/>
                            <Text text="{master>/spmd_character_code}"/>

                            <Label id="labelCharCodeName" text="{I18N>/SPMD_CHARACTER_CODE_NAME}"/>
                            <VBox>
                                <Text id="retrieveCharCodeName" text="{master>/spmd_character_code_name}"/>
                                <Input id="editCharCodeName" value="{
                                    path: 'master>/spmd_character_code_name',
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        maxLength: 50
                                    }
                                }" />      
                            </VBox>

                            <Label text="{I18N>/SPMD_CHARACTER_DESC}"/>
                            <VBox>
                                <Text id="retrieveCharDesc" text="{master>/spmd_character_desc}"/>
                                <Input id="editCharDesc" value="{
                                        path: 'master>/spmd_character_desc',
                                        type: 'sap.ui.model.type.String',
                                        constraints: {
                                            maxLength: 50
                                        }
                                    }" />
                            </VBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/LANGUAGE}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<Table id="midTable" 
								sticky="HeaderToolbar,ColumnHeaders" 
								inset="false" 
								items="{details>/MdCategoryItemLng}"
								class="sapFDynamicPageAlignContent" 
								updateFinished=".onMidTableUpdateFinished"
								mode="MultiSelect" 
                                autoPopinMode="true" 
								width="auto">
							<headerToolbar>
								<OverflowToolbar>
									<!-- <Title text="Level and Values" level="H2"/> -->
									<ToolbarSpacer/>
									<!-- Add the Personalization button -->
									<Button id="midTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMidTableAddButtonPress" visible="false"/>
									<Button id="midTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMidTableDeleteButtonPress" visible="false"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column id="mainColumnState" minScreenWidth="Tablet" hAlign="Center" width="40px" >
									<Text text="" />
								</Column>
								<Column id="midColumnLevelCode" minScreenWidth="Tablet" hAlign="Center" importance="High">
									<Text text="{I18N>/LANGUAGE}" />
								</Column>
								<Column id="midColumnLevelValue" minScreenWidth="Tablet" hAlign="Center" >
									<Text text="{I18N>/SPMD_CHARACTER_CODE_NAME}" />
								</Column>
								<Column id="midColumnValue" minScreenWidth="Tablet" hAlign="Center" >
									<Text text="{I18N>/SPMD_CHARACTER_DESC}" />
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Inactive">
									<cells>
										<Text text="{details>_row_state_}"/>
										<Input value="{details>language_code}"/>
										<Input value="{details>spmd_character_code_name}"/>
										<Input value="{details>spmd_character_desc}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

		</uxap:sections>

		<uxap:footer>
			<OverflowToolbar>
                <Button
                    icon="sap-icon://alert"
                    type="Emphasized"
                    text="{= ${message>/}.length }"
                    visible="true"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
				<ToolbarSpacer />
				<Button id="pageCancelButton" type="Transparent" text="{I18N>/CANCEL}" press=".onPageCancelEditButtonPress"/>
			    <Button id="pageEditButton" type="Transparent" text="{I18N>/UPDATE}" press=".onPageEditButtonPress" />
			    <Button id="pageDeleteButton" type="Transparent" text="{I18N>/DELETE}" press=".onPageDeleteButtonPress" />
				<Button id="pageSaveButton" type="Emphasized" text="{I18N>/SAVE}" press=".onPageSaveButtonPress" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>