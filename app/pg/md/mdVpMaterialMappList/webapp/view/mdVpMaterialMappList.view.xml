<mvc:View controllerName="pg.md.mdVpMaterialMappList.controller.mdVpMaterialMappList"
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f"  
    xmlns:t="sap.ui.table"
	xmlns:dnd="sap.ui.core.dnd"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    height="100%">

<f:DynamicPage id="page" 
    toggleHeaderOnTitleClick="ture" 
    headerExpanded="true" 
    fitContent="true">
      <!--DynamicPage Title -->
      <f:title>
        <f:DynamicPageTitle stateChange="stateChange">
          <f:heading>
            <Title text="{I18N>/MATERIAL_BASE_INFO_MANAGEMENT}" />
          </f:heading>  
        <f:snappedContent>
        </f:snappedContent>        
        <f:expandedContent>
        </f:expandedContent>
          <!-- 조회 -->
          <!-- <f:actions>
            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" visible="false"/>
          </f:actions> -->
        </f:DynamicPageTitle>
      </f:title>

      <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" 
                            maxContainerCols="2" 
                            editable="true" 
                            layout="ResponsiveGridLayout" 
                            adjustLabelSpan="false" 
                            labelSpanL="4" 
                            labelSpanM="4" 
                            emptySpanL="0" 
                            emptySpanM="0" 
                            columnsL="2" 
                            columnsM="2">
                <form:content>
                    <VBox>
                        <Label text="{I18N>/TENANT}" labelFor="searchTenantCombo" required="true"></Label>
                        <ComboBox id="searchTenantCombo" width="100%" items="{
                                path: 'org>/Org_Tenant',
                                filters: []
                            }"
                            selectionChange="onChangeTenant">
                            <items>
                                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData> 
                    </VBox>
                    <VBox>   
                        <Label text="{I18N>/BUSINESS_UNIT}" labelFor="searchChain" required="true"></Label>
                        <ComboBox id="searchChain" width="100%" placeholder="All" selectedKey="" >
                        <!-- <ComboBox id="searchChain" width="100%" placeholder="All" selectedKey="" items="{
                                path: 'org>/Org_Unit',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                ]
                            }"> -->
                            <items>
                                <core:Item key="{org>bizunit_code}" text="{org>bizunit_code}: {org>bizunit_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData> 
                    </VBox>
                    <VBox>
                        <Label text= "{I18N>/VENDOR_POOL}" labelFor="search_Vp_Name"></Label>
                        <HBox>
                            <SearchField id="search_Vp_Name"
                                        search=".onDialogTreeCreate" 

                                        />
                            <Input id="search_Vp_Code" placeholder="Input data" visible ="false"></Input>
                        </HBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData>
                    </VBox>                              

                    </form:content>
                </form:SimpleForm>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>

                        <VBox>
                            <Label text="{I18N>/REPR_DEPARTMENT_CODE}"></Label>
                            <lib-m:CodePicker id="search_Dept"
                                placeholder="Enter a department name"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                    keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M5 S10" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label
                                text="{I18N>/REGISTER_FLAG}"
                                labelFor="search_codeGroupStatusflag">
                            </Label>
                            <SegmentedButton 
                                id="search_statusflag"
                                selectedKey="" 
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="{I18N>/ALL}" width="4em"/>
                                    <SegmentedButtonItem text="{I18N>/REGISTER}" width="4em" key="100"/>
                                    <SegmentedButtonItem text="{I18N>/UNREGISTERED}" width="4em" key="200"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>

                    </form:content>
                </form:SimpleForm>                       
            </f:DynamicPageHeader> 
      </f:header>    
         
      <f:content>
        <VBox>
            <t:Table id="mainTable"
                    selectionMode="MultiToggle"
                    rows="{
                        path: 'list>/MdVpMatrial',
                        filters: [
                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                        ]
                    }"
                    rowSelectionChange=".onCheck"
                    visibleRowCount="15"
                    fixedColumnCount="10"
                    columnResize="onColumnResize">
                <t:extension>
                    <OverflowToolbar>
                        <Title id="title" level="H2"/> 
                        <ToolbarSpacer/>
                        <Button id="mainTableCancelButton" text="{I18N>/CANCEL}" type="Transparent" press=".onMainTableCancelButtonPress" />
                        <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress"/>
                        <ToolbarSeparator/>
                            <u:FileUploader id="rFileUploader" uploadComplete="handleUploadComplete" change=".onImportChange" style="Transparent" 
                                            buttonOnly="true" iconOnly="true" icon="sap-icon://upload" tooltip="Upload"/>
                        <!-- <MenuButton buttonMode="Split" useDefaultActionOnly="true" 
                                    icon="sap-icon://excel-attachment" defaultAction=".onExport">
                            <menu>
                            </menu>
                        </MenuButton> -->
                            <Button icon="sap-icon://excel-attachment" press=".onExport">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <OverflowToolbarButton icon="sap-icon://action-settings" tooltip="Column Settings" text="Column Settings" press="onColumns"/>
                    </OverflowToolbar>
                </t:extension>
                
                <t:columns>
                    <t:Column id="mainStateColumn" minScreenWidth="Tablet" hAlign="Center" width="40px">
                        <Label text="" textAlign="Center" width="100%"/>
                        <t:template>
                            <ObjectStatus icon="{
                                path: 'list>_row_state_',
                                formatter: '.formatter.toModelStateColumnIcon'
                            }" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/VENDOR_POOL_CODE}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>vendor_pool_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/VENDOR_POOL_LOCAL_NAME}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>vendor_pool_local_name}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/MATERIAL_CODE}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>material_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/MATERIAL_NAME}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>material_code_name}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/REGISTER_FLAG}" width="6rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>mapping_flag}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/SUPPLIER_CODE}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>supplier_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/SUPPLIER_LOCAL_NAME}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>supplier_code_name}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/REPR_DEPARTMENT_CODE}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>repr_department_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{I18N>/REPR_DEPARTMENT_NAME}" width="8rem" hAlign="Center" >    
                        <t:template>
                            <Text text="{list>department_local_name}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                </t:columns>
                                  
            </t:Table> 
        </VBox>
      </f:content>
    </f:DynamicPage>
</mvc:View>