<mvc:View controllerName="pg.md.mdVpMaterialMappList.controller.mdVpMaterialMappList"
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f"  
    xmlns:t="sap.ui.table"
	xmlns:dnd="sap.ui.core.dnd"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

<f:DynamicPage id="page" 
    toggleHeaderOnTitleClick="ture" 
    headerExpanded="true" 
    fitContent="true">
      <!--DynamicPage Title -->
      <f:title>
        <f:DynamicPageTitle>
          <f:heading>
            <Title text="{i18n>appTitle}" />
          </f:heading>  
        <f:snappedContent>
        </f:snappedContent>        
        <f:expandedContent>
            <form:SimpleForm id="pageSearchForm" 
                            maxContainerCols="2" 
                            editable="true" 
                            layout="ResponsiveGridLayout" 
                            adjustLabelSpan="false" 
                            labelSpanL="4" 
                            labelSpanM="4" 
                            emptySpanL="0" 
                            emptySpanM="0" 
                            columnsL="2" 
                            columnsM="2">
                <form:content>
                    <VBox>
                        <Label text="테넌트" labelFor="searchTenantCombo" required="true"></Label>
                        <ComboBox id="searchTenantCombo" width="100%" items="{
                                path: 'org>/Org_Tenant',
                                filters: []
                            }"
                            selectionChange="onChangeTenant">
                            <items>
                                <core:Item key="{org>tenant_id}" text="{org>tenant_id} : {org>tenant_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData> 
                    </VBox>
                    <VBox>   
                        <Label text="{I18N>/BUSINESS_UNIT}" labelFor="searchChain" required="true"></Label>
                        <ComboBox id="searchChain" width="100%" placeholder="All" selectedKey="" >
                        <!-- <ComboBox id="searchChain" width="100%" placeholder="All" selectedKey="" items="{
                                path: 'org>/Org_Unit',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                ]
                            }"> -->
                            <items>
                                <core:Item key="{org>bizunit_code}" text="{org>bizunit_code}: {org>bizunit_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData> 
                    </VBox>
                    <VBox>
                        <Label text= "Vendor Pool" labelFor="search_Vp_Name"></Label>
                        <HBox>
                            <SearchField id="search_Vp_Name"
                                        search=".onDialogTreeCreate" 

                                        />
                            <Input id="search_Vp_Code" placeholder="Input data" visible ="false"></Input>
                        </HBox>
                        <layoutData>
                            <layout:GridData span="XL2 L3 M6 S12" />
                        </layoutData>
                    </VBox>                              

                    </form:content>
                </form:SimpleForm>
            </f:expandedContent>
          <!-- 조회 -->
          <!-- <f:actions>
            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" visible="false"/>
          </f:actions> -->
        </f:DynamicPageTitle>
      </f:title>

      <f:header>
            <f:DynamicPageHeader pinnable="true">
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>

                        <VBox>
                            <Label text="대표부서코드"></Label>
                            <lib-m:CodePicker id="search_Dept"
                                placeholder="Enter a department name"
                                keyField="department_id"
                                textField="department_local_name"
                                suggestionItems="{
                                    path: '/',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    serviceUrl: 'srv-api/odata/v2/cm.util.HrService/',
                                    entityName: 'Department'
                                }">
                                <lib-m:CodePickerValueHelp contentWidth="500px" title="Choose a Department"
                                    keyFieldHeaderText="Department ID" textFieldHeaderText="Department" />
                            </lib-m:CodePicker>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M5 S10" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label
                                text="등록여부"
                                labelFor="search_codeGroupStatusflag">
                            </Label>
                            <SegmentedButton 
                                id="search_statusflag"
                                selectedKey="" 
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="등록" width="3em" key="100"/>
                                    <SegmentedButtonItem text="미등록" width="3em" key="200"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label
                                text="사용/미사용 여부"
                                labelFor="search_codeGroupStatusflag">
                            </Label>
                            <SegmentedButton 
                                id="search_useflag"
                                selectedKey="" 
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="사용" width="3em" key="100"/>
                                    <SegmentedButtonItem text="미사용" width="3em" key="200"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>

                    </form:content>
                </form:SimpleForm>                       
            </f:DynamicPageHeader> 
      </f:header>    
         
      <f:content>
        <VBox>
            <t:TreeTable 
                id="treeTable"
                filter="treetablefilter"
                visibleRowCountMode="Auto"
                enableSelectAll="false"
                minAutoRowCount="16"
                fixedColumnCount="3"
                selectionBehavior="Row"
                onAfterRendering="onAfterRendering"
                enableColumnReordering="false"
                rows="{
                    path : 'list>/MdVpItemList',
                    parameters : {
                            arrayNames: ['nodes'],
                            numberOfExpandedLevels: 4
                    }
                }">
                <t:extension>
                    <OverflowToolbar>
                        <Title id="title" level="H2"/> 
                        <ToolbarSpacer/>
                        <Button id="mainTableButtonAllClose" text="Collapse All" type="Transparent" press=".onMainTablecollapseAll" />
                        <Button id="mainTableDeleteButton" text="Creation Request" type="Emphasized" press=".onMainTableDeleteButtonPress"/>
                        <ToolbarSeparator/>
                        
                    </OverflowToolbar>
                </t:extension>
                
                <t:columns>
                    <t:Column label="Vendor Pool" width="15rem">    
                        <t:template>
                            <!-- <Text text="{list>vendor_pool_local_name}" wrapping="false" /> -->
                            <Text text="{list>vendor_pool_local_name}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="대표부서명" width="10rem">    
                        <t:template>
                            <Text text="{list>department_local_name}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column label="상태" width="8rem">    
                        <t:template>
                            <Text text="{list>confirmed_status_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                </t:columns>
                <t:columns id="tableColumns">
					<!-- <t:Column headerSpan="2" hAlign="Center">
						<t:multiLabels>
							<Label text="Contact"/>
							<Label text="Phone" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
                            <Text text="{list>attrItemName1}" wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column>
						<t:multiLabels>
							<Label text="Contact"/>
							<Label text="Phone22" textAlign="Center" width="100%"/>
						</t:multiLabels>
						<t:template>
                            <Text text="{list>attrItemName1}" wrapping="false" />
						</t:template>
					</t:Column> -->
                </t:columns>
                    
            </t:TreeTable> 
        </VBox>
      </f:content>
    </f:DynamicPage>
</mvc:View>