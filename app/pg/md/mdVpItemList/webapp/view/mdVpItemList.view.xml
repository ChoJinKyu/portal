<mvc:View controllerName="pg.md.mdVpItemList.controller.mdVpItemList"
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f"  
	xmlns:dnd="sap.ui.core.dnd"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page" 
    toggleHeaderOnTitleClick="false" 
    headerExpanded="true" 
    fitContent="true">
      <!--DynamicPage Title -->
      <f:title>
        <f:DynamicPageTitle>
          <f:heading>
            <Title text="{i18n>appTitle}" />
          </f:heading>
          <!-- 조회 -->
          <!-- <f:actions>
            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" visible="false"/>
          </f:actions> -->
        </f:DynamicPageTitle>
      </f:title>

      <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>

                        <VBox>
                            <Label text="{I18N>/CHAIN}: " labelFor="searchChainCombo" required="true"/>
                            <ComboBox id="searchChainCombo" width="100%" 
                                selectedKey=""
                                selectionChange=".onSelectionChange"
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                        {path: 'group_code', operator: 'EQ', value1: 'CM_CHAIN_CD'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code}: {util>code_description}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <VBox>
                            <Label text="{I18N>/KEYWORD}: " labelFor="searchKeyword"></Label>
                            <Input id="searchKeyword" placeholder="{I18N>/NCM02002}"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>

                        <FlexBox alignItems="End" justifyContent="End" class="searchBoxButtonArea">
                            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>

                    </form:content>
                </form:SimpleForm>                        
            </f:DynamicPageHeader> 
      </f:header>    
         
      <f:content>
        <VBox>
            <t:TreeTable 
                id="treeTable"
                filter="treetablefilter"
                visibleRowCountMode="Auto"
                enableSelectAll="false"
                minAutoRowCount="16"
                selectionBehavior="Row"
                onAfterRendering="onAfterRendering"
                enableColumnReordering="false"
                rows="{
                    path : 'list>/MdCategoryItem',
                    parameters : {
                            arrayNames: ['nodes'],
                            numberOfExpandedLevels: 4
                    }
                }">
                <t:extension>
                    <OverflowToolbar>
                        <Title id="title" text="Vendor Pool별 관리특성 List" level="H2"/> 
                        <ToolbarSpacer/>
                        <Button id="mainTableCreate1Button" text="{I18N>/CREATE_LOWER_LEVEL}" type="Transparent" press=".onMainTableCreate1ButtonPress" enabled="{= ${master>/indices} === 1 ? ${master>/level} === 0 ? ${sm>/screen} === 'M' ? true : false : false : false}" />
                        <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" enabled="{= ${master>/indices} > 0 ? ${sm>/screen} === 'M' ? true : false : false}"/>
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </t:extension>
                
                <t:columns>
                    <t:Column label="{I18N>/CATEGORY_CODE}">    
                        <t:template>
                            <Text text="{category_code}" wrapping="false" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:TreeTable>
        </VBox>
      </f:content>
    </f:DynamicPage>
</mvc:View>