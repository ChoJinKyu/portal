<mvc:View
    controllerName="pg.md.mdVpItemList.controller.selectedItems"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	height="100%">

        <t:Table id="table"
            selectionMode="Single"
            rows="{
                path: 'tblModel>/right',
                sorter: [
                    {path: 'spmd_category_code', descending: false}, 
                    {path: 'spmd_category_sort_sequence', descending: false}, 
                    {path: 'spmd_character_code', descending: false}, 
                    {path: 'spmd_character_sort_seq', descending: false}
                ]}"
            visibleRowCount="15"
		    noData="Please drag-and-drop Character here."
            width="100%">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title text="{I18N>/ASSIGN_SPMD_CHARACTER_LIST} ({= ${tblModel>/right}.length})" level="H2" />
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/SPMD_CHARACTER_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CHARACTER_CODE_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code_name}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/SPMD_CATEGORY_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CATEGORY_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code_name}" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:dragDropConfig>
                <dnd:DragInfo
                    groupName="selected2available"
                    sourceAggregation="rows"
					dragStart="onDragStart" />
                <dnd:DropInfo
                    groupName="available2selected"
                    targetAggregation="rows"
                    dropPosition="Between"
                    drop="onDropSelectedItemsTable" />
                <dnd:DragDropInfo
                    sourceAggregation="rows"
                    targetAggregation="rows"
                    dropPosition="Between"
					dragStart="onDragStart"
                    drop="onDropSelectedItemsTable"/>
            </t:dragDropConfig>
        </t:Table>
</mvc:View>