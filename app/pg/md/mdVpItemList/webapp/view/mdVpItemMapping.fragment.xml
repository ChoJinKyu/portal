<core:FragmentDefinition
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f"  
	xmlns:dnd="sap.ui.core.dnd"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">
    
    <Dialog id="mappingVpItem" class="sapUiSmallMargin" title="{I18N>/MATERIAL_MANAGEMENT_CHAR_MAP}" contentWidth="80%" >
      <!--DynamicPage Title -->
      <!-- <f:title>
        <f:DynamicPageTitle>
          <f:heading>
            <Title text="{i18n>appTitle}" />
          </f:heading>

          <f:actions>
            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" visible="false"/>
          </f:actions>
        </f:DynamicPageTitle>
      </f:title> -->                 
        <content>
        <VBox> 
            <FlexBox height="40px" alignItems="Start" justifyContent="Start" class="sapUiLargeMarginBottom" >        
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <Label text="{I18N>/VENDOR_POOL_LOCAL_NAME}" design="Bold"/>
                    <Text id="vpCode1"/>       
                </layout:VerticalLayout>      
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <!-- <Label text="VP Level 2" design="Bold"/>
                    <Text id="vpCode2"/>        -->
                </layout:VerticalLayout>     
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <Label text="{I18N>/VENDOR_POOL_CODE}" design="Bold"/>
                    <Text id="vpCode3"/>       
                </layout:VerticalLayout>
            </FlexBox> 
            <HBox renderType="Bare">
                <mvc:XMLView id="availableItems" viewName="pg.md.mdVpItemList.view.availableItems" />
                <VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">
                    <Button
                        class="sapUiTinyMarginBottom"
                        icon="sap-icon://navigation-right-arrow"
                        tooltip="Move to selected"
                        press="moveToSelectedItemsTable"/>
                    <Button
                        icon="sap-icon://navigation-left-arrow"
                        tooltip="Move to available"
                        press="moveToAvailableItemsTable"/>
                </VBox>
                <mvc:XMLView id="selectedItems" viewName="pg.md.mdVpItemList.view.selectedItems" />
            </HBox>
        </VBox>                     
        </content>
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="{I18N>/CANCEL}" type="Transparent" press=".mappingPopupClose"/>
            <Button text="{I18N>/TEMP_SAVE}" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".selectMappingItems"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>