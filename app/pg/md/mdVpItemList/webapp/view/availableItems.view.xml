<mvc:View
    controllerName="pg.md.mdVpItemList.controller.availableItems"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:uxap="sap.uxap" 
	xmlns="sap.m"
    xmlns:lib-m="ext.lib.control.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">
    <uxap:ObjectPageLayout 
        id="sheetMgtPage"
		upperCaseAnchorBar="false"
        showFooter="true"
        showAnchorBar="false"
        toggleHeaderOnTitleClick="false"
        headerContentPinnable="false"
        preserveHeaderStateOnScroll="true">
        
        <uxap:headerContent>
        <t:Table id="table"
            selectionMode="Single"
            selectionBehavior="RowOnly" 
            rows="{tblModel>/left}"
            visibleRowCount="15"
            width="100%">
            <t:extension>
                <OverflowToolbar>
                    <Title text="{I18N>/SPMD_CHARACTER_LIST} ({= ${tblModel>/left}.length})" level="H2"/>
                    <ToolbarSpacer/> 
                    <SearchField id="tableSearchField" class="sapUiSizeCompact" width="15rem" search=".onTableFilterPress" />	
                </OverflowToolbar>
            </t:extension>
            <t:columns>
				<!-- <t:rowSettingsTemplate>
					<t:RowSettings highlight="{Status}" highlightText="{StatusText}"/>
				</t:rowSettingsTemplate> -->
                <t:Column hAlign="Center" width="10rem" id="itemRow">
                    <Label text="{I18N>/SPMD_CHARACTER_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CHARACTER_CODE_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code_name}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/SPMD_CATEGORY_CODE}" textAlign="Center" />
                    <t:template>
                        <lib-m:ColoredText color="{tblModel>rgb_font_color_code}" text="{tblModel>spmd_category_code}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CATEGORY_CODE_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <lib-m:ColoredText color="{tblModel>rgb_font_color_code}" text="{tblModel>spmd_category_code_name}" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:dragDropConfig>
                <dnd:DragInfo
                    groupName="available2selected"
                    sourceAggregation="rows"
                    dragStart="onDragStart"  />
                <dnd:DropInfo
                    groupName="selected2available"
                    drop="onDropAvailableItemsTable" />
            </t:dragDropConfig>
        </t:Table>
        </uxap:headerContent>
	</uxap:ObjectPageLayout>
</mvc:View>