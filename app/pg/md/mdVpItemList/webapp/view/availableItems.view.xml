<mvc:View
    controllerName="pg.md.mdVpItemList.controller.availableItems"
	xmlns:uxap="sap.uxap"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.uilayout.form"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">

        <t:Table id="table"
            selectionMode="Single"
            rows="{tblModel>/left}"
            visibleRowCount="15"
            width="100%">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title text="{I18N>/SPMD_CHARACTER_LIST} ({= ${tblModel>/left}.length})" level="H2"/>
                    <ToolbarSpacer/> 
                    <SearchField id="tableSearchField" width="15rem" search=".onTableFilterPress" />	
                </OverflowToolbar>
            </t:extension>
            <t:columns>
				<!-- <t:rowSettingsTemplate>
					<t:RowSettings highlight="{Status}" highlightText="{StatusText}"/>
				</t:rowSettingsTemplate> -->
                <t:Column hAlign="Center" width="10rem" id="itemRow">
                    <Label text="{I18N>/SPMD_CHARACTER_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CHARACTER_CODE_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code_name}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/SPMD_CATEGORY_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/SPMD_CATEGORY_NAME}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code_name}" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:dragDropConfig>
                <dnd:DragInfo
                    groupName="available2selected"
                    sourceAggregation="rows"
                    dragStart="onDragStart"  />
                <dnd:DropInfo
                    groupName="selected2available"
                    drop="onDropAvailableItemsTable" />
            </t:dragDropConfig>
        </t:Table>
</mvc:View>