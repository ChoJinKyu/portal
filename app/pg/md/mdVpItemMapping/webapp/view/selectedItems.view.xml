<mvc:View
    controllerName="pg.md.mdVpItemMapping.controller.selectedItems"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	height="100%">
            <!-- rows="{
                path: '{tblModel>/right}',
                filters: {path: 'Rank', operator: 'GT', value1: '0'}
            }" -->
        <t:Table id="table"
            selectionMode="Single"
            rows="{tblModel>/right}"
            visibleRowCount="15"
		    noData="Please drag-and-drop Character here."
            width="100%">
            <t:extension>
            <!-- <contextMenu>
                <Menu>
                    <MenuItem text="Move to Available Products" press="moveToAvailableItemsTable" />
                </Menu>
            </contextMenu> -->
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title text="Assigned Character" />
                    <ToolbarSpacer/> 
                    <Button id="midTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onSave"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="범주코드" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="범주명" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_category_code_name}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="특성코드" textAlign="Center" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code}"/>
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="특성코드명" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{tblModel>spmd_character_code_name}" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:dragDropConfig>
                <dnd:DragInfo
                    groupName="selected2available"
                    sourceAggregation="rows"
					dragStart="onDragStart" />
                <dnd:DropInfo
                    groupName="available2selected"
                    targetAggregation="rows"
                    dropPosition="Between"
                    drop="onDropSelectedItemsTable" />
                <dnd:DragDropInfo
                    sourceAggregation="rows"
                    targetAggregation="rows"
                    dropPosition="Between"
					dragStart="onDragStart"
                    drop="onDropSelectedItemsTable"/>
            </t:dragDropConfig>
        </t:Table>
