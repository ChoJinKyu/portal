<mvc:View controllerName="pg.md.mdVpItemMapping.controller.mdVpItemMapping"
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f"  
	xmlns:dnd="sap.ui.core.dnd"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">
    <f:DynamicPage id="page" 
    toggleHeaderOnTitleClick="false" 
    headerExpanded="true" 
    fitContent="true">
      <!--DynamicPage Title -->
      <f:title>
        <f:DynamicPageTitle>
          <f:heading>
            <Title text="{i18n>appTitle}" />
          </f:heading>
          <!-- 조회 -->
          <f:actions>
            <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch" visible="false"/>
          </f:actions>
        </f:DynamicPageTitle>
      </f:title>
      <f:content>
        <VBox> 
            <FlexBox height="40px" alignItems="Start" justifyContent="Start" class="sapUiLargeMarginBottom" >        
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <Label text="VP Level 1" design="Bold"/>
                    <Text text="Panel"/>   
                </layout:VerticalLayout>      
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <Label text="VP Level 2" design="Bold"/>
                    <Text text="Gas"/>
                </layout:VerticalLayout>     
                <layout:VerticalLayout class="sapUiLargeMarginEnd">
                    <Label text="VP Level 3" design="Bold"/>
                    <Text text="GAS_He (VP201610260087)"/>       
                </layout:VerticalLayout>
            </FlexBox> 
            <HBox renderType="Bare">
                <mvc:XMLView id="availableItems" viewName="pg.md.mdVpItemMapping.view.availableItems" />
                <VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">
                    <Button
                        class="sapUiTinyMarginBottom"
                        icon="sap-icon://navigation-right-arrow"
                        tooltip="Move to selected"
                        press="moveToSelectedItemsTable"/>
                    <Button
                        icon="sap-icon://navigation-left-arrow"
                        tooltip="Move to available"
                        press="moveToAvailableItemsTable"/>
                </VBox>
                <mvc:XMLView id="selectedItems" viewName="pg.md.mdVpItemMapping.view.selectedItems" />
            </HBox>
        </VBox>
      </f:content>
    </f:DynamicPage>
</mvc:View>