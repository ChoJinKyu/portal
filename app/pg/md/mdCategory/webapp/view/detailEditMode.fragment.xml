<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:lib-m="ext.lib.control.m"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Edit" editable="false" >
		
		<!-- <core:Title text="Normal" /> -->	
        <Label text="{I18N>/BIZUNIT_CODE}" />
        <Text text="{master>/org_code}"/>
        <Label text="{I18N>/BIZUNIT_NAME}" />
        <Text text="{master>/org_infos/bizunit_name}"/>
        
        <Label text="{I18N>/SPMD_CATEGORY_CODE}" />
        <Text text="{master>/spmd_category_code}"/>
        <Label text="{I18N>/SPMD_CATEGORY_CODE_NAME}" required="true"/>
        <Input value="{
                path: 'master>/spmd_category_code_name',
                type: 'sap.ui.model.type.String',
                constraints: {
                    maxLength: 50
                }
            }" required="true"></Input>  
        <Label text="{I18N>/FONT_RGB_CODE}"/>
        <HBox renderType="Bare">
            <lib-m:ColoredText id="fontColor" text="{master>/rgb_font_color_code}" color="{master>/rgb_font_color_code}"/>
            <!-- <Input id="fontColor"
                width="7rem"
                editable="false"
                value="{
                    path: 'master>/rgb_font_color_code',
                    type: 'sap.ui.model.type.String',
                    constraints: {
                        minLength:1,
                        maxLength: 7
                    }
                }"></Input> -->
            <Button text="" id="liveChangeButton" press="onFontColor" width="2rem" icon="sap-icon://text-color"/>	  
        </HBox>
	</form:SimpleForm>
</core:FragmentDefinition>