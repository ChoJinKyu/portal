<mvc:View
    controllerName="pg.md.mdCategory.controller.mdCategoryDetail"
	xmlns:uxap="sap.uxap"
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="false"
		alwaysShowContentHeader = "true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="false"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true" 
        showFooter="true">
        
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="End">
                        <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        <Title text="{I18N>/SPMD_CATEGORY_DETAIL}" wrapping="true" class="" />
                    </HBox>
                </uxap:heading>
                <uxap:navigationActions>
					<OverflowToolbarButton id="pageEnterFullScreenButton" type="Transparent" icon="sap-icon://full-screen" press="onPageEnterFullScreenButtonPress" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<OverflowToolbarButton id="pageExitFullScreenButton" type="Transparent" icon="sap-icon://exit-full-screen" press="onPageExitFullScreenButtonPress" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<!-- <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://decline" text="back" tooltip="back to the list" press=".onPageNavBackButtonPress" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/> -->
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<FlexBox wrap="Wrap" visible="false">
			</FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="{I18N>/MASTER}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1" >
                        <form:SimpleForm id="midObjectForm1Edit" editable="true">
                            
                            <!-- <core:Title text="Normal" /> -->	
                            <Label text="{I18N>/BIZUNIT_CODE}" />
                            <Text text="{master>/org_code}"/>

                            <Label text="{I18N>/BIZUNIT_NAME}" />
                            <Text text="{master>/org_infos/bizunit_name}"/>
                            
                            <Label text="{I18N>/SPMD_CATEGORY_CODE}" />
                            <Text text="{master>/spmd_category_code}"/>

                            <Label id="labelCtrgCodeName" text="{I18N>/SPMD_CATEGORY_CODE_NAME}"/>
                            <VBox><Text id="retrieveCtgrCodeName" text="{master>/spmd_category_code_name}"/>
                            <Input id="editCtgrCodeName" width="57%" maxLength="50"
                                value="{
                                    path: 'master>/spmd_category_code_name',
                                    type: 'sap.ui.model.type.String',
                                    constraints: {
                                        maxLength: 50
                                    }
                                }" required="true" />  
                            </VBox>

                            <Label text="{I18N>/FONT_RGB_CODE}"/>
                            <HBox renderType="Bare">
                                <lib-m:ColoredText id="fontColor" text="{master>/rgb_font_color_code}" color="{master>/rgb_font_color_code}"/>
                                <Button text="" id="fontColorChange" press="onFontColor" width="2rem" icon="sap-icon://text-color" visible="false"/>	  
                            </HBox>
                        </form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/LANGUAGE}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<Table id="midTable" 
								sticky="HeaderToolbar,ColumnHeaders" 
								inset="false" 
								items="{details>/MdCategoryLng}"
								class="sapFDynamicPageAlignContent" 
								mode="MultiSelect" 
                                autoPopinMode="true" 
								width="auto">
							<headerToolbar>
								<OverflowToolbar>
									<Title text="{I18N>/LIST}" level="H2"/>
									<ToolbarSpacer/>
									<!-- Add the Personalization button -->
									<Button id="midTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMidTableAddButtonPress" visible="false"/>
									<Button id="midTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMidTableDeleteButtonPress" visible="false"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column id="mainColumnState" minScreenWidth="Tablet" hAlign="Center" width="40px" >
									<Text text="" />
								</Column>
								<Column id="midColumnLevelCode" minScreenWidth="Tablet" hAlign="Center" importance="High">
									<Text text="{I18N>/LANGUAGE}" />
								</Column>
								<Column id="midColumnLevelValue" minScreenWidth="Tablet" hAlign="Center" >
									<Text text="{I18N>/SPMD_CATEGORY_CODE_NAME}" />
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Inactive">
									<cells>
										<Text text="{details>_row_state_}"/>
										<Input id="tableLngCode" hAlign="Center" value="{details>language_code}" /> <!--editable="false" -->
										<Input id="tableCtgrName" maxLength="50" value="{details>spmd_category_code_name}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

		</uxap:sections>

		<uxap:footer>
			<OverflowToolbar>
                    <!-- text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }" -->
                <Button
                    icon="sap-icon://alert"
                    type="Emphasized"
                    text="{= ${message>/}.length }"
                    visible="true"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
				<ToolbarSpacer />
				<Button id="pageCancelButton" type="Transparent" text="{I18N>/CANCEL}" press=".onPageCancelEditButtonPress"/>
			    <Button id="pageEditButton" type="Transparent" text="{I18N>/UPDATE}" press=".onPageEditButtonPress" />
			    <Button id="pageDeleteButton" type="Transparent" text="{I18N>/DELETE}" press=".onPageDeleteButtonPress" />
				<Button id="pageSaveButton" type="Emphasized" text="{I18N>/SAVE}" press=".onPageSaveButtonPress" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>