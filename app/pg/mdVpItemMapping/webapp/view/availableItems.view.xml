<mvc:View
    controllerName="pg.mdVpItemMapping.controller.availableItems"
	xmlns:uxap="sap.uxap"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">
	<Table
		id="table"
		mode="SingleSelectMaster"
		growing="true"
		growingThreshold="20"
		beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{
			path: '{list>/MdCategory}'
		}">
		<contextMenu>
			<Menu>
				<MenuItem text="Move to Selected Products" press="moveToSelectedProductsTable" />
			</Menu>
		</contextMenu>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="SPMD Character List" />
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="범주코드" />
			</Column>
			<Column>
				<Text text="범주명" />
			</Column>
			<Column>
				<Text text="특성코드" />
			</Column>
			<Column>
				<Text text="특성명" />
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo
				groupName="available2selected"
				sourceAggregation="items" />
			<dnd:DropInfo
				groupName="selected2available"
				drop="onDropAvailableProductsTable" />
		</dragDropConfig>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{spmd_category_code}" wrapping="false" />
					<Text text="{spmd_category_code_name}" wrapping="false" />
					<Text text="{spmd_character_code}" wrapping="false" />
					<Text text="{spmd_character_code_name}" wrapping="false" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>