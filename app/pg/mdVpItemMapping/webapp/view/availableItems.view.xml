<mvc:View
    controllerName="pg.mdVpItemMapping.controller.availableItems"
	xmlns:uxap="sap.uxap"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:layout="sap.ui.layout" 
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
    height="100%">
	<Table
		id="table"
		mode="SingleSelectMaster"
		growing="true"
		growingThreshold="20"
		beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{
			path: 'list>/MdVpItemMapping'
		}">
		<contextMenu>
			<Menu>
				<MenuItem text="Move to Selected Products" press="moveToSelectedProductsTable" />
			</Menu>
		</contextMenu>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Available Products" />
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Product Name" />
			</Column>
			<Column>
				<Text text="Category" />
			</Column>
			<Column
				hAlign="End"
				width="6rem">
				<Text text="Quantity" />
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo
				groupName="available2selected"
				sourceAggregation="items" />
			<dnd:DropInfo
				groupName="selected2available"
				drop="onDropAvailableProductsTable" />
		</dragDropConfig>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Name}" wrapping="false" />
					<Text text="{Category}" wrapping="false" />
					<Text text="{
						path: 'Quantity',
						type: 'sap.ui.model.type.Integer'
					}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>