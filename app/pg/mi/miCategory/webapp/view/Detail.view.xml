		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="{I18N>/MASTER_INFO}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1" >
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/MASTER_INFO}" visible="true">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<form:SimpleForm id="editForm" editable="true"  layout="ColumnLayout"
                                        columnsM="2"
                                        columnsL="3"
                                        columnsXL="4">
                            <!-- <core:Title text="Category 정보" level="H3" /> -->
                            <Label  text="{I18N>/PARENT_CATEGORY_CODE} : " 
                                                design="Bold" 
                                                class="sapMLabelNoText"/>
                                        <Text   id="edit_ParentCategoryCode" 
                                                visible="{= ${master>/level} >= 1 ?  true : false }"
                                                class="sapMLabelNoText"/>
                            <Label  text="{I18N>/CATEGORY_CODE} ({I18N>/MI_CATE_CODE_DESC}) : " 
                                                design="Bold" 
                                                class="sapMLabelNoText"/>
                                        <Text   id="textCode" 
                                                visible="{= ${util>/flag} === 'S' ?  true : false}"
                                                class="sapMLabelNoText"/>                                     
                                        <Input  id="inputCode"
                                                placeholder="입력"
                                                liveChange="usedCheckTextChange"
                                                enabled="{= ${util>/flag} === 'U' ?  false : true }"
                                                class="sapUiSmallMarginEnd"
                                                visible="{= ${util>/flag} === 'S' ?  false : true}"
                                                required="true"
                                        />
                            <Label  text="{I18N>/USE_FLAG} : " 
                                                design="Bold" 
                                                class="sapMLabelNoText"/>
                                        <Text   id="textUsed" 
                                                visible="{= ${util>/flag} === 'S' ?  true : false}"
                                                class="sapMLabelNoText"/>    
                                        <SegmentedButton id="SegmentButtonUsed"  selectedKey="true"
                                                         selectionChange="onSelectionChange"
                                                         class="sapUiSmallMarginEnd"                 
                                                         visible="{= ${util>/flag} === 'S' ?  false : true}">
                                            <items>
                                                <SegmentedButtonItem key="true" text="Yes"/>
                                                <SegmentedButtonItem key="false" text="No" />
                                            </items>
                                        </SegmentedButton>                                 
                                        <!-- <Switch id="switchUsed"
                                                state="false" customTextOn="Yes" customTextOff="No" 
                                                class="sapUiSmallMarginEnd"                 
                                                visible="{= ${util>/flag} === 'S' ?  false : true}"
                                            /> -->

                                        


                            
						</form:SimpleForm>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="{I18N>/LANGUAGE}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <!-- onAfterRendering ="onAfterRendering" updateFinished=".onMidTableUpdateFinished" -->
						<Table id="midTable" 
								sticky="HeaderToolbar,ColumnHeaders" 
                                noDataText="{I18N>/NCM01004}"
								inset="false" 
								items="{ path: '/MICategoryText' }"
								class="sapFDynamicPageAlignContent " 
								mode="{= ${util>/flag} === 'S' ?  'None' : 'MultiSelect'}"
								width="auto">
							<headerToolbar>
								<OverflowToolbar>
									<!-- <Title text="시황자재 Category 언어" level="H2"/> -->
									<ToolbarSpacer/>
									
									<Button id="midTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMidTableAddButtonPress" enabled="{= ${util>/flag} === 'S' ?  false : true}"   />
									<Button id="midTableDeleteButton" text="{I18N>/ROW_DELETE}" type="Transparent" press=".onMidTableDeleteButtonPress" enabled="{= ${util>/flag} === 'S' ?  false : true}" />
									<!-- <ToolbarSeparator/>
									<SearchField id="midTableSearchField" width="10rem" search=".onMidTableFilterPress" visible="false" enabled="false" />
									<Button id="midTableApplyFilterButton" text="Apply" type="Transparent" press=".onMidTableApplyFilterButton" enabled="false" visible="false"/> -->
								</OverflowToolbar>
							</headerToolbar>
							<columns>
                                
								<!-- language_code -->
								<Column id="language_code" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" >
									<Text text="{I18N>/LANGUAGE_CODE}" />
								</Column>
                                <!-- <Column id="category_code" minScreenWidth="Tablet" hAlign="Center" >
									<Text text="category_code" />
								</Column> -->
								<Column id="category_name" minScreenWidth="Tablet" hAlign="Center"  visible="{= ${util>/flag} === 'S' ?  true : false}" demandPopin="true">
									<Text text="{I18N>/CATEGORY_NAME}" />
								</Column>
                                <Column id="category_name_U" minScreenWidth="Tablet" hAlign="Center" visible="{= ${util>/flag} === 'S' ?  false : true}" demandPopin="true">
									<Text text="{I18N>/CATEGORY_NAME}" />
								</Column>
								
							</columns>
							<items>
								<ColumnListItem type="Inactive" >
									<cells>
										<Text text="{language_code}"/>
                                        <!-- <Text text="{category_code}"/> -->
										<Text text="{category_name}" visible="{= ${util>/flag} === 'S' ?  true : false}"/>
                                        <Input value="" visible="{= ${util>/flag} === 'S' ?  false : true}"/>  
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
                <ToolbarSpacer />
                <Button text="{I18N>/UPDATE}" type="Transparent" press=".onPageEditButtonPress" visible="{= ${util>/flag} === 'S' ?  ture : false}" />
				<Button text="{I18N>/CANCEL}" type="Transparent" press=".onPageCancelButtonPress" visible="{= ${util>/flag} === 'S' ?  false : true}"/>
				<Button text="{I18N>/DELETE}" type="Transparent" press=".onPageDeleteButtonPress" visible="{= ${util>/flag} === 'U' ?  true : ${util>/flag} === 'S' ? true : false}"/>
                <Button text="{I18N>/SAVE}" type="Emphasized" press=".onPageSaveButtonPress" visible="{= ${util>/flag} === 'S' ?  false : true}" />
			</OverflowToolbar>
		</uxap:footer>
