<mvc:View
    controllerName="pg.mi.controller.MidObject"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    height="100%">
    <App>
        <Page id="page" title="Monitoring management system">
            <content>
            </content>
            <footer>
                <OverflowToolbar id="otbFooter">
                    <ToolbarSpacer/>
                    <Button 
                        id="buttonMidEdit" 
                        text="Edit" 
                        press=".onEdit"/>
                    <Button
                        id="buttonMidDelete"
                        text="Delete"
                        press=".onMidDelete"
                        enabled="{=${midObjectView>/mode}}"/>                                      
                    <Button
                        id="buttonSave"
                        text="Save"
                        press=".onMidUpdate"
                        enabled="{=${midObjectView>/mode}}"/>
                </OverflowToolbar>
            </footer>
        </Page>
    </App>

</mvc:View>