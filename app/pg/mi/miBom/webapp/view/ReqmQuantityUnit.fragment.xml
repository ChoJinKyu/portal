<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
	width 			= "50%"
	height			= "50%"    
    displayBlock="true">
	
	<Dialog title="소요량 단위 선택">
		<content>
        
        <VBox class="sapUiSmallMarginBegin" width="500px">
            <SearchField id="searchField_uom_name" 
                            width="90%"
                            required="true" 
                            search=".onUomNameSearch" 
                            selectOnFocus="false"
                            placeholder="Search Name or Code"
                            class="sapUiTinyMarginTop sapUiTinyMarginBegin" />
            
            <Table  id="reqmTable"
                    mode="SingleSelectLeft"
                    items="{unitOfMeasureView>/}"
                    noDataText="No Data"
                    class="sapUiSmallMargin sapUiSmallMarginTop"
            >
                <columns>
                    <Column hAlign="Center" ><header><Label text="{I18N>/CODE}"/></header></Column>
                    <Column hAlign="Center" ><header><Label text="{I18N>/NAME}"/></header></Column>                                                                                                                    
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{unitOfMeasureView>uom_code}"/>
                            <Text text="{unitOfMeasureView>uom_name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>                      
        </VBox>
		</content>
			<beginButton>
				<Button type="Transparent"  text="{I18N>/CANCEL}" press=".closeValueHelpReqmQuantityUnit" />
               
			</beginButton>
            <endButton>
             <Button  text="{I18N>/APPLY}"  
             type="Emphasized"
             press=".onReqmQuantityUnitApply" />
            </endButton>
	</Dialog>
</core:FragmentDefinition>