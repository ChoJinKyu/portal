<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
	width 			= "50%"
	height			= "50%"    
    displayBlock="true">
	
	<Dialog id="reqmQuantityUnit" title="{I18N>/NPG00005}">
		<subHeader>
			<Toolbar>
                <SearchField id="searchField_uom_name" 
                    search=".onUomNameSearch" 
                    selectOnFocus="false"
                    placeholder="{I18N>/INPUT}"/> 
			</Toolbar>
        </subHeader>
                
		<content>        
        <VBox width="450px">
            <Table  id="reqmTable"
                    mode="SingleSelectLeft"
                    items="{unitOfMeasureView>/}"
                    noDataText="{I18N>/NCM0001}"
                    growingScrollToLoad="true"
                    growing="true"
                    sticky="ColumnHeaders,HeaderToolbar"
                    growingThreshold="50"
                    inset="false">
                <columns>
                    <Column hAlign="Center" ><header><Label text="{I18N>/CODE}"/></header></Column>
                    <Column hAlign="Center" ><header><Label text="{I18N>/NAME}"/></header></Column>                                                                                                                    
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{unitOfMeasureView>uom_code}"/>
                            <Text text="{unitOfMeasureView>uom_name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>                      
        </VBox>
		</content>
			<beginButton>
				<Button type="Transparent"  text="{I18N>/CANCEL}" press="._closeValueHelpReqmQuantityUnit" />
               
			</beginButton>
            <endButton>
             <Button  text="{I18N>/APPLY}"  
             type="Emphasized"
             press=".onReqmQuantityUnitApply" />
            </endButton>
	</Dialog>
</core:FragmentDefinition>