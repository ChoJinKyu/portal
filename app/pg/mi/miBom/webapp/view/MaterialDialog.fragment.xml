		<content>
            <VBox>
                <Table  id="materialTable"
                        items="{materialTable>/}"                    
                        mode="SingleSelectLeft"
                        updateFinished="onDtlUpdateFinished" 
                        noDataText="{I18N>/NCM0001}"
                        growingScrollToLoad="true"
                        growing="true"
                        sticky="ColumnHeaders,HeaderToolbar"
                        growingThreshold="20"
                        inset="false"
                        >
                <layoutData>
                </layoutData>
                    <columns>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/NW_OPERATION_ORG_CODE}"/>
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/PG_DOCUMENT_TYPE}"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/UOM}"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/NW_MATERIAL_CODE}"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/NEGO_DOCUMENT_DESC}"/>
                            </header>
                        </Column>    
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/NW_SUPPLIER_CODE}"/>                            
                            </header>
                        </Column>     
                        <Column hAlign="Center" >
                            <header>
                                <Label text="{I18N>/NW_SUPPLIER_NAME}"/>                            
                            </header>
                        </Column>                                                                                                 
                    </columns>
                    <items>
                        <ColumnListItem type="Active" id="materialColumnListItem" press="onMaterialTableItemPress">
                            <cells>
                                <Text text="{materialTable>org_code} - {materialTable>org_name}"/>
                                <Text text="{materialTable>net_price_document_type_code} - {materialTable>net_price_document_type_name}"/>
                                <Text text="{materialTable>uom_code}"/>
                                <Text text="{materialTable>material_code}"/>
                                <Text text="{materialTable>material_desc}"/>
                                <Text text="{materialTable>supplier_code}"/>
                                <Text text="{materialTable>supplier_english_name}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
		</content>
			<beginButton>
