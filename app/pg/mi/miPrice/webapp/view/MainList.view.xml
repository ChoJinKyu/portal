<mvc:View controllerName="pg.mi.miPrice.controller.MainList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:t="sap.ui.table"
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartVariantManagement="sap.ui.comp.smartvariants"
    xmlns:u="sap.ui.unified"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{oUi>/headerExpanded}" 
        showFooter="{= ${message>/}.length > 0 }"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/MIPRICE_TITLE}" />
                </f:heading>
                <f:snappedContent></f:snappedContent>
                <f:expandedContent></f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" visible="false" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <!-- <Button icon="sap-icon://unfavorite" type="Transparent" /> -->
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <!-- <smartVariantManagement:SmartVariantManagement        
                        id="pageVariantId"
                        standardItemText="{I18N>/STANDARD}"
                        persistencyKey="PageVariantPKey" />  -->

                        <!-- smartVariant="pageVariantId"
                        persistencyKey="SmartFilterPKey"
                        considerSelectionVariants="false"  -->
                    <!-- Smart Filter -->
                    <smartFilterBar:SmartFilterBar id="smartFilterBar" 
                        entitySet="MIMaterialPriceManagementView " 
                        enableBasicSearch="false" 
                        useToolbar="false"
                        filterContainerWidth="30rem"
                        search=".onPageSearchButtonPress"
                        >
                        <smartFilterBar:controlConfiguration>
                            <!-- 시황자재코드 -->
                            <smartFilterBar:ControlConfiguration id="tempId" key="mi_material_code" groupId="_BASIC" index="1" label="{I18N>/MI_MATERIAL_CODE}"
                                visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                    <MultiComboBox 
                                        id="combobox_mi_material_code" 
                                        showSecondaryValues= "false"
                                        items="{path: '/MIMatCodeView', templateShareable:true}" 
                                        placeholder="{I18N>/ALL}"
                                    >
                                        <core:ListItem key="{mi_material_code}" text="[{mi_material_code}] {mi_material_name}" additionalText="{mi_material_name}" />  
                                    </MultiComboBox>
                                </smartFilterBar:customControl>
                                
                            </smartFilterBar:ControlConfiguration>

                            <!-- 시황자재명 -->
                            <smartFilterBar:ControlConfiguration key="mi_material_name" groupId="_BASIC" index="2" label="{I18N>/MI_MATERIAL_NAME}"  
                            visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                    <Input id="input_mi_material_name" placeholder="입력 해주세요."/>
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>

                            <!-- Category명 -->
                            <smartFilterBar:ControlConfiguration key="category_code" groupId="_BASIC" index="3" label="{I18N>/CATEGORY_NAME}" 
                            visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                        <MultiComboBox
                                            id="combobox_category_code"
                                            showSecondaryValues= "false"
                                            placeholder="{I18N>/ALL}"
                                            items="{path:'/MICategoryHierarchyStructureView',
                                                    sorter: {
                                                        path: 'parent_category_code',
                                                        descending: false,
                                                        group: true
                                                    },
                                                    filters : [
                                                        {path : 'hierarchy_level', operator : 'NE', value1 : '0'}
                                                    ]
                                            }"> 
                                            <core:ListItem key="{category_code}" text="[{category_code}] {category_name}" additionalText="{category_name}" />                                       
                                        </MultiComboBox>
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                             <!-- 거래소 -->
                            <smartFilterBar:ControlConfiguration key="exchange" groupId="_BASIC" index="3" label="{I18N>/EXCHANGE_CODE}" 
                            visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                    <MultiComboBox 
                                        id="combobox_mi_exchage_code" 
                                        showSecondaryValues= "false"
                                        items="{path: '/MIExchangeView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                        placeholder="{I18N>/ALL}"
                                    >
                                        <core:ListItem key="{exchage}" text="[{exchage}] {exchange_name}" additionalText="{exchange_name}" />  
                                    </MultiComboBox>
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                            <!-- 인도조건 -->
                            <smartFilterBar:ControlConfiguration key="termsdelv" groupId="_BASIC" index="3" label="{I18N>/TERMS_OF_DELIVERY}" 
                            visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                    <MultiComboBox 
                                        id="combobox_mi_termsdelv_code" 
                                        showSecondaryValues= "false"
                                        items="{path: '/MITermsdelvView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                        placeholder="{I18N>/ALL}"
                                    >
                                        <core:ListItem key="{termsdelv}" text="[{termsdelv}] {termsdelv_name}" additionalText="{termsdelv_name}" />  
                                    </MultiComboBox>
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                            <!-- 시황일자 -->
                            <smartFilterBar:ControlConfiguration key="mi_date" index="3" label="{I18N>/MI_DATE}"
                                groupId="_BASIC" visibleInAdvancedArea="true">
                                <smartFilterBar:customControl>
                                <DateRangeSelection 
                                    id="datepicker_mi_date" 
                                    showFooter="true" placeholder="yyyy/MM/dd - yyyy/MM/dd" displayFormat="yyyy/MM/dd" 
                                    dateValue="{path:'master>/start_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yyy/MM/dd' }}"
                                    secondDateValue="{path:'master>/end_date', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yyy/MM/dd' }}"       
                                    change="filterCreateDateChange"/>	
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                            <smartFilterBar:ControlConfiguration key="Validated" filterType="single"/>   
                        </smartFilterBar:controlConfiguration>
                        <smartFilterBar:layoutData>
                            <FlexItemData shrinkFactor="0"/>
                        </smartFilterBar:layoutData>
                    </smartFilterBar:SmartFilterBar>
                </f:content>

            </f:DynamicPageHeader>
        </f:header>
        <f:content>
        
            <smartTable:SmartTable
                width="100%"
                height="100%"
                
                
                id="smartTable_MainTable_ResponsiveTable"
                header="{I18N>/MIPRICE_TITLE} List"
                entitySet="list>/MIMaterialPriceManagementView" 
                tableBindingPath="list>/MIMaterialPriceManagementView"
                useExportToExcel="false"
              
                beforeExport=".onBeforeExport" 
                useVariantManagement="false" 
                useTablePersonalisation="false" 
                showRowCount="true" 
               
                enableAutoBinding="false" 
               
                class="sapUiResponsiveContentPadding"
                initiallyVisibleFields="mi_material_code,mi_material_name,category_code,category_name,currency_unit,quantity_unit,exchange_unit,exchange,termsdelv,sourcing_group_code,delivery_mm,mi_date,amount"
                >
                <!-- tableBindingPath="MIMaterialPriceManagementView" -->
                <!-- persistencyKey="SmartTableAnalytical_Explored"  -->
                 <!-- editable="true"  -->
                <!-- smartFilterId="smartFilterBar"  -->
                <!--  -->
  <!-- beforeRebindTable=".onBeforeRebindTable" -->

                <smartTable:customToolbar>
                    <OverflowToolbar >
                        <ToolbarSpacer/>
                        <Button id="mainTableAddButton" text="{I18N>/ROW_ADD}" type="Transparent" press=".onMainTableAddButtonPress" />
                        <Button id="mainTableDeleteButton" text="{I18N>/ROW_DELETE}" enabled="{viewControl>/enabled}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                        <Button id="mainTableSaveButton" text="{I18N>/SAVE}"  enabled="{viewControl>/enabled}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                       
                        <!-- <Button icon="sap-icon://upload" type="Transparent" press=".onMainTableDelete"/> -->
                        <u:FileUploader id="rFileUploader" uploadComplete="handleUploadComplete" change=".onImportChange" style="Transparent" 
                                        buttonOnly="true" iconOnly="true" icon="sap-icon://upload" tooltip="Upload"/>
                        <Button icon="sap-icon://download" iconOnly="true" type="Transparent" enabled="false" tooltip="Template Download"/>           
<!-- 
                        <Button iconOnly="true" icon="sap-icon://excel-attachment" press=".onExport"/> -->

                        <MenuButton buttonMode="Split" useDefaultActionOnly="true" 
                                    icon="sap-icon://excel-attachment" defaultAction=".onExport">
                            <menu>
                                <!-- <Menu itemSelected="onMenuAction">
                                    <MenuItem text="basic" icon="sap-icon://chalkboard">
                                        <items>
                                            <MenuItem text="add" icon="sap-icon://add" />
                                            <MenuItem text="subtract" icon="sap-icon://less" />
                                            <MenuItem text="multiply" icon="sap-icon://decline" />
                                        </items>
                                    </MenuItem>
                                    <MenuItem text="complex" icon="sap-icon://display">
                                        <items>
                                            <MenuItem text="square" icon="sap-icon://status-completed" />
                                        </items>
                                    </MenuItem>
                                </Menu> -->
                            </menu>
                        </MenuButton>
                    </OverflowToolbar>
                </smartTable:customToolbar>

                <t:Table id="mainTable" 
                    noDataText="{I18N>/NCM01004}"
                    rows="{list>/MIMaterialPriceManagementView}"
                    selectionMode="MultiToggle"
                    visibleRowCountMode="Auto"
                    columnResize="onColumnResize"
                    cellClick=".onCellClick"
                    rowSelectionChange=".onCheck"
                    fixedColumnCount="5"
                    width="auto">
 
                    <t:columns>
                        <t:Column id="_row_state_" minScreenWidth="Tablet" hAlign="Center" width="40px" >
                            <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                            <t:template>
                                <ObjectStatus icon="{
                                    path: 'list>_row_state_',
                                    formatter: '.formatter.toModelStateColumnIcon'
                                }" />
                            </t:template>
                        </t:Column>
                        <t:Column id="mi_material_code" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="10%" >
                            <Text text="{I18N>/MI_MATERIAL_CODE}" />
                            <t:template>
                                <Input value="{list>mi_material_code}"  required="true" editable="{= ${list>_row_state_} === 'C' }"
                                    showSuggestion="true" suggestionItems="{path: '/MIMatCodeView', templateShareable:true}" 
                                    suggestionItemSelected="onSuggestionItemSelected" submit="onSubmit" liveChange="onLiveChange">
                                    <suggestionItems>
                                        <core:Item text="{mi_material_code}" />
                                    </suggestionItems>
                                </Input>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" width="15em" >
                            <Text text="{I18N>/MI_MATERIAL_NAME}" />
                            <t:template>
                                <Text text="{list>mi_material_name}" ></Text>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/CATEGORY_CODE}" />
                            <t:template>
                                <Text text="{list>category_code}"></Text>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em">
                            <Text text="{I18N>/CATEGORY_NAME}" />
                            <t:template>
                                <Text text="{list>category_name}"></Text>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/CURRENCY_UNIT}" />
                            <t:template>
                                <ComboBox items="{path: '/CurrencyUnitView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                    placeholder="선택하세요."  selectedKey="{list>currency_unit}" editable="{= ${list>_row_state_} === 'C' }"
                                    width="100%" required="true">
                                    <items>
                                        <core:Item key="{currency_code}" text="{currency_code}" />
                                    </items>
                                </ComboBox>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/QUANTITY_UNIT}" />
                            <t:template>
                                <ComboBox items="{path: '/UnitOfMeasureView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                    placeholder="선택하세요." selectedKey="{list>quantity_unit}" editable="{= ${list>_row_state_} === 'C' }"
                                    width="100%" required="true">
                                    <core:Item key="{uom_code}" text="{uom_code}"/>
                                </ComboBox>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/EXCHANGE_UNIT}" />
                            <t:template>
                                <Input value="{list>exchange_unit}" editable="{= ${list>_row_state_} === 'C' }" ></Input>
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/EXCHANGE_CODE}" />
                            <t:template>
                                <ComboBox items="{path: '/MIExchangeView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                    placeholder="선택하세요." selectedKey="{list>exchange}" editable="{= ${list>_row_state_} === 'C' }"
                                    width="100%" required="true">
                                    <core:Item key="{exchage}" text="{exchage}"/>
                                </ComboBox>
                            </t:template>
                        </t:Column>                
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/TERMS_OF_DELIVERY}" />
                            <t:template>
                                <ComboBox items="{path: '/MITermsdelvView', templateShareable:true, filters: [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'}]}" 
                                    placeholder="선택하세요." selectedKey="{list>termsdelv}" 
                                    width="100%" required="true">
                                    <core:Item key="{termsdelv}" text="{termsdelv}"/>
                                </ComboBox> 
                            </t:template>
                        </t:Column>
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/SOURCING_GROUP_CODE}" />
                            <t:template>
                                <Input value="{list>sourcing_group_code}" ></Input>  
                            </t:template>
                        </t:Column>

                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/DELIVERY_MM}" />
                            <t:template>
                                <Input value="{list>delivery_mm}" ></Input>  
                            </t:template>
                        </t:Column>

                    
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/MI_DATE}" />
                            <t:template>
                                <DatePicker  valueFormat="yyyy/MM/dd" displayFormat="yyyy/MM/dd'" required="true" editable="{= ${list>_row_state_} === 'C' }"
                                    value="{path: 'list>mi_date', type: 'sap.ui.model.type.Date', 
                                    formatOptions: { pattern: 'yyyy/MM/dd', UTC: true} }" />
                            </t:template>
                        </t:Column>
                    
                        <t:Column minScreenWidth="Tablet" hAlign="Center" width="10em" >
                            <Text text="{I18N>/PRICE}" />
                            <t:template>
                                <Input value="{list>price}" type="Number" textAlign="Right" required="true" ></Input>
                            </t:template>
                        </t:Column>
                    </t:columns>  
                </t:Table>

             

            </smartTable:SmartTable>
        </f:content>
        <!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
                <Button
                    icon="sap-icon://alert"
                    type="Reject"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    ariaHasPopup="Dialog"
                    press=".onMessagePopoverPress" />
				<ToolbarSpacer />
			</OverflowToolbar>
		</f:footer>
    </f:DynamicPage>
</mvc:View>