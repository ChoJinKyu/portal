    xmlns:core="sap.ui.core"
    height="100%">
    <App>
        <Page id="page" title="자재별 시황자재 BOM">
            <content>
            </content>
            <footer>
                <OverflowToolbar id="otbFooter">
                    <ToolbarSpacer/>
