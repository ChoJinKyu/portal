<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
	width 			= "50%"
	height			= "50%"    
    displayBlock="true">
	
	<Dialog>
		<content>
        <HBox width="100%">
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop" width="500px">
                <Label text="1. 시황자재 선택"/>
                <SearchField id="searchField_code" 
                             width="90%" 
                             search=".onMaterialDetailFilter" 
                             selectOnFocus="false"
                             placeholder="Search Name or Code"
                             class="sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <SearchField id="searchField_category" 
                             width="90%" 
                             search=".onFilter_category" 
                             selectOnFocus="false"                             
                             placeholder="Search Category"
                             class="sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <Table  id="leftTable"
                        mode="SingleSelectLeft"
                        items="{mIMaterialCodeList>/}"
                        selectionChange=".onSelectedLeftTableItem"
                        itemPress=".onSelectedLeftTableItem"                        
                        noDataText="No Data"
                        class="sapUiSmallMarginBegin sapUiSmallMarginTop"
                >
                        <columns>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="Code"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="Name"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="Category"/>                            
                            </header>
                        </Column>                                                                                                                    
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press="onMaterialDetailTableItemPress">
                            <cells>
                                <Text text="{mIMaterialCodeList>mi_material_code}"/>
                                <Text text="{mIMaterialCodeList>mi_material_code_name}"/>
                                <Text text="{mIMaterialCodeList>category_name}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>                      
            </VBox>
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop">
                <Label text="2. 시황자재 > 가격정보 선택"/>

                <Table  id="rightTable"
                        mode="SingleSelectLeft" 

                        items="{
                                    path : '/MIMaterialCostInformationView',
                                    filters : [
                                                {path : 'tenant_id', operator : 'EQ', value1 : '0000'}
                                    ]
                        }"                
                        noDataText="No Data"
                        class="sapUiSmallMarginEnd" 
                        width="700px">
                    <columns>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="화폐단위"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="수량단위"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="거래소"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="인도조건"/>                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="최근상황일지"/>                            
                            </header>
                        </Column>    
                        <Column hAlign="Center" >
                            <header>
                                <Label text="금액"/>                            
                            </header>
                        </Column>                                                                                                 
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press="onMaterialPriceTableItemPress">
                            <cells>
                                <Text text="{CodeDetails>_row_state_}"/>
                                <Text text="{CodeDetails>_row_state_}"/>
                                <Text text="{CodeDetails>_row_state_}"/>
                                <Text text="{CodeDetails>_row_state_}"/>
                                <Text text="{CodeDetails>_row_state_}"/>
                                <Text text="{CodeDetails>_row_state_}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>             
            </VBox>

        </HBox>
		</content>
			<beginButton>
				<Button text="Cancel" press="onMaterialDetail_close" />
               
			</beginButton>
            <endButton>
             <Button text="Apply" press="onMaterialDetail_apply" />
            </endButton>
	</Dialog>
</core:FragmentDefinition>