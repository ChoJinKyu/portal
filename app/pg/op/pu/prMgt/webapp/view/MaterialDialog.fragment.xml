<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">
	
	<Dialog title="Material Code"
            contentWidth="50%"
            contentHeight="50%">
		<content>
        <!-- <HBox width="100%">
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop"> -->
                <!-- <HBox>
                    <VBox justifyContent="Center" class="sapUiSmallMarginEnd" >
                        <Label text="Material Code : " />
                    </VBox>
                    <Input value="" />
                    <Button text="Search" press="" class="sapUiSmallMarginBegin" />
                </HBox> -->
                <!-- Material Code List 시작 -->
                <Table 
                    items="{materialCodeModel>/materialCode}"
                    mode="SingleSelectMaster"
                    selectionChange=".onSelectMaterialCode" >
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="Material Code List" level="H2" />
                                <ToolbarSpacer />
                                <SearchField search="" width="15rem"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column hAlign="Center" width="5rem" >
                            <header>
                                <Label text="Div" />                            
                            </header>
                        </Column>
                        <Column hAlign="Center" width="8rem" >
                            <header>
                                <Label text="Material Code" />                            
                            </header>
                        </Column>
                        <Column hAlign="Center" >
                            <header>
                                <Label text="Description" />                            
                            </header>
                        </Column>
                        <Column hAlign="Center" width="12rem" >
                            <header>
                                <Label text="Spec" />                            
                            </header>
                        </Column>
                        <Column hAlign="Center" width="6rem" >
                            <header>
                                <Label text="Commondify"/>                            
                            </header>
                        </Column>    
                        <Column hAlign="Center" width="3rem" >
                            <header>
                                <Label text="UOM"/>                            
                            </header>
                        </Column>                                                                                                 
                        <Column hAlign="Center" width="3rem" >
                            <header>
                                <Label text="UIT"/>                            
                            </header>
                        </Column>                                                                                                 
                        <Column hAlign="Center" width="8rem" >
                            <header>
                                <Label text="Item Status"/>                            
                            </header>
                        </Column>                                                                                                 
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{materialCodeModel>org_code}"/>
                                <Text text="{materialCodeModel>material_code}"/>
                                <Text text="{materialCodeModel>description}"/>
                                <Text text="{materialCodeModel>spec}"/>
                                <Text text="{materialCodeModel>commondify}"/>
                                <Text text="{materialCodeModel>uom}"/>
                                <Text text="{materialCodeModel>uit}"/>
                                <Text text="{materialCodeModel>item_status}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <!-- Material Code List 끝 -->        
            <!-- </VBox>
        </HBox> -->
		</content>

        <beginButton>
            <Button text="Close" press=".onClose" >
                <customData>
                    <core:CustomData key="fragmentName" value="_oMaterialDialog"  />
                </customData>
            </Button>
        </beginButton>
        <endButton>
            <Button  text="Apply" 
                type="Emphasized"
                press=".onMaterialDetailApply" >
                <customData>
                    <core:CustomData key="fragmentName" value="_oMaterialDialog"  />
                </customData>
            </Button>
        </endButton>
	</Dialog>
</core:FragmentDefinition>