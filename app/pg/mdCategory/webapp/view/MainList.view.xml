<mvc:View controllerName="pg.mdCategory.controller.MainList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Item Name" labelFor="searchKeyword"></Label>
                                <Input id="searchKeyword" placeholder="Item Name"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/MdCategoryItem}"
                        mode="SingleSelectMaster"
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="부품 일반정보" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <Button id="mainTableSaveButton" text="Save" type="Emphasized" press=".onMainTableSaveButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnSort" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="false" width="12em" >
                            <Text text="Sort" />
                        </Column>
                        <Column id="mainColumnItemName" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="false" width="20em" >
                            <Text text="Item Name" />
                        </Column>
                        <Column id="mainColumnItemDesc" minScreenWidth="Tablet" hAlign="Center" >
                            <Text text="Item Desc" />
                        </Column>
                        <Column id="mainColumnValueType" minScreenWidth="Tablet" hAlign="Center" width="12em" >
                            <Text text="Value Type" />
                        </Column>
                        <Column id="mainColumnContent" minScreenWidth="Tablet" hAlign="Center" width="20em" >
                            <Text text="Content" />
                        </Column>
                        <Column id="mainColumnUpdateDtm" minScreenWidth="Tablet" hAlign="Center" width="20em" >
                            <Text text="수정일자" />
                        </Column>
                        <Column id="mainColumnUpdateId" minScreenWidth="Tablet" hAlign="Center" width="20em" >
                            <Text text="수정자" />
                        </Column>

                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <HBox align="Center">
                                    <Text text="{list>spmd_character_serial_no}"></Text>
                                </HBox>
                                <HBox>
                                    <Text text="{list>spmd_character_code_name}" visible="true"></Text>
                                    <Input value="{list>spmd_character_code_name}" visible="false"></Input>
                                </HBox>
                                <HBox>
                                    <Text text="{list>spmd_character_desc}" visible="true"></Text>
                                    <Input value="{list>spmd_character_desc}" visible="false"></Input>
                                </HBox>
                                <HBox>
                                    <Text text="{list>spmd_character_type_code}"></Text>
                                </HBox>
                                <HBox>
                                    <Text text="{list>spmd_category_code}" visible="true"></Text>
                                    <Input value="{list>spmd_category_code}" visible="false"></Input>
                                </HBox>
                                <HBox align="Center">
                                    <Text text="{list>system_update_dtm}"></Text>
                                </HBox>
                                <HBox align="Center">
                                    <Text text="{list>update_user_id}"></Text>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
