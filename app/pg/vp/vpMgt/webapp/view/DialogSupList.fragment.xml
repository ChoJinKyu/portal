<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:table="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:lib-m="ext.lib.m" height="100%">
    
    <Dialog id="addSupList" class="sapUiSmallMargin" title="Supplier" contentWidth="40%">
        <content height="20rem">  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <form:content>
                        <!-- 팝업 영역 -->
                        <VBox>
                            
                            <Label text="Supplier" design="Bold"/> 
                                <HBox>
                                <Input id="s_pop_supplier_local_name" placeholder="Supplier Name"/> 
                                <Button id="s_pop_SearchButton" text="Search" press=".onSupSearchButtonPress"/>
                                </HBox>
                            <layoutData>
                                <layout:GridData span="XL4 L4 M4 S12"/>
                            </layoutData> 
                        </VBox>
                        <VBox>
                             <Table id="PopVpSupplierTable" items="{psuplist>/VpSupplierDtlView}" mode="MultiSelect" updateFinished="onSupplierDtlUpdateFinished">

                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>

                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                               
                                <columns>
                                    <Column hAlign="Center" width="25%">
                                        <header>
                                            <Label text="Supplier Code"/>
                                        </header>
                                    </Column> 
                                    <Column hAlign="Center" width="25%">
                                        <header>
                                            <Label text="Supplier Name"/>
                                        </header>
                                    </Column>
                                    <Column hAlign="Center" width="25%">
                                        <header>
                                            <Label text="Supplier Name(Eng)"/>
                                        </header>
                                    </Column> 
                                    <Column hAlign="Center" width="25%">
                                        <header>
                                            <Label text="Status"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active" id="DiaSupplieristItem">
                                        <cells>
                                            <Text id="t2_supplier_code" text="{psuplist>supplier_code}"/>                                        
                                            <Text id="t2_supplier_local_name" text="{mapping>supplier_local_name}" textAlign="Center"/>
                                            <Text id="t2_supplier_english_name" text="{supplier_english_name}"/>                                        
                                            <Text id="t2_inactive_status_name" text="{inactive_status_name}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12"/>
                            </layoutData>          
                        </VBox>                                                                                                                                                            
                    </form:content>
                </form:SimpleForm>
            </VBox> 
        </content>
        <ToolbarSpacer/>
        <HBox justifyContent="End">
            <Button text="Cancel" type="Transparent" press=".supPopupClose"/>
            <Button text="Select" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".addSuptorow"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>