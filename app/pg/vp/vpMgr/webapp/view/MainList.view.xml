<mvc:View controllerName="vp.vpMgr.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    xmlns:table="sap.ui.table"
    height="100%">
	<App id="app">
        <f:DynamicPage id="page"
            headerExpanded="{mainListView>/headerExpanded}" 
            toggleHeaderOnTitleClick="true">
            <!-- DynamicPage Title -->
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="{i18n>appTitle}" />
                    </f:heading>
                    <f:snappedContent>
                        <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <form:content>
                                <VBox>
                                    <Label text="Operation ORG" labelFor="search_Operation_ORG_S" required="true"></Label>
                                    <ComboBox id="search_Operation_ORG_S" width="100%" selectedKey="BIZ00200" items="{
                                        path: '/VpOperationOrg',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                        ],
                                        sorter: { path: 'operation_org_code'}
                                    }">
                                        <items>
                                            <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                        </items>
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL2 L3 M6 S12" />
                                    </layoutData>
                                </VBox>
                                
                            </form:content>
                        </form:SimpleForm>
                    </f:snappedContent>
                    <f:expandedContent>
                        <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                            <form:content>
                                <VBox>
                                    <Label text="Operation ORG" labelFor="search_Operation_ORG_E" required="true"></Label>
                                    <ComboBox id="search_Operation_ORG_E" width="100%" selectedKey="BIZ00200"  items="{
                                        path: '/VpOperationOrg',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                        ],
                                        sorter: { path: 'operation_org_code'}
                                    }">
                                        <items>
                                            <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                        </items>
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL2 L3 M6 S12" />
                                    </layoutData>
                                </VBox>
                            
                            </form:content>
                        </form:SimpleForm>
                    </f:expandedContent>
                    <f:actions>
                        <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                    </f:actions>
                    <f:navigationActions>
                        <Button icon="sap-icon://unfavorite" type="Transparent" />
                    </f:navigationActions>
                </f:DynamicPageTitle>
            </f:title>
            <!-- DynamicPage Header -->
            <f:header>
                <f:DynamicPageHeader pinnable="true">

                    <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Department" labelFor="search_Dept"></Label>
                                <Input id="search_Dept" showValueHelp="true"  valueHelpRequest=".onValueHelpRequested"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Manager" labelFor="search_Man"></Label>
                                <Input id="search_Man" showValueHelp="true"  valueHelpRequest=".onValueHelpRequested"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Vendor Pool" labelFor="search_Vp_Code"></Label>
                                <HBox>
                                    <ComboBox id="search_Vp_lvc" selectedKey=""  width="8em">
                                        <core:Item key="0" text="1Level"/>
                                        <core:Item key="1" text="2Level"/>                                                            
                                        <core:Item key="2" text="3Level"/>
                                    </ComboBox>  
                                    <Input id="search_Vp_Code" placeholder="Input data"></Input>
                                </HBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>                        
                            <VBox>
                                <Label text="Supplier" labelFor="search_Sup"></Label>
                                <Input id="search_Sup" placeholder="Input data"></Input>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Supplier Type" labelFor="search_Sup_Type"></Label>

                                <ComboBox id="search_Sup_Type" selectedKey=""  width="auto">
                                        <core:Item key="A" text="평가"/>
                                        <core:Item key="B" text="잠재"/>                                                            
                                    </ComboBox>  
                                <layoutData>
                                    <layout:GridData
                                        span="XL2 L3 M6 S12"/>
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <VBox>
                    <table:Table
                        id="mainTable"
                        selectionMode="MultiToggle"
                        fixedColumnCount="4"
                        rows="{
                            path: 'list>/vPSearchView',
                            filters: [
                            {path: 'language_cd', operator: 'EQ', value1: 'KO'}
                            ]
                        }"
                        cellClick=".onCellClick"
                        rowSelectionChange=".onCheck"                    
                        enableColumnReordering="false"
                        filter="filterPrice"
                        expandFirstLevel="false">
                        <!-- visibleRowCountMode="Auto"> -->
                    <table:extension>
                        <OverflowToolbar>
                            <Title text="List ({= ${list>/vPSearchView}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableCreateButton"          type="Emphasized" text="Create Level"     press=".onDialogCreate"     enabled="{mode>/viewFlag}" />
                            <!-- Add the Personalization button -->
                            <Button id="mainTableEditButton"            type="Emphasized" text="Info.Edit"        press=".onMainTableEditButtonPress"     enabled="{mode>/viewFlag}" />
                            <Button id="mainTableChangeListButton"      type="Emphasized" text="Change List"      press=".onMainTableChangeListButtonPress"   enabled="{mode>/viewFlag}" />
                            <Button id="mainTableCombineButton"         type="Emphasized" text="Combine/Move"     press=".onMainTableCombineButtonPress"   enabled="{mode>/viewFlag}" />
                            <Button id="mainTableSplitButton"           type="Emphasized" text="Split"            press=".onMainTableSplitButtonPress"  enabled="{mode>/viewFlag}" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMoldMstTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </table:extension> 

                    <table:columns>
                            <table:Column label="Higher Lvl" width="8em" filterProperty="higher_level_path" >
                                <table:template>
                                    <Text text="{list>higher_level_path}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Vendor Pool" width="8em" filterProperty="vendor_pool_local_name"  >
                                <table:template>
                                    <Text text="{list>vendor_pool_local_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Info. Change Status" width="10em">
                                <table:template>
                                    <Text text="{list>info_change_status}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Mtl. Attribute" width="8em" filterProperty="vendor_pool_local_name" >
                                <table:template>
                                    <Text text="{list>inp_type_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Review Grade" width="8em">
                                <table:template>
                                    <Text text="{list>equipment_grade_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Equipment Type" width="8em">
                                <table:template>
                                    <Text text="{list>equipment_type_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Supplier Quantity" width="8em">
                                <table:template>
                                    <Text text="{list>supplier_quantity}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            
                            <table:Column label="Supplier Code" width="8em" filterProperty="supplier_code" >
                                <table:template>
                                    <Text text="{list>supplier_code}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Supplier Name" width="8em" filterProperty="supplier_local_name" >
                                <table:template>
                                    <Text text="{list>supplier_local_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Supplier Name(En)" width="8em" filterProperty="supplier_english_name" >
                                <table:template>
                                    <Text text="{list>supplier_english_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Company" width="8em" filterProperty="company_name" >
                                <table:template>
                                    <Text text="{list>company_name}" wrapping="false" />
                                </table:template>
                            </table:Column>
                            
                            <table:Column label="Supplier Type" width="8em">
                                <table:template>
                                    <Text text="{list>supplier_type_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Maker Flag" width="8em">
                                <table:template>
                                    <Switch state="{list>maker_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                                
                                </table:template>
                            </table:Column>
                                        
                            <table:Column label="Supplier Flag" width="8em">
                                <table:template>
                                    <Switch state="{list>supplier_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                                  
                                </table:template>
                            </table:Column>

                            <table:Column label="Status" width="8em">
                                <table:template>
                                    <Text text="{list>supplier_status_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="V/P 제외여부" width="8em">
                                <table:template>
                                    <Switch state="{list>vendor_pool_apply_exception_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                               
                                </table:template>
                            </table:Column>

                            <table:Column label="SD 제외여부" width="8em">
                                <table:template>
                                    <Switch state="{list>sd_exception_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                                
                                </table:template>
                            </table:Column>
                                        
                            <table:Column label="Department" width="8em" filterProperty="repr_department_name">
                                <table:template>
                                    <Text text="{list>repr_department_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="Manager" width="8em" filterProperty="managers_name">
                                <table:template>
                                    <Text text="{list>managers_name}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="평가통제여부" width="8em">
                                <table:template>
                                    <Switch state="{list>supeval_control_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                                 
                                </table:template>
                            </table:Column>                        

                            <table:Column label="평가통제시작일" width="8em">
                                <table:template>
                                    <Text text="{list>supeval_control_start_date}" wrapping="false" />
                                </table:template>
                            </table:Column>

                            <table:Column label="평가통제종료일" width="8em">
                                <table:template>
                                    <Text text="{list>supeval_control_end_date}" wrapping="false" />
                                </table:template>
                            </table:Column>   

                            <table:Column label="RM 통제여부" width="8em">
                                <table:template>
                                    <Switch state="{list>supplier_rm_control_flag}" customTextOn="Yes" customTextOff="No">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Switch>                                 
                                </table:template>
                            </table:Column>

                        </table:columns>
                    </table:Table>            
                </VBox>
            </f:content>
            <!-- DynamicPage Footer -->
            <f:footer>
                <OverflowToolbar>
                    <ToolbarSpacer />
                    <Button type="Accept" text="Accept"/>
                    <Button type="Reject" text="Reject"/>
                </OverflowToolbar>
            </f:footer>
        </f:DynamicPage>
	</App>
</mvc:View>