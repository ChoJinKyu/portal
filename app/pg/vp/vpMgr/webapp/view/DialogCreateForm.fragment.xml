<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="ceateVpCategory" class="sapUiSmallMargin" title="" contentWidth="60%" >
        <content>  
            <VBox class="sapUiSmallMargin">

                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" >
                    <form:content>
                        <!-- 팝업 영역 -->
                        <core:Title text="Category Info" />                        
                        <VBox>
                            <Label text = "Higher Level" design="Bold"/> 
                                <Text id="pop_higher_level_path" text="Higher Level"/>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Operation Unit" design="Bold" required="true"/> 
                                <Text id="pop_operation_unit_name" text="Operation Unit"/> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Level Name(Local)" design="Bold" required="true"/> 
                                <Input id="pop_vendor_pool_local_name" placeholder="Input data"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Level Name(Eng)*" design="Bold" required="true"/> 
                                <Input id="pop_vendor_pool_english_name" placeholder="Input data"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>    
                        <VBox>
                            <Label text = "Description" design="Bold" /> 
                                <Input id="pop_vendor_pool_desc" placeholder="Input data"></Input> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox> 
                        <core:Title text="Detail Info" />                        
                        <VBox>
                            <Label text = "Department" design="Bold"/> 
                                <Input id="pop_repr_department_code"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Industrial Classification" design="Bold"/> 
                                <Input id="pop_industry_class_code"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox> 
                        <VBox>
                            <Label text = "Mtl. Attribute/Planning Base" design="Bold"/> 
                                <HBox>
                                    <ComboBox id="pop_inp_type_code" selectedKey="000"  width="12em">
                                        <core:Item key="000" text="Mtl. Attribute"/>
                                        <core:Item key="MBLMOB" text="물동InP"/>
                                    </ComboBox>  
                                    <ComboBox id="pop_plan_base" selectedKey="000"  width="12em">
                                        <core:Item key="000" text="Planning Base"/>                                      
                                        <core:Item key="1" text="1000000"/>                                                            
                                        <core:Item key="2" text="2000000"/>
                                    </ComboBox> 
                                </HBox>                               
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Evaluation" design="Bold"/> 
                                <Switch id="pop_regular_evaluation_flag" state="true" customTextOn="Yes" customTextOff="No">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Switch> 
                            <layoutData>
                                <layout:GridData span="XL6 L2 M6 S12" />
                            </layoutData> 
                        </VBox> 
                        <VBox>
                            <Label text = "SD Flag" design="Bold"/> 
                                <Switch id="pop_sd_exception_flag" state="true" customTextOn="Yes" customTextOff="No">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Switch> 
                            <layoutData>
                                <layout:GridData span="XL6 L2 M6 S12" />
                            </layoutData> 
                        </VBox> 
                        <VBox>
                            <Label text = "V/P Exception" design="Bold"/> 
                                <Switch id="pop_vendor_pool_apply_exception_flag" state="true" customTextOn="Yes" customTextOff="No">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Switch> 
                            <layoutData>
                                <layout:GridData span="XL6 L2 M6 S12" />
                            </layoutData> 
                        </VBox>                                                                       
                        <VBox>
                            <Label text = "Review Grade" design="Bold"/> 
                                <HBox>
                                    <ComboBox id="pop_equipment_grade_code" selectedKey="000"  width="20em">
                                        <core:Item key="000" text="Review Grade"/>
                                    </ComboBox>  
                                </HBox>                               
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Equipment Type" design="Bold"/> 
                                <HBox>
                                    <ComboBox id="pop_equipment_type_code" selectedKey="000"  width="20em">
                                        <core:Item key="000" text="Equipment Type"/>
                                    </ComboBox>  
                                </HBox>                               
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>  
                        <VBox>
                            <Label text = "Site Internal Rate(%)" design="Bold"/> 
                                <Input id="pop_dom_oversea_netprice_diff_rate"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox> 
                        <VBox>
                            <Label text = "Site External Rate(%)" design="Bold"/> 
                                <Input id="pop_domestic_net_price_diff_rate"></Input> 
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S12" />
                            </layoutData> 
                        </VBox>                                                                                                                                         
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="Cancel" type="Transparent" press=".createPopupClose"/>
            <Button text="Save" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".handleSave"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
