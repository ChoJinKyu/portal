		<endButton>
			<Button text="Close" press=".onCloseButton"/>
		</endButton>
		<content>
			<List>
				<items>
					<StandardListItem title="소명: 23건" infoState="Information" />
					<StandardListItem title="알람: 34건" infoState="Warning" />
					<StandardListItem title="조회: 20건" infoState="Success"/>
				</items>
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>