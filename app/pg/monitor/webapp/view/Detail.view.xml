<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" 
xmlns:table="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:rte="sap.ui.richtexteditor" xmlns:l="sap.ui.layout" 
xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" 
class="sapUiSizeCompact" displayBlock="true" controllerName="pg.monitor.controller.Detail">
    <App id="idAppControl">
        <Page title="Monitoring management system">
            <content>         
                <uxap:ObjectPageLayout
                    alwaysShowContentHeader="false"
                    preserveHeaderStateOnScroll="true"
                    headerContentPinnable="false"
                    enableLazyLoading="true"
                    class="sapUiContentPadding">
                    <uxap:headerTitle/>
                    <uxap:headerContent/>
                    <uxap:sections>
                        <uxap:ObjectPageSection title="Item">
                            <uxap:subSections>
                                <uxap:ObjectPageSubSection>
                                
                                    <uxap:blocks>
                                   
                                        <l:VerticalLayout>
                                            <FlexBox height="70px" alignItems="Start" justifyContent="Start">
                                         
                                                <l:VerticalLayout class="sapUiLargeMargins">
                                                    <Label text="구분" design="Bold"/>
                                                    <ComboBox id="comboBoxType" items="{view>/ItemType}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                        <layoutData>
                                                            <l:GridData span="XL2 L4 M2 S12"/>
                                                        </layoutData>
                                                    </ComboBox>
                                                </l:VerticalLayout>

                                                <l:VerticalLayout class="sapUiLargeMargins sapUiLargeMarginBeginEnd">
                                                    <Label text="구매유형" design="Bold"/>
                                                   <ComboBox id="comboBoxRawMaterials" items="{view>/RawMaterials}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                    </ComboBox>
                                                </l:VerticalLayout>
                                            </FlexBox>
                                            <FlexBox height="70px" alignItems="Start" justifyContent="Start">
                                                <l:VerticalLayout>
                                                    <Label text="시나리오" design="Bold"/>
                                                   <ComboBox id="comboboxScenario" items="{view>/ScenarioType}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                    </ComboBox>
                                                </l:VerticalLayout>
                                            </FlexBox>
                                            <FlexBox height="70px" alignItems="Start" justifyContent="Start">
                                                <l:VerticalLayout >
                                                    <Label text="회사" design="Bold"/>
                                                     <ComboBox id="comboboxOffice" items="{view>/Office}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                    </ComboBox>
                                                </l:VerticalLayout>

                                                <l:VerticalLayout class="sapUiLargeMargins sapUiLargeMarginBeginEnd">
                                                    <Label text="법인" design="Bold"/>
                                                    <ComboBox id="conboBoxNatioinStatus" items="{view>/NatioinStatus}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                    </ComboBox>
                                                </l:VerticalLayout>

                                                <l:VerticalLayout class="sapUiLargeMargins">
                                                    <Label text="사업본부" design="Bold"/>
                                                    <ComboBox id="conboBoxBusinessDivision" items="{view>/BusinessDivision}" enabled="{=${ui>/bEditMode}}">
                                                        <core:Item key="{view>key}" text="{view>text}"/>
                                                    </ComboBox>
                                                </l:VerticalLayout>
                                            </FlexBox>
                                            <FlexBox alignItems="Start" justifyContent="Start">
                                                <l:VerticalLayout class="sapUiLargeMargins">
                                                    <Label text="담당자" design="Bold"/>
                                                    <MultiInput
                                                        id="multiinputUser"
                                                        valueHelpOnly="true"
                                                        enabled="{=${ui>/bEditMode}}"
                                                        tokens="{
																path: 'odata>/multiinputUser'
															}"
                                                        valueHelpRequest=".onValueHelpRequested">
                                                        <tokens>
                                                            <Token key="{odata>key}" text="{odata>name}"/>
                                                        </tokens>
                                                    </MultiInput>
                                                </l:VerticalLayout>
                                            </FlexBox>
                                            <FlexBox alignItems="Start" justifyContent="Start">

                                                <Panel
                                                    id="panelMember"
                                                    width="auto"
                                                    class="sapUiTinyMarginTop"
                                                    expandable="true"
                                                    expanded="false">

                                                    <content>
                                                        <Table
                                                            id="userList"
                                                            items="{ path : 'odata>/UserCollection' }"
                                                            mode="SingleSelectMaster">
                                                            <columns>
                                                                <Column hAlign="Center">
                                                                    <header>
                                                                        <Label text="담당자"/>
                                                                    </header>
                                                                </Column>
                                                                <Column hAlign="Center">
                                                                    <header>
                                                                        <Label text="Title"/>
                                                                    </header>
                                                                </Column>
                                                                <Column hAlign="Center">
                                                                    <header>
                                                                        <Label text="휴대폰"/>
                                                                    </header>
                                                                </Column>
                                                                <Column hAlign="Center">
                                                                    <header>
                                                                        <Label text="Department"/>
                                                                    </header>
                                                                </Column>
                                                            </columns>
                                                            <items>
                                                                <ColumnListItem type="Active" id="userListmItem" press="onuserListIemPress">
                                                                    <cells>
                                                                        <Label text="{odata>manager}"/>
                                                                        <Label text="{odata>title}"/>
                                                                        <Label text="{odata>mobile}"/>
                                                                        <Label text="{odata>dept}"/>
                                                                    </cells>
                                                                </ColumnListItem>
                                                            </items>
                                                        </Table>
                                                    </content>
                                                </Panel>
                                            </FlexBox>
                                        </l:VerticalLayout>
                                    </uxap:blocks>
                                </uxap:ObjectPageSubSection>
                            </uxap:subSections>
                        </uxap:ObjectPageSection>
                    </uxap:sections>
                    <uxap:sections>
                        <uxap:ObjectPageSection title="Operation">
                            <uxap:subSections>
                                <uxap:ObjectPageSubSection>
                                    <uxap:blocks>
                                        <l:VerticalLayout width="100%">
                                            <VBox class="sapUiLargeMargins">
                                                <FlexBox height="70px" alignItems="Start" justifyContent="Start">
                                                    <l:VerticalLayout>
                                                        <Label text="운영방식" design="Bold"/>
                                                        <FlexBox alignItems="Start" justifyContent="Start">
                                                            <CheckBox id="checkBoxOMType1" text="조회" enabled="{=${ui>/bEditMode}}"/>
                                                            <CheckBox
                                                                id="checkBoxOMType2"
                                                                text="소명"
                                                                enabled="{=${ui>/bEditMode}}"
                                                                class="sapUiTinyMarginBegin"/>
                                                            <CheckBox
                                                                id="checkBoxOMType3"
                                                                text="알람"
                                                                enabled="{=${ui>/bEditMode}}"
                                                                class="sapUiTinyMarginBegin"/>
                                                        </FlexBox>
                                                    </l:VerticalLayout>
                                                    <l:VerticalLayout class="sapUiLargeMargins sapUiLargeMarginBeginEnd">
                                                        <Label text="활성화" design="Bold" class="sapUiTinyMarginBegin"/>
                                                        <RadioButtonGroup
                                                            id="radioActive"
                                                            columns="2"
                                                            width="100%"
                                                            enabled="{=${ui>/bEditMode}}">
                                                            <RadioButton text="Active"/>
                                                            <RadioButton text="In Active"/>
                                                        </RadioButtonGroup>
                                                    </l:VerticalLayout>
                                                    <l:VerticalLayout class="sapUiLargeMargins sapUiLargeMarginBeginEnd">
                                                        <Label text="주기" design="Bold"/>
                                                        <MultiComboBox
                                                            id="multiComboBoxCycle"
                                                            enabled="{=${ui>/bEditMode}}"
                                                            selectedKeys="{ path : 'odata>/KeysSelected'}">
                                                            <core:Item key="1" text="일"/>
                                                            <core:Item key="2" text="월"/>
                                                            <core:Item key="3" text="분기"/>
                                                            <core:Item key="4" text="반기"/>
                                                        </MultiComboBox>
                                                    </l:VerticalLayout>
                                                </FlexBox>

                                            </VBox>

                                            <VBox class="sapUiTinyMarginTop">
                                                <Label text="모니터링 목적" design="Bold"/>
                                                <rte:RichTextEditor
                                                    id="reMonitoringPurpose"
                                                    editable="{=${ui>/bEditMode}}"
                                                    editorType="TinyMCE4"
                                                    width="100%"
                                                    customToolbar="true"
                                                    showGroupFont="true"
                                                    showGroupLink="true"
                                                    showGroupInsert="true"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMarginTop">
                                                <Label text="시나리오 설명" design="Bold"/>
                                                <rte:RichTextEditor
                                                    id="reMonitoringPurposeDetail"
                                                    editable="{=${ui>/bEditMode}}"
                                                    class="sapUiTinyMarginTop"
                                                    editorType="TinyMCE4"
                                                    width="100%"
                                                    customToolbar="true"
                                                    showGroupFont="true"
                                                    showGroupLink="true"
                                                    showGroupInsert="true"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMarginTop">
                                                <Label text="소스시스템" design="Bold"/>
                                                <rte:RichTextEditor
                                                    id="reSourceSystem"
                                                    editable="{=${ui>/bEditMode}}"
                                                    class="sapUiTinyMarginTop"
                                                    editorType="TinyMCE4"
                                                    width="100%"
                                                    customToolbar="true"
                                                    showGroupFont="true"
                                                    showGroupLink="true"
                                                    showGroupInsert="true"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMarginTop">
                                                <Label text="소스시스템/상세설명" design="Bold"/>
                                                <rte:RichTextEditor
                                                    id="reSourceSystemDetail"
                                                    editable="{=${ui>/bEditMode}}"
                                                    class="sapUiTinyMarginTop"
                                                    editorType="TinyMCE4"
                                                    width="100%"
                                                    customToolbar="true"
                                                    showGroupFont="true"
                                                    showGroupLink="true"
                                                    showGroupInsert="true"/>
                                            </VBox>
                                        </l:VerticalLayout>
                                    </uxap:blocks>
                                </uxap:ObjectPageSubSection>
                            </uxap:subSections>
                        </uxap:ObjectPageSection>
                    </uxap:sections>
                    <uxap:sections>
                        <uxap:ObjectPageSection title="Signal And Upload">
                            <uxap:subSections>
                                <uxap:ObjectPageSubSection>
                                    <uxap:blocks>
                                        <l:VerticalLayout class="sapUiLargeMargins">
                                            <Table
                                                id="signalList"
                                                items="{ path : 'odata>/SignalCollection'}"
                                                mode="MultiSelect">
                                                <headerToolbar>
                                                    <OverflowToolbar>
                                                        <content>
                                                            <ToolbarSpacer/>
                                                            <Button
                                                                text="Add"
                                                                id="buttonSignalAddRow"
                                                                press=".onSignalListAddRow()"
                                                                enabled="{=${ui>/bEditMode}}"
                                                                type="Transparent"/>
                                                            <Button
                                                                text="Delete"
                                                                id="buttonSignalDeleteRow"
                                                                press=".onSignalListDelete()"
                                                                enabled="{=${ui>/bEditMode}}"
                                                                type="Transparent"/>
                                                        </content>
                                                    </OverflowToolbar>
                                                </headerToolbar>
                                                <columns>
                                                    <Column hAlign="Center" width="100px">
                                                        <header>
                                                            <Label text="condition"/>
                                                        </header>
                                                    </Column>
                                                    <Column hAlign="Center" width="100px">
                                                        <header>
                                                            <Label text="Value 1"/>
                                                        </header>
                                                    </Column>
                                                    <Column hAlign="Center" width="100px">
                                                        <header>
                                                            <Label text="Value 2"/>
                                                        </header>
                                                    </Column>
                                                    <Column hAlign="Center" width="200px">
                                                        <header>
                                                            <Label text="Department"/>
                                                        </header>
                                                    </Column>
                                                </columns>
                                                <items>
                                                    <ColumnListItem
                                                        type="Active"
                                                        id="signalListItem"
                                                        press="signalListTableItemPress">
                                                        <cells>
                                                            <ComboBox id="comboboxCondition" selectedKey="{odata>condition}" enabled="{=${ui>/bEditMode}}" change=".onSignalCondition">
                                                                <core:Item key="LessThen" text="LessThen" />
                                                                <core:Item key="Between" text="Between" />
                                                                <core:Item key="Equal" text="Equal" />
                                                            </ComboBox>
                                                            <Input value="{odata>value1}" 
                                                              enabled="{=${ui>/bEditMode}}"/>
                                                            <Input value="{odata>value2}" enabled="{=${ui>/bEditMode}}"/>
                                                                     <ComboBox selectedKey="{odata>status}" enabled="{=${ui>/bEditMode}}">
                                                                <core:Item key="A" text="A" />
                                                                <core:Item key="B" text="B" />
                                                                <core:Item key="C" text="C" />
                                                            </ComboBox>
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>

                                            <UploadCollection
                                                id="UploadCollection"
                                                fileType="gif,png,jpg,jpeg,doc,docx,xls,xlsx,hwp,pdf,ppt,pdf"
                                                maximumFilenameLength="55"
                                                maximumFileSize="10"
                                                multiple="false"
                                                change=".onChange"
                                                instantUpload="false"
                                                uploadButtonInvisible="{=!${ui>/bEditMode}}"
                                                uploadEnabled="{=!${ui>/bEditMode}}"
                                                items="{
													path: 'up>/items',
													templateShareable: false
												}"
                                                filenameLengthExceed="onFilenameLengthExceed"
                                                fileSizeExceed="onFileSizeExceed"
                                                typeMissmatch="onTypeMissmatch"
                                                uploadComplete="onUploadComplete"
                                                beforeUploadStarts="onBeforeUploadStarts"
                                                mode="SingleSelectMaster"
                                                class="sapUiSmallMarginTop">
                                                <items>
                                                    <UploadCollectionItem
                                                        documentId="{up>documentId}"
                                                        fileName="{up>fileName}"
                                                        mimeType="{up>mimeType}"
                                                        thumbnailUrl="{up>thumbnailUrl}"
                                                        url="{up>url}"
                                                        deletePress="onFileDeleted"
                                                        enableEdit="{=${ui>/bEditMode}}"
                                                        enableDelete="{=${ui>/bEditMode}}"
                                                        visibleDelete="{=${ui>/bEditMode}}"
                                                        visibleEdit="{=${ui>/bEditMode}}"
                                                        attributes="{
																path: 'up>attributes',
																templateShareable: false
															}"
                                                        selected="{selected}">
                                                        <attributes>
                                                            <ObjectAttribute
                                                                title="{up>title}"
                                                                text="{
																	parts: [ 'up>text', 'up>type' ]
																}"
                                                                active="false"/>
                                                        </attributes>
                                                    </UploadCollectionItem>
                                                </items>
                                            </UploadCollection>
                                            <Panel
                                                id="panelHistory"
                                                width="auto"
                                                class="sapUiTinyMarginTop"
                                                expandable="true"
                                                expanded="false">
                                                <content>
                                                    <Table
                                                        id="historyList"
                                                        autoPopinMode="true"
                                                        items="{ path : 'odata>/UserCollection' }"
                                                        mode="SingleSelectMaster"
                                                        class="sapUiSmallMarginTop">
                                                        <columns>
                                                            <Column hAlign="Center">
                                                                <header>
                                                                    <Label text="회사"/>
                                                                </header>
                                                            </Column>
                                                            <Column hAlign="Center">
                                                                <header>
                                                                    <Label text="수정자"/>
                                                                </header>
                                                            </Column>
                                                            <Column hAlign="Center">
                                                                <header>
                                                                    <Label text="수정항목"/>
                                                                </header>
                                                            </Column>
                                                            <Column hAlign="Center">
                                                                <header>
                                                                    <Label text="Department"/>
                                                                </header>
                                                            </Column>
                                                        </columns>
                                                        <items>
                                                            <ColumnListItem type="Active" id="historyListmItem" press="onuserListIemPress">
                                                                <cells>
                                                                    <Label text="{odata>manager}"/>
                                                                    <Label text="{odata>title}"/>
                                                                    <Label text="{odata>mobile}"/>
                                                                    <Label text="{odata>dept}"/>
                                                                </cells>
                                                            </ColumnListItem>
                                                        </items>
                                                    </Table>
                                                </content>
                                            </Panel>

                                        </l:VerticalLayout>
                                    </uxap:blocks>

                                </uxap:ObjectPageSubSection>
                            </uxap:subSections>
                        </uxap:ObjectPageSection>
                    </uxap:sections>
                </uxap:ObjectPageLayout>
            </content>
            <footer>
                <OverflowToolbar id="otbFooter">
                    <ToolbarSpacer/>
                    <!-- <Button id="buttonTest" text="test" press=".onTest"/> -->
                    <Button id="buttonEdit" text="Edit" press=".onEdit"/>
                    <Button
                        id="buttonDelete"
                        text="Delete"
                        press=".onDelete"
                        enabled="{=${ui>/bEditMode}}"/>
                    <Button
                        id="buttonSave"
                        text="Save"
                        press=".onSave"
                        enabled="{=${ui>/bEditMode}}"/>
                    <Button
                        id="buttonHistory"
                        class="customerButton3"
                        text="History"
                        press=".onHistory"/>
                </OverflowToolbar>
            </footer>
        </Page>
    </App>
</mvc:View>