<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <VBox>
        <MessageStrip id="activeMessage_Show" 
                                text="{= ${activate_flag} === true? '이 시나리오는 활성화 상태입니다.' : '이 시나리오는 비활성화 상태입니다.'}"
                                showIcon="true"
                                showCloseButton="false"
                                type="{= ${activate_flag} === true? 'Information' : 'Warning'}"
                                >
                        </MessageStrip>
                            <f:SimpleForm
                                    editable="false"
                                    layout="ResponsiveGridLayout"
                                    labelSpanXL="4"
                                    labelSpanL="4"
                                    labelSpanM="4"
                                    labelSpanS="12"
                                    adjustLabelSpan="false"
                                    emptySpanXL="0"
                                    emptySpanL="0"
                                    emptySpanM="0"
                                    emptySpanS="0"
                                    columnsXL="3"
                                    columnsL="2"
                                    columnsM="2"
                                    singleContainerFullSize="false">
                                        <f:content id="informationPageSectionForm">
                                                <Label text="{I18N>/TYPE_NAME}" />
                                                <Text text="{monitoring_type_name}" width="100%"/>
                                                <Label text="{I18N>/PURCHASING_TYPE_NAME}" />
                                                <Text text="{=${monitoring_purchasing_type_name}.replaceAll(';',', ')}" width="100%"/>
                                                <Label text="{I18N>/SCENARIO}" />
                                                <Text text="{scenario_name}" width="100%"/>
                                                <Label text="{I18N>/TENANT_NAME}" />
                                                <Text text="{tenant_name}" width="100%"/>
                                                <Label text="{I18N>/COMPANY}"/>
                                                <Text text="{=${company_name}.replaceAll(';',', ')}" width="100%"/>
                                                <Label text="{I18N>/BUSINESS_UNIT}" />
                                                <Text text="{=${bizunit_name}.replaceAll(';',', ')}" width="100%"/>
                                        </f:content>
                                    </f:SimpleForm>
                            </VBox>
</core:FragmentDefinition>