<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartTable="sap.ui.comp.smarttable" 
controllerName="pg.tm.tmMonitoring.controller.Detail">
	<Dialog id="dialog_manager" title="Manager" resizable="true" draggable="true" contentWidth="80rem" contentHeight="40rem">
				<VBox id="vbox_part" class="sapUiResponsiveMargin">
					<!--<l:HorizontalLayout>-->
					<items>
                    <!-- <SearchField width="40%" class="sapUiSmallMargin"/> -->
                    <f:Form id="FormChange354wideDual" class="sapUiSmallMarginTop sapUiNoMarginBottom" editable="true">
                            <!-- <f:title>
                                <core:Title text="" />
                            </f:title> -->
                            <f:layout>
                                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="true"/>
                            </f:layout>
                            <f:formContainers>
                                <f:FormContainer>
                                    <f:formElements>
                                        <f:FormElement label="{I18N>/MANAGER}">
                                            <f:fields>
                                              	<Input width="100%" id="manager_input" showSuggestion="true" type="Text" suggestionItems="{ path: '/TaskMonitoringEmployeeView', sorter: { path: 'employee_name' }}">
                                                    <core:Item key="{employee_name}" text="{employee_name}"/>
                                                </Input>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>

                                 <f:FormContainer>
                                    <f:formElements>
                                      <f:FormElement label="{I18N>/USER_POSITION}">
                                            <f:fields>
                                                <Input width="100%" id="jobTitle_input" showSuggestion="true" type="Text" suggestionItems="{path: '/TaskMonitoringJobTitleView', sorter: { path: 'job_title' }}">
                                                    <core:Item key="{job_title}" text="{job_title}"/>
                                                </Input>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>

                                  <f:FormContainer>
                                    <f:formElements>
                                    <f:FormElement label="{I18N>/MOBILE_PHONE}">
                                            <f:fields>
                                                 <Input width="100%" id="phoneNumber_input" type="Tel" showSuggestion="true" suggestionItems="{path: '/TaskMonitoringMobilePhoneNumberView',sorter: { path: 'mobile_phone_number'}}">
                                                    <core:Item key="{mobile_phone_number}" text="{mobile_phone_number}"/>
                                                </Input>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>

                                 <f:FormContainer>
                                    <f:formElements>
                                   <f:FormElement label="{I18N>/DEPARTMENT}">
                                            <f:fields>
                                                 <Input width="100%" id="department_input" showSuggestion="true" type="Text" suggestionItems="{path: '/TaskMonitoringDepartmentView',sorter: { path: 'department_id' }}" showValueHelp="false">
                                                    <core:Item key="{department_id}" text="{department_id}"/>
                                                </Input>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>
                            </f:formContainers>
                        </f:Form>
                        <HBox width="95%" alignContent="End" alignItems="End" justifyContent="End">
                            <Button text="{I18N>/SEARCH}" press=".onSearchManager" type="Transparent"/>
                        </HBox>

                            	<Table id="managerDialogTable" items="{path: '/TaskMonitoringEmployeeView', 
                                sorter: {path: 'employee_name'}, 
                                  filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ]}" 
                                         sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" mode="MultiSelect" class="sapUiSmallMarginTop"
                                         > 
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <content>
                                                    <Title text="{I18N>/MANAGER}" level="H2"/>
                                                    <ToolbarSpacer/>
                                                </content>
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column width="12em">
                                                <Text text="{I18N>/MANAGER}"/>
                                            </Column>
                                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <Text text="{I18N>/USER_POSITION}"/>
                                            </Column>
                                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <Text text="{I18N>/MOBILE_PHONE}"/>
                                            </Column>
                                            <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <Text text="{I18N>/DEPARTMENT}"/>
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                  <Text text="{employee_name}"/>
                                                  <Text text="{job_title}"/>
                                                   <Text text="{mobile_phone_number}"/>
                                                  <Text text="{department_id}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
					</items>
				</VBox>
        <beginButton>
			<Button text="{I18N>/CANCEL}" press=".onPressManagerDialogClose"/>
	    </beginButton>
        <endButton>
        <Button text="{I18N>/SAVE}" id="managerSaveBtn" type="Emphasized" press=".onPressManagerDialogSave" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>