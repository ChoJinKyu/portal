                                    <VBox height="6em">
                                        <Label
                                            text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}"
                                            class="sapUiTinyMarginEnd"
                                            textAlign="Left"
                                            labelFor="input"
                                            required="true"/>
                                        <Text text="테스트"/>
                                        <layoutData>
						                    <layout:GridData span="XL4 L4 M6 S6"/>
					                    </layoutData>
                                    </VBox>
                                    <VBox height="6em">
                                        <Label
                                            text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}"
