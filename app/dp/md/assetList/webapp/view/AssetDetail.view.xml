                                            text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}"
                                            class="sapUiTinyMarginEnd"
                                            textAlign="Left"
                                            labelFor="input"
                                            required="true"/>
                                        <Text text="테스트"/>
                                        <layoutData>
						                    <layout:GridData span="XL4 L4 M6 S6"/>
					                    </layoutData>
                                    </VBox>
                                    <VBox height="6em">
                                        <Label
                                            text="{path:'I18N>/PRODUCTION_TYPE', formatter:'I18NFormatter'}"
                                            class="sapUiTinyMarginEnd"
                                            textAlign="Left"
                                            labelFor="input"
                                            required="true"/>
                                        <Text text="테스트"/>
                                        <layoutData>
						                    <layout:GridData span="XL4 L4 M6 S6"/>
					                    </layoutData>
                                    </VBox>
                                    <VBox height="6em">
                                        <Label
                                            text="{path:'I18N>/TOOL_TYPE', formatter:'I18NFormatter'}"
                                            class="sapUiTinyMarginEnd"
                                            textAlign="Left"
                                            labelFor="input"
                                            required="true"/>
