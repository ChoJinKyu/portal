<mvc:View controllerName="dp.md.assetList.controller.AssetList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:table="sap.ui.table" 
    xmlns:sc="sap.suite.ui.commons" 
    xmlns:microchart="sap.suite.ui.microchart" 
    xmlns:lib-m="ext.lib.m"
    xmlns:cm-ui="cm.util.control.ui"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/PLANT}" labelFor="searchDivisionS" required="true"></Label>
                                <MultiComboBox  id="searchDivisionS" width="100%" selectedKey="" 
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }"
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{path:'I18N>/ASSETS_STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchAssetsStatusS" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'SegmentedItem>/Code',
                                                sorter: {path: 'sort_no'}
                                    }">
                                        <items>
                                            <SegmentedButtonItem width="5em" text="{SegmentedItem>code_name}" key="{SegmentedItem>code}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{path:'I18N>/SIGNAL', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchSignalS" 
                                        selectedKey="" 
                                        width="100%" >
                                        <items>
                                            <SegmentedButtonItem width="5em" text="Light" key=""/>
                                            <SegmentedButtonItem width="5em" text="Heavy" key=""/>
                                            <SegmentedButtonItem width="5em" text="Replace" key=""/>
                                        </items>
                                    </SegmentedButton>
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/PLANT}" labelFor="searchDivisionE" required="true"></Label>
                                <MultiComboBox  id="searchDivisionE" width="100%" selectedKey="" 
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }"
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{path:'I18N>/ASSETS_STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchAssetsStatusE" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'SegmentedItem>/Code',
                                                sorter: {path: 'sort_no'}
                                    }">
                                        <items>
                                            <SegmentedButtonItem width="5em" text="{SegmentedItem>code_name}" key="{SegmentedItem>code}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{path:'I18N>/SIGNAL', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchSignalE" 
                                        selectedKey="" 
                                        width="100%" >
                                        <items>
                                            <SegmentedButtonItem width="5em" text="Light" key=""/>
                                            <SegmentedButtonItem width="5em" text="Heavy" key=""/>
                                            <SegmentedButtonItem width="5em" text="Replace" key=""/>
                                        </items>
                                    </SegmentedButton>
                                <layoutData>
                                    <layout:GridData span="XL4 L4 M6 S12" />
                                </layoutData>
                            </VBox>
                            
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" labelFor="searchModel"></Label>
                            <Input id="searchModel" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" labelFor="searchMoldNumber"></Label>
                            <Input id="searchMoldNumber" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" labelFor="searchDescription"></Label>
                            <Input id="searchDescription" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/ASSET_NUMBER', formatter:'I18NFormatter'}" labelFor="searchAssetNumber"></Label>
                            <Input id="searchAssetNumber" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/2ND_VENDOR', formatter:'I18NFormatter'}" labelFor="searchSecondVendor"></Label>
                            <Input id="searchSecondVendor" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/3RD_VENDOR', formatter:'I18NFormatter'}" labelFor="searchThirdVendor"></Label>
                            <Input id="searchThirdVendor" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table id="assetListTable"
                    selectionMode="MultiToggle"
                    fixedColumnCount="5"
                    visibleRowCountMode="Auto"
                    rows="{list>/MoldMstView}"
                    cellClick=".onCellClick"
                    rowSelectionChange=".onCheck">
                <table:extension>
                    <OverflowToolbar>
                        <Title text="List ({= ${list>/MoldMstView}.length || 0})" level="H2"/>
                        <ToolbarSpacer/>
                        <!-- Add the Personalization button -->
                        <Button id="changeSuppButton"   type="Transparent" text="Change Supp."        press=".onChangeSuppButtonButtonPress"  />
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://excel-attachment" press=".onExportPress" />
                        <Button icon="sap-icon://action-settings"  press=".onMoldMstTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </table:extension>                             
                <table:columns>
                    
                    <table:Column id="assetDivisionColumn" width="4.5em" hAlign="Center">
                        <Label text="{path:'I18N>/PLANT', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="org_code" text="{list>org_code}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetModelColumn" width="10em" >
                        <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="model" text="{list>model}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetMoldNoColumn" width="12em">
                        <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_number" text="{list>mold_number}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetSeqColumn" width="3em" hAlign="Center">
                        <Label text="{path:'I18N>/SEQUENCE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_sequence" text="{list>mold_sequence}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetDescriptionColumn" width="10em">
                        <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="spec_name" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetSecondVendorColumn" width="13em">
                        <Label text="2nd Vendor" wrapping="true"/>
                        <table:template>
                            <Input id="assetSecondVendor"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetThirdVendorColumn" width="13em">
                        <Label text="3rd Vendor" wrapping="true"/>
                        <table:template>
                            <Input id="assetThirdVendor"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetProdVendorColumn" width="10em">
                        <Label text="Prod Vendor" wrapping="true"/>
                        <table:template>
                            <Text id="prod_vendor" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetProdVendorNameColumn" width="10em">
                        <Label text="Prod Vendor Name" wrapping="true"/>
                        <table:template>
                            <Text id="prod_vendor_name" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetOrderVendorNameColumn" width="10em">
                        <Label text="Order Vendor Name" wrapping="true"/>
                        <table:template>
                            <Text id="order_vendor_name" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetsStatusColumn" width="10em">
                        <Label text="Assets Status" wrapping="true"/>
                        <table:template>
                            <Text id="assets_status" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetTypeColumn" width="10em">
                        <Label text="{path:'I18N>/ASSET_TYPE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="asset_type" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetNumberColumn" width="10em">
                        <Label text="{path:'I18N>/ASSET_NUMBER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="asset_number" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetRemarkColumn" width="10em">
                        <Label text="{path:'I18N>/REMARK', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="remark" text="{list>remark}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetLgRemarkColumn" width="10em">
                        <Label text="LG Remark" wrapping="true"/>
                        <table:template>
                            <Text id="lg_remark" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetToolTypeColumn" width="10em">
                        <Label text="{path:'I18N>/TOOL_TYPE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="tool_type" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetCavProcessColumn" width="10em">
                        <Label text="Cav'/Process" wrapping="true"/>
                        <table:template>
                            <Text id="cav_process" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetTonColumn" width="10em">
                        <Label text="{path:'I18N>/TONNAGE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="ton" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetMoldSupplierColumn" width="10em">
                        <Label text="{path:'I18N>/MOLD_SUPPLIER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_supplier" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAcquisitionDateColumn" width="10em">
                        <Label text="{path:'I18N>/ACQISITION_DATE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="acquisition_date" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetShotColumn" width="10em">
                        <Label text="{path:'I18N>/SHOT', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="shot" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAgeColumn" width="10em">
                        <Label text="Age(Month)" wrapping="true"/>
                        <table:template>
                            <Text id="age_month" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetSignalColumn" width="10em">
                        <Label text="{path:'I18N>/SIGNAL', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="Signal" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetRepairStatusColumn" width="10em">
                        <Label text="{path:'I18N>/REPAIR_STATUS', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="repair_status" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    
                    
                </table:columns>
            </table:Table>
        </f:content>
    </f:DynamicPage>
    
</mvc:View>