<mvc:View controllerName="dp.md.moldApprovalList.controller.ApprovalList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyS" required="true"></Label>     
                                <MultiComboBox id="searchCompanyS" width="100%" selectionFinish="handleSelectionFinishComp" items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/PLANT', formatter:'I18NFormatter'}" labelFor="searchPlantS" required="true"></Label>
                                <MultiComboBox id="searchPlantS" width="100%" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ]
                                    }"
                                    selectionFinish="handleSelectionFinishDiv" required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateS" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateS" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                             <VBox height="4em">
                                <Label text="{path:'I18N>/APPROVAL_TYPE_CODE', formatter:'I18NFormatter'}" labelFor="searchApprovalCategoryS"></Label>
                                <MultiComboBox id="searchApprovalCategoryS" width="100%" items="{
                                            path : 'util>/Code',
                                            filters : [
                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2600'},
                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_APPROVAL_TYPE'}
                                            ],
                                            sorter: { path: 'sort_no'}
                                        }"
                                        selectionFinish="handleSelectionFinishDiv">
                                <core:Item key="{util>code}" text="{util>code_name}" />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyE" required="true"></Label>     
                                <MultiComboBox id="searchCompanyE" width="100%" selectionFinish="handleSelectionFinishComp" items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em"> 
                                <Label text="{path:'I18N>/PLANT', formatter:'I18NFormatter'}" labelFor="searchPlantE" required="true"></Label>
                                <MultiComboBox id="searchPlantE" width="100%" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ]
                                    }"
                                    selectionFinish="handleSelectionFinishDiv" required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateE" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateE" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                             <VBox height="4em">
                                <Label text="{path:'I18N>/APPROVAL_TYPE_CODE', formatter:'I18NFormatter'}" labelFor="searchApprovalCategoryE"></Label>
                                <MultiComboBox id="searchApprovalCategoryE" width="100%" items="{
                                            path : 'util>/Code',
                                            filters : [
                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2600'},
                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_APPROVAL_TYPE'}
                                            ],
                                            sorter: { path: 'sort_no'}
                                        }"
                                        selectionFinish="handleSelectionFinishDiv">
                                <core:Item key="{util>code}" text="{util>code_name}" />
                                </MultiComboBox>
                                
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{path:'I18N>/SEARCH', formatter:'I18NFormatter'}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" labelFor="searchModel"></Label>
                            <Input id="searchModel" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Models',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ],
                                        sorter: { path: 'model' }
                            }">
                                <core:Item key="{model}" text="{model}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <HBox height="4em">
                            <VBox width="87%">
                                <Label text="몰드 No" labelFor="searchMoldNo"></Label>
                                <Input id="searchMoldNo" 
                                        showValueHelp="true"  
                                        valueHelpRequest=".onValueHelpRequested"
                                        suggestionItems="{
                                            path: '/PartNumbers',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                            ],
                                            sorter: { path: 'mold_number' }
                                }">
                                    <core:Item key="{mold_number}" text="{mold_number}" />
                                </Input>
                            </VBox>
                            <VBox width="3%">
                                <Label text=" "></Label>
                                <Text textAlign="Center" text="-"/>
                            </VBox>
                            <VBox width="10%">
                                <Label text=""></Label> 
                                <Input id="searchMoldSeq" textAlign="Center"></Input>
                            </VBox>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </HBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/APPROVAL_TITLE', formatter:'I18NFormatter'}" labelFor="searchSubject"></Label>
                            <Input id="searchSubject" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/REQUESTOR', formatter:'I18NFormatter'}" labelFor="searchRequestor"></Label>
                            <Input id="searchRequestor" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Requestors',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                        ],
                                        sorter: { path: 'email_id' }
                            }">
                            <core:Item key="{email_id}" text="{email_id}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="5em">
                            <Label text="{path:'I18N>/STATUS', formatter:'I18NFormatter'}" class="sapUiSmallMarginTop"></Label>
                            <SegmentedButton id="searchStatus" selectedKey="" width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" key="" />
                                    <SegmentedButtonItem text="Appr-Req" key="AR" width="5em"/>
                                    <SegmentedButtonItem text="Draft" key="DR" width="5em" />
                                    <SegmentedButtonItem text="In-Appr" key="IA" width="5em" />
                                    <SegmentedButtonItem text="Apprvd" key="AP" width="5em" />
                                    <SegmentedButtonItem text="Rejected" key="RJ" width="5em" />
                                     
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <!-- <Table id="mainTable"       
                        growing="true"
                        growingThreshold="20"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onListMainTableUpdateFinished"
                        cellClick=".onCellClick"
                        rowSelectionChange = ".onCheck"
                        mode="MultiSelect"
                        width="auto"
                        items="{list>/Approvals}"> -->
                <Table id="mainTable"       
                    growing="true"
                    growingThreshold="20"
                    class="sapFDynamicPageAlignContent" 
                    updateFinished=".onListMainTableUpdateFinished"
                    width="auto"
                    items="{
                        path: 'list>/Approvals',
                        sorter: { path: 'sort_no'}
                    }"
                    >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Approval List ({= ${list>/Approvals}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <!-- Add the Personalization button -->
                            <Button id="mainTableCreateButton" text="{path:'I18N>/CREATE', formatter:'I18NFormatter'}" type="Emphasized" press=".onDialogCreate" />
                            <Button id="mainTableDeleteButton" text="{path:'I18N>/DELETE', formatter:'I18NFormatter'}"  type="Transparent" press=".onApplovalDeletePress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://excel-attachment" press=".onExportPress" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>                            
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnChkBox" width="4em" >
                            <CheckBox selected="false" select=".onColumnChecBox" text=""/> 
                        </Column>
                        <Column id="mainColumnApprovalCategory" >
                            <!-- <Text text="Approval&#10;Category" /> -->
                            <Text text="{path:'I18N>/APPROVAL_TYPE_CODE', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnCompany" >
                            <!-- <Text text="Company" /> -->
                            <Text text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnPlant" >
                            <!-- <Text text="Plant" /> -->
                            <Text text="{path:'I18N>/PLANT', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnApprovalNo">
                            <!-- <Text text="Approval No" /> -->
                            <Text text="{path:'I18N>/APPROVAL_NUMBER', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnSubject"  >
                            <!-- <Text text="Subject" /> -->
                            <Text text="{path:'I18N>/APPROVAL_TITLE', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnRequestor"  >
                            <!-- <Text text="Requestor" /> -->
                            <Text text="{path:'I18N>/REQUESTOR', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnRequestDate"  >
                            <!-- <Text text="Request Date" /> -->
                            <Text text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainColumnStatus"  >
                            <!-- <Text text="Status" /> -->
                            <Text text="{path:'I18N>/APPROVE_STATUS_CODE', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column visible="false" id="mainColumnEmail"  >
                            <Text text="Email"/>
                        </Column>
                        <Column visible="false" id="mainColumnModel"  >
                            <!-- <Text text="Status" /> -->
                            <Text text="Model"/>
                        </Column>
                        <Column visible="false" id="mainColumnMoldNumber"  >
                            <!-- <Text text="Status" /> -->
                            <Text text="Mold Number"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <!-- <CheckBox fieldGroupIds="{= ${list>approval_type_code}==='E'? 'checkBoxs':''}"  visible="{= ${list>approval_type_code}==='E'? true:false }" select=".onCheck" />                   -->
                                <CheckBox fieldGroupIds="{= ${list>approve_status_code}==='DR'? 'checkBoxs':''}"  visible="{= ${list>approve_status_code}==='DR'? true:false }" select=".onCheck" />       
                                
                                <Text text="{list>approval_type}" />
                                <Text text="{list>company_name}" />
                                <Text text="{list>org_name}" />
                                <Text text="{list>approval_number}" />
                                <Text text="{list>approval_title}" />
                                <Text text="{list>requestor_name}" />
                                <!-- <ObjectIdentifier text="{list>request_date}" /> -->
                                <DatePicker value="{list>request_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                                <Text text="{list>approve_status}" />
                                <Text text="{list>email_id}" />
                                <Text text="{list>model}" />
                                <Text text="{list>mold_number}" />
                                <!-- <ObjectIdentifier text="{list>requestor_empno}" /> -->
                                

                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>