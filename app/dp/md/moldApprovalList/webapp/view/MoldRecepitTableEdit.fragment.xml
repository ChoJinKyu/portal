<!-- 
   description : 집행품의 Edit 화면  
-->
<core:FragmentDefinition
	xmlns="sap.m" 
        xmlns:uxap="sap.uxap" 
        xmlns:form="sap.ui.layout.form" 
        xmlns:core="sap.ui.core" 
        xmlns:layout="sap.ui.layout" 
        xmlns:tnt="sap.tnt" 
        xmlns:co="sap.suite.ui.commons" 
        xmlns:si="sap.suite.ui.commons.statusindicator" 
        xmlns:u="sap.ui.unified" 
        xmlns:table="sap.ui.table" >

      		<!-- budgetExecutionTable Table -->
				    <table:Table id="moldRecepitTable" 
                             selectionMode="{=${contModel>/editMode}?'MultiToggle':'None'}" 
                             fixedColumnCount="6" 
                             visibleRowCountMode="Auto" 
                             rows="{path:'mdItemMaster>/ItemBudgetExecution'}">
					<table:extension>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<!-- Add the Personalization button -->
							    <Button visible="{contModel>/editMode}" type="Transparent" text="{I18N>/ROW_ADD}" press=".onMoldRecepitAddPress">
								<!-- Add -->
								<customData>
									<core:CustomData key="multi" value="true"/>
								</customData>
							</Button>
							<Button visible="{contModel>/editMode}" type="Transparent" text="{I18N>/ROW_DELETE}" press=".onMoldRecepitDelRow"/>
						</OverflowToolbar>
					</table:extension>
					<table:columns>
						<table:Column visible="false">
							<Label text="mold_id"/>
							<table:template>
								<Text text="{mdItemMaster>mold_id}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_approval_number" visible="false">
							<Label text="approval_number"/>
							<table:template>
								<Text id="t_approval_number" text="{mdItemMaster>approval_number}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_model" width="20em" hAlign="Center">
							<Label text="{I18N>/MODEL}"/>
							<table:template>
								<Text id="t_model" text="{mdItemMaster>model}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_moldPartNo" width="10em" hAlign="Center">
							<Label text="Mold No"/>
							<table:template>
								<Text id="t_mold_part_no" text="{mdItemMaster>mold_number}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_seq" width="5em" hAlign="Center">
							<Label text="Seq"/>
							<table:template>
								<Text id="t_seq" text="{mdItemMaster>mold_sequence}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_description" width="15em" hAlign="Center">
							<Label text="{I18N>/DESCRIPTION}"/>
							<table:template>
								<Text id="description" text="{mdItemMaster>spec_name}"/>
							</table:template>
						</table:Column>
                        <!--  여기까지 픽스 -->
						<table:Column width="10em" hAlign="Center">
							<Label text="Item Type"/>
							<table:template>
								<ComboBox visible="{contModel>/editMode}"
                                        selectedKey="{mdItemMaster>mold_item_type_code}" 
                                        items="{ path : 'util>/Code',
                                        filters : [
                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                            {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_ITEM_TYPE'}
                                        ]
                                    }">
									<core:Item key="{util>code}" text="{util>code_name}"/>
								</ComboBox>
                               
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Currency"/>
							<table:template>
								<ComboBox  visible="{contModel>/editMode}" 
                                        selectedKey="{mdItemMaster>currency_code}" 
                                        items="{ path : 'util>/Code',
                                        filters : [
                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                            {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_LOCAL_CURRENCY'}
                                        ]
                                    }">
									<core:Item key="{util>code}" text="{util>code_name}"/>
								</ComboBox>
                               
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Receipt Amount"/>
							<table:template>
								<Text text="{mdItemMaster>receiving_amount}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Book Currency"/>
							<table:template>
								<Text text="{mdItemMaster>book_currency_code}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Budget Amount"/>
							<table:template>
								<Text text="{mdItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
						<table:Column width="15em" hAlign="Center">
							<Label text="Order Supplier"/>
							<table:template>
								<Text text="{mdItemMaster>supplier_code}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Production Supplier"/>
							<table:template>
								<Text text="{mdItemMaster>production_supplier_code}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Project Code"/>
					        <table:template>
								<Text text="{mdItemMaster>project_code}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Acquisition Department"/>
					        <table:template>
								<Text text="{mdItemMaster>acq_department_code}"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Drawing Consent Plan"/>
					        <table:template>
                                <DatePicker value="{mdItemMaster>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Drawing Consent Result"/>
					        <table:template>
                                <DatePicker value="{mdItemMaster>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="1st Production Plan"/>
					        <table:template>
								<DatePicker value="{mdItemMaster>first_production_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="1st Production Result"/>
					        <table:template>
								<DatePicker value="{mdItemMaster>first_production_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Completion Plan"/>
					        <table:template>
								<DatePicker value="{mdItemMaster>production_complete_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>
						<table:Column width="10em" hAlign="Center">
							<Label text="Completion Result"/>
					        <table:template>
								<DatePicker value="{mdItemMaster>production_complete_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
							</table:template>
						</table:Column>

					</table:columns>
				</table:Table>
	
</core:FragmentDefinition>
