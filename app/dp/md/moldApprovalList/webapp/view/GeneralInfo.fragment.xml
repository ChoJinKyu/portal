<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:rte="sap.ui.richtexteditor">

    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd"> 
        <HBox alignItems="Center">
            <Label
                text="Subject"
                class="sapUiTinyMarginEnd"
                textAlign="Left"
                labelFor="input"
                required="true"/>
            <Input
                id="titleInput"
                value="{appMaster>/approval_title}"
                editable="{mode>/editFlag}" class="readonlyField"
                width="40em" 
                placeholder="Input data"
                >
            </Input>
        </HBox>
        <VBox>
            <Label text="Description" labelFor="input" required="true"></Label> 
            <rte:RichTextEditor id="approvalContents" width="100%" height="600px" value="{appMaster>/approval_contents}" 
            customToolbar="true" showGroupFont="true" showGroupLink="true" showGroupInsert="true"
            editable="{mode>/editFlag}" />
        </VBox>
    </layout:VerticalLayout>
	
</core:FragmentDefinition>