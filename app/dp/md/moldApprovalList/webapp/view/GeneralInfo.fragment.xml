<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:rte="sap.ui.richtexteditor"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    >

    <layout:VerticalLayout id="generalInfoLayout" width="100%"> 
        <HBox alignItems="Center">
            <Label
                text="{path:'I18N>/SUBJECT', formatter:'I18NFormatter'}"
                class="sapUiTinyMarginEnd"
                textAlign="Left"
                labelFor="input"
                required="true"/>
            <Input
                value="{appMaster>/approval_title}"
                editable="{mode>/editFlag}" 
                class="{=${mode>/editFlag}?'':'readonlyField'}"
                width="40em" 
                placeholder="Input data" required="true">
            </Input>
        </HBox>
        <VBox class="sapUiTinyMarginTop">
            <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" labelFor="input" ></Label> 
            <rte:RichTextEditor id="approvalContents" width="100%" height="600px" wrapping="false" editorType="TinyMCE4" 
                value="{appMaster>/approval_contents}" 
                customToolbar="true" showGroupFont="true" 
                showGroupLink="true" showGroupInsert="true"
                visible="{mode>/editFlag}"  />
            <FormattedText id="approvalContentsFormattedText" height="600px" htmlText="{= ${appMaster>/approval_contents}?${appMaster>/approval_contents}:'' }" visible="{=!${mode>/editFlag}}"/>
        </VBox>
    </layout:VerticalLayout>
	
</core:FragmentDefinition>