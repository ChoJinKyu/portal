<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:rte="sap.ui.richtexteditor"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    >

    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd" id="generalInfoLayout" width="80%"> 
        <HBox alignItems="Center">
            <Label
                text="{path:'I18N>/SUBJECT', formatter:'I18NFormatter'}"
                class="sapUiTinyMarginEnd"
                textAlign="Left"
                labelFor="input"
                required="true"/>
            <Input
                value="{appMaster>/approval_title}"
                editable="{mode>/editFlag}" 
                class="{=${mode>/editFlag}?'':'readonlyField'}"
                width="40em" 
                placeholder="Input data" required="true">
            </Input>
        </HBox>
        <VBox>
            <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" labelFor="input" ></Label> 
            <rte:RichTextEditor width="100%" height="600px" 
                value="{appMaster>/approval_contents}" 
                customToolbar="true" showGroupFont="true" 
                showGroupLink="true" showGroupInsert="true"
                editable="{mode>/editFlag}"  />
        </VBox>
    </layout:VerticalLayout>
	
</core:FragmentDefinition>