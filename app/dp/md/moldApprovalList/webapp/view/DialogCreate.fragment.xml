<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="dialogApprovalCategory" class="sapUiSmallMargin" title="" contentWidth="35%" >
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    id="dialogCreateForm"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" >
                    <form:content>
                        <!-- 팝업 콤보박스 영역 -->
                        <VBox>
                            <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" design="Bold" required="true"/> 
                            <ComboBox id="searchCompanyF" width="70%" selectedKey="" change="dialogChangeComp" items="{
                                path: 'org>/Company',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2600'}
                                ],
                                sorter: { path: 'company_code'}
                            }" required="true">
                                <items>
                                    <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text="{path:'I18N>/PLANT', formatter:'I18NFormatter'}" design="Bold" required="true"/> 
                            <ComboBox id="searchPlantF" width="70%" selectedKey="" items="{
                                path: 'purOrg>/Pur_Operation_Org',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2600'},
                                    {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                    {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                ]
                            }" required="true">
                                <items>
                                    <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        
                        <!-- Approval Category 버튼 영역 -->
                        <core:Title text="Approval Category" />
                        <VBox>
                            <Label text = "1. {path:'I18N>/LOCAL', formatter:'I18NFormatter'}"/> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="localBudget" fieldGroupIds="toggleButtons" text="Budget" value="B" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="supplierSelection" fieldGroupIds="toggleButtons" text="Supplier Selection" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="localOrder" fieldGroupIds="toggleButtons" text="Order" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="receipt" fieldGroupIds="toggleButtons" text="Receipt" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "2. {path:'I18N>/EXPORT', formatter:'I18NFormatter'}"/> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="export" fieldGroupIds="toggleButtons" text="Export" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "3. {path:'I18N>/IMPORT', formatter:'I18NFormatter'}"/> 
                            <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                             <ToggleButton id="importBudget" fieldGroupIds="toggleButtons" text="Budget" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                             <ToggleButton id="importOrder" fieldGroupIds="toggleButtons" text="Order" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="importCompletion" fieldGroupIds="toggleButtons" text="Import Completion" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "4. Repair/Modification"/> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="repModCompletion" fieldGroupIds="toggleButtons" text="Repair/Modifi. Completion" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "5. {path:'I18N>/ETC', formatter:'I18NFormatter'}"/> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="otherIn" fieldGroupIds="toggleButtons" text="Other In" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="otherOut" fieldGroupIds="toggleButtons" text="Other Out" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="prodSupplierAmend" fieldGroupIds="toggleButtons" text="Prod Supplier Amend" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                        <VBox alignItems="Center" justifyContent="Center">
                            <ToggleButton id="itemCancel" fieldGroupIds="toggleButtons" text="Item Cancel" enabled="true" pressed="false" press=".onToggleHandleChange" width="18em"/>
                            <layoutData>
                                <layout:GridData span="XL6 L3 M6 S12" />
                            </layoutData> 
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="Cancel" type="Transparent" press=".createPopupClose"/>
            <Button text="Select" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".handleConfirm"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
