<!-- 
   description : 품의서 Participating Supplier 항목의 Supplier Select 버튼 클릭
-->
<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    >
	<ValueHelpDialog
		title="Product"
		ok=".onValueHelpOkPress"
		cancel=".onValueHelpCancelPress"
		afterClose=".onValueHelpAfterClose"
		key="company_code"
		descriptionKey="company_name"
	>
    <!-- supportRanges="true" -->
		<filterBar>
			<fb:FilterBar advancedMode="true" search=".onFilterBarSearch">
                <fb:filterGroupItems> 
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Company" labelTooltip="Tooltip Example" mandatory="true" partOfCurrentVariant="true" visibleInFilterBar="true">
                        <fb:control>
                            <m:ComboBox type="Text" change="onChange" selectedKey="{pssaCreateObjectView>/company}" enabled="false"
                                items="{
                                        path: 'org>/Org_Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }"
                                >
                                <m:items> 
                                    <core:Item key="[{org>company_code}] {org>company_name}"  text="[{org>company_code}] {org>company_name}" />
                                
                                </m:items>
                            </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
					<fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="spplierCode"
						label="Supplier Code"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="Supplier_Code" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="Plant" labelTooltip="Tooltip Example" mandatory="true" partOfCurrentVariant="true" visibleInFilterBar="true">
                        <fb:control>
                           <m:ComboBox width="100%" selectedKey="{pssaCreateObjectView>/plant}" enabled="false" items="{
                                    path: 'purOrg>/Pur_Operation_Org',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},
                                        {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                        {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                    ]
                                }">
                            <m:items>
                                <core:Item key="[{purOrg>org_code}]{purOrg>org_name}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                            </m:items>
                        </m:ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
					<fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="supplierName"
						label="Supplier Name"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="Supplier_Name" />
						</fb:control>
					</fb:FilterGroupItem>

				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>

