<core:FragmentDefinition 
xmlns="sap.m" 
xmlns:uxap="sap.uxap" 
xmlns:form="sap.ui.layout.form" 
xmlns:core="sap.ui.core" 
xmlns:layout="sap.ui.layout" 
xmlns:tnt="sap.tnt" 
xmlns:co="sap.suite.ui.commons" 
xmlns:si="sap.suite.ui.commons.statusindicator" 
xmlns:u="sap.ui.unified" 
xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin">
		<form:SimpleForm editable="true" 
                         layout="ResponsiveGridLayout" 
                         labelSpanXL="2" 
                         labelSpanL="2" 
                         labelSpanM="2" 
                         labelSpanS="2" 
                         adjustLabelSpan="false" 
                         emptySpanXL="0" 
                         emptySpanL="0" 
                         emptySpanM="0" 
                         emptySpanS="0" 
                         columnsXL="2" 
                         columnsL="1" 
                         columnsM="1" 
                         singleContainerFullSize="true">
			<form:content>
				
				<HBox>
					<VBox class="sapUiSmallMargin">
						<Label text="{I18N>/AFFILIATE}"/>
						<ObjectStatus text="[{company>/company_code}] {company>/company_name}" state="Error"/>
					</VBox>
					<VBox class="sapUiSmallMargin">
						<Label text="{I18N>/BUSINESS_DIVISION}"/>
						<ObjectStatus text="[{plant>/plant_code}] {plant>/plant_name}" state="Error"/>
					</VBox>
				</HBox>
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm editable="true" 
                         layout="ResponsiveGridLayout" 
                         labelSpanXL="2" 
                         labelSpanL="2" 
                         labelSpanM="2" 
                         labelSpanS="2" 
                         adjustLabelSpan="false" 
                         emptySpanXL="0" 
                         emptySpanL="0" 
                         emptySpanM="0" 
                         emptySpanS="0" 
                         columnsXL="2" 
                         columnsL="1" 
                         columnsM="1" 
                         singleContainerFullSize="true">
			<form:content>
				<!-- Participating Supplier Table -->
				<table:Table id="psTable" 
                             selectionMode="MultiToggle" 
                             fixedColumnCount="6" 
                             visibleRowCountMode="Auto" 
                             rows="{path:'psItemMaster>/ParticipatingSupplier'}">
					<table:extension>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<!-- Add the Personalization button -->
							    <Button id="btnBeaAdd" type="Transparent" text="{I18N>/ROW_ADD}" press=".onPSSelectionAddPress">
								<!-- Add -->
								<customData>
									<core:CustomData key="multi" value="true"/>
								</customData>
							</Button>
							<Button id="btnBeaDelete" type="Transparent" text="{I18N>/ROW_DELETE}" press=".onPSSelectionDelRow"/>
                            <Button id="btnSupplier" type="Emphasized" text="Supplier Selection" press=".onSuppValueHelpRequested"/>
						</OverflowToolbar>
					</table:extension>
					<table:columns>
						<table:Column id="c_mold_id" visible="false">
							<Label text="mold_id"/>
							<table:template>
								<Text id="t_mold_id" text="{psItemMaster>mold_id}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_approval_number" visible="false">
							<Label text="approval_number"/>
							<table:template>
								<Text id="t_approval_number" text="{psItemMaster>approval_number}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_model" width="20em" hAlign="Center">
							<Label text="{I18N>/MODEL}"/>
							<table:template>
								<Text id="t_model" text="{psItemMaster>model}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_moldPartNo" width="10em" hAlign="Center">
							<Label text="Mold No"/>
							<table:template>
								<Text id="t_mold_part_no" text="{psItemMaster>mold_number}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_seq" width="5em" hAlign="Center">
							<Label text="Seq"/>
							<table:template>
								<Text id="t_seq" text="{psItemMaster>mold_sequence}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_description" width="15em" hAlign="Center">
							<Label text="{I18N>/DESCRIPTION}"/>
							<table:template>
								<Text id="description" text="{psItemMaster>spec_name}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_itemType" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Item"/>
                                <Label text="Type"/>
                            </VBox>
							<table:template>
								<ComboBox selectedKey="{psItemMaster>mold_item_type_code}" items="{ path : 'util>/CodeDetails',
                                        filters : [
                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                            {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_ITEM_TYPE'}
                                        ]
                                    }">
									<core:Item key="{util>code}" text="{util>code_description}"/> 
								</ComboBox>
                                <!-- <Text id="moldItemTypeCodeNm" text="{psItemMaster>mold_item_type_code_nm}"/> -->
							</table:template>
						</table:Column>
						<table:Column id="c_bookCurrency" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Book"/>
                                <Label text="Currency"/>
                            </VBox>
							<table:template>
								<Text text="{psItemMaster>book_currency_code}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_budget_amount" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Budget"/>
                                <Label text="Amount"/>
                            </VBox>
							<table:template>
								<Text text="{psItemMaster>budget_amount}"/>
							</table:template>
						</table:Column>
						<table:Column id="c_currency" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Currency"/>
                            </VBox>
							<table:template>
                            <!-- <Text text="{psItemMaster>company_code}"/> -->
                                <ComboBox selectedKey="{psItemMaster>currency_code}" 
                                items="{ 
                                    path : 'psOrgCode>/OrgCodeLanguages',
                                    filters : [
                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_LOCAL_CURRENCY'}
                                    ]
                                }">
									<core:Item key="{psOrgCode>code}" text="{psOrgCode>code_name}"/> 
								</ComboBox>
								<!-- <Input value="{psItemMaster>currency_code}"/> -->
							</table:template>
						</table:Column>
                        <table:Column id="c_target_amount" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Target"/>
                                <Label text="Amount"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
                                <Input value="{psItemMaster>target_amount}"/>
								<!-- <Input value="{psItemMaster>provisional_budget_amount}"/> -->
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier1" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier1"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier2" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier2"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier3" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier3"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier4" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
