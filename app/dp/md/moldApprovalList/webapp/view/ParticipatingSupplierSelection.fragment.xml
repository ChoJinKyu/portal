                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier7" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier7"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier8" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier8"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier9" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier9"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier10" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier10"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier11" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier11"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
                        <table:Column id="c_mold_supplier12" width="10em" hAlign="Center">
                            <VBox>
                                <Label text="Mold"/>
                                <Label text="Supplier12"/>
                            </VBox>
							<!-- <Label text="Budget Amount"/> -->
							<table:template>
								<Text text="{psItemMaster>provisional_budget_amount}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</form:content>
		</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>
