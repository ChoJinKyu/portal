<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm 
        editable="false"
        layout="ResponsiveGridLayout"
    >
        <form:content>
		
            <VBox height="3.5rem">
                <Label text="{I18N>/MODEL}"/>
                <Text text="{master>/model}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Part No"/> 
                <Text text="{master>/mold_number}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Seq"/>
                <Text text="{master>/mold_sequence}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Production Type"/>
                <Text text="{mstSpecView>/mold_production_type_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Item Type"/>
                <Text text="{mstSpecView>/mold_item_type_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="{I18N>/DESCRIPTION}"/>
                <Text text="{master>/spec_name}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Supplier"/>
                <Text text="[{master>/mold_mfger_code}] {mstSpecView>/mold_mfger_name}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Order Supplier"/>
                <Text text="[{master>/supplier_code}] {mstSpecView>/supplier_name}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Production Supplier"/>
                <Text text="[{master>/production_supplier_code}] {mstSpecView>/production_supplier_name}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

        </form:content>
	</form:SimpleForm>
</core:FragmentDefinition>