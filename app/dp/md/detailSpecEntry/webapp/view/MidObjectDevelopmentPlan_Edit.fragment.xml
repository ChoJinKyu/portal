<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >

    <l:VerticalLayout class="sapUiContentPadding">
            <Table id="scheduleTable1E"
                    mode="None"
                    sticky="HeaderToolbar,ColumnHeaders"
                    inset="false"
                    class="sapFDynamicPageAlignContent"
                    width="auto"
                    items= "{schedule>/MoldSchedule}"
                    >
                <columns>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="Drawing Consent" />
                    </Column>
                    <Column>
                        <Text text="Settled Drawing" />
                    </Column>
                    <Column>
                        <Text text="1st Prod Date" required="true" />
                    </Column>
                    <Column>
                        <Text text="Complete Date" required="true" />
                    </Column>
                    <Column>
                        <Text text="Inspection Date" required="true" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Select   width="100%"
                                        selectedKey="{schedule>mold_develope_date_type_code}"
                                        items="{
                                                    path : 'util>/Code',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_DEV_DATE_TYPE'}
                                                    ]
                                                }"
                                        editable="false"
                                        class="readonlyField"
                            >
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </Select>
                            <DatePicker value="{schedule>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule>drawing_confirmed_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule>first_production_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" required="true"/>
                            <DatePicker value="{schedule>production_complete_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" required="true"/>
                            <DatePicker value="{schedule>inspection_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" required="true"/>
                        </cells>
                    </ColumnListItem>
                </items>
                
            </Table>
            
            <Table id="scheduleTable2E"
                    mode="None"
                    sticky="HeaderToolbar,ColumnHeaders"
                    inset="false"
                    class="sapFDynamicPageAlignContent"
                    width="auto"
                    items= "{schedule>/MoldSchedule}"
                    >
                <columns>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="1st Production Changed Date" />
                    </Column>
                    <Column>
                        <Text text="2nd Production Changed Date" />
                    </Column>
                    <Column>
                        <Text text="3rd Production Changed Date" />
                    </Column>
                    <Column>
                        <Text text="4th Production Changed Date" />
                    </Column>
                    <Column>
                        <Text text="5th Production Changed Date" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Select   width="100%"
                                        selectedKey="{schedule>mold_develope_date_type_code}"
                                        items="{
                                                    path : 'util>/Code',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_DEV_DATE_TYPE'}
                                                    ]
                                                }"
                                        editable="false"
                                        class="readonlyField"
                            >
                                <core:Item key="{util>code}" text="{util>code_name}" />
                            </Select>
                            <DatePicker value="{schedule/first_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule/second_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule/third_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule/fourth_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                            <DatePicker value="{schedule/fifth_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                        </cells>
                    </ColumnListItem>
                </items>
                
            </Table>
            </l:VerticalLayout>
	
</core:FragmentDefinition>