<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogDeptSelection" class="sapUiSmallMargin" title="" contentWidth="35%" >
        <VBox class="sapUiSmallMargin">
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
                singleContainerFullSize="false" >
                    
                    <form:content>
                        <VBox>
                            <Label text = "Dept"/> 
                             <Input id="dept" width="100%"/>
                             <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Button text="Search" id="btnDeptPopSearch" class="sapUiSmallMargin" type="Emphasized" press=".onDeptSelection"/>
                               <layoutData>
                                <layout:GridData span="XL2 L2 M2 S2" />
                            </layoutData> 
                        </VBox>
                       </form:content>
                    <form:content>
                    <HBox>
                        <Table id="popDeptSelectTable"       
                            growing="true"
                            growingThreshold="10"
                            class="sapFDynamicPageAlignContent" 
                            updateFinished="" 
                            selectionChange=".selectDeptChange" 
                            mode="SingleSelectMaster"
                            width="auto"
                            items="{deptPopList>/Department}"
                            >
                         <headerToolbar>
                        </headerToolbar> 
                        <columns>
                            <Column visible="false" >
                                <Text text="department_id" />
                            </Column>
                            <Column minScreenWidth="Tablet" hAlign="Center"   >
                                <Text text="department_local_name" />
                            </Column>                
                        </columns>
                        <items>
                             <ColumnListItem>
                                <cells>
                                    <!-- <ObjectIdentifier title="{Name}" text="{ProductId}"/> -->
                                    <Text text="{deptPopList>department_id}" />
                                    <Text text="{deptPopList>department_local_name}" />
                                </cells>
                            </ColumnListItem>   
                            </items>
                            
                        </Table>
                         <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData> 
                       </HBox>
                         </form:content>
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="Cancel" class="sapUiSmallMarginEnd" press=".onExit"/>
            <Button text="Apply" class="sapUiSmallMarginEnd" type="Emphasized" press=".onDeptSelectionApply"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
