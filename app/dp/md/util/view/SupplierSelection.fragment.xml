

<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    >
     <!-- <m:VBox class="sapUiSmallMargin">
        <m:VBox>
            <m:SearchField/>
            <m:layoutData>
                <m:layout:GridData span="XL12 L12 M6 S12" />
            </m:layoutData>
        </m:VBox>
    </m:VBox> -->
    <ValueHelpDialog
        id="valueHelpDialogSupplier"
        title="Supplier"
        ok="onValueHelpSuppOkPress"
        cancel=".onValueHelpSuppCancelPress"
        afterClose=".onValueHelpSuppAfterClose"
        supportMultiselect="false"
        key="supplier_code"
        descriptionKey="supplier_local_name"
    >
    <filterBar>
            <fb:FilterBar advancedMode="true" 
                        search=".onFilterBarSuppSearch" 
                        isRunningInValueHelpDialog="true" 
                        showFilterConfiguration="false"
                        useToolbar="false" >
                <fb:filterGroupItems>
                <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="company"
                        label="Company"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:MultiComboBox id="supplierCompany" editable="false" forceSelection="false" width="100%" selectedKey="" change="handleChangeImpComp" items="{
                                path: 'cmOrgModel>/Org_Company',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                ],
                                sorter: { path: 'company_code'}
                            }">
                                <m:items>
                                    <core:Item key="{cmOrgModel>company_code}" text="[{cmOrgModel>company_code}] {cmOrgModel>company_name}" />
                                </m:items>
                            </m:MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="plant"
                        label="Plant"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:MultiComboBox id="supplierPlant" editable="false" forceSelection="false" width="100%" selectedKey="" selectionFinish="" items="{
                                path: 'dseModel>/Divisions',
                                filters: [
                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                    
                                    
                                ],
                                sorter: { path: 'org_code'}
                            }">
                                <m:items>
                                    <core:Item key="{dseModel>org_code}" text="[{dseModel>org_code}] {dseModel>org_name}" />
                                </m:items>
                            </m:MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                

                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="supplier_code"
                        label="Supplier Code"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="supplier_code" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="supplier_local_name"
                        label="Supplier Local Name"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="supplier_local_name" />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="supplier_english_name"
                        label="Supplier English Name"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="supplier_english_name" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
