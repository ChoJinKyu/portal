<!-- 
   @description : Remodel Repair Item Popup
   @author : jinseon.lee
   @date : 2021.02.03  
-->
<core:FragmentDefinition
    xmlns="sap.m" 
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="remodelRepairItemPopup" class="sapUiSmallMargin" title="" contentWidth="45%" >
        <VBox class="sapUiSmallMargin">
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
                singleContainerFullSize="true" >
                    
                    <form:content>
                        <VBox>
                            <Label text = "Division" /> 
                            <Select width="100%" selectedKey="{repairSearchCondition>/org_code}" 
                                     items="{path: 'repairPlant>/Pur_Operation'}">
                                <items>
                                    <core:Item key="{repairPlant>org_code}"  text="[{repairPlant>org_code}] {repairPlant>org_name}" />
                                </items>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                       <VBox>
                            <Label text = "Part No"/> 
                             <Input id="searchMoldNo" 
                                        showValueHelp="true"  
                                        valueHelpRequest=".onValueHelpRequested"
                                        suggestionItems="{
                                            path: '/PartNumbers',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                            ],
                                            sorter: { path: 'mold_number' }
                                }">
                                    <core:Item key="{mold_number}" text="{mold_number}" />
                                </Input>

                             <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                       </VBox>
                        <VBox>
                            <Label text = "Description" /> 
                            <Input id="repair_Description" width="100%"/>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" labelFor="searchModel"></Label>
                            <Input id="searchModel" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Models',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'model' }
                            }">
                                <core:Item key="{model}" text="{model}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text="Vendor Name" labelFor="searchModel"></Label>
                            <Input  showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Models',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'model' }
                            }">
                                <core:Item key="{model}" text="{model}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Repair Type" /> 
                            <ComboBox width="100%" selectedKey="" 
                                     items="{ path: 'repairPlant>/Pur_Operation_Org' }">
                                <items>
                                    <core:Item key="{moldSelectionCompanyPopList>company_code}"  text="[{moldSelectionCompanyPopList>company_code}] {moldSelectionCompanyPopList>company_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Button id="reModelRepairSrchBtn" text="{I18N>/SEARCH}" class="sapUiSmallMargin" type="Emphasized" press=".onMoldItemSelection"/>
                               <layoutData>
                                <layout:GridData span="XL2 L2 M2 S2" />
                            </layoutData> 
                        </VBox>
                       
                       </form:content>
                    <form:content>
                    <VBox>
                       <table:Table id="reModelRepairItem"       
                            selectionMode="MultiToggle"
                            visibleRowCountMode="Auto"                           
                            height="59px"
                            rows=""
                            >
                        <table:extension>
						<OverflowToolbar>
							<ToolbarSpacer/>
						</OverflowToolbar>
                        </table:extension> 
                            <table:columns>
                                <table:Column width="15rem" hAlign="Center" >
                                    <Label text="Request No"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="5rem" hAlign="Center">
                                    <Label text="Model"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column  width="5rem" hAlign="Center">
                                    <Label text="Part No"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column  width="5rem" hAlign="Center">
                                    <Label text="Seq"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column  width="5rem" hAlign="Center">
                                    <Label text="Spare Part"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Item Name"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Family Part No"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Item Type"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Repair Vendor"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Order Supplier"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Prod Supplier"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Reason"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Currency"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="10rem" hAlign="Center">
                                    <Label text="Amount"/>
                                    <table:template>
                                        <Text text=""/>
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:Table>
                         <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData> 
                       </VBox>
                    </form:content>
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="{I18N>/CANCEL}" type="Transparent" class="sapUiSmallMarginEnd" press=".onExit"/>
            <Button text="{I18N>/APPLY}" class="sapUiSmallMarginEnd" type="Emphasized" press=".onMoldItemSelectionApply"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
