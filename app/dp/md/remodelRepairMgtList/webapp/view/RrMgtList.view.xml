<mvc:View controllerName="dp.md.remodelRepairMgtList.controller.RrMgtList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:table="sap.ui.table" 
    xmlns:sc="sap.suite.ui.commons" 
    xmlns:microchart="sap.suite.ui.microchart" 
    xmlns:lib-m="ext.lib.m"
    xmlns:cm-ui="cm.util.control.ui"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Remodel/Repair Management List" />
                </f:heading>
                <f:snappedContent>
                    <!-- 초기 search 접혀있을때 -->
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyS" required="true"></Label>     
                                <MultiComboBox id="searchCompanyS" width="100%" items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" 
                                    selectedKeys="{searchCon>/companyList}"
                                    selectionFinish="handleSelectionFinishComp" 
                                    required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{I18N>/PLANT}" labelFor="searchPlantS" required="true"></Label>
                                <MultiComboBox  id="searchPlantS" width="100%" 
                                        selectedKeys="{searchCon>/plantList}"
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }"
                                        selectionFinish="handleSelectionFinishDiv"
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/STATUS', formatter:'I18NFormatter'}"></Label>
                                   <Select forceSelection="false"  
                                        width="100%" 
                                        id="searchAssetsStatusS" 
                                        selectedKey="{mdCommon>/import_company_code}" 
                                        items="{
                                            path: 'util>/Code',
                                                    filters: [
                                                       {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_PROGRESS_STATUS'}
                                                    ],
                                                    sorter: { path: 'sort_no'}
                                        }">
                                    <core:Item key="{util>code}" text="{util>code_name}" />
                                </Select>
                              
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M12 S12" />
                                </layoutData>
                            </VBox>
                             <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateS" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateS" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                           
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                     <!-- 초기 search 펼쳐있을때 -->
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyE" required="true"></Label>     
                                <MultiComboBox id="searchCompanyE" width="100%" 
                                         selectedKeys="{searchCon>/companyList}"
                                        items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" 
                                    selectionFinish="handleSelectionFinishComp" 
                                    required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{I18N>/PLANT}" labelFor="searchPlantE" required="true"></Label>
                                <MultiComboBox  id="searchPlantE" width="100%"
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }" 
                                        selectedKeys="{searchCon>/plantList}"
                                        selectionFinish="handleSelectionFinishDiv" 
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                           <VBox height="4em">
                                <Label text="{path:'I18N>/STATUS', formatter:'I18NFormatter'}"></Label> 
                             	<Select forceSelection="false"  
                                        width="100%" 
                                        id="searchAssetsStatusE" 
                                        selectedKey="{mdCommon>/import_company_code}" 
                                        items="{
                                            path: 'util>/Code',
                                                    filters: [
                                                       {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_PROGRESS_STATUS'}
                                                    ],
                                                    sorter: { path: 'sort_no'}
                                        }">
                                    <core:Item key="{util>code}" text="{util>code_name}" />
                                </Select>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M12 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateE" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateE" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>                       
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                    <Button id="detailMove" text="임시상세" type="Emphasized" press=".showDetail" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" labelFor="searchModel"></Label>
                            <Input id="searchModel" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" labelFor="searchMoldNumber"></Label>
                            <Input id="searchMoldNumber" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" labelFor="searchDescription"></Label>
                            <Input id="searchDescription" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/ASSET_NUMBER', formatter:'I18NFormatter'}" labelFor="searchAssetNumber"></Label>
                            <Input id="searchAssetNumber" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- <VBox height="4em">
                                <Label text="{path:'I18N>/RECEIPT_ESTIMATION_STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchReceiptEstimationStatusE" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'util>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_PROGRESS_STATUS'}
                                                ],
                                                sorter: {path: 'sort_no'} }">
                                        <items> 
                                            <SegmentedButtonItem width="5em" key="{util>code}" text="{util>code_name}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M12 S12" />
                                </layoutData>
                            </VBox> -->
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table id="remodelRepairMgtListTable"
                    selectionMode="None"
                    fixedColumnCount="9"
                    visibleRowCountMode="Auto" 
                    enableColumnFreeze="true"
				    showColumnVisibilityMenu="true"
                    rows="{list>/remodelRepairList}"
                    cellClick=".onCellClick"
                    rowSelectionChange=".onCheck">
                <table:extension>
                    <OverflowToolbar>
                        <Title text="List ({= ${list>/remodelRepairList}.length || 0})" level="H2"/>
                        <ToolbarSpacer/>
                        <!-- Add the Personalization button -->
                        <Button id="changeSuppButton"   type="Transparent" text="Change Supp."   press=".onChangeSuppButtonButtonPress"  />
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://excel-attachment" press=".onExportPress" />
                        <Button icon="sap-icon://action-settings"  press=".onMoldMstTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </table:extension>                             
                <table:columns >
                    <table:Column id="rrMgtDivisionColumn" width="6em" hAlign="Center"  >
                        <Label text="{path:'I18N>/DIVISION', formatter:'I18NFormatter'}" wrapping="true" />
                        <table:template>
                            <Text id="org_code" text="{list>org_code}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtModelColumn" width="10em" hAlign="Center" >
                        <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" wrapping="true" />
                        <table:template>
                            <Text id="model" text="{list>model}" />
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtMoldNoColumn" width="12em" hAlign="Center">
                        <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_number" text="{list>mold_number}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtSeqColumn" width="3em" hAlign="Center">
                        <Label text="{path:'I18N>/SEQUENCE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_sequence" text="{list>mold_sequence}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtDescriptionColumn" width="10em" hAlign="Center">
                        <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="spec_name" text="{list>class_desc}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtRequestNoColumn" width="13em" hAlign="Center">
                        <Label text="Request No" wrapping="true"/>
                        <table:template>
                            <Text id="rrMgtRequestNo" text="{list>repair_request_number}"/>
                        </table:template>
                    </table:Column>
                    <!-- Request/Receipt Date -->
                    <table:Column id="rrMgtRequestReceiptDateColumn" width="13em" hAlign="Center">
                        <Label text="Request/Receipt Date" wrapping="true"/>
                        <table:template>
                             
                            <Text text="{path: 'list>request_receipt_date', formatter: '.dateFormatter.toDateString'}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtTitleColumn" width="10em"  hAlign="Center" >
                        <Label text="Title" wrapping="true"/>
                        <table:template>
                            <Text id="rrMgtTitle" text="{list>repair_desc}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtStatusColumn" width="10em"  hAlign="Center" >
                        <Label text="Status" wrapping="true"/>
                        <table:template>
                            <Text id="rrMgtStatus" text="{list>repair_progress_status_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetOrderVendorNameColumn" width="10em" headerSpan="2"  hAlign="Center"  >
                        <table:multiLabels>
                            <Label text="Move Date" wrapping="true"/>
                            <Label text="Plan" wrapping="true"/>
                        </table:multiLabels>
                        <table:template>
                            <Text id="order_vendor_name" text="{list>mold_moving_plan_date}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetsStatusColumn" width="10em"  hAlign="Center"  >
                        <table:multiLabels>
                            <Label text="Move Date" wrapping="true"/>
                            <Label text="Result" wrapping="true"/>
                        </table:multiLabels>
                        <table:template>
                            <Text id="assets_status" text="{list>mold_moving_result_date}"/>
                        </table:template>
                    </table:Column>
                    <table:Column  width="10em" headerSpan="2"  hAlign="Center"  >
                        <table:multiLabels>
                            <Label text="Complete Date" wrapping="true"/>
                            <Label text="Plan" wrapping="true"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{list>mold_complete_plan_date}"/>
                        </table:template>
                    </table:Column>
                    <table:Column  width="10em">
                        <table:multiLabels textAlign="Center"  hAlign="Center" >
                            <Label text="Complete Date" wrapping="true" />
                            <Label text="Result" wrapping="true" />
                        </table:multiLabels>
                        <table:template>
                            <Text text="{list>mold_complete_result_date}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetTypeColumn" width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/MOLD_SUPPLIER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="asset_type" text="{list>mold_mfger_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ORDER_SUPPLIER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>supplier_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/PROD_SUPPLIER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>production_supplier_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/LGE_REMARK', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>lge_remark}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/REMARK', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>repair_reason}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="15em"  hAlign="Center" >
                        <Label text="{path:'I18N>/RECEIPT_ESTIMATION_STATUS', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>repair_progress_status_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ASSETS_STATUS', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>asset_status_code_nm}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ASSET_TYPE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>asset_type_code}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ASSET_NO', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>asset_number}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/FAMILY_PART_NO', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>family_part_number}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ESTIMATE_AMOUNT', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>repair_quotation_amount}"/>
                        </table:template>
                    </table:Column>
                    <table:Column width="10em"  hAlign="Center" >
                        <Label text="{path:'I18N>/ORDER_AMOUNT', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text text="{list>repair_amount}"/>
                        </table:template>
                    </table:Column>
        
                 
                   
                    
                    
                </table:columns>
            </table:Table>
        </f:content>
    </f:DynamicPage>
    
</mvc:View>