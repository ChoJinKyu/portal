<mvc:View controllerName="dp.md.remodelRepairMgtList.controller.RrMgtList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:table="sap.ui.table" 
    xmlns:sc="sap.suite.ui.commons" 
    xmlns:microchart="sap.suite.ui.microchart" 
    xmlns:lib-m="ext.lib.m"
    xmlns:cm-ui="cm.util.control.ui"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Remodel/Repair Management List" />
                </f:heading>
                <f:snappedContent>
                    <!-- 초기 search 접혀있을때 -->
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyS" required="true"></Label>     
                                <MultiComboBox id="searchCompanyS" width="100%" items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" 
                                    selectionFinish="handleSelectionFinishComp" 
                                    required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{I18N>/PLANT}" labelFor="searchPlantS" required="true"></Label>
                                <MultiComboBox  id="searchPlantS" width="100%" 
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }"
                                        selectionFinish="handleSelectionFinishDiv"
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchAssetsStatusS" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'util>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_REQUEST_STATUS'}
                                                ],
                                                sorter: {path: 'sort_no'} }">
                                        <items> 
                                            <SegmentedButtonItem width="5em" text="{util>code_name}" key="{util>code}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M12 S12" />
                                </layoutData>
                            </VBox>
                             <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateS" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateS" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                           
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                     <!-- 초기 search 펼쳐있을때 -->
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/COMPANY_NAME', formatter:'I18NFormatter'}" labelFor="searchCompanyE" required="true"></Label>     
                                <MultiComboBox id="searchCompanyE" width="100%" items="{
                                       path: 'org>/Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }" 
                                    selectionFinish="handleSelectionFinishComp" 
                                    required="true">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{I18N>/PLANT}" labelFor="searchPlantE" required="true"></Label>
                                <MultiComboBox  id="searchPlantE" width="100%"
                                        items="{
                                            path: 'purOrg>/Pur_Operation_Org',
                                            filters: [
                                                {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                            ],
                                            sorter: { path: 'org_code'}
                                        }"
                                        selectionFinish="handleSelectionFinishDiv" 
                                        required="true">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                           <VBox height="4em">
                                <Label text="{path:'I18N>/STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchAssetsStatusE" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'util>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_REQUEST_STATUS'}
                                                ],
                                                sorter: {path: 'sort_no'} }">
                                        <items> 
                                            <SegmentedButtonItem width="5em" text="{util>code_name}" key="{util>code}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M12 S12" />
                                </layoutData>
                            </VBox>
                            <VBox height="4em">
                                <Label text="{path:'I18N>/REQUEST_DATE', formatter:'I18NFormatter'}" labelFor="searchRequestDateE" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateE" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>                       
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                    <Button id="detailMove" text="임시상세" type="Emphasized" press=".showDetail" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" labelFor="searchModel"></Label>
                            <Input id="searchModel" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" linebreak="true" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" labelFor="searchMoldNumber"></Label>
                            <Input id="searchMoldNumber" placeholder="Input data" />
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" labelFor="searchDescription"></Label>
                            <Input id="searchDescription" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                            <Label text="{path:'I18N>/ASSET_NUMBER', formatter:'I18NFormatter'}" labelFor="searchAssetNumber"></Label>
                            <Input id="searchAssetNumber" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox height="4em">
                                <Label text="{path:'I18N>/RECEIPT_ESTIMATION_STATUS', formatter:'I18NFormatter'}"></Label>
                                    <SegmentedButton 
                                        id="searchReceiptEstimationStatusE" 
                                        selectedKey="" 
                                        width="100%" 
                                        items="{path :'util>/Code',
                                                filters: [
                                                    {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                                    ,  {path: 'group_code', operator: 'EQ', value1: 'DP_MD_REPAIR_PROGRESS_STATUS'}
                                                ],
                                                sorter: {path: 'sort_no'} }">
                                        <items> 
                                            <SegmentedButtonItem width="5em" key="{util>code}" text="{util>code_name}"/>
                                        </items>
                                    </SegmentedButton>
                              
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M12 S12" />
                                </layoutData>
                            </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table id="remodelRepairMgtListTable"
                    selectionMode="MultiToggle"
                    fixedColumnCount="5"
                    visibleRowCountMode="Auto"
                    rows="{list>/MoldMstView}"
                    cellClick=".onCellClick"
                    rowSelectionChange=".onCheck">
                <table:extension>
                    <OverflowToolbar>
                        <Title text="List ({= ${list>/MoldMstView}.length || 0})" level="H2"/>
                        <ToolbarSpacer/>
                        <!-- Add the Personalization button -->
                        <Button id="changeSuppButton"   type="Transparent" text="Change Supp."        press=".onChangeSuppButtonButtonPress"  />
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://excel-attachment" press=".onExportPress" />
                        <Button icon="sap-icon://action-settings"  press=".onMoldMstTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </table:extension>                             
                <table:columns >
                    <table:Column id="rrMgtDivisionColumn" width="4.5em" hAlign="Center">
                        <Label text="{path:'I18N>/DIVISION', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="org_code" text="{list>org_code}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtModelColumn" width="10em" >
                        <Label text="{path:'I18N>/MODEL', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="model" text="{list>model}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtMoldNoColumn" width="12em">
                        <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_number" text="{list>mold_number}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtSeqColumn" width="3em" hAlign="Center">
                        <Label text="{path:'I18N>/SEQUENCE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_sequence" text="{list>mold_sequence}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtDescriptionColumn" width="10em">
                        <Label text="{path:'I18N>/DESCRIPTION', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="spec_name" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtRequestNoColumn" width="13em">
                        <Label text="Request No" wrapping="true"/>
                        <table:template>
                            <Input id="rrMgtRequestNo"/>
                        </table:template>
                    </table:Column>
                    <!-- Request/Receipt Date -->
                    <table:Column id="rrMgtRequestReceiptDateColumn" width="13em">
                        <Label text="Request/Receipt Date" wrapping="true"/>
                        <table:template>
                            <Input id="rrMgtRequestReceiptDate"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtTitleColumn" width="10em">
                        <Label text="Title" wrapping="true"/>
                        <table:template>
                            <Text id="rrMgtTitle" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="rrMgtStatusColumn" width="10em">
                        <Label text="Status" wrapping="true"/>
                        <table:template>
                            <Text id="rrMgtStatus" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetOrderVendorNameColumn" width="10em">
                        <Label text="Order Vendor Name" wrapping="true"/>
                        <table:template>
                            <Text id="order_vendor_name" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetsStatusColumn" width="10em">
                        <Label text="Assets Status" wrapping="true"/>
                        <table:template>
                            <Text id="assets_status" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetTypeColumn" width="10em">
                        <Label text="{path:'I18N>/ASSET_TYPE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="asset_type" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAssetNumberColumn" width="10em">
                        <Label text="{path:'I18N>/ASSET_NUMBER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="asset_number" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetRemarkColumn" width="10em">
                        <Label text="{path:'I18N>/REMARK', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="remark" text="{list>remark}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetLgRemarkColumn" width="10em">
                        <Label text="LG Remark" wrapping="true"/>
                        <table:template>
                            <Text id="lg_remark" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetToolTypeColumn" width="10em">
                        <Label text="{path:'I18N>/TOOL_TYPE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="tool_type" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetCavProcessColumn" width="10em">
                        <Label text="Cav'/Process" wrapping="true"/>
                        <table:template>
                            <Text id="cav_process" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetTonColumn" width="10em">
                        <Label text="{path:'I18N>/TONNAGE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="ton" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetMoldSupplierColumn" width="10em">
                        <Label text="{path:'I18N>/MOLD_SUPPLIER', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="mold_supplier" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAcquisitionDateColumn" width="10em">
                        <Label text="{path:'I18N>/ACQISITION_DATE', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="acquisition_date" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetShotColumn" width="10em">
                        <Label text="{path:'I18N>/SHOT', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="shot" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetAgeColumn" width="10em">
                        <Label text="Age(Month)" wrapping="true"/>
                        <table:template>
                            <Text id="age_month" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetSignalColumn" width="10em">
                        <Label text="{path:'I18N>/SIGNAL', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="Signal" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    <table:Column id="assetRepairStatusColumn" width="10em">
                        <Label text="{path:'I18N>/REPAIR_STATUS', formatter:'I18NFormatter'}" wrapping="true"/>
                        <table:template>
                            <Text id="repair_status" text="{list>spec_name}"/>
                        </table:template>
                    </table:Column>
                    
                    
                </table:columns>
            </table:Table>
        </f:content>
    </f:DynamicPage>
    
</mvc:View>