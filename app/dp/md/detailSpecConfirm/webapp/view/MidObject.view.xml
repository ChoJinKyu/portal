<mvc:View controllerName="dp.md.detailSpecConfirm.controller.MidObject" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
	height="100%">

	<uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="false"
		showEditHeaderButton="true" 
		showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="Center">
                        <OverflowToolbarButton type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                    </HBox>
                </uxap:heading>
                <uxap:navigationActions>
					<OverflowToolbarButton id="pageEnterFullScreenButton" type="Transparent" icon="sap-icon://full-screen" press="onPageEnterFullScreenButtonPress" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<OverflowToolbarButton id="pageExitFullScreenButton" type="Transparent" icon="sap-icon://exit-full-screen" press="onPageExitFullScreenButtonPress" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:sections id="testFrag">
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="General Info">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection1" >
                    </uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="Development Plan">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection2">
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="Ship Plan(테이블 미정)">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSectionSP">
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="Detail Spec">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="pageSubSection3" title="Detail Spec : Mold">
					</uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection id="pageSubSection4" title="Detail Spec : Press">
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

		</uxap:sections>
		
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
                <Button id="pageEditButton" type="Emphasized" text="{path:'I18N>/EDIT', formatter:'I18NFormatter'}" press=".onPageEditButtonPress" />
				<Button id="pageCancelButton" type="Transparent" text="{path:'I18N>/CANCEL', formatter:'I18NFormatter'}" press=".onPageCancelEditButtonPress"/>
                <Button id="pageDraftButton" type="Transparent" text="{path:'I18N>/TEMP_SAVE', formatter:'I18NFormatter'}" press=".onPageSaveButtonPress" visible="{= !(${spec>/mold_spec_status_code} === 'C') }" />
				<Button id="pageConfirmButton" type="Emphasized" text="{path:'I18N>/CONFIRMED', formatter:'I18NFormatter'}" press=".onPageConfirmButtonPress" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>