<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin">
    <form:SimpleForm 
        id="frmPress"
        editable="false"
        layout="ResponsiveGridLayout" >
        <form:content>

            <VBox height="3.5rem">
                <Label text="Mold Test" required="true"/>
                <Switch state="{spec>/inspection_flag}" customTextOn="Yes" customTextOff="No"  />
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Assembly Approval" required="true"/> 
                <Switch state="{spec>/assembly_approval_flag}" customTextOn="Yes" customTextOff="No"  />
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Use Material" required="true"/> 
                <Input value="{spec>/use_material_value}" required="true"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Order Qty"/>
                <Input value="{spec>/order_qty}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Structure" required="true"/>
                <Select   width="100%"
                            selectedKey="{spec>/die_form}"
                            items="{
                                        path : 'util>/Code',
                                        filters : [
                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L2600'},
                                            {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MOLD_STRUCTURE'}
                                        ],
                                        sorter: { path: 'sort_no'}
                                    }"
                            editable="true"
                            required="true"
                >
                    <core:Item key="{util>code}" text="{util>code_name}" />
                </Select>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Process Qty(EA)" required="true"/>
                <Input value="{spec>/cavity_process_qty}" required="true"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Demand Life(Shot)" required="true"/>
                <Input type="Number" value="{path: 'spec>/request_life_shot_count', type: 'sap.ui.model.type.Integer'}" required="true"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Weight(Kg)"/>
                <Input value="{spec>/mold_weight}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Material Thickness"/>
                <Input value="{spec>/press_material_thickness}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Size" required="true"/>
                <Select   width="100%"
                            selectedKey="{spec>/mold_size}"
                            items="{
                                        path : 'util>/Code',
                                        filters : [
                                            {path : 'tenant_id', operator : 'EQ', value1 : 'L2600'},
                                            {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MOLD_SIZE'}
                                        ],
                                        sorter: { path: 'sort_no'}
                                    }"
                            editable="true"
                            required="true"
                >
                    <core:Item key="{util>code}" text="{util>code_name}" />
                </Select>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Open Size(W*P)"/>
                <Input value="{spec>/press_open_size}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Material Size(W*P)"/>
                <Input value="{spec>/press_material_size}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

        </form:content>
    </form:SimpleForm>


        <form:SimpleForm 
        editable="false"
        layout="ResponsiveGridLayout" >
        <form:content>

            <core:Title text="Spare Parts" />

            <VBox height="3.5rem">
                <Label text="P-Punch(EA)"/>
                <Input type="Number" value="{path: 'spec>/spare_part_p_punch_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="B-Punch(EA)"/> 
                <Input type="Number" value="{path: 'spec>/spare_part_b_punch_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Spring(EA)"/> 
                <Input type="Number" value="{path: 'spec>/spare_part_spring_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">

                <Label text="Die Button(EA)"/>
                <Input type="Number" value="{path: 'spec>/spare_part_die_button_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Ejector Pin(EA)"/>
                <Input type="Number" value="{path: 'spec>/spare_part_ejector_pin_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Etc. Press(EA)"/>
                <Input type="Number" value="{path: 'spec>/spare_part_etc_count', type: 'sap.ui.model.type.Integer'}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>
            
        </form:content>
    </form:SimpleForm>

    <form:SimpleForm 
        editable="false"
        layout="ResponsiveGridLayout" >
        <form:content>

            <core:Title text="Press Meterial" />

            <VBox height="3.5rem">
                <Label text="Top Holder"/>
                <Input value="{spec>/top_holder_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Bottom Holder"/> 
                <Input value="{spec>/bottom_holder_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Die"/> 
                <Input value="{spec>/die_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Stripper"/>
                <Input value="{spec>/stripper_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Punch Holder"/>
                <Input value="{spec>/punch_holder_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Punch"/>
                <Input value="{spec>/punch_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Pad Valve"/>
                <Input value="{spec>/pad_valve_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Pad"/>
                <Input value="{spec>/pad_material_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

        </form:content>
    </form:SimpleForm>
	</VBox>
</core:FragmentDefinition>