<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
    <form:SimpleForm 
        editable="false"
        layout="ResponsiveGridLayout"
        adjustLabelSpan="false" 
    >
        <form:content>

            <VBox height="3.5rem">
                <Label text="{I18N>/MODEL}"/>
                <Text text="{master>/model}"/>
            <layoutData>
                <l:GridData
                    span="XL4 L4 M4 S6" />
            </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold No"/> 
                <Text text="{master>/mold_number}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Seq"/>
                <Text text="{master>/mold_sequence}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Production Type"/>
                <Text text="{mstSpecView>/mold_production_type_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Item Type"/>
                <Text text="{mstSpecView>/mold_item_type_name}"/>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="{I18N>/DESCRIPTION}"/>
                <Text text="{master>/spec_name}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Mold Supplier"/>
                <Text text="{master>/mold_mfger_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Order Supplier"/>
                <Text text="{master>/supplier_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Production Supplier"/>
                <Text text="{master>/production_supplier_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Account Department"/>
                <Text text="{master>/accounting_department_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Project Code"/>
                <Text text="{master>/project_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Account"/>
                <Select width="100%"
                        editable="false"
                        class="readonlyField"
                        selectedKey="{master>/account_code}"
                        items="{
                                    path : 'util>/Code',
                                    filters : [
                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_ACCOUNT_NEW'}
                                    ]
                                }"
                    >
                    <core:Item key="{util>code}" text="[{util>code}] {util>code_name}" />
                </Select>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Acquisition Department"/>
                <Text text="{master>/acq_department_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Market Type"/>
                <Select width="100%"
                        editable="false"
                        class="readonlyField"
                        selectedKey="{master>/market_type_code}"
                        items="{
                                    path : 'util>/Code',
                                    filters : [
                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MARKET_TYPE'}
                                    ]
                                }"
                    >
                    <core:Item key="{util>code}" text="{util>code_name}" />
                </Select>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Product Group"/>
                <Text text="{master>/product_group_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Budget Type"/>
                <Select width="100%"
                        editable="false"
                        class="readonlyField"
                        selectedKey="{master>/investment_ecst_type_code}"
                        items="{
                                    path : 'util>/Code',
                                    filters : [
                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_BUDGET_TYPE'}
                                    ]
                                }"
                    >
                    <core:Item key="{util>code}" text="{util>code_name}" />
                </Select>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Import Company"/>
                <Text text="{master>/import_company_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Import Plant"/>
                <Text text="{master>/import_company_org_code}"></Text>
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>

            <VBox height="3.5rem">
                <Label text="Remark"/>
                <Text text="{master>/remark}" />
                <layoutData>
                    <l:GridData
                        span="XL4 L4 M4 S6" />
                </layoutData>
            </VBox>
            
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>