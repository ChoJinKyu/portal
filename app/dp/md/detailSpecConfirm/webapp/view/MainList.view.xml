<mvc:View controllerName="dp.md.detailSpecConfirm.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true"
        preserveHeaderStateOnScroll="true"
        >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{path:'I18N>/DETAIL_SPEC_CONFIRM', formatter:'I18NFormatter'}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="3">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/COMPANY}" labelFor="searchCompanyS" required="true"></Label>
                                <MultiComboBox id="searchCompanyS" width="100%"  required="true" selectionFinish="handleSelectionFinishComp" items="{
                                    path: 'org>/Company',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                    ],
                                    sorter: { path: 'company_code'}
                                }">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PLANT}" labelFor="searchDivisionS" required="true"></Label>
                                <MultiComboBox id="searchDivisionS" width="100%"  required="true" selectionFinish="handleSelectionFinishDiv" items="{
                                    path: '/Divisions',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                    ],
                                    sorter: { path: 'org_code'}
                                }">
                                    <items>
                                        <core:Item key="{org_code}" text="[{org_code}] {org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/DATE}" labelFor="searchDateS" required="true"></Label>
                                <DateRangeSelection id="searchDateS" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD - YYYY-MM-DD" required="true"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="3">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/COMPANY}" labelFor="searchCompanyE"  required="true"></Label>
                                <MultiComboBox id="searchCompanyE" width="100%"  required="true" selectionFinish="handleSelectionFinishComp" items="{
                                    path: 'org>/Company',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                    ],
                                    sorter: { path: 'company_code'}
                                }">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PLANT}" labelFor="searchDivisionE" required="true"></Label>
                                <MultiComboBox id="searchDivisionE" width="100%"  required="true" selectionFinish="handleSelectionFinishDiv" items="{
                                    path: '/Divisions',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                    ],
                                    sorter: { path: 'org_code'}
                                }">
                                    <items>
                                        <core:Item key="{org_code}" text="[{org_code}] {org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/DATE}" labelFor="searchDateE" required="true"></Label>
                                <DateRangeSelection id="searchDateE" valueFormat = "yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD - YYYY-MM-DD" required="true"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">

                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="3">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/MODEL}" labelFor="searchModel"></Label>
                            <Input id="searchModel" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Models',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'model' }
                            }">
                                <core:Item key="{model}" text="{model}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" labelFor="searchPart"></Label>
                            <Input id="searchPart" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/PartNumbers',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'mold_number' }
                            }">
                                <core:Item key="{mold_number}" text="{mold_number}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{path:'I18N>/FAMILY_PART_NUMBER', formatter:'I18NFormatter'}" labelFor="searchFamilyPart"></Label>
                            <Input id="searchFamilyPart" placeholder="Input data"></Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{path:'I18N>/REQUESTOR', formatter:'I18NFormatter'}" labelFor="searchRequester"></Label>
                            <Input id="searchRequester" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: 'dsc>/CreateUsers',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'}
                                        ],
                                        sorter: { path: 'create_user_id' }
                            }">
                                <core:Item key="{dsc>create_user_id}" text="{dsc>create_user_id}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/STATUS}" labelFor="searchStatus"></Label>
                            <SegmentedButton id="searchStatus"  class="sapUiSmallMarginBottom" width="100%">
                                <items>
                                    <SegmentedButtonItem text="{path:'I18N>/ALL', formatter:'I18NFormatter'}" key="" width="auto"/>
                                    <SegmentedButtonItem text="{path:'I18N>/TEMP_SAVE', formatter:'I18NFormatter'}" key="D" width="auto"/>
                                    <SegmentedButtonItem text="{path:'I18N>/CONFIRMED', formatter:'I18NFormatter'}" key="C" width="auto"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL3 L3 M6 S12"/>
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="10"
                        class="sapFDynamicPageAlignContent" 
                        mode="SingleSelectMaster"
                        itemPress="onItemPress"
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/MoldMasterSpec}"
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{I18N>/LIST} ({= ${list>/MoldMasterSpec}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <!-- <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/> -->
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainCompany" >
                            <Text text="{I18N>/COMPANY}" />
                        </Column>
                        <Column id="mainOrg" >
                            <Text text="{I18N>/PLANT}"/>
                        </Column>
                        <Column id="mainModel" >
                            <Text text="{I18N>/MODEL}" />
                        </Column>
                        <Column id="mainMoldNumber" >
                            <Text text="{path:'I18N>/MOLD_NUMBER', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainMoldSeq" >
                            <Text text="{path:'I18N>/MOLD_SEQ', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainDesc"  minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{I18N>/DESCRIPTION}" />
                        </Column>
                        <Column id="mainStatus"  minScreenWidth="Desktop" demandPopin="true">
                            <Text text="{I18N>/STATUS}" />
                        </Column>
                        <Column id="mainItemType"  minScreenWidth="Desktop" demandPopin="true">
                            <Text text="{path:'I18N>/MOLD_ITEM_TYPE', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainRequester"  minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{path:'I18N>/REQUESTOR', formatter:'I18NFormatter'}" />
                        </Column>
                        <Column id="mainDate"  minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{I18N>/DATE}" />
                        </Column>
                        <Column id="mainFamilyPartNumber"  minScreenWidth="Desktop" demandPopin="false">
                            <Text text="{path:'I18N>/FAMILY_PART_NUMBER', formatter:'I18NFormatter'}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" >
                            <cells>
                                <ObjectIdentifier text="{list>company_name}" />
                                <ObjectIdentifier text="{list>org_name}" />
                                <ObjectIdentifier text="{list>model}" />
                                <ObjectIdentifier text="{list>mold_number}" />
                                <ObjectIdentifier text="{list>mold_sequence}" />
                                <ObjectIdentifier text="{list>spec_name}" />
                                <ObjectIdentifier text="{list>mold_spec_status_name}" />
                                <ObjectIdentifier text="{list>mold_item_type_name}" />
                                <ObjectIdentifier text="{list>create_user}" />
                                <!-- <ObjectIdentifier text="{list>mold_spec_register_date}"/> -->
                                <DatePicker value="{list>mold_spec_register_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                                <ObjectIdentifier text="{list>family_part_numbers}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>