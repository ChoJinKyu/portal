<mvc:View controllerName="dp.md.remodelRepairMgt.controller.MainObject" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
	height="100%">

	<uxap:ObjectPageLayout id="page"
		toggleHeaderOnTitleClick="true"
		alwaysShowContentHeader = "false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
		showTitleInHeaderContent="false"
		showEditHeaderButton="true" 
		showFooter="true">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <HBox alignItems="Center">
                        <OverflowToolbarButton type="Transparent" icon="sap-icon://nav-back" press=".onPageNavBackButtonPress"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        <Title text="Remodel &amp; Repair Detail" wrapping="true" class="" />
                    </HBox>
                </uxap:heading>
                <uxap:navigationActions>
					
                </uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:sections id="testFrag">
			<uxap:ObjectPageSection id="pageSectionMain" titleUppercase="false" title="Request Entry">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <VBox class="sapUiSmallMargin">
                            <form:SimpleForm editable="false" layout="ResponsiveGridLayout" >
                                <form:content>
                                    <VBox height="3.5rem">
                                        <Label text="Submission Title"/>
                                        <Input value="{spec>/use_material_value}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Submission No"/> 
                                        <Text text="{spec>company_code}"/> 
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Factor"/> 
                                        <Select width="100%"
                                                forceSelection="false"
                                                selectedKey="{master>/mold_type_code}"
                                                items="{
                                                            path : 'util>/Code',
                                                            filters : [
                                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MOLD_TYPE'}
                                                            ]
                                                        }"
                                                editable="{mode>/editFlag}"
                                                class="readonlyField" >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Vendor Remarks"/>
                                        <Input value="{spec>/order_qty}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Requester"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Request Date"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="LGE Remarks"/>
                                        <Input value="{spec>/mold_sample_qty}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Remodel/Repair"/>
                                        <Select width="100%"
                                                forceSelection="false"
                                                selectedKey="{spec>/hot_runner_maker_name}"
                                                items="{
                                                            path : 'util>/Code',
                                                            filters : [
                                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_HR_MAKER'}
                                                            ]
                                                        }"
                                                editable="{mode>/editFlag}"
                                                class="readonlyField" >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Domestic/Export"/>
                                        <Select width="100%"
                                                forceSelection="false"
                                                selectedKey="{spec>/hot_runner_maker_name}"
                                                items="{
                                                            path : 'util>/Code',
                                                            filters : [
                                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_HR_MAKER'}
                                                            ]
                                                        }"
                                                editable="{mode>/editFlag}"
                                                class="readonlyField" >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Account"/>
                                        <Select   width="100%"
                                                    forceSelection="false"
                                                    selectedKey="{master>/mold_type_code}"
                                                    items="{
                                                                path : 'util>/Code',
                                                                filters : [
                                                                    {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                    {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MOLD_TYPE'}
                                                                ]
                                                            }"
                                                    editable="{mode>/editFlag}"
                                                    class="readonlyField"
                                        >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Investment/Cost"/>
                                        <Input value="{spec>/mold_hot_runner_qty}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Spare Part"/>
                                        <Select width="100%"
                                                forceSelection="false"
                                                selectedKey="{spec>/hot_runner_maker_name}"
                                                items="{
                                                            path : 'util>/Code',
                                                            filters : [
                                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_HR_MAKER'}
                                                            ]
                                                        }"
                                                editable="{mode>/editFlag}"
                                                class="readonlyField" >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL2 L2 M2 S3" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Spare Part Seq"/>
                                        <Text text="{spec>company_code}"/>
                                        <layoutData>
                                            <layout:GridData span="XL2 L2 M2 S3" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="ECO Creator"/>
                                        <Text text="{spec>company_code}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Activity"/>
                                        <Select   width="100%"
                                                    forceSelection="false"
                                                    selectedKey="{spec>/mold_size}"
                                                    items="{
                                                                path : 'util>/Code',
                                                                filters : [
                                                                    {path : 'tenant_id', operator : 'EQ', value1 : 'L2101'},
                                                                    {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MOLD_SIZE'}
                                                                ]
                                                            }"
                                                    editable="{mode>/editFlag}"
                                                    class="readonlyField"
                                        >
                                            <core:Item key="{util>code}" text="{util>code_name}" />
                                        </Select>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                </form:content>
                            </form:SimpleForm>
                        </VBox>
                    </uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="Remodel/Repair Info">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
                        <VBox class="sapUiSmallMargin">
                            <form:SimpleForm editable="false" layout="ResponsiveGridLayout" >
                                <form:content>
