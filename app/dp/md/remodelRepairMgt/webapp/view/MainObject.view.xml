                                        <Text text="{spec>company_code}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Material"/>
                                        <Text text="{spec>company_code}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
