                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Mold Supplier"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Prod Supplier"/>
