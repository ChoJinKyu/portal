                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Etc2"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Cavity/Process Qty"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Assets Type"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Assets Status"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Receipt Date"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Sample Qty"/>
                                        <Input value="{spec>/request_life_shot_count}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Size"/>
                                        <Input value="{spec>/mold_weight}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Account Dept"/>
                                        <Input value="{spec>mold_developer_name}" placeholder="Search" required="true"
                                            editable="{mode>/editFlag}"
                                            showValueHelp="true" valueHelpRequest=".onInputWithEmployeeValuePress">
                                        </Input>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Account Dept Code"/>
                                        <Input value="{spec>/mold_weight}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Event"/>
                                        <Input value="{spec>/mold_hot_runner_qty}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="RepairÂ Supplier"/>
                                        <Input value="{spec>mold_developer_name}" placeholder="Search" required="true"
                                            editable="{mode>/editFlag}"
                                            showValueHelp="true" valueHelpRequest=".onInputWithEmployeeValuePress">
                                        </Input>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Move Plan"/>
                                        <DatePicker value="{spec>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Complete Plan"/>
                                        <DatePicker value="{spec>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Supplier Code"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Move Result"/>
                                        <DatePicker value="{spec>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Complete Result"/>
                                        <DatePicker value="{spec>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Project Code"/>
                                        <Input value="{spec>/mold_hot_runner_qty}" editable="{mode>/editFlag}" class="readonlyField"/>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Acquisition Dept"/>
                                        <Input value="{spec>mold_developer_name}" placeholder="Search" required="true"
                                            editable="{mode>/editFlag}" width="70%"
                                            showValueHelp="true" valueHelpRequest=".onInputWithEmployeeValuePress">
                                        </Input>
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S6" />
                                        </layoutData>
                                    </VBox>

                                    <VBox height="3.5rem">
                                        <Label text="Balanced Budget"/>
                                        <Text text="{spec>/cavity_process_qty}"/>
