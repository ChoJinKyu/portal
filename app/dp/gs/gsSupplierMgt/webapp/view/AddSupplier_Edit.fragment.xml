<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin" id="midObjectForm1Edit">    
	<form:SimpleForm         
        editable="false"
        layout="ColumnLayout"			
        labelSpanXL="12"
        labelSpanL="12"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1" >
		
        <form:content>
            <Label text="소싱 공급업체"/>
			<Input value="{SupplierGen>/sourcing_supplier_nickname}" editable="false"/>
            <Label text="발굴일자"/>			
            <DatePicker placeholder="Develop Date" value="{path: 'SupplierGen>/develop_date',type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' }}"/>
            <Label text="발굴자"/>
			<Input value="{SupplierGen>/developer_empno}" editable="false"/>
            <Label text="공급업체 로컬명"/>
			<Input value="{SupplierGen>/sourcing_supplier_local_name}" editable="true"/>            
			<Label text="공급업체 로컬명"/>
			<Input value="{SupplierGen>/sourcing_supplier_local_name}" editable="true"/>
            <Label text="공급업체 영문명"/>
			<Input value="{SupplierGen>/sourcing_supplier_english_name}" editable="true"/>
            <Label text="사업장 주소(로컬)"/>
			<Input value="{SupplierGen>/local_full_address}" editable="true"/>
            <Label text="사업장 주소(영문)"/>
			<Input value="{SupplierGen>/english_full_address}" editable="true"/>
            <Label text="제안품목"/>
			<Input value="{SupplierGen>/product_desc}" editable="true"/>
            <Label text="이메일"/>
			<Input value="{SupplierGen>/email_address}" editable="true"/>
            <Label text="AN 프로파일"/>
			<Input value="{SupplierGen>/an_profile}" editable="true"/>
            <Label text="비고"/>
			<Input value="{SupplierGen>/remark}" editable="true"/>			
	    </form:content>
    </form:SimpleForm>  
</VBox>
</core:FragmentDefinition>