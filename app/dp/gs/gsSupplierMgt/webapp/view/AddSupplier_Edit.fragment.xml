<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin" id="midObjectForm1Edit">    
	<form:SimpleForm         
        editable="false"
        layout="ColumnLayout"			
        labelSpanXL="12"
        labelSpanL="12"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1" >
		
        <form:content>            
			<Label text="{I18N>/SOURCING_SUPPLIER_LOCAL_NAME}"/>
			<Input value="{SupplierGen>/sourcing_supplier_local_name}" editable="true"/>
            <Label text="{I18N>/SOURCING_SUPPLIER_ENGLISH_NAME}"/>
			<Input value="{SupplierGen>/sourcing_supplier_english_name}" editable="true"/>
            <Label text="{I18N>/LOCAL_FULL_ADDRESS}"/>
			<Input value="{SupplierGen>/local_full_address}" editable="true"/>
            <Label text="{I18N>/ENGLISH_FULL_ADDRESS}"/>
			<Input value="{SupplierGen>/english_full_address}" editable="true"/>
            <Label text="{I18N>/PRODUCT_DESC}"/>
			<Input value="{SupplierGen>/product_desc}" editable="true"/>
            <Label text="{I18N>/EMAIL_ADDRESS}"/>
			<Input id="eidtEmail" value="{SupplierGen>/email_address}" editable="true" required="true"/>
            <Label text="{I18N>/AN_PROFILE}"/>
			<Input value="{SupplierGen>/an_profile}" editable="true"/>
            <Label text="{I18N>/REMARK}"/>
			<Input value="{SupplierGen>/remark}" editable="true"/>			
	    </form:content>
    </form:SimpleForm>  
</VBox>
</core:FragmentDefinition>