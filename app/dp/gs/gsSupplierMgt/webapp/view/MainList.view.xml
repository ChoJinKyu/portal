<mvc:View controllerName="dp.gs.gsSupplierMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"        
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Global Sourcing Pool" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">

                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                    <!-- 조회조건 -->
                        <VBox>
                            
                        </VBox>                                                
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="15"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/SupplierGen}"
                        mode="SingleSelectLeft" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <!-- <Title text="Unit Of Measure ({= ${list>/Uom}.length || 0})" level="H2"/> -->
                            <Title text="Global Sourcing Pool" level="H2"/>
                            <ToolbarSpacer/>
                            <!-- <SearchField id="mainTableSearchField" placeholder="Uom" width="10rem" search=".onMainTableFilterPress" /> -->
                            <Button id="addSupplier" text="Create Supplier" type="Transparent" press=".onAddSupplierPress" />                            
                            <Button id="editSupplier" text="Edit Supplier" type="Transparent" press=".onEditSupplierPress" />
                            <Button id="editEvaluation" text="Edit Evaluation" type="Transparent" press=".onEditEvaluationPress" />
                            <Button id="rTableExportButton" text="{I18N>/EXCEL}" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnNN" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="소싱공급업체별칭" />
                        </Column>
                        <Column id="mainColumnMail" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="이메일주소" />
                        </Column>                        
                        <Column id="mainColumnDate" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="발굴일자" />
                        </Column>
                        <Column id="mainColumnEmp" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="발굴자사번" />
                        </Column>                                             
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{list>sourcing_supplier_nickname}"/>
                                <Text text="{list>email_address}"/>                                                                
                                <Text text="{
                                        path: 'list>develop_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                               <Text text="{list>developer_empno}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>