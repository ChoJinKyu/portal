<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="dialogAddSupplier" class="sapUiSmallMargin" title="" contentWidth="35%" >
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" >
                    <form:content>                        
                        <core:Title text="공급업체 기본정보 등록" />
                        <VBox>
                            <Label text="공급업체명" required="true"/> 
                            <Input id="ssn" value="{
                                path: 'master>/sourcing_supplier_nickname',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 30
                                }
                            }" required="true"></Input>
                            <Button id="11" text="중복체크" type="Emphasized" press=".onPageSearchButtonPress" />                            
                            <Label text="이메일" required="true"/> 
                            <Input id="email" value="{
                                path: 'master>/email_address',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 30
                                }
                            }" required="true"></Input>
                            <Label text="발급일자" required="true"/> 
                            <DatePicker required="true" placeholder="Develop Date" value="{path: 'master>/develop_date',type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' }}"/>                            
                            <Label text="발급자" required="true"/> 
                            <Input id="devEmp" value="{
                                path: 'master>/developer_empno',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 30
                                }
                            }" required="true"></Input>
                        </VBox>
                        
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="Cancel" type="Transparent" press=".createPopupClose"/>
            <Button text="Next" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".createPopupSave"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
