<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    
    <Dialog id="dialogAddSupplier" class="sapUiSmallMargin" title="" contentWidth="35%" >
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="12"
                    labelSpanL="12"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"     
                    singleContainerFullSize="false" >
                    <form:content>                        
                        <core:Title text="{I18N>/SUPPLIER} {I18N>/BASIC_INFO} {I18N>/REGISTER}" />
                        
                            <Label text="{I18N>/SOURCING_SUPPLIER_NICKNAME}" required="true"/>                            
                            <Input id="ssn" value="{
                                path: 'master>/sourcing_supplier_nickname',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 100
                                }
                            }" required="true">
                            <layoutData>
                                <layout:GridData span="XL9 L9 M9 S9" />
                            </layoutData></Input>
                            <Button id="dup" text="중복체크" type="Emphasized" press=".onDupChk" >                            
                            <layoutData>
                                <layout:GridData span="XL3 L3 M3 S3" />
                            </layoutData>
                            </Button>
                            <Label text="{I18N>/EMAIL_ADDRESS}" required="true"/> 
                            <Input id="email" value="{
                                path: 'master>/email_address',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 100
                                }
                            }" required="true"></Input>
                            <Label text="{I18N>/DEVELOP_DATE}" required="true"/> 
                            <DatePicker required="true" placeholder="Develop Date" value="{path: 'master>/develop_date',type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, format: 'yMd' }}"/>                            
                            <Label text="{I18N>/DEVELOPER_EMP}" required="true"/> 
                            <Input id="devEmp" value="{
                                path: 'master>/developer_empno',
                                type: 'sap.ui.model.type.String',
                                constraints: {
                                    maxLength: 30
                                }
                            }" required="true"></Input>
                        
                        
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        
        <ToolbarSpacer/>
        <HBox justifyContent="End" >
            <Button text="Cancel" type="Transparent" press=".createPopupClose"/>
            <Button text="Next" class="sapUiSmallMarginBeginEnd" type="Emphasized" press=".createPopupSave"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
