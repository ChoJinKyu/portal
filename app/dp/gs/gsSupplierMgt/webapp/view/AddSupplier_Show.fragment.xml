<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin" id="midObjectForm1Show">    
	<form:SimpleForm         
        editable="false"
        layout="ResponsiveGridLayout"			
        labelSpanXL="12"
        labelSpanL="12"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1" >		
        <form:content>            
			<Label text="{I18N>/SOURCING_SUPPLIER_LOCAL_NAME}"/>
			<Input value="{SupplierGen>/sourcing_supplier_local_name}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/SOURCING_SUPPLIER_ENGLISH_NAME}"/>
			<Input value="{SupplierGen>/sourcing_supplier_english_name}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/LOCAL_FULL_ADDRESS}"/>
			<Input value="{SupplierGen>/local_full_address}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/ENGLISH_FULL_ADDRESS}"/>
			<Input value="{SupplierGen>/english_full_address}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/PRODUCT_DESC}"/>
			<Input value="{SupplierGen>/product_desc}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/EMAIL_ADDRESS}" required="true"/>
			<Input value="{SupplierGen>/email_address}" editable="false" class="readonlyField"/>
            <Label text="{I18N>/AN_PROFILE}"/>
            <Link text="{SupplierGen>/an_profile}" target="_blank" href="{SupplierGen>/an_profile}"/>
            <Label text="{I18N>/TAX_ID}"/>
			<Input value="{SupplierGen>/tax_id}" editable="false" class="readonlyField"/>
            <!-- <Label text="{I18N>/REMARK}"/>
			<Input value="{SupplierGen>/remark}" editable="false" class="readonlyField"/> -->
            <Label text="{I18N>/SOURCING}{I18N>/CONTENTS}"/>            
            <richtexteditor:RichTextEditor                
                editorType="TinyMCE4"
                width="100%"
                height="400px"
                editable="false"
                customToolbar="true"
                showGroupFont="true"
                showGroupLink="true"
                showGroupInsert="true"
                value="{SupplierGen>/sourcing_contents}">
            </richtexteditor:RichTextEditor>            
	    </form:content>
    </form:SimpleForm>   
</VBox>
</core:FragmentDefinition>