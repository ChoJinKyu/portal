<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin">
    <form:SimpleForm 
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="3"   
    >
        <form:content>
            <Label text="{I18N>/MODEL}"/>
            <Text text="{master>/model}"/>
            <Label text="Production Type"/>
            <Text text="{mstSpecView>/mold_production_type_name}"/>
            <Label text="Mold Supplier"/>
            <Text text="{master>/mold_vendor_id}"></Text>

            <Label text="Account Department"/>
            <Text text="{master>/accounting_department_code}"></Text>
            <Label text="Acquisition Department"/>
            <Text text="{master>/acq_department_code}"></Text>
            <Label text="Budget Type"/>
            <Select width="100%"
                    editable="false"
                    class="readonlyField"
                    selectedKey="{master>/investment_ecst_type_code}"
                    items="{
                                path : 'util>/CodeDetails',
                                filters : [
                                    {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                    {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_BUDGET_TYPE'}
                                ]
                            }"
                >
                <core:Item key="{util>code}" text="{util>code_description}" />
            </Select>



            <Label text="Mold Part No"/> 
            <Text text="{master>/mold_number}"/>
            <Label text="Item Type"/>
            <Text text="{mstSpecView>/mold_item_type_name}"/>
            <Label text="Order Supplier"/>
            <Text text="{master>/order_vendor_id}"></Text>

            <Label text="Project Code"/>
            <Text text="{master>/project_code}"></Text>
            <Label text="Market Type"/>
            <Select width="100%"
                    editable="false"
                    class="readonlyField"
                    selectedKey="{master>/market_type_code}"
                    items="{
                                path : 'util>/CodeDetails',
                                filters : [
                                    {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                    {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_MARKET_TYPE'}
                                ]
                            }"
                >
                <core:Item key="{util>code}" text="{util>code_description}" />
            </Select>
            <Label text="Import Company"/>
            <Text text="{master>/import_company_code}"></Text>



            <Label text="Mold Seq"/>
            <Text text="{master>/mold_sequence}"/>
            <Label text="{I18N>/DESCRIPTION}"/>
            <Text text="{master>/spec_name}"></Text>
            <Label text="Production Supplier"/>
            <Text text="{master>/production_vendor_id}"></Text>

            <Label text="Account"/>
            <Select width="100%"
                    editable="false"
                    class="readonlyField"
                    selectedKey="{master>/account_code}"
                    items="{
                                path : 'util>/CodeDetails',
                                filters : [
                                    {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                    {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_ACCOUNT_NEW'}
                                ]
                            }"
                >
                <core:Item key="{util>code}" text="[{util>code}] {util>code_description}" />
            </Select>
            <Label text="Product Group"/>
            <Text text="{master>/product_group_code}"></Text>
            <Label text="Import Plant"/>
            <Text text="{master>/import_company_org_code}"></Text>
        </form:content>
    </form:SimpleForm>
</VBox>
</core:FragmentDefinition>