<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >

    <l:VerticalLayout class="sapUiContentPadding">
            <Table id="tbShipPlanS1"
                    mode="None"
                    sticky="HeaderToolbar,ColumnHeaders"
                    inset="false"
                    class="sapFDynamicPageAlignContent"
                    width="auto"
                    items= "{schedule>/MoldSchedule}"
                    >
                <columns>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="PV (1st Mold)" />
                    </Column>
                    <Column>
                        <Text text="MP (1st Mold)" />
                    </Column>
                    <Column>
                        <Text text="PV" />
                    </Column>
                    <Column>
                        <Text text="Tool Off" />
                    </Column>
                    <Column>
                        <Text text="Packing-In (Export)" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ComboBox   width="100%"
                                        selectedKey="{schedule>mold_develope_date_type_code}"
                                        items="{
                                                    path : 'util>/CodeDetails',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_DEV_DATE_TYPE'}
                                                    ]
                                                }"
                                        editable="false"
                                        class="readonlyField"
                            >
                                <core:Item key="{util>code}" text="{util>code_description}" />
                            </ComboBox>
                            
                            <DatePicker value="{schedule>drawing_agreement_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule>drawing_confirmed_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule>first_production_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule>production_complete_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule>inspection_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                        </cells>
                    </ColumnListItem>
                </items>
                
            </Table>
            
            <Table id="tbShipPlanS2"
                    mode="None"
                    sticky="HeaderToolbar,ColumnHeaders"
                    inset="false"
                    class="sapFDynamicPageAlignContent"
                    width="auto"
                    items= "{schedule>/MoldSchedule}"
                    >
                <columns>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="Packing-Out (Export)" />
                    </Column>
                    <Column>
                        <Text text="ETD (Port)" />
                    </Column>
                    <Column>
                        <Text text="ETA (Port)" />
                    </Column>
                    <Column>
                        <Text text="Receiving" />
                    </Column>
                    <Column>
                        <Text text="Complete (Set Up)" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ComboBox   width="100%"
                                        selectedKey="{schedule>mold_develope_date_type_code}"
                                        items="{
                                                    path : 'util>/CodeDetails',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_DEV_DATE_TYPE'}
                                                    ]
                                                }"
                                        editable="false"
                                        class="readonlyField"
                            >
                                <core:Item key="{util>code}" text="{util>code_description}" />
                            </ComboBox>
                            <DatePicker value="{schedule/first_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule/second_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule/third_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule/fourth_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                            <DatePicker value="{schedule/fifth_production_update_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                        </cells>
                    </ColumnListItem>
                </items>
                
            </Table>
            </l:VerticalLayout>
	
</core:FragmentDefinition>