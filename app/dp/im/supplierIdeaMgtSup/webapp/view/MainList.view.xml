<mvc:View controllerName="dp.im.supplierIdeaMgtSup.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/IDEA} {I18N>/LIST}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label
                                text="{I18N>/IDEA} {I18N>/NAME}: "
                                labelFor="searchKeyword">
                            </Label>
                            <Input id="searchKeyword" 
                                placeholder="{I18N>/IDEA} {I18N>/NAME}"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PROPOSAL} {I18N>/DATE} : " labelFor="searchRequestDate"/>
                            <DateRangeSelection id="searchRequestDate"  displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD - YYYY-MM-DD"   width="100%"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PROGRESS}{I18N>/STATUS}: " labelFor="searchIdeaProcess" ></Label>
                            <MultiComboBox id="searchIdeaProcess" width="100%" items="{
                                path: 'common>/Code',
                                parameters: {
                                    tenant_id : 'L2100'
                                    , group_code : 'DP_IM_IDEA_PROGRESS_STATUS'
                                },
                                filters : [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                           {path: 'group_code', operator: 'EQ', value1: 'DP_IM_IDEA_PROGRESS_STATUS'}],
                                sorter: { path: 'sort_no'}
                                }"
                                placeholder="{I18N>/ALL}">
                                
                                <items>
                                    <core:Item key="{common>code}" text="[{common>code}] {common>code_name}" />
                                </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/IDEA} {I18N>/TYPE}: " labelFor="searchIdeaType"></Label>
                            <MultiComboBox id="searchIdeaType" width="100%" items="{
                                path: 'common>/Code',
                                parameters: {
                                    tenant_id : 'L2100'
                                    , group_code : 'DP_IM_IDEA_TYPE'
                                },
                                filters : [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                           {path: 'group_code', operator: 'EQ', value1: 'DP_IM_IDEA_TYPE'}],
                                sorter: { path: 'sort_no'}
                                }"
                                placeholder="{I18N>/ALL}">
                                <items>
                                    <core:Item key="{common>code}" text="[{common>code}] {common>code_name}" />
                                </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PRODUCT_GROUP} : " labelFor="searchProductGroup"></Label>
                            <MultiComboBox id="searchProductGroup" width="100%" items="{
                                path: 'common>/Code',
                                parameters: {
                                    tenant_id : 'L2100'
                                    , group_code : 'DP_IM_IDEA_PRODUCT_GROUP'
                                },
                                filters : [{path: 'tenant_id', operator: 'EQ', value1: 'L2100'},
                                           {path: 'group_code', operator: 'EQ', value1: 'DP_IM_IDEA_PRODUCT_GROUP'}],
                                sorter: { path: 'sort_no'}
                                }"
                                placeholder="{I18N>/ALL}">
                                <items>
                                    <core:Item key="{common>code}" text="[{common>code}] {common>code_name}" />
                                </items>
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- 검색화면  -->
                        <VBox>
                            <Label text="{I18N>/SEARCH_IDEA_MANAGER} : " labelFor="searchIdeaManager"></Label>
                            <Input id="searchIdeaManager"
                                placeholder="{I18N>/ALL}"
                                showValueHelp="true" valueHelpRequest=".onIdeaManagerDialogPress" 
                                                liveChange=".onNameChk">
                            </Input>
                            <!-- <Input id="searchIdeaManager"  visible="false" ></Input> -->
                            <Input id="searchIdeaManagerId"  visible="false" ></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>   
                
                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox>           
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"
            rows="{
                path: 'list>/IdeaListView',
                sorter: { 
                    path: 'idea_number',
                    descending: true 
                }                   
            }"
            cellClick=".onCellClickPress"
            visibleRowCountMode="Auto"
            fixedColumnCount="3"
            >
            <!-- 
            columnResize="onColumnResize" 
            rowSelectionChange=".onCheck"-->
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="{I18N>/IDEA} {I18N>/LIST} {= ${list>/IdeaListView}.length > 0 ? '(' + ${list>/IdeaListView}.length + ')' : ''}" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    
                    <!-- <Button text="TEST" id="testButton" press=".onTestPress"  type="Transparent"/> -->

                    <ToolbarSeparator/>
                    <Button id="gTableExportButton" text="" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />
                    <Button icon="sap-icon://action-settings" press=".onPersoButtonPressed" >
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                    </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="idea_number" width="7rem">
                    <Label text="{I18N>/IDEA} {I18N>/SEQUENCE}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_number}"/>
                    </t:template>
                </t:Column>
                <t:Column id="idea_title" width="20rem">
                    <Label text="{I18N>/IDEA} {I18N>/NAME}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_title}"/>
                    </t:template>
                </t:Column>
                <t:Column id="idea_progress_status_name" width="10rem">
                    <Label text="{I18N>/PROGRESS}{I18N>/STATUS}" textAlign="Center" width="100%"/>
                    <t:template>
                        <tnt:InfoLabel
                            text="{list>idea_progress_status_name}"
                            displayOnly="true"
                            colorScheme= "{
                                parts: [
                                    {path: 'list>color_type_code'}
                                ],
                                formatter: '.onStatusColor'
                            }" />
                    </t:template>
                </t:Column>
                <t:Column id="idea_create_user_local_name" width="9rem">
                    <Label text="{I18N>/IDEA} {I18N>/WRITER}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_create_user_local_name}"/>
                    </t:template>
                </t:Column>  
                <t:Column id="idea_type_name" width="9rem">
                    <Label text="{I18N>/IDEA} {I18N>/TYPE}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_type_name}"/>
                    </t:template>
                </t:Column>
                <t:Column id="idea_manager_local_name" width="9rem">
                    <Label text="{I18N>/IDEA} {I18N>/MANAGER}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_manager_local_name}"/>
                        <!--
                        <Text text="{list>idea_manager_local_name} ( {list>idea_manager_empno} )"/>
                        -->
                    </t:template>
                </t:Column>
                <t:Column id="idea_product_group_name" width="7rem">
                    <Label text="{I18N>/PRODUCT_GROUP}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_product_group_name}" />
                    </t:template>
                </t:Column> 


                
                <t:Column id="idea_part_desc" width="15rem">
                    <Label text="{I18N>/PART} {I18N>/NAME}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>idea_part_desc}"/>
                    </t:template>
                </t:Column>
                <t:Column id="vi_amount" width="6rem"  hAlign="End">
                    <Label text="VI {I18N>/AMOUNT} (KRW)" textAlign="Center" width="100%" wrapping="true"/>
                    <t:template>
                        <Text text="{
                                        path: 'list>vi_amount', 
                                        formatter: '.numberFormatter.toNumberString'
                                    }" textAlign="Right"/>
                    </t:template>
                </t:Column>
                <t:Column id="monthly_mtlmob_quantity" width="6rem"  hAlign="End">
                    <Label text="{I18N>/MM} {I18N>/MTLMOB}(EA)" textAlign="Center" width="100%" wrapping="true"/>
                    <t:template>
                        <Text text="{
                                        path: 'list>monthly_mtlmob_quantity', 
                                        formatter: '.numberFormatter.toNumberString'
                                    }" textAlign="Right"/>
                    </t:template>
                </t:Column>                
                <t:Column id="monthly_purchasing_amount" width="6rem"  hAlign="End">
                    <Label text="{I18N>/MM} impact (KRW)" textAlign="Center" width="100%" wrapping="true"/>
                    <t:template>
                        <Text text="{
                                        path: 'list>monthly_purchasing_amount', 
                                        formatter: '.numberFormatter.toNumberString'
                                    }" textAlign="Right"/>
                    </t:template>
                </t:Column>
                <t:Column id="annual_purchasing_amount" width="6rem"  hAlign="End">
                    <Label text="{I18N>/ANNUAL} impact (KRW)" textAlign="Center" width="100%" wrapping="true" />
                    <t:template>
                        <Text text="{
                                        path: 'list>annual_purchasing_amount', 
                                        formatter: '.numberFormatter.toNumberString'
                                    }" textAlign="Right"/>
                    </t:template>
                </t:Column>                                                                                                                                        
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<!-- <Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/> -->
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>