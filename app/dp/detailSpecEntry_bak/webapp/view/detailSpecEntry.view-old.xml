<mvc:View
    class="sapUiSizeCompact"
    controllerName="dp.detailSpecEntry.controller.detailSpecEntry"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">

  <!-- <Shell id="shell"> -->
    <App id="app">
        <f:DynamicPage id="codeMgrPage" toggleHeaderOnTitleClick="true" headerExpanded="true">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="{i18n>title}"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <layout:HorizontalLayout>
                        <form:Form editable="true" width="100%">
                            <form:formContainers>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="Tenant">
                                            <form:fields>
                                                <ComboBox   id="search_tenant_id"
                                                            items="{
                                                                        path : '/CodeCombo',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : '1000'},
                                                                            {path : 'company_code', operator : 'EQ', value1 : 'G100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_TENANT_CD'},
                                                                            {path : 'language_cd', operator : 'EQ', value1 : 'KO'}                                                                        
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{code}" text="{code_name}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹코드">
                                            <form:fields>
                                                <Input id="search_group_code" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="Company">
                                            <form:fields>
                                                <ComboBox   id="search_company_code"
                                                            items="{
                                                                        path : '/CodeCombo',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : '1000'},
                                                                            {path : 'company_code', operator : 'EQ', value1 : 'G100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_COMPANY_CD'},
                                                                            {path : 'language_cd', operator : 'EQ', value1 : 'KO'}                                                                        
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{code}" text="{code_name}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹 명">
                                            <form:fields>
                                                <Input id="search_group_name" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="Chain">
                                            <form:fields>
                                                <ComboBox   id="search_chain_code"
                                                            items="{
                                                                        path : '/CodeCombo',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : '1000'},
                                                                            {path : 'company_code', operator : 'EQ', value1 : 'G100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_CHAIN_CD'},
                                                                            {path : 'language_cd', operator : 'EQ', value1 : 'KO'}                                                                        
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{code}" text="{code_name}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement label="그룹 설명">
                                            <form:fields>
                                                <Input id="search_group_description" width="100%"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                                <form:FormContainer>
                                    <form:formElements>
                                        <form:FormElement label="사용여부">
                                            <form:fields>
                                                <ComboBox   id="search_use_yn"    
                                                            items="{
                                                                        path : '/CodeCombo',
                                                                        filters : [
                                                                            {path : 'tenant_id', operator : 'EQ', value1 : '1000'},
                                                                            {path : 'company_code', operator : 'EQ', value1 : 'G100'},
                                                                            {path : 'group_code', operator : 'EQ', value1 : 'CM_YN'},
                                                                            {path : 'language_cd', operator : 'EQ', value1 : 'KO'}                                                                        
                                                                        ]
                                                                    }"
                                                >
                                                    <core:Item key="{code}" text="{code_name}" />
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                </form:FormContainer>
                            </form:formContainers>
                            <form:layout>
                            <form:ResponsiveGridLayout columnsM="4" columnsL="4" columnsXL="4"/>
                            </form:layout>
                        </form:Form>
                    </layout:HorizontalLayout>
                    <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                        <items>
                            <Button text="검색" press="onSearch"/>
                        </items>
                    </HBox>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <layout:Splitter orientation="Vertical">
                        <Table  id="itemTable"
                                items="{
                                            path : '/MoldItem'
                                        }"
                                mode="MultiSelect"
                                updateFinished="onItemUpdateFinished"
                                
                        >
                        <layoutData>
                            <layout:SplitterLayoutData size="95%" />
                        </layoutData>
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer/>
                                        <Button text="Excel" icon="sap-icon://excel"  type="Accept" press="onExcelDown"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="LG Affiliate"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="LG Division"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Model"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Part No"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Seq"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Status"/>
                                    </header>
                                </Column>

                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Description"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Item Type"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="1st Production Date"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Complete Date"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="User"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Date"/>
                                    </header>
                                </Column>
                                <Column hAlign="Center" width="100px">
                                    <header>
                                        <Label text="Family Part No"/>
                                    </header>
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem type="Active" id="itemColumnListItem" press="onitemTableItemPress">
                                    <cells>
                                        <Text id="affiliate_code" value="{affiliate_code}"/>
                                        <Text id="org_code" value="{org_code}"/>
                                        <Text id="model" value="{model}"/>
                                        <Text id="part_no" value="{part_no}"/>
                                        <Text id="item_seq" value="{item_seq}"/>
                                        <Text id="order_nego_status" value="{order_nego_status}"/>
                                        <Text id="description" value="{description}"/>
                                        <Text id="item_type" value="{item_type}"/>
                                        <Text id="first_prod_date" value="{first_prod_date}"/>
                                        <Text id="complete_date" value="{complete_date}"/>
                                        <Text id="created_by" value="{created_by}"/>
                                        <Text id="last_update_date" text="{local_update_dtm}"/>
                                        <Text id="family_part_no_1" text="{family_part_no_1}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>

                </layout:Splitter>
            </f:content>
        </f:DynamicPage>
    </App>
  <!-- </Shell> -->
</mvc:View>

