<mvc:View displayBlock="true" controllerName="dp.detailSpecEntry.controller.Master" height="100%"
	  xmlns="sap.m"
      xmlns:form="sap.ui.layout.form"
      xmlns:layout="sap.ui.layout"
	  xmlns:f="sap.f"
	  xmlns:mvc="sap.ui.core.mvc"
      xmlns:core="sap.ui.core">
	<f:DynamicPage id="dynamicPageId"
        headerExpanded="{contModel>/headerExpandFlag}"
		toggleHeaderOnTitleClick="true">
		<!-- DynamicPage Title -->
		<f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="LG Company" required="true"></Label>
                                <MultiComboBox>
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="LG Division" required="true"></Label>
                                <MultiComboBox>
                                    <core:Item text="[DFZ] Washing Machine" />
                                    <core:Item text="[DFZ] Washing Machine" />
                                    <core:Item text="[DFZ] Washing Machine" />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Date" required="true"></Label>
                                    <DateRangeSelection displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Status"></Label>
                                <SegmentedButton selectedKey="all" class="sapUiSmallMarginBottom" width="100%">
                                    <items>
                                        <SegmentedButtonItem text="All" key="all"/>
                                        <SegmentedButtonItem text="Saved" width="4em"/>
                                        <SegmentedButtonItem text="Confirmed" width="6em"/>
                                    </items>
                                </SegmentedButton>
                                <layoutData>
                                    <layout:GridData
                                        span="XL2 L3 M6 S12"/>
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="LG Company" required="true"></Label>
                                <MultiComboBox>
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                    <core:Item text="[LGEKR] LG Electronics Inc." />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="LG Division" required="true"></Label>
                                <MultiComboBox>
                                    <core:Item text="[DFZ] Washing Machine" />
                                    <core:Item text="[DFZ] Washing Machine" />
                                    <core:Item text="[DFZ] Washing Machine" />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Date" required="true"></Label>
                                    <DateRangeSelection displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD"/>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Status"></Label>
                                <SegmentedButton selectedKey="all" class="sapUiSmallMarginBottom" width="100%">
                                    <items>
                                        <SegmentedButtonItem text="All" key="all"/>
                                        <SegmentedButtonItem text="Saved" width="4em"/>
                                        <SegmentedButtonItem text="Confirmed" width="6em"/>
                                    </items>
                                </SegmentedButton>
                                <layoutData>
                                    <layout:GridData
                                        span="XL2 L3 M6 S12"/>
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Model" labelFor="searchPopup1"></Label>
                            <Input id="searchPopup1" showValueHelp="true"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Part No" labelFor="searchPopup2"></Label>
                            <Input id="searchPopup2" showValueHelp="true"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Family Part No" labelFor="searchKeywordS"></Label>
                            <Input id="searchKeywordS" placeholder="Input data"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="productsTable"
                mode="MultiSelect"
				   sticky="ColumnHeaders,HeaderToolbar"
				   inset="false"
				   growing="true"
                   growingThreshold="10"
				   items="{
						path: 'moldMst>/MoldMasters',
						sorter: [
						]
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<headerToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="LG Company" />
					</Column>
					<Column>
                        <Text text="LG Division"/>
                    </Column>
					<Column>
						<Text text="Model" />
					</Column>
					<Column>
						<Text text="Mold Part No" />
					</Column>
					<Column>
						<Text text="Seq" />
					</Column>
                    <Column minScreenWidth="Desktop" demandPopin="false">
						<Text text="Description" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="Status" />
					</Column>
                    <Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="Item Type" />
					</Column>
                    <Column minScreenWidth="Desktop" demandPopin="false">
						<Text text="User" />
					</Column>
                    <Column minScreenWidth="Desktop" demandPopin="false">
						<Text text="Date" />
					</Column>
                    <Column minScreenWidth="Desktop" demandPopin="false">
						<Text text="Family Part No" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
                            <ObjectIdentifier title="{moldMst>company_code}" />
                            <ObjectIdentifier text="{moldMst>org_code}" />
                            <ObjectIdentifier text="{moldMst>model}" />
                            <ObjectIdentifier title="{moldMst>part_number}" />
                            <ObjectIdentifier text="{moldMst>mold_sequence}" />
                            <ObjectIdentifier text="{moldMst>spec_name}" />
                            <ObjectIdentifier text="{moldMst>po_status_code}" />
                            <ObjectIdentifier text="{moldMst>mold_item_type_code}" />
                            <ObjectIdentifier text="{moldMst>create_user_id}" />
                            <ObjectIdentifier text="{moldMst>local_update_dtm}" />
                            <ObjectIdentifier text="{moldMst>family_part_number_1} {moldMst>family_part_number_2} {moldMst>family_part_number_3} {moldMst>family_part_number_4} {moldMst>family_part_number_5}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>