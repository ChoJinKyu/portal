<mvc:View controllerName="dp.moldApprovalList.controller.ApprovalList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="false" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm id="pageSearchFormS" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Company" labelFor="searchCompanyS" required="true"></Label>     
                                <MultiComboBox id="searchCompanyS" width="100%" selectedKey="" selectionFinish="handleSelectionFinishComp" items="{
                                        path: 'org>/Org_Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Plant" labelFor="searchPlantS" required="true"></Label>
                                <MultiComboBox id="searchPlantS" width="100%" selectedKey="" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                                            {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                            {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Request Date" labelFor="searchRequestDateS" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateS" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                             <VBox>
                                <Label text="Approval Category" labelFor="searchApprovalCategoryS" required="true"></Label>
                                <MultiComboBox id="searchApprovalCategoryS" width="100%" selectedKey="" items="{
                                            path : 'util>/CodeDetails',
                                            filters : [
                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_APPROVAL_TYPE'}
                                            ],
                                            sorter: { path: 'code'}
                                        }">
                                <core:Item key="{util>code}" text="{util>code_description}" />
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
                <f:expandedContent>
                    <form:SimpleForm id="pageSearchFormE" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="Company" labelFor="searchCompanyE" required="true"></Label>     
                                <MultiComboBox id="searchCompanyE" width="100%" selectedKey="" selectionFinish="handleSelectionFinishComp" items="{
                                        path: 'org>/Org_Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }">
                                    <items>
                                        <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Plant" labelFor="searchPlantE" required="true"></Label>
                                <MultiComboBox id="searchPlantE" width="100%" selectedKey="" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                                            {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                            {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                        ]
                                    }">
                                    <items>
                                        <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                    </items>
                                </MultiComboBox>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Request Date" labelFor="searchRequestDateE" required="true"></Label>
                                <DateRangeSelection id="searchRequestDateE" width="100%" change="handleChange"/>
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                             <VBox>
                                <Label text="Approval Category" labelFor="searchApprovalCategoryE" required="true"></Label>
                                <MultiComboBox id="searchApprovalCategoryE" width="100%" selectedKey="" items="{
                                            path : 'util>/CodeDetails',
                                            filters : [
                                                {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_APPROVAL_TYPE'}
                                            ],
                                            sorter: { path: 'code'}
                                        }">
                                <core:Item key="{util>code}" text="{util>code_description}" />
                                </MultiComboBox>
                                
                                <layoutData>
                                    <layout:GridData span="XL3 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                        </form:content>
                    </form:SimpleForm>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="Search" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="Model " labelFor="searchModel"></Label>
                            <Input id="searchModel" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/Models',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'model' }
                            }">
                                <core:Item key="{model}" text="{model}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Mold Part No " labelFor="searchPart"></Label>
                            <Input id="searchPart" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/PartNumbers',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'part_number' }
                            }">
                                <core:Item key="{part_number}" text="{part_number}" />
                            </Input>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Subject" labelFor="searchSubject"></Label>
                            <Input id="searchSubject" placeholder="Input data"/>
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Requester" labelFor="searchRequester"></Label>
                            <Input id="searchRequester" 
                                    showValueHelp="true"  
                                    valueHelpRequest=".onValueHelpRequested"
                                    suggestionItems="{
                                        path: '/CreateUsers',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'create_user_id' }
                            }">
                                <core:Item key="{create_user_id}" text="{create_user_id}" />
                                
                            </Input>
                           
                            <layoutData>
                                <layout:GridData span="XL3 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Status" class="sapUiSmallMarginTop"></Label>
                            <SegmentedButton id="searchStatus" selectedKey="" width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" key="" />
                                    <!-- <SegmentedButtonItem text="Apprv-Req" key="AR" width="5em"/> -->
                                    <SegmentedButtonItem text="Draft" key="DR" width="5em" />
                                    <SegmentedButtonItem text="In-Appr" key="IA" width="5em" />
                                    <SegmentedButtonItem text="Apprvd" key="AP" width="5em" />
                                    <SegmentedButtonItem text="Rejected" key="RJ" width="5em" />
                                     
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL10 L9 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <!-- <Table id="mainTable"       
                        growing="true"
                        growingThreshold="20"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onListMainTableUpdateFinished"
                        cellClick=".onCellClick"
                        rowSelectionChange = ".onCheck"
                        mode="MultiSelect"
                        width="auto"
                        items="{list>/Approvals}"> -->
                <Table id="mainTable"       
                    growing="true"
                    growingThreshold="20"
                    class="sapFDynamicPageAlignContent" 
                    updateFinished=".onListMainTableUpdateFinished"
                    cellClick=".onCellClick"
                    width="auto"
                    items="{list>/ApprovalMasters}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Approval List ({= ${list>/ApprovalMasters}.length || 0})" level="H2"/>
                            <ToolbarSpacer/>
                            <!-- Add the Personalization button -->
                            <Button id="mainTableCreateButton" text="Create" type="Emphasized" press=".onDialogCreate" />
                            <Button id="mainTableDeleteButton" text="Delete" type="Transparent" press=".onApplovalDeletePress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://excel-attachment" press=".onListMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                            <Button icon="sap-icon://action-settings" press=".onListMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>                            
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="4em" >
                            <CheckBox selected="false" select=".onColumnChecBox"/>
                        </Column>
                        <Column id="mainColumnApprovalCategory" >
                            <Text text="Approval&#10;Category" />
                        </Column>
                        <Column id="mainColumnCompany" >
                            <Text text="Company" />
                        </Column>
                        <Column id="mainColumnPlant" >
                            <Text text="Plant" />
                        </Column>
                        <Column id="mainColumnApprovalNo">
                            <Text text="Approval No" />
                        </Column>
                        <Column id="mainColumnSubject"  >
                            <Text text="Subject" />
                        </Column>
                        <Column id="mainColumnRequester"  >
                            <Text text="Requester" />
                        </Column>
                        <Column id="mainColumnRequestDate"  >
                            <Text text="Request Date" />
                        </Column>
                        <Column id="mainColumnStatus"  >
                            <Text text="Status" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>                  
                                <CheckBox fieldGroupIds="{= ${list>approval_type_code}==='B'? 'checkBoxs':''}"  visible="{= ${list>approval_type_code}==='B'? true:false }" select=".onCheck" />       
                                <ComboBox 
                                        editable="false"   
                                        class="readonlyField"
                                        selectedKey="{list>approval_type_code}"
                                        items="{
                                                    path : 'util>/CodeDetails',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'DP_MD_APPROVAL_TYPE'}
                                                    ]
                                                }"
                                        width='100%'
                                        >
                                    <core:Item key="{util>code}" text="{util>code_description}" />
                                </ComboBox>
                                <ComboBox  
                                        editable="false" 
                                        class="readonlyField"
                                        selectedKey="{list>company_code}" 
                                        items="{
                                                    path: 'org>/Org_Company',
                                                    filters: [
                                                        {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                                    ],
                                                    sorter: { path: 'company_code'}
                                                }"
                                        width='100%'
                                        >
                                    <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                                </ComboBox>
                                <ComboBox
                                        editable="false" 
                                        class="sapMInputBaseReadonlyWrapper"  
                                        selectedKey="{list>org_code}" 
                                        items="{
                                                    path: 'purOrg>/Pur_Operation_Org',
                                                    filters: [
                                                        {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                                    ]
                                                }"
                                        width='100%'
                                        >
                                    <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}] {purOrg>org_name}" />
                                </ComboBox>
                                <ObjectIdentifier text="{list>approval_number}" />
                                <ObjectIdentifier text="{list>approval_title}" />
                                <ObjectIdentifier text="{list>requestor_empno}" />
                                <DatePicker value="{list>request_date}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" placeholder="YYYY-MM-DD" editable="false" class="readonlyField"/>
                                <ComboBox
                                        editable="false"   
                                        class="readonlyField"
                                        selectedKey="{list>approve_status_code}"
                                        items="{
                                                    path : 'util>/CodeDetails',
                                                    filters : [
                                                        {path : 'tenant_id', operator : 'EQ', value1 : 'L1100'},
                                                        {path : 'group_code', operator : 'EQ', value1 : 'CM_APPROVE_STATUS'}
                                                    ]
                                                }"
                                        width='100%'
                                        >
                                    <core:Item key="{util>code}" text="{util>code_description}" />
                                </ComboBox>

                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="123123" type="Emphasized" press=".onMessageButtonPress" /> -->
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>