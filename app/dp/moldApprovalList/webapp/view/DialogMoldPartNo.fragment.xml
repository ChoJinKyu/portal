<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    	<TableSelectDialog
		noDataText="No Mold Part No Found"
		title="Mold Part No Selection"
		search=".handleSearch"
		confirm=".handleValueHelpClose"
		cancel=".handleValueHelpClose"
		items="{msg>/Message}" 
        contentWidth="20%"
        >
		<ColumnListItem>
            <cells>
				<Text text="{msg>message_code}" />
			</cells>
            <cells>
				<Text text="{msg>message_type_code}" />
			</cells>
			<cells>
				<Text text="{msg>message_contents}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Part No" />
				</header>
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Item Type" />
				</header>
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Description" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>