<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    	<TableSelectDialog
		noDataText="No Requester Found"
		title="Requester Selection"
		search=".handleSearch"
		confirm=".handleValueHelpClose"
		cancel=".handleValueHelpClose"
		items="{msg>/Message}" 
        contentWidth="20%"
        >
		<ColumnListItem>
            <cells>
				<Text text="{msg>message_contents}" />
			</cells>
			<cells>
				<Text text="{msg>tenant_id}" />
			</cells>
		</ColumnListItem>
		<columns>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Name" />
				</header>
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="ID" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>