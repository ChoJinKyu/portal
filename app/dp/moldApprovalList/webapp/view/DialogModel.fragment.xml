<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    	<TableSelectDialog
		noDataText="No Models Found"
		title="Model Selection"
		search=".handleSearch"
		confirm=".handleValueHelpClose"
		cancel=".handleValueHelpClose"
		items="{msg>/Message}" 
        contentWidth="20%"
        >
		<ColumnListItem press=".onDblClick">
			<cells>
				<Text text="{msg>message_contents}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Model" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>