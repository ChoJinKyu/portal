            <form:SimpleForm 
            editable="false"
            maxContainerCols="2"
            layout="ResponsiveGridLayout"
            adjustLabelSpan="false"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="2"
            columnsM="2"
            > 
                

               <form:content>
                    <Label text = "Company" /> 
                    <ComboBox id="searchCompanyF" width="50%" selectedKey="" items="{
                        path: 'org>/Org_Company',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                        ],
                        sorter: { path: 'company_code'}
                    }">
                        <items>
                            <core:Item key="{org>company_code}" text="[{org>company_code}] {org>company_name}" />
                        </items>
                    </ComboBox>
                    <Label text = "Plant"/> 
                    <ComboBox id="searchPlantF" width="50%" selectedKey="" items="{
                        path: 'purOrg>/Pur_Operation_Org',
                        filters: [
                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                            {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                            {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                        ]
                    }">
                        <items>
                            <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                        </items>
                    </ComboBox>
                   
                    <VBox>
                        <Label text = "1.Local"/> 
                        <HBox alignItems="Center" justifyContent="Center" >
                            <ToggleButton id="categoriLocalBudget" fieldGroupIds="toggleButtons" class="sapUiSmallMargin" text="Budget" enabled="true" pressed="false" press=".onToggleHandleChange" width="10em"/>
                            <ToggleButton id="categoriSupplierSelection" fieldGroupIds="toggleButtons" class="sapUiSmallMargin" text="Supplier Selection" enabled="true" pressed="false" press=".onToggleHandleChange" width="10em"/>
                        </HBox> 
                        <HBox alignItems="Center" justifyContent="Center" >
                            <ToggleButton id="categoriLocalOrder" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Order" enabled="true" pressed="false" press=".onToggleHandleChange" />
                            <ToggleButton id="categoriReceipt" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Receipt" enabled="true" pressed="false" press=".onToggleHandleChange" />
                        </HBox> 
                        <Label text = "2.Export"/>
                        <HBox alignItems="Center" justifyContent="Center" >
                            <ToggleButton id="categoriExport" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Export" enabled="true" pressed="false" press=".onToggleHandleChange" />
                        </HBox> 
                        <Label text = "3. Import"/>
                        <HBox alignItems="Center" justifyContent="Center" >
                            <ToggleButton id="categoriImportBudget" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Budget" enabled="true" pressed="false" press=".onToggleHandleChange" />
                            <ToggleButton id="categoriImportOrder" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Order" enabled="true" pressed="false" press=".onToggleHandleChange" />
                            <ToggleButton id="categoriImportCompletion" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Import Completion" enabled="true" pressed="false" press=".onToggleHandleChange" />
                        </HBox> 
                        <Label text = "4. Repair/Modification"/>
                        <HBox alignItems="Center" justifyContent="Center" >
                            <ToggleButton id="categoriRepModCompletion" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Repair/Modifi. Completion" enabled="true" pressed="false" press=".onToggleHandleChange" />
                        </HBox>
                        <Label text = "5. Etc."/>
                    <HBox alignItems="Center" justifyContent="Center"> 
                            <ToggleButton id="categoriOtherIn" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Other In" enabled="true" pressed="false" press=".onToggleHandleChange" />
                            <ToggleButton id="categoriOtherOut" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Other Out" enabled="true" pressed="false" press=".onToggleHandleChange"/>
                        </HBox>
                        <HBox alignItems="Center" justifyContent="Center"> 
                            <ToggleButton id="categoriProdSupplierAmend" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Prod Supplier Amend" enabled="true" pressed="false" press=".onToggleHandleChange" />
                            <ToggleButton id="categoriItemCancel" class="sapUiSmallMargin" fieldGroupIds="toggleButtons" text="Item Cancel" enabled="true" pressed="false" press=".onToggleHandleChange" />
                        </HBox>
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </content>
            <ToolbarSpacer/>
            <HBox alignItems="Center" justifyContent="Center" >
                <Button text="Cancel" class="sapUiSmallMargin" press=".createPopupClose"/>
                <Button text="Select" class="sapUiSmallMargin" type="Emphasized" press=".handleConfirm"/>
            </HBox>
    </Dialog>
</core:FragmentDefinition>
