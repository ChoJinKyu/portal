<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">
	
	<Dialog id="dialogProjectSelection" title="{I18N>/MCST_SEARCH}" contentWidth="40%" >
		<content>
                <!-- 재료비검색 List 시작 -->
                <t:Table 
                    id="detailPopupTable"
                    selectionMode="Single"
                    selectionBehavior="RowOnly"
                    rowSelectionChange="onSelectDialogChange"
                    rowActionCount="1"
                    rows="{popupListModel>/results}"
                    class="sapFDynamicPageAlignContent" 
                    visibleRowCountMode="Auto" >
                    <t:extension>
                        <OverflowToolbar>
                            <Title text="{I18N>/MATERIAL_COST}" level="H2" />
                            <ToolbarSpacer />
                            <!-- <SearchField search=".onGetDialogData" width="15rem"/>  검색 버튼-->
                        </OverflowToolbar>
                    </t:extension>
                    <t:columns>
                        <t:Column hAlign="Begin"> <!-- width="10rem" 컬럼 사이즈 조절  -->
                            <Label text="{I18N>/COMPUT_INFO}" width="100%" textAlign="Center"/>  
                            <t:template>
                                 <Text text="{popupListModel>mcst_text/code_name} - {popupListModel>version_sequence}'st"/>
                            </t:template>                          
                        </t:Column>
                        <t:Column hAlign="Center"> <!-- width="10rem" 컬럼 사이즈 조절  -->
                            <Label text="{I18N>/STATUS}" />  
                            <t:template>
                                 <Text text="{popupListModel>mcst_status_text/code_name}"/>
                            </t:template>                          
                        </t:Column>
                        <t:Column hAlign="Center"> <!-- width="10rem" 컬럼 사이즈 조절  -->
                            <Label text="{I18N>/REG_DATE}" />  
                            <t:template>
                                 <Text text="{ path : 'popupListModel>project_create_date',
                                              formatter: '.dateFormatter.toUTCDateString'  
                                            }" />         
                            </t:template>                          
                        </t:Column> 
                    </t:columns>
                    <t:rowActionTemplate>
                        <t:RowAction>
                            <t:items>
                                <t:RowActionItem type="Navigation" press=".onDetailPopRowActionPress"></t:RowActionItem>
                            </t:items>
                        </t:RowAction>
                    </t:rowActionTemplate>
                </t:Table>
                <!-- 재료비검색 List 끝 --> 
		</content>
        <buttons>
            <Button text="{I18N>/CLOSE}" press=".onGoalPopClose" />
            <!--<Button text="{I18N>/COPY}" press=".onCopy" />-->
            <Button text="{I18N>/WRITE}" type="Emphasized" press=".onDialogCreatePress" />
        </buttons>
	</Dialog>
</core:FragmentDefinition>