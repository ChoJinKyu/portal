<mvc:View controllerName="dp.tc.projectMgt.controller.ProjectMgtDetail" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    xmlns:t="sap.ui.table"
    xmlns:tnt="sap.tnt"
    xmlns:uxap="sap.uxap"
    xmlns:block="dp.tc.projectMgt.blocks"
    height="100%">
<Page>
    <IconTabBar
		id="itbProgress"
		select=".onTabSelect"
        style="padding:0px !important" class="sapUiNoContentPadding">
		<items>
			<IconTabFilter
				icon="sap-icon://hint"
				iconColor="Default"
				design="Horizontal"
				text="Project Info."
				key="1" />
			<IconTabSeparator icon="sap-icon://process" />
			<IconTabFilter
				icon="sap-icon://add-product"
				iconColor="Default"
				design="Horizontal"
				text="BOM Info."
				key="2" />
			<IconTabSeparator icon="sap-icon://process" />
			<IconTabFilter
				icon="sap-icon://expense-report"
				iconColor="Default"
				design="Horizontal"
				text="Net Price Info."
				key="3" />
		</items>
        <content>
                <block:BlockProjectInfoHd/>
        </content>
	</IconTabBar>
    <layout:VerticalLayout>
        <block:BlockProjectInfoDt id="blProjectInfoDt"/>
    </layout:VerticalLayout>

    <footer>
        <OverflowToolbar>
            <ToolbarSpacer />
            <HBox>
                <Button type="Transparent" text="수정" press=".onEditPress" class="sapUiSmallMarginEnd" enabled="{detailModel>/mode/readMode}"/>
                <Button type="Transparent" text="취소" press=".onReadPress" class="sapUiSmallMarginEnd" enabled="{detailModel>/mode/editMode}"/>
                <Button type="Emphasized" text="저장"  press=".onSavePress" class="sapUiSmallMarginEnd" visible="{detailModel>/mode/editMode}"/>
            </HBox>
        </OverflowToolbar>
    </footer>
</Page>
</mvc:View>