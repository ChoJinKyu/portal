<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">
	
	<Dialog title="Supplier"
            contentWidth="50%"
            contentHeight="50%">
		<content>
            <Table 
                id="supplierTable"
                items="{dialogModel>/supplier}"
                mode="SingleSelectMaster"
                selectionChange=".onSelectDialogRow" >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Supplier List" level="H2" />
                            <ToolbarSpacer />
                            <SearchField search=".onGetDialogData" width="15rem"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column hAlign="Center" width="3rem" >
                        <header>
                            <Label text="Div" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" width="7rem" >
                        <header>
                            <Label text="Supplier Code" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" width="20rem" >
                        <header>
                            <Label text="Local Name" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" >
                        <header>
                            <Label text="English Name" />                            
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{dialogModel>org_code}"/>
                            <Text text="{dialogModel>supplier_code}"/>
                            <Text text="{dialogModel>supplier_local_name}"/>
                            <Text text="{dialogModel>supplier_english_name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
		</content>
		<beginButton>
            <Button text="Close" press=".onClose" />
        </beginButton>
        <endButton>
            <Button  text="Apply" 
                type="Emphasized"
                press=".onDailogRowDataApply" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>