<mvc:View controllerName="dp.vi.basePriceArlMgt.controller.BasePriceList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:form="sap.ui.layout.form"
  xmlns:t="sap.ui.table"
  xmlns:layout="sap.ui.layout"
  xmlns:tnt="sap.tnt"
  xmlns:lib-m="ext.lib.control.m"
  displayBlock="true"
  height="100%">
    <f:DynamicPage
        headerExpanded="true"
        showFooter="true"
        toggleHeaderOnTitleClick="true">
      <f:title>
        <f:DynamicPageTitle>
          <f:heading>
            <Title text="{I18N>/BASE_PRICE_APPROVAL_LIST}" />
          </f:heading>
          <f:actions>
            <Button text="{I18N>/SEARCH}" type="Emphasized" press=".onSearch"/>
            <!-- <Button text="Search" type="Emphasized" press=".onSearch"/> -->
          </f:actions>
        </f:DynamicPageTitle>
      </f:title>
      <f:header>
        <f:DynamicPageHeader pinnable="true">
          <!--Filterbar 시작-->
          <form:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            adjustLabelSpan="false">
                <form:content>
                    <!-- Type 시작 -->
                    <VBox>
                        <Label text="{I18N>/APPROVAL_TYPE_CODE} "></Label>
                        <ComboBox
                            width="100%"
                            selectedKey="{filterModel>/type}"
                            items="{filterModel>/type_list}">
                            <items>
                            <core:Item key="{filterModel>code}" text="{filterModel>code_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Type 끝 -->
                    
                    <!-- Approval Number 시작 -->
                    <VBox>
                        <Label text="{I18N>/APPROVAL_NUMBER} " />
                        <Input value="{filterModel>/approvalNumber}" change=".onSearch" />
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Approval Number 끝 -->

                    <!-- Approval Title 시작 -->
                    <VBox>
                        <Label text="{I18N>/APPROVAL_TITLE} " />
                        <Input value="{filterModel>/approvalTitle}" change=".onSearch" />
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Approval Title 끝 -->

                    <!-- Request Date 시작 -->
                    <VBox>
                        <Label text="{I18N>/REQUEST_DATE} "></Label>
                        <DateRangeSelection
                             value="{
                                    parts: [
                                        {path: 'filterModel>/dateValue'}, 
                                        {path: 'filterModel>/secondDateValue'}
                                    ], 
                                    type: 'sap.ui.model.type.DateInterval',
                                    formatOptions: { UTC: true, format: 'yMd' }
                                }" />
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Request Date 끝 -->

                    <!-- Request By 시작 -->
                    <VBox height="56px">
                        <Label text="{I18N>/REQUESTOR} "></Label>
                        <MultiInput id="multiInputWithEmployeeValueHelp"
                            placeholder="Choose employees from the ValueHelp"
                            showValueHelp="true" valueHelpRequest=".onMultiInputWithEmployeeValuePress($event, 'multiInputWithEmployeeValueHelp')">
                        </MultiInput>
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Request By 끝 -->

                    <!-- Status 시작 -->
                    <VBox>
                        <Label text="{I18N>/STATUS} "></Label>
                        <ComboBox
                            width="100%"
                            selectedKey="{filterModel>/status}"
                            items="{rootModel>/processList}">
                            <items>
                            <core:Item key="{rootModel>code}" text="{rootModel>code_name}" />
                            </items>
                        </ComboBox>
                        <layoutData>
                            <layout:GridData span="XL2 L4 M6 S12" />
                        </layoutData>
                    </VBox>
                    <!-- Status 끝 -->
                </form:content>
            </form:SimpleForm>
            <!--Filterbar 끝-->
        </f:DynamicPageHeader>
      </f:header>
      
      <f:content>
        <!--Base Price List 시작-->
        <t:Table id="listTable"
            selectionMode="None"
            rows="{listModel>/results}"
            cellClick=".onGoDetail"
            visibleRowCountMode="Auto">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title text="{I18N>/BASE_PRICE_LIST} ({= ${listModel>/results}.length || 0})" level="H2"/>
                    <ToolbarSpacer />
                    <Button text="{I18N>/CREATE}" press=".onOpenCreateDialog" />
                    <ToolbarSeparator/>
                    <Button icon="sap-icon://excel-attachment" press=".onExcelExport" >
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                    </Button>
                    <!-- <Button text="Create" press=".onGoDetail" /> -->
                    <!-- <Button icon="sap-icon://excel-attachment" />
                    <Button icon="sap-icon://group-2" />
                    <Button icon="sap-icon://action-settings" /> -->
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/APPROVAL_TYPE_CODE}" textAlign="Center" />
                    <t:template>
                        <Text text="{listModel>approval_type_code_nm}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="10rem">
                    <Label text="{I18N>/APPROVAL_NUMBER}" textAlign="Center" />
                    <t:template>
                        <!-- <Link text="{listModel>approval_number}" press=".onGoDetail" /> -->
                        <Text text="{listModel>approval_number}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{I18N>/APPROVAL_TITLE}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{listModel>approval_title}" tooltip="{listModel>approval_title}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="7rem">
                    <Label text="{I18N>/REQUEST_DATE}" />
                    <t:template>
                        <Text text="{
                                path: 'listModel>request_date',
                                formatter: '.onChangeDateFormat'}" />
                    </t:template>
                </t:Column>
                <!-- <t:Column width="25rem">
                    <Label text="{I18N>/REQUESTOR}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{listModel>requestor_local_nm} {listModel>requestor_job_title} / {listModel>requestor_dept_local_nm}" 
                            tooltip="{listModel>requestor_local_nm} {listModel>requestor_job_title} / {listModel>requestor_dept_local_nm}"  />
                    </t:template>
                </t:Column> -->
                <t:Column width="8rem">
                    <Label text="{I18N>/REQUESTOR}" textAlign="Center" width="100%" />
                    <t:template>
                        <Text text="{listModel>requestor_local_nm} {listModel>requestor_job_title}" 
                            tooltip="{listModel>requestor_local_nm} {listModel>requestor_job_title}" textAlign="Center" width="100%"   />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="12rem">
                    <Label text="{I18N>/STATUS}" textAlign="Center" width="100%" />
                    <t:template>
                        <tnt:InfoLabel 
                            text="{listModel>approve_status_code_nm}" 
                            colorScheme="{
                                path: 'listModel>approve_status_code',
                                formatter: '.onStatusColor'
                            }" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" width="2rem">
                    <Label text="" />
                    <t:template>
                        <ObjectStatus icon="sap-icon://feeder-arrow" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
        <!--Base Price List 끝-->
      </f:content>
    </f:DynamicPage>
</mvc:View>
