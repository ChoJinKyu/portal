<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">
	
	<Dialog title="{I18N>/SUPPLIER}"
            contentWidth="50%"
            contentHeight="50%">
		<content>
            <Table 
                id="supplierTable"
                items="{dialogModel>/supplier}"
                mode="SingleSelectMaster"
                selectionChange=".onSelectDialogRow" >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{I18N>/SUPPLIER_LIST}" level="H2" />
                            <ToolbarSpacer />
                            <SearchField search=".onGetDialogData" width="15rem">
                                <customData>
                                    <core:CustomData key="dialog" value="supplier" />
                                </customData>
                            </SearchField>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column hAlign="Center" width="4rem" >
                        <header>
                            <Label text="{I18N>/BUSINESS_DIVISION}" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" width="7rem" >
                        <header>
                            <Label text="{I18N>/SUPPLIER_CODE}" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" width="20rem" >
                        <header>
                            <Label text="{I18N>/SUPPLIER_LOCAL_NAME}" />                            
                        </header>
                    </Column>
                    <Column hAlign="Center" >
                        <header>
                            <Label text="{I18N>/SUPPLIER_ENGLISH_NAME}" />                            
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{dialogModel>org_code}"/>
                            <Text text="{dialogModel>supplier_code}"/>
                            <Text text="{dialogModel>supplier_local_name}"/>
                            <Text text="{dialogModel>supplier_english_name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
		</content>
		<beginButton>
            <Button text="Close" press=".onClose" />
        </beginButton>
        <!-- <endButton>
            <Button  text="Apply" 
                type="Emphasized"
                press=".onDailogRowDataApply" />
        </endButton> -->
	</Dialog>
</core:FragmentDefinition>