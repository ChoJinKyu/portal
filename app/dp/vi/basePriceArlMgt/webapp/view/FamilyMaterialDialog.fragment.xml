<core:FragmentDefinition
    class="sapUiSizeCompact"    
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true">
	
	<Dialog title="Family Material Code"
            contentWidth="90%"
            contentHeight="50%">
		<content>
            <Text text="selected path : {materialCodeModel>/selectedPath}" />
		</content>
			<beginButton>
				<Button text="Close" press=".onClose">
                    <customData>
                        <core:CustomData key="fragmentName" value="_oFamilyMaterialDialog"  />
                    </customData>
                </Button>
			</beginButton>
            <endButton>
                <Button  text="Apply" 
                    type="Emphasized"
                    press=".onFamilyMaterialDetailApply" >
                    <customData>
                        <core:CustomData key="fragmentName" value="_oFamilyMaterialDialog"  />
                    </customData>
                </Button>
            </endButton>
	</Dialog>
</core:FragmentDefinition>