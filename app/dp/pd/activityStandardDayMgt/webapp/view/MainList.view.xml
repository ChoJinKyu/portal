<mvc:View
    controllerName="dp.pd.activityStandardDayMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    xmlns:lib-f="ext.lib.control.f"
    height="100%">

    <f:DynamicPage
        id="page"
        headerExpanded="{mainListView>/headerExpanded}"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <lib-f:CustomDynamicPageTitle>
                <lib-f:heading>
                    <HBox class="sapUiSizeCompact">
                        <lib-m:FavoriteMenuButton menuCode="DPPDU00007"/>
                        <Title text="Activity {I18N>/STANDARD_DAYS} {I18N>/DISPLAY}" />
                    </HBox>
                    <!-- <HBox alignItems="Center">
                        <Button icon="sap-icon://unfavorite" type="Transparent" />
                        <Title text="Activity {I18N>/STANDARD_DAYS} {I18N>/DISPLAY}" />
                    </HBox> -->
                </lib-f:heading>
                <lib-f:fixedContent>
                    <form:SimpleForm class="searchBox"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/COMPANY}: " required="true"></Label>
                                <ComboBox
                                    required="true"
                                    id="searchCompanyCombo"
                                    width="100%"
                                    selectedKey="LGESL"
                                    showSecondaryValues= "true"
                                    items="{
                                        path: '/CompanyView'
                                        
                                        }">
                                        <items>
                                            <core:ListItem
                                                key="{company_code}"
                                                text="{company_name}"
                                                additionalText="{company_code}"/>
                                        </items>
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M3 S12" />
                                    </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/ORGANIZATION}: " labelFor="searchAUCombo" />
                                <ComboBox
                                    id="searchAUCombo"
                                    width="100%"
                                    selectedKey=""
                                    showSecondaryValues= "true"
                                    items="{
                                        path: '/OrgView'
                                    }">
                                    <items>
                                        <core:ListItem
                                            key="{org_code}" 
                                            text="{org_name}" 
                                            additionalText="{org_code}"/>
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L2 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PART} {I18N>/CATEGORY}: " labelFor="searchPCField"></Label>
                                <HBox>
                                    <SearchField id="searchPCField" search=".onSearchPartCategory" width="30em"/>
                                    <Input id="searchPCInput" visible ="false" />
                                    <Input id="searchPCInputTx" visible ="false" />
                                </HBox>
                                <layoutData>
                                    <layout:GridData span="XL5 L5 M5 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PROJECT_TYPE}: " labelFor="searchPTCombo"></Label>
                                <ComboBox
                                    id="searchPTCombo"
                                    width="100%"
                                    selectedKey=""
                                    showSecondaryValues= "true"
                                    items="{
                                        path: 'util>/Code',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},
                                            {path: 'group_code', operator: 'EQ', value1: 'DP_PART_PJT_TYPE'}
                                        ],
                                        sorter: { path: 'sort_no'}
                                    }">
                                    <items>
                                        <core:ListItem
                                            key="{util>code}" 
                                            text="{util>code_name}"
                                            additionalText="{util>code}"/></items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L2 M3 S12" linebreak="true" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/ACTIVITY_NAME}: " labelFor="searchActivity"></Label>
                                <Input id="searchActivity" change=".onPageSearchButtonPress"/>
                                <layoutData>
                                    <layout:GridData span="XL2 L2 M3 S12" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End">
                                <Button id="btn_search" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </lib-f:fixedContent>
            </lib-f:CustomDynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="mainTable"
                items="{list>/pdActivityStdDayView}"
                mode="None"
                noDataText="{I18N>/NCM01004}"
                sticky="HeaderToolbar,ColumnHeaders"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="mainTableTitle" text="Activity {I18N>/STANDARD_DAYS} {I18N>/LIST} ({=(${list>/pdActivityStdDayView})?${list>/pdActivityStdDayView}.length:0})" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="rTableExportButton" type="Transparent" press=".onExportPress" icon="sap-icon://excel-attachment" />
                        <!-- <ToolbarSeparator/>
                        <Button id="mainTablePersoButton" icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button> -->
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="mainColumnCom" minScreenWidth="Tablet" hAlign="Center" width="6%">
                        <Text text="{I18N>/COMPANY}" />
                    </Column>
                    <Column id="mainColumnAU" minScreenWidth="Tablet" hAlign="Center" width="6%">
                        <Text text="{I18N>/ORG_CODE}" />
                    </Column>
                    <Column id="mainColumnAUName" minScreenWidth="Tablet" hAlign="Left" width="5%">
                        <Text text="{I18N>/ORG_NAME}" />
                    </Column>
                    <Column id="mainColumnPC" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/PART} {I18N>/CATEGORY}" />
                    </Column>
                    <Column id="mainColumnPT" minScreenWidth="Tablet" hAlign="Left" width="6%">
                        <Text text="{I18N>/PROJECT_TYPE}" />
                    </Column>
                    <Column id="mainColumnAC" minScreenWidth="Tablet" hAlign="Center" width="10%">
                        <Text text="{I18N>/ACTIVITY_CODE}" />
                    </Column>
                    <Column id="mainColumnAN" minScreenWidth="Tablet" hAlign="Left" width="9%">
                        <Text text="{I18N>/ACTIVITY_NAME}" />
                    </Column>
                    <Column id="mainColumnUseYn" minScreenWidth="Tablet" hAlign="Center" width="5%">
                        <Text text="{I18N>/USE_FLAG}" />
                    </Column>
                    <Column id="mainColumnS" minScreenWidth="Tablet" hAlign="Right" width="3%">
                        <Text text="{I18N>/S_GRADE_STANDARD_DAYS}" />
                    </Column>
                    <Column id="mainColumnA" minScreenWidth="Tablet" hAlign="Right" width="3%">
                        <Text text="{I18N>/A_GRADE_STANDARD_DAYS}" />
                    </Column>
                    <Column id="mainColumnB" minScreenWidth="Tablet" hAlign="Right" width="3%">
                        <Text text="{I18N>/B_GRADE_STANDARD_DAYS}" />
                    </Column>
                    <Column id="mainColumnC" minScreenWidth="Tablet" hAlign="Right" width="3%">
                        <Text text="{I18N>/C_GRADE_STANDARD_DAYS}" />
                    </Column>
                    <Column id="mainColumnD" minScreenWidth="Tablet" hAlign="Right" width="3%">
                        <Text text="{I18N>/D_GRADE_STANDARD_DAYS}" />
                    </Column>
                    <Column id="mainColumnUDM" minScreenWidth="Tablet" hAlign="Center" width="12%">
                        <Text text="{I18N>/LOCAL_UPDATE_DTM}" />
                    </Column>
                    <Column id="mainColumnUUI" minScreenWidth="Tablet" hAlign="Left" width="7%">
                        <Text text="{I18N>/UPDATE_USER_ID}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{list>company_code}" />
                            <Text text="{list>org_code}" />
                            <Text text="{list>org_name}" />
                            <!-- <Text text="{list>category_name}" /> -->
                            <Text text="{list>path_name}" />
                            <Text text="{list>part_project_type_name}" />
                            <Text text="{list>activity_code}" />
                            <Text text="{list>activity_name}" />
                            <Text text="{list>active_flag_val}" />
                            <Text text="{list>s_grade_standard_days}" />
                            <Text text="{list>a_grade_standard_days}" />
                            <Text text="{list>b_grade_standard_days}" />
                            <Text text="{list>c_grade_standard_days}" />
                            <Text text="{list>d_grade_standard_days}" />
                            <Text text="{path:'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}" />
                            <Text text="{list>update_user_id}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>