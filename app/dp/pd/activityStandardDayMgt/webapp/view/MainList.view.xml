<mvc:View
    controllerName="dp.pd.activityStandardDayMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage
        id="page"
        headerExpanded="{mainListView>/headerExpanded}"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="AU : " required="true"></Label>
                            <ComboBox
                                id="searchAUCombo"
                                width="100%"
                                selectedKey="BIZ00000"
                                items="{
                                    path: '/PdOperationOrg',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    sorter: { path: 'operation_org_code'}
                                }" required="true">
                                <items>
                                    <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <!-- <SearchField value="{list>product_activity_name}" search=".onSearchProductActivity" /> -->
                            <Label text="Part Category: " required="true"></Label>
                            <ComboBox
                                id="searchPCCombo"
                                width="100%"
                                selectedKey="BIZ00000"
                                items="{
                                    path: '/PdOperationOrg',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    sorter: { path: 'operation_org_code'}
                                }" required="true">
                                <items>
                                    <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Project Type: "></Label>
                            <ComboBox
                                id="searchPTCombo"
                                width="100%"
                                selectedKey="BIZ00000"
                                items="{
                                    path: '/PdOperationOrg',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2100'}
                                    ],
                                    sorter: { path: 'operation_org_code'}
                                }">
                                <items>
                                    <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Activity 명: " labelFor="searchActivity"></Label>
                            <Input id="searchActivity" placeholder="Activity Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <FlexBox alignItems="End" justifyContent="End">
                            <Button id="btn_search" text="Search" type="Emphasized" press=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="mainTable"
                items="{list>/activityStandardDayMgt}"
                mode="None"
                noDataText="{I18N>/NCM01004}"
                sticky="HeaderToolbar,ColumnHeaders"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="mainTableTitle" text="Part Category Activity SD List ({=(${list>/ActivityMappingNameView})?${list>/ActivityMappingNameView}.length:0})" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="rTableExportButton" type="Transparent" press=".onExportPress" icon="sap-icon://excel-attachment" />
                        <ToolbarSeparator/>
                        <Button id="mainTablePersoButton" icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="mainColumnAU" minScreenWidth="Tablet">
                        <Text text="조직코드" />
                    </Column>
                    <Column id="mainColumnPC" minScreenWidth="Tablet">
                        <Text text="Part Category" />
                    </Column>
                    <Column id="mainColumnPT" minScreenWidth="Tablet">
                        <Text text="Project Type" />
                    </Column>
                    <Column id="mainColumnAC" minScreenWidth="Tablet">
                        <Text text="Activity 코드" />
                    </Column>
                    <Column id="mainColumnAN" minScreenWidth="Tablet">
                        <Text text="Activity 명" />
                    </Column>
                    <Column id="mainColumnUseYn" minScreenWidth="Tablet">
                        <Text text="사용여부" />
                    </Column>
                    <Column id="mainColumnS" minScreenWidth="Tablet">
                        <Text text="s" />
                    </Column>
                    <Column id="mainColumnA" minScreenWidth="Tablet">
                        <Text text="a" />
                    </Column>
                    <Column id="mainColumnB" minScreenWidth="Tablet">
                        <Text text="b" />
                    </Column>
                    <Column id="mainColumnC" minScreenWidth="Tablet">
                        <Text text="c" />
                    </Column>
                    <Column id="mainColumnD" minScreenWidth="Tablet">
                        <Text text="d" />
                    </Column>
                    <Column id="mainColumnUDM" minScreenWidth="Tablet">
                        <Text text="수정일자" />
                    </Column>
                    <Column id="mainColumnUUI" minScreenWidth="Tablet">
                        <Text text="수정자" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{list>org_code}" />
                            <Text text="{list>product_activity_code}" />
                            <Text text="{list>product_activity_name}" />
                            <Text text="{list>activity_dependency_name}" />
                            <Text text="{list>activity_code}" />
                            <Text text="{list>activity_name}" />
                            <Text text="{list>product_activity_code_org}" />
                            <Text text="{list>activity_code_org}" />
                            <Text text="{list>product_activity_code_org}" />
                            <Text text="{list>activity_code_org}" />
                            <Text text="{list>activity_code_org}" />
                            <Text text="{path: 'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}" />
                            <Text text="{list>update_user_id}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>