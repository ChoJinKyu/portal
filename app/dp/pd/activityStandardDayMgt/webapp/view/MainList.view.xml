<mvc:View
    controllerName="dp.pd.activityStandardDayMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage
        id="page"
        headerExpanded="{mainListView>/headerExpanded}"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="회사: "></Label>
                            <ComboBox
                                id="searchCompanyCombo"
                                width="100%"
                                selectedKey=""
                                items="{
                                    path: '/CompanyView'
                                }">
                                <items>
                                    <core:Item key="{company_code}" text="{company_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="조직: "></Label>
                            <!-- 테스트 테넌트번호 L1100, 원세팅테넌트번호 2100, 2600 -->
                            <ComboBox
                                id="searchAUCombo"
                                width="100%"
                                selectedKey=""
                                items="{
                                    path: '/OrgView'
                                }">
                                <items>
                                    <core:Item key="{org_code}" text="{org_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Part Category: " labelFor="searchPCField"></Label>
                            <HBox>
                                <SearchField id="searchPCField" search=".onSearchPartCategory" />
                                <Input id="searchPCInput" placeholder="Input data" visible ="false"></Input>
                            </HBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Project Type: "></Label>
                            <ComboBox
                                id="searchPTCombo"
                                width="100%"
                                selectedKey=""
                                items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},
                                        {path: 'group_code', operator: 'EQ', value1: 'DP_PART_PJT_TYPE'}
                                    ],
                                    sorter: { path: 'sort_no'}
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="[{util>code}] {util>code_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Activity 명: " labelFor="searchActivity"></Label>
                            <Input id="searchActivity" placeholder="Activity Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <FlexBox alignItems="End" justifyContent="End">
                            <Button id="btn_search" text="Search" type="Emphasized" press=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="mainTable"
                items="{list>/pdActivityStdDayView}"
                mode="None"
                noDataText="{I18N>/NCM01004}"
                sticky="HeaderToolbar,ColumnHeaders"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="mainTableTitle" text="Part Category Activity SD List ({=(${list>/pdActivityStdDayView})?${list>/pdActivityStdDayView}.length:0})" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="rTableExportButton" type="Transparent" press=".onExportPress" icon="sap-icon://excel-attachment" />
                        <ToolbarSeparator/>
                        <Button id="mainTablePersoButton" icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="mainColumnCom" minScreenWidth="Tablet" hAlign="Center" width="6rem">
                        <Text text="회사" />
                    </Column>
                    <Column id="mainColumnAU" minScreenWidth="Tablet" hAlign="Center" width="6rem">
                        <Text text="조직코드" />
                    </Column>
                    <Column id="mainColumnPC" minScreenWidth="Tablet" hAlign="Center">
                        <Text text="Part Category" />
                    </Column>
                    <Column id="mainColumnPT" minScreenWidth="Tablet" hAlign="Center">
                        <Text text="Project Type" />
                    </Column>
                    <Column id="mainColumnAC" minScreenWidth="Tablet" hAlign="Center">
                        <Text text="Activity 코드" />
                    </Column>
                    <Column id="mainColumnAN" minScreenWidth="Tablet" hAlign="Center">
                        <Text text="Activity 명" />
                    </Column>
                    <Column id="mainColumnUseYn" minScreenWidth="Tablet" hAlign="Center" width="5rem">
                        <Text text="사용여부" />
                    </Column>
                    <Column id="mainColumnS" minScreenWidth="Tablet" hAlign="Right" width="5rem">
                        <Text text="s" />
                    </Column>
                    <Column id="mainColumnA" minScreenWidth="Tablet" hAlign="Right" width="5rem">
                        <Text text="a" />
                    </Column>
                    <Column id="mainColumnB" minScreenWidth="Tablet" hAlign="Right" width="5rem">
                        <Text text="b" />
                    </Column>
                    <Column id="mainColumnC" minScreenWidth="Tablet" hAlign="Right" width="5rem">
                        <Text text="c" />
                    </Column>
                    <Column id="mainColumnD" minScreenWidth="Tablet" hAlign="Right" width="5rem">
                        <Text text="d" />
                    </Column>
                    <Column id="mainColumnUDM" minScreenWidth="Tablet" hAlign="Right">
                        <Text text="수정일자" />
                    </Column>
                    <Column id="mainColumnUUI" minScreenWidth="Tablet" hAlign="Center" width="6rem">
                        <Text text="수정자" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{list>company_code}" />
                            <Text text="{list>org_code}" />
                            <Text text="{list>category_name}" />
                            <Text text="{list>part_project_type_name}" />
                            <Text text="{list>activity_code}" />
                            <Text text="{list>activity_name}" />
                            <Text text="{= ${list>active_flag} ? 'Y' : 'N'}" />
                            <Text text="{list>s_grade_standard_days}" />
                            <Text text="{list>a_grade_standard_days}" />
                            <Text text="{list>b_grade_standard_days}" />
                            <Text text="{list>c_grade_standard_days}" />
                            <Text text="{list>d_grade_standard_days}" />
                            <Text text="{path:'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}" />
                            <Text text="{list>update_user_id}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>