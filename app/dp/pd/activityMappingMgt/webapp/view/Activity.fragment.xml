<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		id="activity"
		noDataText="No Activity Found"
		title="Select Activity"
		search=".handleActivitySearch"
		confirm=".handleActivityClose"
		cancel=".handleActivityClose"
		items="{
			path : '/PdPartActivityTemplate'
		}">
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="25%">
				<header>
					<Text text="Activity Code" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="30%">
				<header>
					<Text text="Activity Name" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="45%">
				<header>
					<Text text="Activity English Name" />
				</header>
			</Column>
		</columns>
        <ColumnListItem>
			<cells>
				<Text text="{activity_code}" />
				<Text text="{activity_name}" />
				<Text text="{activity_english_name}" />
			</cells>
		</ColumnListItem>
	</TableSelectDialog>
</core:FragmentDefinition>