<mvc:View
    controllerName="dp.pd.activityMappingMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage
        id="page"
        headerExpanded="{mainListView>/headerExpanded}"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="사업본부: " required="true"></Label>
                            <ComboBox
                                id="searchOrgCombo"
                                width="100%"
                                selectedKey="GSZ"
                                items="{
                                    path: '/PdOperationOrg',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                    ],
                                    sorter: { path: 'operation_org_code'}
                                }" required="true">
                                <items>
                                    <core:Item key="{operation_org_code}" text="[{operation_org_code}] {operation_org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Product Activity: " labelFor="searchProductActivity"></Label>
                            <Input id="searchProductActivity" placeholder="Product Activity Code or Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="Activity: " labelFor="searchActivity"></Label>
                            <Input id="searchActivity" placeholder="Activity Code or Name"></Input>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <FlexBox alignItems="End" justifyContent="End">
                            <Button id="btn_search" text="Search" type="Emphasized" press=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="mainTable"
                items="{list>/ActivityMappingNameView}"
                mode="MultiSelect"
                noDataText="{I18N>/NCM01004}"
                selectionChange=".onSelectionChange"
                updateFinished=".onMainTableUpdateFinished"
                sticky="HeaderToolbar,ColumnHeaders"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="mainTableTitle" text="Activity Mappting List" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="mainTableAddButton" text="Add Mapping" type="Transparent" press=".onMainTableAddButtonPress('mainTable', 'list', 'ActivityMappingNameView', 'tenant_id')" />
                        <Button id="mainTableDelButton" text="Delete" type="Transparent" press=".onMainTableDeleteButtonPress" />
                        <Button id="mainTableCancButton" text="Cancel" type="Transparent" press=".onMainTableCancButtonPress" />
                        <Button id="mainTableSaveButton" text="Save" type="Emphasized" press=".onMainTableSaveButtonPress" />
                        <ToolbarSeparator/>
                        <Button id="rTableExportButton" type="Transparent" press=".onExportPress" icon="sap-icon://excel-attachment" />
                        <Button id="mainTablePersoButton" icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="mainColumnstat" minScreenWidth="Tablet" hAlign="Center" width="1.5rem" />
                    <Column id="mainColumnBizUnit" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="사업본부" />
                    </Column>
                    <Column id="mainColumnPAC" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="Product Activity Code" />
                    </Column>
                    <Column id="mainColumnPACN" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="Product Activity Code명" />
                    </Column>
                    <Column id="mainColumnDependency" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="종속유형" />
                    </Column>
                    <Column id="mainColumnAC" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="Activity Code" />
                    </Column>
                    <Column id="mainColumnACN" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="Activity Code명" />
                    </Column>
                    <Column id="mainColumnUDT" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="수정일자" />
                    </Column>
                    <Column id="mainColumnUDU" minScreenWidth="Tablet" hAlign="Center" >
                        <Text text="수정자" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <HBox>
                                <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                                <ObjectStatus icon="{
                                    path: 'list>_row_state_',
                                    formatter: '.formatter.toModelStateColumnIcon'
                                }" />
                            </HBox>
                            <HBox>
                                <Text text="{list>org_code}" visible="true" />
                            </HBox>
                            <HBox>
                                <Text text="{list>product_activity_code}" visible="true" />
                                <Input value="{list>product_activity_code}" visible="false" editable="false" />
                            </HBox>
                            <HBox>
                                <Text text="{list>product_activity_name}" visible="true" />
                                <SearchField value="{list>product_activity_name}" search=".onSearchProductActivity" visible="false" />
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_dependency_name}" visible="true" />
                                <ComboBox  visible="false"
                                    selectedKey="{list>activity_dependency_code}"
                                    items="{
                                    path: 'util>/Code',
                                    filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                                            {path: 'group_code', operator: 'EQ', value1: 'DP_ACTIVITY_DEPENDENCY'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code_description}" />
                                </items>
                                </ComboBox>
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_code}" visible="true" />
                                <Input value="{list>activity_code}" visible="false" editable="false" />
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_name}" visible="true" />
                                <SearchField value="{list>activity_name}" search=".onSearchActivity" visible="false" />
                            </HBox>
                            <HBox>
                                <Text text="{
                                    path: 'list>local_update_dtm',
                                    formatter: '.dateFormatter.toDateTimeString'
                                }" visible="true" />
                            </HBox>
                            <HBox>
                                <Text text="{list>update_user_id}" visible="true" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

    </f:DynamicPage>
</mvc:View>