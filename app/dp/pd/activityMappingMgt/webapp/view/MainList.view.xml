<mvc:View
    controllerName="dp.pd.activityMappingMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core"     
    xmlns:lib-m="ext.lib.control.m"
    xmlns:lib-f="ext.lib.control.f"
    height="100%">

    <f:DynamicPage
        id="page"
        headerExpanded="{mainListView>/headerExpanded}"
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <lib-f:CustomDynamicPageTitle>
                <lib-f:heading>
                    <HBox alignItems="Center">
                        <Button icon="sap-icon://unfavorite" type="Transparent" />
                        <Title text="Activity {I18N>/MAPPING} {I18N>/MANAGEMENT}" />
                    </HBox>
                </lib-f:heading>
                <lib-f:fixedContent>
                    <form:SimpleForm class="searchBox"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/COMPANY}: " required="true"></Label>
                                <ComboBox
                                    required="true"
                                    id="searchCompanyCombo"
                                    width="100%"
                                    selectedKey="LGESL"
                                    showSecondaryValues= "true"
                                    items="{
                                        path: '/CompanyView'
                                        
                                        }">
                                        <items>
                                            <core:ListItem
                                                key="{company_code}"
                                                text="{company_name}"
                                                additionalText="{company_code}"/>
                                        </items>
                                    </ComboBox>
                                    <layoutData>
                                        <layout:GridData span="XL2 L2 M3 S12" />
                                    </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/ORGANIZATION}: " labelFor="searchAUCombo" required="true"/>
                                <ComboBox
                                    required="true"
                                    id="searchAUCombo"
                                    width="100%"
                                    selectedKey="L260010001"
                                    showSecondaryValues= "true"
                                    items="{
                                        path: '/OrgView'
                                    }">
                                    <items>
                                        <core:ListItem
                                            key="{org_code}" 
                                            text="{org_name}" 
                                            additionalText="{org_code}"/>
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L2 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PRODUCT_ACTIVITY}: " labelFor="searchProductActivity"></Label>
                                <Input id="searchProductActivity"  />
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PROD_ACTIVITY}: " labelFor="searchActivity"></Label>
                                <Input id="searchActivity"  />
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M3 S12" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End">
                                <Button id="btn_search" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </lib-f:fixedContent>
            </lib-f:CustomDynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="mainTable"
                items="{list>/ActivityMappingNameView}"
                mode="MultiSelect"
                noDataText="{I18N>/NCM01004}"
                selectionChange=".onSelectionChange"
                sticky="HeaderToolbar,ColumnHeaders"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="mainTableTitle" text="Activity {I18N>/MAPPING} {I18N>/LIST} ({=(${list>/ActivityMappingNameView})?${list>/ActivityMappingNameView}.length:0})" level="H2"/>
                        <ToolbarSpacer/>
                        <Button id="mainTableAddButton" text="{I18N>/ADDITION}" type="Transparent" press=".onMainTableAddButtonPress('mainTable', 'list', 'ActivityMappingNameView', 'tenant_id')" />
                        <Button id="mainTableDelButton" text="{I18N>/DELETE}" type="Transparent" press=".onMainTableDeleteButtonPress" />
                        <Button id="mainTableCancButton" text="{I18N>/CANCEL}" type="Transparent" press=".onMainTableCancButtonPress" />
                        <Button id="mainTableSaveButton" text="{I18N>/SAVE}" type="Emphasized" press=".onMainTableSaveButtonPress" />
                        <ToolbarSeparator/>
                        <Button id="rTableExportButton" type="Transparent" press=".onExportPress" icon="sap-icon://excel-attachment" />
                        <!-- <Button id="mainTablePersoButton" icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button> -->
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="mainColumnstat" minScreenWidth="Tablet" hAlign="Left" width="1.5rem" />
                    <Column id="mainColumnBizUnit" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/ORGANIZATION}" />
                        <!-- {I18N>/BUSINESS_UNIT} -->
                    </Column>
                    <Column id="mainColumnPAC" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/PRODUCT_ACTIVITY_CODE}" />
                    </Column>
                    <Column id="mainColumnPACN" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/PRODUCT_ACTIVITY_NAME}" />
                    </Column>
                    <Column id="mainColumnDependency" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/DEPENDANCY_TYPE}" />
                    </Column>
                    <Column id="mainColumnAC" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/PROD_ACTIVITY_CODE}" />
                    </Column>
                    <Column id="mainColumnACN" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/PROD_ACTIVITY_NAME}" />
                    </Column>
                    <Column id="mainColumnUDT" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/LOCAL_UPDATE_DTM}" />
                    </Column>
                    <Column id="mainColumnUDU" minScreenWidth="Tablet" hAlign="Left" >
                        <Text text="{I18N>/UPDATE_USER_ID}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <HBox>
                                <ObjectStatus icon="{path: 'list>_row_state_', formatter: '.formatter.toModelStateColumnIcon'}" />
                            </HBox>
                            <HBox>
                                <Text text="{list>org_code}" visible="true" />
                            </HBox>
                            <HBox>
                                <Text text="{list>product_activity_code}" visible="true" />
                                <Input value="{list>product_activity_code}" visible="false" editable="false"  />
                            </HBox>
                            <HBox>
                                <Text text="{list>product_activity_name}" visible="true" />
                                <SearchField value="{list>product_activity_name}" search=".onSearchProductActivity" visible="false" />
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_dependency_name}" visible="true" />
                                <ComboBox visible="false"
                                    selectedKey="{list>activity_dependency_code}"
                                    items="{
                                        path: 'util>/Code',
                                        filters: [
                                            {path: 'group_code', operator: 'EQ', value1: 'DP_ACTIVITY_DEPENDENCY'}
                                        ]}">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code_name}" />
                                </items>
                                </ComboBox>
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_code}" visible="true" />
                                <Input value="{list>activity_code}" visible="false" editable="false" />
                            </HBox>
                            <HBox>
                                <Text text="{list>activity_name}" visible="true" />
                                <SearchField value="{list>activity_name}" search=".onSearchActivity" visible="false" />
                            </HBox>
                            <HBox>
                                <Text text="{path: 'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}" visible="true" />
                            </HBox>
                            <HBox>
                                <Text text="{list>update_user_id}" visible="true" />
                            </HBox>
                            <Text text="{list>product_activity_code_org}" visible="false" />
                            <Text text="{list>activity_code_org}" visible="false" />
                            <Text id="comboName" text="{list>comboName}" visible="false" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>