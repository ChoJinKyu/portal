<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		id="productActivity"
		noDataText="No Products Found"
		title="Select Product Activity"
		search=".handleSearch"
		confirm=".handleClose"
		cancel=".handleClose"
		items="{
			path : '/PdProdActivityTemplate'
		}">
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="25%">
				<header>
					<Text text="Product Activity Code" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="30%">
				<header>
					<Text text="Product Activity Name" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="45%">
				<header>
					<Text text="Product Activity English Name" />
				</header>
			</Column>
		</columns>
        <ColumnListItem>
			<cells>
				<Text text="{product_activity_code}" />
				<Text text="{product_activity_name}" />
				<Text text="{product_activity_english_name}" />
			</cells>
		</ColumnListItem>
	</TableSelectDialog>
</core:FragmentDefinition>