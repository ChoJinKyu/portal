<mvc:View controllerName="dp.pd.productActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PRODUCT_ACTIVITY} {I18N>/MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/CODE_NAME_DESC}: " labelFor="searchProductActivity"></Label>
                            <Input 
                                id="searchProductActivity"
                                change=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <VBox>
                            <Label text="{I18N>/STATUS}:" labelFor="searchUsageSegmentButton"></Label>
                            <SegmentedButton 
                                id="searchStatusSegmentButton"
                                selectedKey="all"
                                width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="All" width="3rem" />
                                    <SegmentedButtonItem text="Active" key="Active" width="5rem" />
                                    <SegmentedButtonItem text="Inactive" key="Inactive" width="5rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>

                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox>

            </f:DynamicPageHeader>
        </f:header>
        
        <f:content>
            <t:Table id="mainTable"
                    rows="{
                        path: 'list>/PdProdActivityTemplateView'
                    }"
                    selectionMode="Single"
                    selectionBehavior="RowOnly"
                    visibleRowCountMode="Auto"
                    columnResize=".onColumnResize"
                    rowSelectionChange=".onMainTableItemPress"
                    width="auto">
                <t:extension>
                    <OverflowToolbar class="sapFDynamicPageAlignContent">
                        <Title id="mainTableTitle2" text="{I18N>/PRODUCT_ACTIVITY} {I18N>/LIST} {= ${list>/PdProdActivityTemplateView}.length > 0 ? '(' + ${list>/PdProdActivityTemplateView}.length + ')' : '(0)'}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button text="{I18N>/CREATE}" id="createActivity" press=".onCreateActivity"  type="Transparent"/>
                        <Button icon="sap-icon://excel-attachment" press="onExportPress" type="Transparent"/>
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed"/>
                        
                    </OverflowToolbar>
                </t:extension>
 
                <t:columns>

                    <t:Column width="60px">
                        <Label text="{I18N>/SEQUENCE}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>sequence}" wrapping="false" textAlign="Right" width="100%"/>  
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{I18N>/PRODUCT_ACTIVITY_CODE}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>product_activity_code}" wrapping="false" textAlign="Center" width="100%"/>  
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{I18N>/PRODUCT_ACTIVITY_NAME}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>activity_name}" wrapping="false" textAlign="Left" width="100%"/>  
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{I18N>/PRODUCT_DESC}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>description}" wrapping="false" textAlign="Left" width="100%" />  
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{I18N>/STATUS}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>active_flag_val}" wrapping="false" textAlign="Center" width="100%"/>  
                        </t:template>
                    </t:Column>

                    <t:Column id="localUpdateDtmColumn">
                        <Label text="{I18N>/UPDATE} {I18N>/DATE_TIME}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{
                                        path: 'list>local_update_dtm',
                                        formatter: '.dateFormatter.toDateTimeString'
                                    }"
                                    wrapping="false"
                                    textAlign="Center" width="100%"/>  
                        </t:template>
                    </t:Column>

                    <t:Column id="updateUserIdColumn">
                        <Label text="{I18N>/UPDATE_USER_ID}" wrapping="false" textAlign="Center" width="100%"/>
                        <t:template>
                            <Text text="{list>update_user_id}" wrapping="false" textAlign="Left" width="100%"/>  
                        </t:template>
                    </t:Column>

                </t:columns>  
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>