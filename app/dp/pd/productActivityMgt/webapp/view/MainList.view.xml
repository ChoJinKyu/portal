<mvc:View controllerName="dp.pd.productActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PRODUCT_ACTIVITY}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/PRODUCT_ACTIVITY_NAME}" labelFor="searchProductActivity"></Label>
                            <Input id="searchProductActivity" 
                                placeholder="{I18N>/PRODUCT_ACTIVITY_NAME}" change=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                       
                        <VBox>
                            <Label text="{I18N>/OPTION}:" labelFor="searchUsageSegmentButton"></Label>
                            <SegmentedButton 
                                id="searchStatusSegmentButton"
                                selectedKey="all"
                                width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="All" width="3rem" />
                                    <SegmentedButtonItem text="Active" key="Active" width="5rem" />
                                    <SegmentedButtonItem text="Inactive" key="Inactive" width="5rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        
        <f:content>
            <t:Table id="mainTable" 
                    rows="{
                        path: 'list>/PdProdActivityTemplateView'
                    }"
                    selectionMode="Single"
                    selectionBehavior="RowOnly"
                    visibleRowCountMode="Auto"
                    columnResize=".onColumnResize"
                    rowSelectionChange=".onMainTableItemPress"
                    width="auto">
                <t:extension>
                    <OverflowToolbar class="sapFDynamicPageAlignContent">
                        <Title id="mainTableTitle2" text="{I18N>/PRODUCT_ACTIVITY} {I18N>/LIST} {= ${list>/PdProdActivityTemplateView}.length > 0 ? '(' + ${list>/PdProdActivityTemplateView}.length + ')' : ''}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button text="{I18N>/CREATE}" id="createActivity" press=".onCreateActivity"  type="Transparent"/>
                        <Button icon="sap-icon://excel-attachment" text="{I18N>/EXCEL}" press="onExportPress" type="Transparent"/>
                        <ToolbarSeparator/>
                        <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed"/>
                        
                    </OverflowToolbar>
                </t:extension>
 
                <t:columns>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/PRODUCT_ACTIVITY_CODE}" />
                        <t:template>
                            <Text text="{list>product_activity_code}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/PRODUCT_ACTIVITY_NAME}" />
                        <t:template>
                            <Text text="{list>activity_name}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/PRODUCT_DESC}" />
                        <t:template>
                            <Text text="{list>description}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/SEQUENCE}" />
                        <t:template>
                            <Text text="{list>sequence}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/STATUS}" />
                        <t:template>
                            <Text text="{= ${list>active_flag} === true ? 'Active' : 'Inactive'}"/>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/UPDATE} {I18N>/DATE_TIME}" />
                        <t:template>
                            <Text text="{
                                        path: 'list>local_update_dtm',
                                        formatter: '.dateFormatter.toDateTimeString'
                                    }"/>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/UPDATE_USER_ID}" />
                        <t:template>
                            <Text text="{list>update_user_id}" ></Text>  
                        </t:template>
                    </t:Column>

                </t:columns>  
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>