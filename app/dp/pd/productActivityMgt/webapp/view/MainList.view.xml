<mvc:View controllerName="dp.pd.productActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/DP_PART_ACTIVITY_MGT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="코드 / 명 / 설명 :" labelFor="searchProductActivity" required="true"></Label>
                            <Input id="searchProductActivity" 
                                placeholder="코드 / 명 / 설명 :"/>
                            <layoutData>
                                <layout:GridData span="XL4 L4 M6 S12" />
                            </layoutData>
                        </VBox>
                       
                        <VBox>
                            <Label text="{I18N>/OPTION}:" labelFor="searchUsageSegmentButton"></Label>
                            <SegmentedButton id="searchStatusSegmentButton" selectedKey="all" class="sapUiSmallMarginBottom" width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="All" width="4.1rem" />
                                    <SegmentedButtonItem text="Active" key="Active" width="6rem" />
                                    <SegmentedButtonItem text="Inactive" key="Inactive" width="6rem" />
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M6 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        
        <f:content>
            <t:Table id="mainTable" 
                    rows="{
                        path: 'list>/PdProdActivityTemplateView'
                    }"
                    selectionMode="Single"
                    selectionBehavior="RowOnly"
                    visibleRowCountMode="Auto"
                    columnResize=".onColumnResize"
                    rowSelectionChange=".onMainTableItemPress"
                    width="auto">
                <t:extension>
                    <OverflowToolbar class="sapFDynamicPageAlignContent">
                        <Title id="mainTableTitle2" text="{I18N>/DP_PART_ACTIVITY_MGT} {I18N>/LIST} {= ${/PdProdActivityTemplateView}.length > 0 ? '(' + ${/PdProdActivityTemplateView}.length + ')' : ''}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button text="{I18N>/CREATE}" id="createActivity" press=".onCreateActivity"  type="Transparent"/>
                        <Button icon="sap-icon://sort" press=".onTableSort"/>
                        <Button icon="sap-icon://filter" press=".onTableFilter"/>
                        <Button icon="sap-icon://action-settings" press=".onTableSettings"/>
                        <MenuButton icon="sap-icon://excel-attachment" buttonMode="Split" defaultAction=".onExportPress">
                            <menu>
                                <Menu id="gTableExportButton" itemSelected="onMenuAction">
                                    <MenuItem text="다른이름으로저장(x)"/>
                                </Menu>
                            </menu>
                        </MenuButton>
                        
                    </OverflowToolbar>
                </t:extension>
 
                <t:columns>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/PROD_ACTIVITY_CODE}" />
                        <t:template>
                            <Text text="{list>product_activity_code}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/PROD_ACTIVITY_NAME}" />
                        <t:template>
                            <Text text="{list>activity_name}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/DESCRIPTION}" />
                        <t:template>
                            <Text text="{list>description}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/SEQUENCE}" />
                        <t:template>
                            <Text text="{list>sequence}" ></Text>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/STATUS}" />
                        <t:template>
                            <Text text="{= ${list>active_flag} === true ? 'Active' : 'Inactive'}"/>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/LOCAL_UPDATE_DTM}" />
                        <t:template>
                            <Text text="{
                                        path: 'list>local_update_dtm',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>  
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center">
                        <Text text="{I18N>/UPDATE_USER_ID}" />
                        <t:template>
                            <Text text="{list>update_user_id}" ></Text>  
                        </t:template>
                    </t:Column>

                </t:columns>  
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>