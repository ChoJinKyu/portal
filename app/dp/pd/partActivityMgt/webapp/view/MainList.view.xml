<mvc:View controllerName="dp.pd.partActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Part Activity Management" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label
                                text="컴퍼니: "
                                labelFor="searchCompany">
                            </Label>
                            <ComboBox id="searchCompany" width="100%" selectedKey="" items="{
                                path: '/CompanyView'
                               
                                }">
                                <items>
                                    <core:Item key="{company_code}" text="{company_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                           <Label
                                text="조직: "
                                labelFor="searchOrg">
                            </Label>
                            <ComboBox id="searchOrg" width="100%" selectedKey="" items="{
                                path: '/OrgView'
                               
                                }">
                                <items>
                                    <core:Item key="{org_code}" text="{org_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- <VBox>
                           <Label
                                text="Project Type: "
                                labelFor="searchPrjType">
                            </Label>
                            <ComboBox id="searchPrjType" width="100%" selectedKey="" items="{
                                path: '/OrgView'
                               
                                }">
                                <items>
                                    <core:Item key="{org_code}" text="{org_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox> -->
                         <VBox>
                            <Label
                                text="Activity: "
                                labelFor="searchKeyword">
                            </Label>
                            <Input id="searchKeyword" 
                                placeholder=""/>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                        
                    </form:content>
                </form:SimpleForm>   
                
                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox>           
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="MultiToggle"
            rows="{
                path: 'list>/pdPartactivityTemplateView',
                sorter: { 
                    path: 'local_update_dtm',
                    descending: true 
                }                   
            }"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            fixedColumnCount="3"
            columnResize="onColumnResize">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="Activity List {= ${list>/pdPartactivityTemplateView}.length > 0 ? '(' + ${list>/pdPartactivityTemplateView}.length + ')' : ''}" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="Copy" id="buttonCopy" press=""  type="Transparent"/>
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    <Button text="{I18N>/DELETE}" id="buttonDelete" press=""  type="Transparent"/>                    
                    <Button text="TEST" id="testButton" press=".onTestPress"  type="Transparent"/>
                    <Button text="{I18N>/SAVE}" id="buttonSave" press=""  type="Transparent"/>

                    <ToolbarSeparator/>
                    <Button id="gTableExportButton" text="" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />
                    <Button icon="sap-icon://action-settings" press=".onPersoButtonPressed" >
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                    </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="company_code" width="7rem">
                <Label text="Company" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>company_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="org_code" width="20rem">
                <Label text="조직코드" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>org_code}"/>
                </t:template>
                </t:Column>                
                <t:Column id="activity_code" width="9rem">
                <Label text="Activity 명" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>activity_code}"/>
                </t:template>
                </t:Column>  
                <t:Column id="develope_event_name" width="9rem">
                <Label text="EVENT" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>develope_event_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="actual_role_name" width="9rem">
                <Label text="역할" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>actual_role_name}"/>                    
                </t:template>
                </t:Column>
                <t:Column id="attachment_mandatory_flag" width="7rem">
                <Label text="산출물 필수" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>attachment_mandatory_flag}" />
                </t:template>
                </t:Column>
                <t:Column id="approve_mandatory_flag" width="15rem">
                <Label text="결재 필수" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>approve_mandatory_flag}"/>
                </t:template>
                </t:Column>
                <t:Column id="activity_complete_type_name" width="6rem">
                <Label text="Activity 완료 유형" textAlign="Center" width="100%" wrapping="true"/>
                <t:template>
                    <Text text="{list>activity_complete_type_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="job_type_name" width="6rem">
                <Label text="업무 유형" textAlign="Center" width="100%" wrapping="true"/>
                <t:template>
                    <Text text="{list>job_type_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="local_update_dtm" width="6rem">
                <Label text="수정일시" textAlign="Center" width="100%" wrapping="true" />
                <t:template>
                    <Text text="{path: 'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}"/>                    
                </t:template>
                </t:Column> 
                <t:Column id="update_user_id" width="6rem">
                <Label text="수정자" textAlign="Center" width="100%" wrapping="true" />
                <t:template>
                    <Text text="{list>update_user_id}"/>                                       
                </t:template>
                </t:Column>                                                                                                                                       
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>