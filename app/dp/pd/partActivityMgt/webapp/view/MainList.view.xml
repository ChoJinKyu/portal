<mvc:View controllerName="dp.pd.partActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/ACTIVITY_MANAGEMENT}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label
                                text="{I18N>/COMPANY}: "
                                labelFor="searchCompany">
                            </Label>
                            <ComboBox id="searchCompany" width="100%" selectedKey="" items="{
                                path: '/CompanyView'
                               
                                }">
                                <items>
                                    <core:Item key="{company_code}" text="{company_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                           <Label
                                text="{I18N>/ORGANIZATION}: "
                                labelFor="searchOrg">
                            </Label>
                            <ComboBox id="searchOrg" width="100%" selectedKey="" items="{
                                path: '/OrgView'
                               
                                }">
                                <items>
                                    <core:Item key="{org_code}" text="{org_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                           <Label
                                text="{I18N>/PROJECT_TYPE}: "
                                labelFor="searchPrjType">
                            </Label>                            
                            <ComboBox id="searchPrjType" width="100%" selectedKey="" items="{
                                    path: 'util>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},                                        
                                        {path: 'group_code', operator: 'EQ', value1: 'DP_PART_PJT_TYPE'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{util>code}" text="{util>code}: {util>code_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                         <VBox>
                            <Label
                                text="Activity: "
                                labelFor="searchKeyword">
                            </Label>
                            <Input id="searchKeyword" 
                                placeholder="" change=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                        
                    </form:content>
                </form:SimpleForm>   
                
                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox>           
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="MultiToggle"
            rows="{
                path: 'list>/pdPartactivityTemplateView',
                sorter: { 
                    path: 'local_update_dtm',
                    descending: true 
                }                   
            }"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            columnResize="onColumnResize">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="Activity List {= ${list>/pdPartactivityTemplateView}.length > 0 ? '(' + ${list>/pdPartactivityTemplateView}.length + ')' : ''}" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="Copy" id="buttonCopy" press=".onCopy"  type="Transparent"/>
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    <!-- <Button text="{I18N>/DELETE}" id="buttonDelete" press="onMainTableDeleteButtonPress"  type="Transparent"/> -->
                    <!-- <Button text="{I18N>/SAVE}" id="buttonSave" press=""  type="Transparent"/> -->

                    <ToolbarSeparator/>
                    <Button id="rTableExportButton" text="{I18N>/EXCEL}" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />                    
                    <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                    </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <!-- <t:Column id="mainColumnState" hAlign="Center" width="2em" >
                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                    <t:template>
                        <ObjectStatus icon="{
                            path: 'list>_row_state_',
                            formatter: '.formatter.toModelStateColumnIcon'
                        }" />
                    </t:template>
                </t:Column> -->
                <t:Column id="company_code" hAlign="Center">
                <Label text="{I18N>/COMPANY}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>company_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="org_code" hAlign="Center">
                <Label text="{I18N>/ORG_CODE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>org_code}"/>
                </t:template>
                </t:Column>
                <t:Column id="part_project_type_code" hAlign="Center">
                <Label text="{I18N>/PROJECT_TYPE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>part_project_type_name}"/>
                </t:template>
                </t:Column>                
                <t:Column id="activity_code">
                <Label text="{I18N>/ACTIVITY_NAME}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>activity_name}"/>
                </t:template>
                </t:Column>  
                <t:Column id="develope_event_name" hAlign="Center">
                <Label text="{I18N>/EVENT}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>develope_event_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="actual_role_name" hAlign="Center">
                <Label text="{I18N>/ROLE}" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>actual_role_name}"/>                    
                </t:template>
                </t:Column>
                <t:Column id="attachment_mandatory_flag" hAlign="Center">
                <Label text="{I18N>/ATTACHMENT_MANDATORY}" textAlign="Center" width="100%"/>
                <t:template>                    
                    <Text text="{= !!${list>attachment_mandatory_flag} ? 'Y' : 'N'}" wrapping="false" />
                </t:template>
                </t:Column>
                <t:Column id="approve_mandatory_flag" hAlign="Center">
                <Label text="{I18N>/APPROVE_MANDATORY}" textAlign="Center" width="100%"/>
                <t:template>                    
                    <Text text="{= !!${list>approve_mandatory_flag} ? 'Y' : 'N'}" wrapping="false" />
                </t:template>
                </t:Column>
                <t:Column id="activity_complete_type_name">
                <Label text="{I18N>/ACTIVITY_COMPLETE_TYPE}" textAlign="Center" width="100%" wrapping="true"/>
                <t:template>
                    <Text text="{list>activity_complete_type_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="job_type_name">
                <Label text="{I18N>/JOB_TYPE}" textAlign="Center" width="100%" wrapping="true"/>
                <t:template>
                    <Text text="{list>job_type_name}"/>
                </t:template>
                </t:Column>
                <t:Column id="active_flag" hAlign="Center">
                <Label text="{I18N>/USE_FLAG}" textAlign="Center" width="100%" wrapping="true"/>
                <t:template>                    
                    <Text text="{= !!${list>active_flag} ? 'Y' : 'N'}" wrapping="false" />
                </t:template>
                </t:Column>
                <t:Column id="local_update_dtm" hAlign="Center">
                <Label text="{I18N>/UPDATE} {I18N>/DATE_TIME}" textAlign="Center" width="100%" wrapping="true" />
                <t:template>
                    <Text text="{path: 'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}"/>                    
                </t:template>
                </t:Column> 
                <t:Column id="update_user_id" hAlign="Center">
                <Label text="{I18N>/UPDATE_USER_ID}" textAlign="Center" width="100%" wrapping="true" />
                <t:template>
                    <Text text="{list>update_user_id}"/>                                       
                </t:template>
                </t:Column>                                                                                                                                       
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>