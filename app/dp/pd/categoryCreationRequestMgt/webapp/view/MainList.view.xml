<mvc:View controllerName="dp.pd.categoryCreationRequestMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PART_CATEGORY_CREATION_REQUEST}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                <!-- <form:SimpleForm id="pageSearchForm" editable="true" layout="ResponsiveGridLayout"  > -->
                    <form:content>
                        <VBox>
                            <Label text="{I18N>/CATEGORY_GROUP}: "></Label>
                            <ComboBox
                                id="searchCategoryCombo"
                                width="100%"
                                selectedKey=""
                                items="{
                                    path: 'common>/Code',
                                    filters: [
                                        {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},
                                        {path: 'group_code', operator: 'EQ', value1: 'DP_PD_CATEGORY_GROUP'}
                                    ]
                                }">
                                <items>
                                    <core:Item key="{common>code}" text="[{common>code}] {common>code_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="{I18N>/PROGRESS}{I18N>/STATUS}:" labelFor="searchStatusButton"></Label>
                            <SegmentedButton 
                                id="searchStatusButton" 
                                selectedKey=""
                            />
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>
                    </form:content>
                </form:SimpleForm>   
                
                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox> 
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"
            rows="{
                path: 'list>/pdPartCategoryCreationRequestView',
                sorter: { 
                    path: 'request_number',
                    descending: true 
                }                   
            }"
            visibleRowCountMode="Auto"
            cellClick=".onCellClickPress" >
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="{I18N>/PART_CATEGORY_CREATION_REQUEST} ({=(${list>/pdPartCategoryCreationRequestView})?${list>/pdPartCategoryCreationRequestView}.length:0})" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    <ToolbarSeparator/>
                    <Button text="임시 추가생성버튼" id="buttonAddCreate" press=".onAddCreate"  type="Transparent"/>
                    <Button id="gTableExportButton" text="" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />
                    
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="category_group_code" width="5rem">
                    <Label text="{I18N>/TYPE_NAME}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>category_group_code}" textAlign="Center"/>
                    </t:template>
                </t:Column>
                <t:Column id="progress_status_name" width="8rem">
                    <Label text="{I18N>/PROGRESS_STATUS}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>progress_status_code}" textAlign="Center"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_number" width="8rem">
                    <Label text="{I18N>/REQUEST_NUMBER}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>request_number}" textAlign="Center"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_title">
                    <Label text="{I18N>/REQUEST_TITLE}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>request_title}" textAlign="Center"/>
                    </t:template>
                </t:Column>  
                <t:Column id="request_category_name" width="10rem">
                    <Label text="{I18N>/REQUEST_CATEGORY_NAME}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>request_category_name}"/>
                    </t:template>
                </t:Column>


                <t:Column id="requestor" width="7rem">
                    <Label text="{I18N>/REQUESTOR}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>requestor}"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_date_time" width="7rem">
                    <Label text="{I18N>/REQUEST_DATE}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{path : 'list>request_date_time', formatter: '.dateFormatter.toDateString'}" textAlign="Right" />
                    </t:template>
                </t:Column>
                <t:Column id="create_category_name" width="10rem">
                    <Label text="{path:'I18N>/CREATE_CATEGORY_NAME', formatter:'I18NFormatter'}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>create_category_name}" />
                    </t:template>
                </t:Column>
                <t:Column id="creator_empno" width="10rem">
                    <Label text="{path:'I18N>/CATEGORY_CREATOR', formatter:'I18NFormatter'}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{list>category_creator}({list>creator_empno})" textAlign="Right" />
                    </t:template>
                </t:Column>
                <t:Column id="local_update_dtm" width="10rem">
                    <Label text="{I18N>/LOCAL_UPDATE_DTM}" textAlign="Center" width="100%"/>
                    <t:template>
                        <Text text="{path : 'list>local_update_dtm', formatter: '.dateFormatter.toUTCDateTimeString'}" textAlign="Right" />
                    </t:template>
                </t:Column>
                <t:Column label="" width="2rem" >
                    <t:template>
                        <ObjectStatus icon="sap-icon://feeder-arrow" />
                    </t:template>
                </t:Column>

            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>