<mvc:View controllerName="dp.pd.categoryCreationRequestMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    core:require="{ I18NFormatter: 'dp/md/util/controller/I18NFormatter' }"
    xmlns:lib-f="ext.lib.control.f"
    height="100%">

    <f:DynamicPage id="page2"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <lib-f:CustomDynamicPageTitle>
                <lib-f:heading>
                    <HBox class="sapUiSizeCompact">
                        <lib-m:FavoriteMenuButton menuCode="DPPDU00009"/>
                        <Title text="{I18N>/PART_CATEGORY_CREATION_REQUEST}" />
                    </HBox>
                    <!-- <HBox alignItems="Center">
                        <Button icon="sap-icon://unfavorite" type="Transparent" />
                         <Title text="{I18N>/PART_CATEGORY_CREATION_REQUEST}" />
                    </HBox> -->
                </lib-f:heading>
                <lib-f:fixedContent>
                    <form:SimpleForm class="searchBox"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                        <form:content>
                            <VBox>
                                <Label text="{I18N>/CATEGORY_GROUP}: "></Label>
                                <ComboBox
                                    id="searchCategoryCombo"
                                    width="100%"
                                    selectedKey=""
                                    showSecondaryValues= "true"
                                    items="{
                                        path: 'common>/Code',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L2101'},
                                            {path: 'group_code', operator: 'EQ', value1: 'DP_PD_CATEGORY_GROUP'}
                                        ]
                                    }">
                                    <items>
                                        <core:ListItem
                                            key="{common>code}" 
                                            text="{common>code_name}" 
                                            additionalText="{common>code}"/>
                                    </items>
                                </ComboBox>
                                <layoutData>
                                    <layout:GridData span="XL2 L3 M6 S12" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="{I18N>/PROGRESS}{I18N>/STATUS}:" labelFor="searchStatusButton"></Label>
                                <SegmentedButton 
                                    id="searchStatusButton" 
                                    selectedKey=""
                                />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M12 S12" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="End" justifyContent="End">
                                <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                </lib-f:fixedContent>
            </lib-f:CustomDynamicPageTitle>
        </f:title>
            
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm
                    id="pageSearchForm"
                    maxContainerCols="2"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="2"
                    columnsM="2">
                    <form:content>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table 
                id="mainTable"
                selectionMode="None"
                rows="{
                    path: 'list>/pdPartCategoryCreationRequestView',
                    sorter: { 
                        path: 'request_number',
                        descending: true 
                    }                   
                }"
                visibleRowCountMode="Auto"
                cellClick=".onCellClickPress" >
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="{I18N>/PART_CATEGORY_CREATION_REQUEST} ({=(${list>/pdPartCategoryCreationRequestView})?${list>/pdPartCategoryCreationRequestView}.length:0})" level="H2"/>
                    <ToolbarSpacer/>
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    <ToolbarSeparator/>
                    <!-- <Button text="임시 추가생성(new)" id="buttonAddCreate" press=".onAddCreate"  type="Transparent"/>
                    <Button text="임시 추가생성(완료)" id="buttonAddCreate2" press=".onAddCreate2"  type="Transparent"/> -->
                    <Button id="gTableExportButton" text="" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <t:Column id="category_group_code" hAlign="Center" width="6%">
                    <Label text="{I18N>/TYPE_NAME}" textAlign="Center" />
                    <t:template>
                        <Text text="{list>category_group_code}[{list>category_group_name}]" textAlign="Center"/>
                    </t:template>
                </t:Column>
                <t:Column id="progress_status_name" hAlign="Left" width="6%">
                    <Label text="{I18N>/PROGRESS}{I18N>/STATUS}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>progress_status_name}" textAlign="Left"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_number" hAlign="Center" width="10%">
                    <Label text="{I18N>/REQUEST_NUMBER}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>request_number}" textAlign="Center"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_title" hAlign="Left">
                    <Label text="{I18N>/REQUEST_TITLE}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>request_title}" textAlign="Left"/>
                    </t:template>
                </t:Column>  
                <t:Column id="request_category_name" hAlign="Left" >
                    <Label text="{I18N>/REQUEST_CATEGORY_NAME}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>request_category_name}" textAlign="Left"/>
                    </t:template>
                </t:Column>

                <t:Column id="requestor" hAlign="Left" width="5%">
                    <Label text="{I18N>/REQUESTOR}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>requestor}" textAlign="Left"/>
                    </t:template>
                </t:Column>
                <t:Column id="request_date_time" hAlign="Center" width="6%">
                    <Label text="{I18N>/REQUEST_DATE}" textAlign="Center"/>
                    <t:template>
                        <Text text="{path : 'list>request_date_time', formatter: '.dateFormatter.toDateString'}" textAlign="Center" />
                    </t:template>
                </t:Column>
                <t:Column id="create_category_name" hAlign="Left">
                    <Label text="{I18N>/CREATE} {I18N>/CATEGORY} {I18N>/NAME}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>create_category_name}" textAlign="Left"/>
                    </t:template>
                </t:Column>
                <t:Column id="creator_empno" hAlign="Left" width="10%">
                    <Label text="{I18N>/CATEGORY} {I18N>/CREATOR}" textAlign="Center"/>
                    <t:template>
                        <Text text="{list>category_creator}({list>creator_empno})" textAlign="Left" />
                    </t:template>
                </t:Column>
                <t:Column id="local_update_dtm" hAlign="Center" width="10%">
                    <Label text="{I18N>/LOCAL_UPDATE_DTM}" textAlign="Center"/>
                    <t:template>
                        <Text text="{path : 'list>local_update_dtm', formatter: '.dateFormatter.toUTCDateTimeString'}" textAlign="Center" />
                    </t:template>
                </t:Column>
                <t:Column label="" width="2rem" >
                    <t:template>
                        <ObjectStatus icon="sap-icon://feeder-arrow" />
                    </t:template>
                </t:Column>

            </t:columns>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>