<mvc:View controllerName="dp.pd.partBaseActivityMgt.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.control.m"
    xmlns:u="sap.ui.unified"
    xmlns:tnt="sap.tnt"
    xmlns:co="sap.suite.ui.commons"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListViewModel>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{I18N>/PART_BASE_ACTIVITY}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>                        
                         <VBox>
                            <Label
                                text="코드/ 명/ 설명: "
                                labelFor="searchPartBaseKeyword">
                            </Label>
                            <Input id="searchPartBaseKeyword" 
                                placeholder="" change=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- <VBox>
                            <Label
                                text="{I18N>/DESCRIPTION}: "
                                labelFor="searchDescKeyword">
                            </Label>
                            <Input id="searchDescKeyword" 
                                placeholder="" change=".onPageSearchButtonPress"/>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox> -->
                        <VBox>
                            <Label
                                text="{I18N>/STATUS}: "
                                labelFor="searchUseflag">
                            </Label>
                            <SegmentedButton 
                                id="searchUseflag"
                                selectedKey="" 
                                width="100%">
                                <items>
                                    <SegmentedButtonItem text="All" width="3em"/>
                                    <SegmentedButtonItem text="Active" width="5em" key="true"/>
                                    <SegmentedButtonItem text="Inactive" width="5em" key="false"/>
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData
                                    span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>                        
                    </form:content>
                </form:SimpleForm>   
                
                <HBox width="100%" alignItems="Center" alignContent="End" justifyContent="End">
                    <items>
                        <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress"/>
                    </items>
                </HBox>           
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table id="mainTable"
            selectionMode="None"            
            rows="{
                path: 'list>/PdPartBaseActivityView'                                 
            }"
            cellClick=".onCellClickPress"
            rowSelectionChange=".onCheck"
            visibleRowCountMode="Auto"
            columnResize="onColumnResize">
            <t:extension>
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <Title id="mainTableTitle" text="부품 기준 Activity List {= ${list>/PdPartBaseActivityView}.length > 0 ? '(' + ${list>/PdPartBaseActivityView}.length + ')' : '(0)'}" level="H2"/>
                    <ToolbarSpacer/>
                    <!-- <Button text="Copy" id="buttonCopy" press=".onCopy"  type="Transparent"/> -->
                    <Button text="{I18N>/CREATE}" id="buttonCreateIdea" press=".onCreate"  type="Transparent"/>
                    <!-- <Button text="{I18N>/DELETE}" id="buttonDelete" press="onMainTableDeleteButtonPress"  type="Transparent"/> -->
                    <!-- <Button text="{I18N>/SAVE}" id="buttonSave" press=""  type="Transparent"/> -->

                    <ToolbarSeparator/>
                    <Button id="rTableExportButton" type="Transparent" press=".onExportPress" class="sapUiTinyMargin" icon="sap-icon://excel-attachment" />                    
                    <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow" />
                        </layoutData>
                    </Button>
                </OverflowToolbar>
            </t:extension>
            <t:rowSettingsTemplate>
            </t:rowSettingsTemplate>
            <t:columns>
                <!-- <t:Column id="mainColumnState" hAlign="Center" width="2em" >
                    <ObjectStatus icon="sap-icon://document" text="State" visible="false" />
                    <t:template>
                        <ObjectStatus icon="{
                            path: 'list>_row_state_',
                            formatter: '.formatter.toModelStateColumnIcon'
                        }" />
                    </t:template>
                </t:Column> -->
                <t:Column id="activity_code">
                <Label text="{I18N>/PROD_ACTIVITY_CODE}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>activity_code}" textAlign="Left" width="100%" wrapping="false"/>
                </t:template>
                </t:Column>
                <t:Column id="activity_name">
                <Label text="{I18N>/PROD_ACTIVITY_NAME}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>activity_name}" textAlign="Left" width="100%" wrapping="false"/>
                </t:template>
                </t:Column>
                <t:Column id="description">
                <Label text="{I18N>/DESCRIPTION}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>description}" textAlign="Left" width="100%" wrapping="false"/>
                </t:template>
                </t:Column>                
                <t:Column id="sequence" width="60px">
                <Label text="{I18N>/SEQUENCE}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>sequence}" textAlign="Right" width="100%" wrapping="false"/>
                </t:template>
                </t:Column>  
                <t:Column id="active_flag_val">
                <Label text="{I18N>/STATUS}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>active_flag_val}" textAlign="Center" width="100%" wrapping="false"/>                    
                </t:template>
                </t:Column>                
                <t:Column id="local_update_dtm">
                <Label text="{I18N>/UPDATE} {I18N>/DATE_TIME}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{path: 'list>local_update_dtm', formatter: '.dateFormatter.toDateTimeString'}" textAlign="Center" width="100%" wrapping="false"/>                    
                </t:template>
                </t:Column> 
                <t:Column id="update_user_id">
                <Label text="{I18N>/UPDATE_USER_ID}" wrapping="false" textAlign="Center" width="100%"/>
                <t:template>
                    <Text text="{list>update_user_id}" textAlign="Left" width="100%" wrapping="false"/>                                       
                </t:template>
                </t:Column>                                                                                                                                       
            </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>