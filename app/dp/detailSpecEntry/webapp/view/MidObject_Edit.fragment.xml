<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm 
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="3"   
    >
        <form:content>
		
		<!-- <l:VerticalLayout > -->
            <Label text="Model"/>
            <Text text="{master>/model}"/>
            <Label text="Production Type"/>
            <Text text="{master>/mold_production_type_code}"/>
            <Label text="Mold Supplier"/>
            <!-- <Input value="{master>/mold_vendor_id}" /> -->
            <Input value="{master>/mold_vendor_id}" showValueHelp="true"/>
        <!-- </l:VerticalLayout>            
        <l:VerticalLayout > -->
            <Label text="Mold Part No"/> 
            <Text text="{master>/part_number}"/>
            <Label text="Item Type"/>
            <Text text="{mstSpecView>/mold_item_type_name}"/>
            <Label text="Order Supplier"/>
            <Text text="{master>/order_vendor_id}"></Text>
        <!-- </l:VerticalLayout>            
        <l:VerticalLayout > -->
            <Label text="Seq"/>
            <Text text="{master>/mold_sequence}"/>
            <Label text="Description"/>
            <Text text="{master>/spec_name}"></Text>
            <Label text="Production Supplier"/>
            <Input value="{master>/production_vendor_id}" showValueHelp="true"/>
        <!-- </l:VerticalLayout> -->
        </form:content>
	</form:SimpleForm>
</core:FragmentDefinition>