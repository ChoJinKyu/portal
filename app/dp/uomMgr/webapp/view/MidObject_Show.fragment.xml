<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap" >
<VBox class="sapUiSmallMargin" id="midObjectForm1Show">    
	<form:SimpleForm         
        editable="false"
        layout="ColumnLayout"			
        columnsM="2"
        columnsL="2"
        columnsXL="3" >
		
        <form:content>            
			<Label text="UOM" required="true"/>
			<Input value="{master>/uom_code}" editable="false" class="readonlyField"/>
			<Label text="Class" required="true"/>
			<Input value="{master>/uom_class_code}" editable="false" class="readonlyField"/>
			<Label text="Base Unit"/>
			<!-- <Text text="{
					path: 'master>/base_unit_flag',
					formatter: '.formatter.toYesNo'
				}"/> -->
			<Switch state="{master>/base_unit_flag}" customTextOn="Yes" customTextOff="No" enabled="false">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Switch>
            <Label text="UOM Name"/>
			<Input value="{master>/uom_name}" editable="false" class="readonlyField"/>
			<Label text="Description"/>
			<Input value="{master>/uom_desc}" editable="false" class="readonlyField"/>
			<Label text="Disable Date"/>
			<Input value="{path: 'master>/disable_date',formatter: '.dateFormatter.toDateString'}" editable="false" class="readonlyField"/>
	    </form:content>
    </form:SimpleForm>
    
    <form:SimpleForm 
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="3" >
        <form:content>		
            <core:Title text="Display" />
			<!-- <Label text="Commercial" required="true"/>
			<Input value="{master>/commercial_uom_code}" editable="false" class="readonlyField"/>			
			<Label text="Technical" required="true"/>
			<Input value="{master>/technical_uom_code}" editable="false" class="readonlyField"/> -->
            <Label text="Decimal Places"/>
			<Input value="{master>/decimal_places}" editable="false" class="readonlyField"/>			
            <!-- <Label text="Commercial Text" required="true"/>
			<Input value="{master>/commercial_uom_name}" editable="false" class="readonlyField"/>
            <Label text="Technical Text" required="true"/>
			<Input value="{master>/technical_uom_name}" editable="false" class="readonlyField"/>			 -->
			<Label text="Float. Point Idex"/>
			<Input value="{master>/floating_decpoint_index}" editable="false" class="readonlyField"/>
	    </form:content>
    </form:SimpleForm>

    <form:SimpleForm 
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="3" >
        <form:content>
            <core:Title text="Conversion" />
			<Label text="Numerator" required="true"/>
			<Input value="{master>/conversion_numerator}" editable="false" class="readonlyField"/>
            <Label text="Index"/>
			<Input value="{master>/conversion_index}" editable="false" class="readonlyField"/>
			<Label text="Denominator" required="true"/>
			<Input value="{master>/conversion_denominator}" editable="false" class="readonlyField"/>			
			<Label text="Rate"/>
			<Text text="{master>/conversion_rate}" />      
	    </form:content>
	</form:SimpleForm>
	</VBox>
</core:FragmentDefinition>