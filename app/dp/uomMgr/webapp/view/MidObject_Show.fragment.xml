<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<form:SimpleForm id="midObjectForm1Show" editable="false"
            layout="ColumnLayout"			
			columnsM="1"
			columnsL="1"
			columnsXL="4">
		<core:Title text="Normal" />
        <Label text="UOM" required="true"/>
        <Text text="{master>/uom_code}"/>
        <Label text="Class" required="true"/>
        <Text text="{master>/uom_class_code}"/>
        <Label text="Base Unit"/>
		<!-- <Text text="{
				path: 'master>/base_unit_flag',
				formatter: '.formatter.toYesNo'
			}"/> -->
        <Switch state="{master>/base_unit_flag}" customTextOn="Yes" customTextOff="No" enabled="false">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
		</Switch>
        <Label text="Description"/>
        <Text text="{master>/uom_description}"/>
        <Label text="Disable Date"/>
        <Text text="{path: 'master>/disable_date',formatter: '.dateFormatter.toDateString'}"/>

        <core:Title text="Display" />
		<Label text="Commercial" required="true"/>
        <Text text="{master>/commercial_uom_code}"/>
        <Label text="Commercial Text" required="true"/>
        <Text text="{master>/commercial_uom_name}"/>
        <Label text="Technical" required="true"/>
        <Text text="{master>/technical_uom_code}"/>
        <Label text="Technical Text" required="true"/>
        <Text text="{master>/technical_uom_name}"/>
        <Label text="Decimal Places"/>
        <Text text="{master>/decimal_places}"/>
        <Label text="Float. Point Idex"/>
        <Text text="{master>/floating_decpoint_index}"/>

        <core:Title text="Conversion" />
		<Label text="Numerator"/>
        <Text text="{master>/conversion_numerator}"/>
        <Label text="Denominator"/>
        <Text text="{master>/conversion_denominator}"/>
        <Label text="Index"/>
        <Text text="{master>/conversion_index}"/>
        <Label text="Rate"/>
        <Text text="{master>/conversion_rate}"/>
        
	</form:SimpleForm>
</core:FragmentDefinition>