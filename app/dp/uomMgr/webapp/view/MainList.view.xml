                        </Column>
                        <Column id="mainColumnBaseUom" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Base UOM" />
                        </Column>
                        <Column id="mainColumnBaseUomText" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Base UOM Text" />
                        </Column>                        
                    </columns>
                    <items>
