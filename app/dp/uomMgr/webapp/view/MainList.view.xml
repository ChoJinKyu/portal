<mvc:View controllerName="dp.uomMgr.controller.MainList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:lib-m="ext.lib.m"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="{mainListView>/headerExpanded}" 
        toggleHeaderOnTitleClick="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:snappedContent>
                </f:snappedContent>
                <f:expandedContent>
                </f:expandedContent>
                <f:actions>
                    <Button id="pageSearchButton" text="{I18N>/SEARCH}" type="Emphasized" press=".onPageSearchButtonPress" />
                </f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://unfavorite" type="Transparent" />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">

                <form:SimpleForm id="pageSearchForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox>
                            <Label text="UOM Class :" labelFor="searchUomClass" ></Label>
                            <ComboBox id="searchUomClass" width="100%" selectedKey="" items="{
                                path: 'uomClass>/UomClass'
                                }">
                                <items>
                                    <core:Item key="{uomClass>uom_class_code}" text="{uomClass>uom_class_code}: {uomClass>uom_class_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox>
                        <!-- <VBox>
                            <Label text="UOM :" labelFor="searchUom" ></Label>
                            <ComboBox id="searchUom" width="100%" selectedKey="" items="{
                                    path: '/Uom'                                    
                                }">
                                <items>
                                    <core:Item key="{uom_code}" text="{uom_code}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L3 M6 S12" />
                            </layoutData>
                        </VBox> -->
                        <VBox>
                            <Label text="Base Unit :" labelFor="searchBUSegmentButton"></Label>
                            <SegmentedButton id="searchBUSegmentButton" selectedKey="" class="sapUiSmallMarginBottom" width="100%" >
                                <items>
                                    <SegmentedButtonItem text="All" key="all" width="4.1rem" />
                                    <SegmentedButtonItem text="Yes" key="true" width="4.1rem" />
                                    <SegmentedButtonItem text="No" key="false" width="4.1rem" />                                    
                                </items>
                            </SegmentedButton>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M12 S12" />
                            </layoutData>
                        </VBox>
                        <!-- <VBox>
                            <Label text="Base Unit :" labelFor="searchBUSegmentButton"></Label>
                            <ComboBox id="searchBUSegmentButton" selectedKey=""
                                                    width="auto">
                                                    <core:Item key="" text="All"/>
                                                    <core:Item key="true" text="Yes"/>                                                            
                                                    <core:Item key="false" text="No"/>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL1 L1 M3 S3" />
                            </layoutData>
                        </VBox> -->
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table id="mainTable" 
                        sticky="HeaderToolbar,ColumnHeaders" 
                        inset="false" 
                        growing="true"
                        growingThreshold="15"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/Uom}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <!-- <Title text="Unit Of Measure ({= ${list>/Uom}.length || 0})" level="H2"/> -->
                            <Title text="Unit Of Measure" level="H2"/>
                            <ToolbarSpacer/>
                            <SearchField id="mainTableSearchField" placeholder="Uom" width="10rem" search=".onMainTableFilterPress" />
                            <Button id="mainTableAddButton" text="{I18N>/NEW}" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnUOM" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="UOM" />
                        </Column>
                        <Column id="mainColumnCC" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
                            <Text text="Commercial Code" />
                        </Column>
                        <Column id="mainColumnCN" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Commercial Name" />
                        </Column>
                        <Column id="mainColumnBU" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Base Unit" />
                        </Column>
                        <Column id="mainColumnClass" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Class" />
                        </Column> 
                        <Column id="mainColumnTC" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Technical Code" />
                        </Column>
                        <Column id="mainColumnTN" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Technical Name" />
                        </Column>
                        <Column id="mainColumnDD" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                            <Text text="Disable Date" />
                        </Column>                        
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onMainTableItemPress">
                            <cells>
                                <ObjectIdentifier text="{list>uom_code}"/>
                                <ObjectIdentifier text="{list>commercial_uom_code}"/>
                                <ObjectIdentifier text="{list>commercial_uom_name}"/>                                
                                <ObjectStatus 
                                    icon="{= ${list>base_unit_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectIdentifier text="{list>uom_class_code}"/>
                                <ObjectIdentifier text="{list>technical_uom_code}"/>
                                <ObjectIdentifier text="{list>technical_uom_name}"/>                                
                                <ObjectIdentifier text="{
                                        path: 'list>disable_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/>
                                <!-- <ObjectIdentifier text="{
                                        path: 'list>end_date',
                                        formatter: '.dateFormatter.toDateString'
                                    }"/> -->
                                <!-- <ObjectStatus
                                    icon="{= ${list>site_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>company_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>organization_flag} === true ? 'sap-icon://accept' : ''}"/>
                                <ObjectStatus 
                                    icon="{= ${list>user_flag} === true ? 'sap-icon://accept' : ''}"/> -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
				<Button text="Save" type="Emphasized" press=".onPageSaveButtonPress" />
				<Button text="Cancel" type="Transparent" press=".onPageCancelEditButtonPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>