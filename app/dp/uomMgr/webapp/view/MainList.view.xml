                        inset="false" 
                        growing="true"
                        growingThreshold="15"
                        class="sapFDynamicPageAlignContent" 
                        updateFinished=".onMainTableUpdateFinished"
                        items="{list>/UomClass}"
                        mode="None" 
                        width="auto">
                    <headerToolbar>
                        <OverflowToolbar>
                            <!-- <Title text="Control Options ({= ${list>/}.length || 0})" level="H2"/> -->
                            <Title text="UOM Class" level="H2"/>
                            <ToolbarSpacer/>
                            <Button id="mainTableAddButton" text="Add" type="Transparent" press=".onMainTableAddButtonPress" />
                            <ToolbarSeparator/>
                            <Button icon="sap-icon://action-settings" press=".onMainTablePersoButtonPressed" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Button>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="mainColumnClass" minScreenWidth="Tablet" hAlign="Center">
                            <Text text="Class" />
                        </Column>
                        <Column id="mainColumnText" minScreenWidth="Tablet" hAlign="Center" demandPopin="true" importance="High" popinDisplay="WithoutHeader">
