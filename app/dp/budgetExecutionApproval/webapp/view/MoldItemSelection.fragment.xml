<!-- 
   description : 품의서 Participating Supplier 항목의 Add 버튼 클릭
-->
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" >
    <Dialog id="dialogMolItemSelection" class="sapUiSmallMargin" title="" contentWidth="35%" >
        <VBox class="sapUiSmallMargin">
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
     
                singleContainerFullSize="false" >
                    
                    <form:content>
                        <VBox>
                            <Label text = "Company" required="true"/> 
                            <ComboBox id="MoldItemSearchCompany"  width="100%" selectedKey="{beaCreateObjectView>/company_code}" enabled="false" items="{
                                        path: 'org>/Org_Company',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'}
                                        ],
                                        sorter: { path: 'company_code'}
                                    }">
                                <items>
                                    <core:Item key="{org>company_code}"  text="[{org>company_code}] {org>company_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        
                        <VBox>
                            <Label text = "Plant" required="true"/> 
                            <ComboBox id="MoldItemSearchPlant"  width="100%" selectedKey="{beaCreateObjectView>/plant_code}" enabled="false" items="{
                                        path: 'purOrg>/Pur_Operation_Org',
                                        filters: [
                                            {path: 'tenant_id', operator: 'EQ', value1: 'L1100'},
                                            {path: 'org_type_code', operator: 'EQ', value1: 'AU'},
                                            {path: 'company_code', operator: 'EQ', value1: 'LGEIL'}
                                        ]
                                    }">
                                <items>
                                    <core:Item key="{purOrg>org_code}" text="[{purOrg>org_code}]{purOrg>org_name}" />
                                </items>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Button text="Search" class="sapUiSmallMargin" type="Emphasized" press=".onMoldItemSelection"/>
                               <layoutData>
                                <layout:GridData span="XL2 L2 M2 S2" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Model"/> 
                             <Input id="moldItemModel" width="100%"/>
                             <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                        <VBox>
                            <Label text = "Part No"/>
                             <Input id="moldItemPartNo" width="100%"/> 
                             <layoutData>
                                <layout:GridData span="XL5 L5 M5 S5" />
                            </layoutData> 
                        </VBox>
                       </form:content>
                    <form:content>
                    <HBox>
                        <Table id="moldItemSelectTable"       
                            growing="true"
                            growingThreshold="3"
                            class="sapFDynamicPageAlignContent" 
                            updateFinished="" 
                            selectionChange=".selectMoldItemChange" 
                            mode="MultiSelect"
                            width="auto"
                            items="{moldMng>/MoldMasters}"
                            >
                         <headerToolbar>
                            <OverflowToolbar>
                               
                            </OverflowToolbar>
                        </headerToolbar> 
                        <columns>
                            <Column id="modelItem_model" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true"  >
                                <Text text="Model" />
                            </Column>
                            <Column id="modelItem_modelPartNo" minScreenWidth="Tablet" hAlign="Center" mergeDuplicates="true" >
                                <Text text="Model Part No" />
                            </Column>
                            <Column id="modelItem_seq" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="Seq" />
                            </Column>
                            <Column id="modelItem_description" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="Description" />
                            </Column> 
                            <Column id="modelItem_moldItemType" minScreenWidth="Tablet" hAlign="Center"  >
                                <Text text="Mold Item Type" />
                            </Column>
                            <Column id="modelItem_bookCurrency" minScreenWidth="Tablet" hAlign="Center"  >
                                  <Text text="Book Currency" />
                            </Column>					
                            <Column id="modelItem_budgetAmount" minScreenWidth="Tablet" hAlign="Center"  >
                                  <Text text="Budget Amount" />
                            </Column>					
                        </columns>
                        <items>
                             <ColumnListItem>
                                <cells>
                                    <!-- <ObjectIdentifier title="{Name}" text="{ProductId}"/> -->
                                    <Text text="{moldMng>model}" />
                                    <Text text="{moldMng>part_number}" />
                                    <Text text="{moldMng>mold_sequence}" />
                                    <Text text="{moldMng>spec_name}" />
                                    <Text text="{moldMng>mold_item_type_code}" />
                                    <Text text="{moldMng>book_currency_code}" />
                                    <Text text="{moldMng>budget_amount}" />
                                </cells>
                            </ColumnListItem>   
                            </items>
                            
                        </Table>
                         <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData> 
                       </HBox>
                         </form:content>
                  </form:SimpleForm>
            </VBox>       
      
        <ToolbarSpacer/>
        <HBox alignItems="End" justifyContent="End" >
            <Button text="Cancel" class="sapUiSmallMarginEnd" press=".onExit"/>
            <Button text="Apply" class="sapUiSmallMarginEnd" type="Emphasized" press=".onMoldItemSelectionApply"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
