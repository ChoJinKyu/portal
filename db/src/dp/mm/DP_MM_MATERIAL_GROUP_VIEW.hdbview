VIEW DP_MM_MATERIAL_GROUP_VIEW AS
SELECT M.TENANT_ID,
       M.MATERIAL_GROUP_CODE,
       IFNULL(L.MATERIAL_GROUP_NAME,M.MATERIAL_GROUP_NAME) AS MATERIAL_GROUP_NAME,
       IFNULL(L.MATERIAL_GROUP_DESC, M.MATERIAL_GROUP_DESC) AS MATERIAL_GROUP_DESC,
       M.USE_FLAG,
       L.LANGUAGE_CODE
FROM DP_MM_MATERIAL_GROUP M 
LEFT OUTER JOIN DP_MM_MATERIAL_GROUP_LNG L 
ON L.TENANT_ID = M.TENANT_ID
AND L.MATERIAL_GROUP_CODE = M.MATERIAL_GROUP_CODE
;