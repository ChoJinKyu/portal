VIEW XX_COUNTRY_VIEW AS 
SELECT L.TENANT_ID
      ,L.LANGUAGE_CODE
      ,L.COUNTRY_CODE
      ,L.COUNTRY_NAME
      ,C.LANGUAGE_CODE AS LANGUAGE
      ,C.ISO_CODE
      ,C.EU_CODE
      ,C.DATE_FORMAT_CODE
      ,C.NUMBER_FORMAT_CODE
      ,C.CURRENCY_CODE
FROM   CM_COUNTRY C
JOIN   CM_COUNTRY_LNG L ON (C.TENANT_ID = L.TENANT_ID AND C.COUNTRY_CODE = L.COUNTRY_CODE)
