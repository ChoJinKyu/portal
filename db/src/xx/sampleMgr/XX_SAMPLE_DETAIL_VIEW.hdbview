VIEW XX_SAMPLE_DETAIL_VIEW AS 
SELECT H.HEADER_ID  AS HEADER_ID
      ,H.CD         AS HEADER_CD
      ,H.NAME       AS HEADER_NAME
      ,D.DETAIL_ID  AS DETAIL_ID
      ,D.CD         AS DETAIL_CD
      ,D.NAME       AS DETAIL_NAME
FROM   XX_SAMPLE_HEADER H
JOIN   XX_SAMPLE_DETAIL D ON (H.HEADER_ID = D.HEADER_ID)
;