VIEW XX_CURRENCY_VIEW AS 
SELECT L.TENANT_ID
      ,L.LANGUAGE_CODE
      ,L.CURRENCY_CODE
      ,L.CURRENCY_CODE_NAME
      ,A.EFFECTIVE_START_DATE
      ,A.EFFECTIVE_END_DATE
      ,A.USE_FLAG
      ,A.SCALE
      ,A.EXTENSION_SCALE
      ,L.CURRENCY_PREFIX
      ,L.CURRENCY_SUFFIX
FROM   CM_CURRENCY A
JOIN   CM_CURRENCY_LNG L ON (A.TENANT_ID = L.TENANT_ID AND A.CURRENCY_CODE = L.CURRENCY_CODE)